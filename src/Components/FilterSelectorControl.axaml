<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Components.FilterSelectorControl"
             x:DataType="vm:FilterListViewModel">

    <UserControl.Styles>
        <!-- Balatro-styled scrollbars - subtle and elegant -->
        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
        </Style>
        <Style Selector="ScrollBar:horizontal">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="{StaticResource MediumGrey}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb:pointerover">
            <Setter Property="Background" Value="{StaticResource Border}"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb:pressed">
            <Setter Property="Background" Value="{StaticResource Gold}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>
        <!-- Hide scroll buttons -->
        <Style Selector="ScrollBar /template/ RepeatButton">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </UserControl.Styles>

    <!-- Filter Selection UI (Balatro Challenges Style) -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="240"/>
            <ColumnDefinition Width="*" MinWidth="450"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Filter List (Balatro challenges style) -->
        <Border Grid.Column="0"
                Background="{StaticResource ContainerDarkPrecise}"
                BorderBrush="{StaticResource ModalBorder}"
                BorderThickness="0,0,2,0"
                Padding="12,10,8,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="FILTERS"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="18"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <!-- Paginated filter list with numbers OUTSIDE buttons -->
                <Border Grid.Row="2" Name="FilterListContainer" ClipToBounds="False" Padding="0">
                    <ItemsControl Name="FilterListControl" ItemsSource="{Binding DisplayedFilters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Button layout with centered triangle indicator -->
                                <Grid Margin="0,1" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Selection Indicator (red triangle, Balatro style) -->
                                    <Viewbox Grid.Column="0"
                                             Width="16"
                                             Height="16"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             IsVisible="{Binding IsSelected}">
                                        <Polygon Points="0,0 0,16 16,8"
                                                 Fill="{StaticResource Red}"/>
                                    </Viewbox>

                                    <!-- Button with just the name (no number) -->
                                    <Button Grid.Column="2"
                                            Classes="btn-red"
                                            Content="{Binding Name}"
                                            Height="28"
                                            MinWidth="208"
                                            HorizontalAlignment="Center"
                                            HorizontalContentAlignment="Center"
                                            CornerRadius="6"
                                            Padding="12,0"
                                            FontFamily="{StaticResource BalatroFont}"
                                            FontSize="14"
                                            Click="OnFilterListItemClick"
                                            Tag="{Binding}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Pagination Controls -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="6">
                    <Button Content="â—€"
                            Classes="btn-red"
                            Width="44"
                            Height="32"
                            FontSize="14"
                            Padding="0"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage}"/>

                    <!-- Badge-style page indicator (fixed width to prevent wiggling) -->
                    <Border Background="{StaticResource DarkModalGrey}"
                            BorderBrush="{StaticResource ModalBorder}"
                            BorderThickness="2"
                            CornerRadius="6"
                            Padding="16,6"
                            MinWidth="85"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding PageIndicator}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource White}"
                                   TextAlignment="Center"/>
                    </Border>

                    <Button Content="â–¶"
                            Classes="btn-red"
                            Width="44"
                            Height="32"
                            FontSize="14"
                            Padding="0"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right: Filter Details -->
        <Border Grid.Column="1"
                Background="{StaticResource ContainerDark}"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <!-- Placeholder when no filter selected -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="16"
                            IsVisible="{Binding !IsFilterSelected}">
                    <TextBlock Text="Select a Filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="24"
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               Opacity="0.5"/>
                    <TextBlock Text="â€” or â€”"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               Opacity="0.4"/>
                    <Button Name="NewFilterButton"
                            Content="+ CREATE NEW FILTER"
                            Classes="btn-blue"
                            Height="42"
                            FontSize="16"
                            Padding="24,8"
                            HorizontalAlignment="Center"
                            Click="OnCreateNewFilterClick"/>
                </StackPanel>

                <!-- Filter details when selected - Balatro Challenges Style -->
                <Grid IsVisible="{Binding IsFilterSelected}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Name -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding SelectedFilterName}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,8,0,4"/>

                    <!-- Author -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding SelectedFilterAuthor}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="13"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               Opacity="0.6"
                               Margin="0,0,0,12"/>

                    <!-- Inner Tabs with Triangle Indicator -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                            <Button Content="Must Have"
                                    Classes="btn-red"
                                    Height="26"
                                    MinWidth="100"
                                    FontSize="13"
                                    Command="{Binding SelectTabCommand}"
                                    CommandParameter="must_have"/>
                            <Button Content="Should Have"
                                    Classes="btn-red"
                                    Height="26"
                                    MinWidth="105"
                                    FontSize="13"
                                    Command="{Binding SelectTabCommand}"
                                    CommandParameter="should_have"/>
                            <Button Content="Must Not"
                                    Classes="btn-red"
                                    Height="26"
                                    MinWidth="90"
                                    FontSize="13"
                                    Command="{Binding SelectTabCommand}"
                                    CommandParameter="must_not_have"/>
                        </StackPanel>

                        <!-- Triangle Indicator -->
                        <Canvas Grid.Row="1" HorizontalAlignment="Center" Height="8">
                            <Polygon Points="0,8 8,0 16,8"
                                     Fill="{StaticResource Red}"
                                     Canvas.Left="{Binding TriangleOffset}"
                                     IsVisible="{Binding IsTriangleVisible}"/>
                        </Canvas>
                    </Grid>

                    <!-- Content Area with Cards Display -->
                    <Border Grid.Row="3"
                            Background="{StaticResource ContainerDarkPrecise}"
                            BorderBrush="{StaticResource Blue}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="12"
                            Margin="8,0,8,0"
                            BoxShadow="inset 0 2 4 #00000040">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid>
                                <!-- Empty state when no tab selected -->
                                <TextBlock Text="Select a tab to view items"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="14"
                                           Foreground="{StaticResource White}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.6"
                                           IsVisible="{Binding !IsTriangleVisible}"/>

                                <!-- Empty state when tab has no items -->
                                <TextBlock Text="No items in this category"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="14"
                                           Foreground="{StaticResource White}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Opacity="0.6"
                                           IsVisible="{Binding IsTriangleVisible}">
                                    <TextBlock.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="IsTriangleVisible"/>
                                            <Binding Path="!HasFilterItems"/>
                                        </MultiBinding>
                                    </TextBlock.IsVisible>
                                </TextBlock>

                                <!-- Items displayed as cards -->
                                <ItemsControl ItemsSource="{Binding FilterItems}"
                                              IsVisible="{Binding HasFilterItems}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{StaticResource ModalBorder}"
                                                    BorderThickness="2"
                                                    CornerRadius="8"
                                                    Background="{StaticResource DarkModalGrey}"
                                                    Margin="4">
                                                <Image Source="{Binding ItemImage}"
                                                       Width="71"
                                                       Height="95"
                                                       Margin="4"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </Border>

                    <!-- Action Buttons (context-aware) -->
                    <StackPanel Grid.Row="4" Spacing="8" Margin="0,12,0,8">
                        <!-- SELECT button (SearchModal) -->
                        <Button Name="SelectFilterButton"
                                Content="SELECT THIS FILTER"
                                Classes="btn-green"
                                Height="40"
                                HorizontalAlignment="Stretch"
                                FontSize="16"
                                Click="OnSelectFilterClick"
                                Margin="8,0,8,0"
                                IsVisible="{Binding ShowSelectButton}"/>

                        <!-- EDIT button (FiltersModal) -->
                        <Button Name="EditFilterButton"
                                Content="EDIT FILTER"
                                Classes="btn-blue"
                                Height="36"
                                HorizontalAlignment="Stretch"
                                FontSize="15"
                                Click="OnEditFilterClick"
                                Margin="8,0,8,0"
                                IsVisible="{Binding ShowActionButtons}"/>

                        <!-- COPY button (FiltersModal) -->
                        <Button Name="CopyFilterButton"
                                Content="COPY FILTER"
                                Classes="btn-red"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                FontSize="13"
                                Click="OnCopyFilterClick"
                                Margin="8,0,8,0"
                                IsVisible="{Binding ShowActionButtons}"/>

                        <!-- DELETE button (FiltersModal) -->
                        <Button Name="DeleteFilterButton"
                                Content="ðŸ—‘ï¸ DELETE FILTER"
                                Classes="btn-red"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                FontSize="13"
                                Click="OnDeleteFilterClick"
                                Margin="8,0,8,0"
                                Opacity="0.8"
                                IsVisible="{Binding ShowActionButtons}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
