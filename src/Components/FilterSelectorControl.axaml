<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:conv="using:BalatroSeedOracle.Converters"
             x:Class="BalatroSeedOracle.Components.FilterSelectorControl"
             x:DataType="vm:FilterListViewModel">

    <UserControl.Resources>
        <conv:TruncateConverter x:Key="TruncateConv"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Balatro-styled scrollbars - subtle and elegant -->
        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
        </Style>
        <Style Selector="ScrollBar:horizontal">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="{StaticResource MediumGrey}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb:pointerover">
            <Setter Property="Background" Value="{StaticResource Border}"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
        <Style Selector="ScrollBar /template/ Thumb:pressed">
            <Setter Property="Background" Value="{StaticResource Gold}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>
        <!-- Hide scroll buttons -->
        <Style Selector="ScrollBar /template/ RepeatButton">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </UserControl.Styles>

    <!-- Filter Selection UI (Balatro Challenges Style) -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" MinWidth="240"/>
            <ColumnDefinition Width="*" MinWidth="450"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Filter List (Balatro challenges style) -->
        <Border Grid.Column="0"
                Background="Transparent"
                BorderThickness="0"
                Padding="12,5,8,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="FILTERS"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="18"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <!-- Paginated filter list with numbers OUTSIDE buttons -->
                <!-- Add inner padding and disable clipping to prevent buttons appearing cut off near the divider -->
                <Border Grid.Row="2" Name="FilterListContainer" ClipToBounds="False" Padding="6,6,12,6">
                    <ItemsControl Name="FilterListControl" ItemsSource="{Binding DisplayedFilters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" Spacing="0.5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Button layout with triangle overlay (place overlay after button for layering) -->
                                <Grid Margin="0" HorizontalAlignment="Stretch">
                                    <!-- Full-width button showing the entire filter name (no truncation) -->
                                    <Button Classes="btn-red"
                                            Height="32"
                                            MinHeight="32"
                                            HorizontalAlignment="Stretch"
                                            CornerRadius="6"
                                            Margin="0,2,0,2"
                                            Padding="14,6"
                                            Command="{Binding DataContext.SelectFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <Button.Content>
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="16"
                                                       TextAlignment="Center"/>
                                        </Button.Content>
                                    </Button>
                                    
                                    <!-- Triangle overlay -->
                                    <Viewbox Width="14" Height="14"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Margin="-18,0,0,0"
                                             IsHitTestVisible="False"
                                             IsVisible="{Binding IsSelected}">
                                        <Polygon Points="0,0 0,16 16,8"
                                                 Fill="{StaticResource Red}"/>
                                    </Viewbox>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Pagination Controls -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="6">
                    <Button Content="â—€"
                            Classes="btn-red"
                            Width="44"
                            Height="33"
                            FontSize="14"
                            Padding="0"
                            Command="{Binding PreviousPageCommand}"
                            IsEnabled="{Binding CanGoToPreviousPage}"/>

                    <!-- Badge-style page indicator (fixed width to prevent wiggling) -->
                    <Border Background="{StaticResource DarkModalGrey}"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="6"
                            Padding="16,6"
                            MinWidth="85"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding PageIndicator}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource White}"
                                   TextAlignment="Center"/>
                    </Border>

                    <Button Content="â–¶"
                            Classes="btn-red"
                            Width="44"
                            Height="32"
                            FontSize="14"
                            Padding="0"
                            Command="{Binding NextPageCommand}"
                            IsEnabled="{Binding CanGoToNextPage}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right: Filter Details (Balatro Challenges-style dark panel) -->
        <Border Grid.Column="1"
                Background="{StaticResource DarkModalGrey}"
                BorderThickness="0"
                CornerRadius="8"
                Padding="16"
                Margin="8,0,8,0"
                BoxShadow="inset 0 2 4 #00000040">
            <Grid>
                <!-- Placeholder when no filter selected -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="16"
                            IsVisible="{Binding !IsFilterSelected}">
                    <TextBlock Text="Select a Filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="24"
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               Opacity="0.5"/>
                    <TextBlock Text="â€” or â€”"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               Opacity="0.4"/>
                    <Button Name="NewFilterButton"
                            Content="+ CREATE NEW FILTER"
                            Classes="btn-blue"
                            Height="42"
                            FontSize="16"
                            Padding="24,8"
                            HorizontalAlignment="Center"
                            Click="OnCreateNewFilterClick"/>
                </StackPanel>

                <!-- Filter details when selected - Balatro Challenges Style -->
                <Grid IsVisible="{Binding IsFilterSelected}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter Name -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding SelectedFilterName}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,8,0,4"/>

                    <!-- Author -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding SelectedFilterAuthor}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="13"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               Opacity="0.6"
                               Margin="0,0,0,12"/>

                    <!-- REAL AvaloniaUI TabControl with content inside each tab -->
                    <TabControl Grid.Row="2"
                                Classes="balatro-tabs"
                                SelectedIndex="{Binding SelectedTabIndex}"
                                Margin="0,0,0,8">
                        <!-- Must Have -->
                        <TabItem Header="Must Have">
                            <Border Background="{StaticResource DarkModalGrey}"
                                    BorderThickness="0"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="8,0,8,0"
                                    BoxShadow="inset 0 2 4 #00000040">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <!-- Description above visualization -->
                                        <TextBlock Text="{Binding SelectedFilterDescription}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource White}"
                                                   Margin="0,0,0,8"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxLines="3"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Top"/>

                                        <!-- Items displayed as cards -->
                                        <ItemsControl ItemsSource="{Binding FilterItems}"
                                                      IsVisible="{Binding HasFilterItems}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="4"
                                                            Background="{StaticResource White}"
                                                            BorderBrush="{StaticResource ModalBorder}"
                                                            BorderThickness="2"
                                                            Margin="4"
                                                            Padding="2">
                                                        <Image Source="{Binding ItemImage}"
                                                               Width="71"
                                                               Height="95"
                                                               Margin="2"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Empty state -->
                                        <TextBlock Text="No items in this category"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Opacity="0.6"
                                                   IsVisible="{Binding !HasFilterItems}"/>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </TabItem>

                        <!-- Should Have -->
                        <TabItem Header="Should Have">
                            <Border Background="{StaticResource DarkModalGrey}"
                                    BorderThickness="0"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="8,0,8,0"
                                    BoxShadow="inset 0 2 4 #00000040">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <TextBlock Text="{Binding SelectedFilterDescription}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource White}"
                                                   Margin="0,0,0,8"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxLines="3"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Top"/>

                                        <ItemsControl ItemsSource="{Binding FilterItems}"
                                                      IsVisible="{Binding HasFilterItems}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="4"
                                                            Background="{StaticResource White}"
                                                            BorderBrush="{StaticResource ModalBorder}"
                                                            BorderThickness="2"
                                                            Margin="4"
                                                            Padding="2">
                                                        <Image Source="{Binding ItemImage}"
                                                               Width="71"
                                                               Height="95"
                                                               Margin="2"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Text="No items in this category"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Opacity="0.6"
                                                   IsVisible="{Binding !HasFilterItems}"/>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </TabItem>

                        <!-- Must Not -->
                        <TabItem Header="Must Not">
                            <Border Background="{StaticResource DarkModalGrey}"
                                    BorderThickness="0"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="8,0,8,0"
                                    BoxShadow="inset 0 2 4 #00000040">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <TextBlock Text="{Binding SelectedFilterDescription}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource White}"
                                                   Margin="0,0,0,8"
                                                   TextWrapping="Wrap"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxLines="3"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Top"/>

                                        <ItemsControl ItemsSource="{Binding FilterItems}"
                                                      IsVisible="{Binding HasFilterItems}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="4"
                                                            Background="{StaticResource White}"
                                                            BorderBrush="{StaticResource ModalBorder}"
                                                            BorderThickness="2"
                                                            Margin="4"
                                                            Padding="2">
                                                        <Image Source="{Binding ItemImage}"
                                                               Width="71"
                                                               Height="95"
                                                               Margin="2"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Text="No items in this category"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Opacity="0.6"
                                                   IsVisible="{Binding !HasFilterItems}"/>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                    </TabControl>

                    <!-- Action Buttons (context-aware) -->
                    <StackPanel Grid.Row="3" Spacing="8" Margin="0,12,0,8">
                        <!-- SELECT button (SearchModal) -->
                        <Button Name="SelectFilterButton"
                                Content="{Binding SelectButtonText}"
                                Classes="btn-green"
                                Height="40"
                                HorizontalAlignment="Stretch"
                                FontSize="16"
                                Click="OnSelectFilterClick"
                                Margin="8,0,8,0"
                                IsEnabled="{Binding IsFilterSelected}"
                                IsVisible="{Binding ShowSelectButton}"/>

                        <!-- EDIT button (FiltersModal) -->
                        <Button Name="EditFilterButton"
                                Content="EDIT FILTER"
                                Classes="btn-blue"
                                Height="36"
                                HorizontalAlignment="Stretch"
                                FontSize="15"
                                Click="OnEditFilterClick"
                                Margin="8,0,8,0"
                                IsVisible="{Binding ShowActionButtons}"/>

                        <!-- COPY button (FiltersModal) -->
                        <Button Name="CopyFilterButton"
                                Content="COPY FILTER"
                                Classes="btn-red"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                FontSize="13"
                                Click="OnCopyFilterClick"
                                Margin="8,0,8,0"
                                IsVisible="{Binding ShowActionButtons}"/>

                        <!-- DELETE button (FiltersModal) -->
                        <Button Name="DeleteFilterButton"
                                Content="ðŸ—‘ï¸ DELETE FILTER"
                                Classes="btn-red"
                                Height="30"
                                HorizontalAlignment="Stretch"
                                FontSize="13"
                                Click="OnDeleteFilterClick"
                                Margin="8,0,8,0"
                                Opacity="0.8"
                                IsVisible="{Binding ShowActionButtons}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
