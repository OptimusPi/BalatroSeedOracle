<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Components.BalatroWidget"
             x:DataType="vm:BaseWidgetViewModel">

    <UserControl.Styles>
        <Style Selector="Border.widget-container">
            <Setter Property="Background" Value="{StaticResource MainBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="Border.widget-header">
            <Setter Property="Background" Value="{StaticResource Background}"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Styles>

    <Grid ZIndex="{Binding WidgetZIndex}">
        <!-- Minimized State - Icon -->
        <Grid IsVisible="{Binding IsMinimized}"
              Width="128"
              Height="128"
              Margin="{Binding PositionX, Converter={StaticResource PositionConverter}}">
            <Button Classes="widget-icon"
                    Command="{Binding ExpandCommand}">
                <Grid>
                    <!-- Icon background -->
                    <Border Classes="icon-bg"
                            Background="{StaticResource Red}"
                            CornerRadius="12"
                            BorderBrush="{StaticResource ModalBorder}"
                            BorderThickness="2"
                            Width="128"
                            Height="128">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding WidgetIcon}"
                                       FontSize="48"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding WidgetTitle}"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="12"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Button>

            <!-- Notification badge -->
            <Canvas ZIndex="100" IsVisible="{Binding ShowNotificationBadge}">
                <Border Classes="notification-badge"
                        Canvas.Right="-8"
                        Canvas.Top="-8">
                    <TextBlock Text="{Binding NotificationText}" />
                </Border>
            </Canvas>
        </Grid>

        <!-- Expanded State - Draggable Window -->
        <Border IsVisible="{Binding !IsMinimized}"
                Classes="widget-container"
                Width="{Binding Width}"
                Height="{Binding Height}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Draggable Header -->
                <Border Grid.Row="0"
                        Classes="widget-header"
                        PointerPressed="OnHeaderPointerPressed"
                        PointerMoved="OnHeaderPointerMoved"
                        PointerReleased="OnHeaderPointerReleased">
                    <Grid Height="32">
                        <TextBlock Text="{Binding WidgetTitle}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>

                        <!-- Minimize button -->
                        <Button Content="_"
                                Width="24" Height="20"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Command="{Binding MinimizeCommand}"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{Binding}"
                                      Margin="15"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
