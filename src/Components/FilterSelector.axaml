<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Oracle.Controls"
             x:Class="Oracle.Components.FilterSelector">
    
    <StackPanel Spacing="20">
        <!-- Filter browser using PanelSpinner -->
        <controls:PanelSpinner Name="FilterSpinner" />
        
        <!-- Select Button -->
        <Button Name="SelectButton" 
                Content="Select Filter" 
                Classes="btn-blue" 
                MinWidth="200"
                HorizontalAlignment="Center"
                Click="OnSelectClick"/>
        
        <!-- Separator -->
        <Border Height="2" 
                Background="{StaticResource DockGrey}" 
                Margin="60,0"
                CornerRadius="1"/>
        
        <!-- Create new filter section -->
        <StackPanel Spacing="12" HorizontalAlignment="Center">
            <TextBox Name="FilterNameInput"
                     Watermark="Enter filter name..."
                     Width="320"
                     FontSize="16"
                     TextChanged="OnFilterNameTextChanged"/>
            
            <Button Name="CreateFilterButton" 
                    Content="Create New Filter" 
                    Classes="btn-green" 
                    MinWidth="200"
                    HorizontalAlignment="Center"
                    IsEnabled="False"
                    Click="OnCreateFilterClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>