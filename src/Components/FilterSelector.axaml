<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.FilterSelector">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Filter browser using PanelSpinner -->
        <controls:PanelSpinner Grid.Row="0" Name="FilterSpinner" />
        
        <!-- Action buttons below spinner -->
        <StackPanel Grid.Row="1" Spacing="8" Margin="0,8,0,0">
            <Button Name="SelectButton" 
                    Content="Select Filter" 
                    Classes="btn-blue" 
                    MinWidth="200"
                    HorizontalAlignment="Center"
                    Click="OnSelectClick"/>
        </StackPanel>
    </Grid>
</UserControl>