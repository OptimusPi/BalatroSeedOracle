<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.FilterSelector">
    
    <StackPanel Spacing="10">
                   
        <!-- Filter browser using PanelSpinner -->
        <controls:PanelSpinner Name="FilterSpinner" />
        
        <!-- Select Button (moved higher up, no spacer) -->
        <Button Name="SelectButton" 
                Content="Select Filter" 
                Classes="btn-blue" 
                MinWidth="200"
                HorizontalAlignment="Center"
                Click="OnSelectClick"/>
        
        <!-- "or" text between buttons -->
        <TextBlock Name="OrText"
                   Text="or"
                   FontFamily="{StaticResource BalatroFont}"
                   FontSize="16"
                   Foreground="{StaticResource TextLight}"
                   HorizontalAlignment="Center"/>
        
        <!-- Create new filter section -->
        <Button Name="CreateFilterButton" 
                Content="Create New Filter" 
                Classes="btn-green" 
                MinWidth="200"
                HorizontalAlignment="Center"
                Click="OnCreateFilterClick"/>
    </StackPanel>
</UserControl>