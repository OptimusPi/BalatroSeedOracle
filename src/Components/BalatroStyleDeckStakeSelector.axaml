<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Components.BalatroStyleDeckStakeSelector">

    <UserControl.Styles>
        <!-- Compact deck/stake card style matching real Balatro -->
        <Style Selector="Border.deck-stake-card">
            <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- White description tooltip like real Balatro -->
        <Style Selector="Border.description-tooltip">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Navigation arrow buttons -->
        <Style Selector="Button.nav-arrow">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.nav-arrow:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.nav-arrow:disabled">
            <Setter Property="Background" Value="{StaticResource RedDisabled}"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
        <!-- Pagination dots -->
        <Style Selector="Border.pagination-dot">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Background" Value="{StaticResource MediumGrey}"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
        <Style Selector="Border.pagination-dot.active">
            <Setter Property="Background" Value="{StaticResource White}"/>
        </Style>
        
        <!-- Select button -->
        <Style Selector="Button.select-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.select-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
    </UserControl.Styles>

    <!-- Vertical stack matching real Balatro layout -->
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="20">
        
        <!-- Deck Selector -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/> <!-- Left arrow -->
                    <ColumnDefinition Width="400"/> <!-- Card -->
                    <ColumnDefinition Width="50"/> <!-- Right arrow -->
                </Grid.ColumnDefinitions>
                
                <!-- Left arrow -->
                <Button Grid.Column="0" 
                        Name="DeckPrevButton"
                        Classes="nav-arrow"
                        Content="‹"
                        VerticalAlignment="Center"
                        Click="OnDeckPrevClick"/>
                
                <!-- Deck card -->
                <Border Grid.Column="1" Classes="deck-stake-card">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/> <!-- Image -->
                            <ColumnDefinition Width="*"/>  <!-- Content -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Deck image -->
                        <Border Grid.Column="0" 
                                Background="#8B4513"
                                CornerRadius="4"
                                Width="48" 
                                Height="56"
                                VerticalAlignment="Center">
                            <Image Name="DeckImage" 
                                   Width="40" 
                                   Height="48"
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <!-- Deck info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                            <TextBlock Name="DeckNameText"
                                       Text="Red Deck"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource White}"
                                       Margin="0,0,0,4"/>
                            
                            <!-- White description tooltip -->
                            <Border Classes="description-tooltip">
                                <TextBlock Name="DeckEffectText"
                                           Text="+1 Discard every round"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"
                                           Foreground="#000000"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Right arrow -->
                <Button Grid.Column="2" 
                        Name="DeckNextButton"
                        Classes="nav-arrow"
                        Content="›"
                        VerticalAlignment="Center"
                        Click="OnDeckNextClick"/>
            </Grid>
            
            <!-- Deck pagination dots -->
            <StackPanel Name="DeckPaginationPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Stake Selector -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/> <!-- Left arrow -->
                    <ColumnDefinition Width="400"/> <!-- Card -->
                    <ColumnDefinition Width="50"/> <!-- Right arrow -->
                </Grid.ColumnDefinitions>
                
                <!-- Left arrow -->
                <Button Grid.Column="0" 
                        Name="StakePrevButton"
                        Classes="nav-arrow"
                        Content="‹"
                        VerticalAlignment="Center"
                        Click="OnStakePrevClick"/>
                
                <!-- Stake card -->
                <Border Grid.Column="1" Classes="deck-stake-card">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/> <!-- Image -->
                            <ColumnDefinition Width="*"/>  <!-- Content -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- Stake image (white star icon) -->
                        <Border Grid.Column="0" 
                                Background="#333333"
                                CornerRadius="20"
                                Width="40" 
                                Height="40"
                                VerticalAlignment="Center">
                            <TextBlock Text="✦"
                                       FontSize="24"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Stake info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                            <TextBlock Name="StakeNameText"
                                       Text="White Stake"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource White}"
                                       Margin="0,0,0,4"/>
                            
                            <!-- White description tooltip -->
                            <Border Classes="description-tooltip">
                                <TextBlock Text="Base Difficulty"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"
                                           Foreground="#000000"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Right arrow -->
                <Button Grid.Column="2" 
                        Name="StakeNextButton"
                        Classes="nav-arrow"
                        Content="›"
                        VerticalAlignment="Center"
                        Click="OnStakeNextClick"/>
            </Grid>
            
            <!-- Stake pagination dots -->
            <StackPanel Name="StakePaginationPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Select button -->
        <Button Name="SelectButton"
                Content="PLAY"
                Classes="select-button"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Click="OnSelectClick"/>
    </StackPanel>
</UserControl>
