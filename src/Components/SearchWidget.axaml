<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Oracle.Controls"
             x:Class="Oracle.Components.SearchWidget"
             x:CompileBindings="False">
    
    <UserControl.Styles>
        <Style Selector="Border.widget-container">
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#2c2f3e" Offset="0.0"/>
                    <GradientStop Color="#1a1c29" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BoxShadow" Value="0 8 24 #60000000"/>
            <Setter Property="BorderBrush">
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#666a6c" Offset="0.0"/>
                    <GradientStop Color="#444849" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
        
        <Style Selector="Border.widget-header">
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#454a5c" Offset="0.0"/>
                    <GradientStop Color="#2c3144" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter>
            <Setter Property="CornerRadius" Value="9,9,0,0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderBrush" Value="#666a6c"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>
        
        <Style Selector="TextBox.terminal">
            <Setter Property="Background" Value="#0a0a0a"/>
            <Setter Property="Foreground" Value="#00ff66"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="9"/> <!-- Smaller font -->
            <Setter Property="Padding" Value="6"/> <!-- Less padding -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionBrush" Value="#00ff6644"/>
        </Style>
        
        <Style Selector="Border.config-section">
            <Setter Property="Background" Value="{StaticResource Black}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="0,2,0,2"/> <!-- Thicker borders -->
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Height" Duration="0:0:0.3" Easing="QuadraticEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.window-button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Background" Value="#22ffffff"/> <!-- Semi-transparent white with proper alpha -->
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <!-- Override the global button template -->
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Minimize button (always blue) -->
        <Style Selector="Button.window-button.minimize">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
        </Style>
        <Style Selector="Button.window-button.minimize:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Maximize button (always blue) -->
        <Style Selector="Button.window-button.maximize">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
        </Style>
        <Style Selector="Button.window-button.maximize:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Close button (always red) -->
        <Style Selector="Button.window-button.close">
            <Setter Property="Background" Value="{StaticResource Red}"/>
        </Style>
        <Style Selector="Button.window-button.close:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        
        <!-- Widget-specific button style (flat, no shadows) -->
        <Style Selector="Button.widget-btn">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"
                                          TextBlock.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <!-- Minimized State -->
        <Grid Name="MinimizedView" IsVisible="False">
            <Border Classes="widget-container" 
                    Width="60" Height="60"
                    Cursor="Hand"
                    PointerPressed="OnMinimizedClick">
                <Grid>
                    <Border Background="{StaticResource DockGrey}" CornerRadius="16">
                        <TextBlock Text="ðŸ”" 
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border Name="NotificationBadge"
                            Background="{StaticResource Red}"
                            CornerRadius="10"
                            Width="20" Height="20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-5,-5,0"
                            IsVisible="False">
                        <TextBlock Name="NotificationCount"
                                   Text="0"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Expanded State -->
        <Border Name="ExpandedView" 
                Classes="widget-container"
                Width="420" 
                MaxHeight="500"
                IsVisible="True">
            <Grid RowDefinitions="Auto,*">
                <!-- Header -->
                <Border Grid.Row="0" Classes="widget-header">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ” Motely Search" 
                                   FontWeight="Bold"
                                   FontSize="13" 
                                   VerticalAlignment="Center"
                                   Foreground="#ffffff"
                                   Margin="12,0,0,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Name="StatusText"
                                   Text=""
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="#aaaaaa"/>
                        
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Margin="0,0,8,0">
                            <Button Classes="window-button minimize"
                                    Content="â”€"
                                    Click="OnMinimizeClick"
                                    ToolTip.Tip="Minimize"/>
                            <Button Classes="window-button maximize"
                                    Content="â–¡"
                                    Click="OnMaximizeClick"
                                    ToolTip.Tip="Maximize"/>
                            <Button Classes="window-button close"
                                    Content="âœ•"
                                    Click="OnCloseClick"
                                    ToolTip.Tip="Close"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Spacing="12" Margin="0,8,0,8">
                        <!-- Filter Selection -->
                        <Border Background="{StaticResource DockGrey}" 
                                BorderBrush="{StaticResource ModalBorder}" 
                                BorderThickness="3" 
                                CornerRadius="10" 
                                Padding="16"
                                BoxShadow="inset 0 2 4 #20000000">
                            <Grid ColumnDefinitions="*,8,Auto,8,Auto">
                                <TextBox Grid.Column="0"
                                         Name="ConfigPathBox" 
                                         Text="{Binding ConfigPath}" 
                                         IsReadOnly="True"
                                         Background="#262633"
                                         BorderBrush="#555a5c"
                                         BorderThickness="1"
                                         FontSize="12"
                                         Height="32"
                                         VerticalAlignment="Center"
                                         Padding="8,4"
                                         FontFamily="{StaticResource BalatroFont}"
                                         Foreground="#E2E2E3"
                                         Watermark="Choose a filter to search with..."/>
                                         
                                <Button Grid.Column="2"
                                        Name="LoadConfigButton" 
                                        Content="ðŸ“ LOAD FILTER" 
                                        Classes="oracle-btn button-color-orange"
                                        Height="36"
                                        Padding="14,4"
                                        FontSize="12"
                                        FontFamily="{StaticResource BalatroFont}"
                                        FontWeight="Bold"
                                        VerticalAlignment="Center"
                                        Click="OnLoadConfigClick"/>
                                        
                                <!-- Config loaded indicator -->
                                <Border Grid.Column="4"
                                        Background="{StaticResource Green}"
                                        CornerRadius="6"
                                        Padding="8,4"
                                        Name="ConfigLoadedIndicator"
                                        IsVisible="False"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="âœ“ Ready" 
                                               FontSize="11"
                                               FontFamily="{StaticResource BalatroFont}"
                                               FontWeight="Bold"
                                               Foreground="#000000"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Run Parameters Section -->
                        <Border Classes="config-section" Padding="12">
                            <StackPanel>
                                <!-- Section Header -->
                                <Button Name="ConfigToggleButton"
                                        Click="OnConfigToggleClick"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Grid.Column="0"
                                                   Name="ConfigExpandIcon"
                                                   Text="â–¼"
                                                   FontSize="12"
                                                   FontFamily="Segoe UI Symbol"
                                                   Foreground="#C2C2C3"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="RUN PARAMETERS"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="#E2E2E3"/>
                                    </Grid>
                                </Button>
                                
                                <!-- Expandable Content -->
                                <StackPanel Name="ConfigContent" 
                                            Margin="0,12,0,0"
                                            Spacing="12"
                                            IsVisible="True">
                                    
                                    <!-- Deck and Stake Row -->
                                    <Grid ColumnDefinitions="*,12,*">
                                        <!-- Deck Selection -->
                                        <Border Grid.Column="0" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="DECK" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox Name="DeckComboBox"
                                                          FontFamily="{StaticResource BalatroFont}"
                                                          FontSize="13"
                                                          Background="#374244"
                                                          BorderBrush="#555a5c"
                                                          Height="32"
                                                          SelectedIndex="0">
                                                    <ComboBoxItem Content="Red Deck"/>
                                                    <ComboBoxItem Content="Blue Deck"/>
                                                    <ComboBoxItem Content="Yellow Deck"/>
                                                    <ComboBoxItem Content="Green Deck"/>
                                                    <ComboBoxItem Content="Black Deck"/>
                                                    <ComboBoxItem Content="Magic Deck"/>
                                                    <ComboBoxItem Content="Nebula Deck"/>
                                                    <ComboBoxItem Content="Ghost Deck"/>
                                                    <ComboBoxItem Content="Abandoned Deck"/>
                                                    <ComboBoxItem Content="Checkered Deck"/>
                                                    <ComboBoxItem Content="Zodiac Deck"/>
                                                    <ComboBoxItem Content="Painted Deck"/>
                                                    <ComboBoxItem Content="Anaglyph Deck"/>
                                                    <ComboBoxItem Content="Plasma Deck"/>
                                                    <ComboBoxItem Content="Erratic Deck"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Stake Selection -->
                                        <Border Grid.Column="2" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="STAKE" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox Name="StakeComboBox"
                                                          FontFamily="{StaticResource BalatroFont}"
                                                          FontSize="13"
                                                          Background="#374244"
                                                          BorderBrush="#555a5c"
                                                          Height="32"
                                                          SelectedIndex="0">
                                                    <ComboBoxItem Content="White Stake"/>
                                                    <ComboBoxItem Content="Red Stake"/>
                                                    <ComboBoxItem Content="Green Stake"/>
                                                    <ComboBoxItem Content="Black Stake"/>
                                                    <ComboBoxItem Content="Blue Stake"/>
                                                    <ComboBoxItem Content="Purple Stake"/>
                                                    <ComboBoxItem Content="Orange Stake"/>
                                                    <ComboBoxItem Content="Gold Stake"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Threads and Cutoff Row -->
                                    <Grid ColumnDefinitions="*,12,*">
                                        <!-- Threads -->
                                        <Border Grid.Column="0" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="THREADS" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <controls:BalatroSpinnerControl Name="ThreadsSpinner"
                                                                                Value="8"
                                                                                Minimum="1"
                                                                                Maximum="32"
                                                                                FontFamily="{StaticResource BalatroFont}"
                                                                                FontSize="16"
                                                                                Background="#374244"
                                                                                BorderBrush="#555a5c"
                                                                                Height="32"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Min Score (Cutoff) -->
                                        <Border Grid.Column="2" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="MIN SCORE" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <controls:BalatroSpinnerControl Name="MinScoreSpinner"
                                                                                Value="0"
                                                                                Minimum="0"
                                                                                Maximum="999"
                                                                                FontFamily="{StaticResource BalatroFont}"
                                                                                FontSize="16"
                                                                                Background="#374244"
                                                                                BorderBrush="#555a5c"
                                                                                Height="32"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- Advanced Settings Row -->
                                    <Grid ColumnDefinitions="*,12,*">
                                        <!-- Batch Size -->
                                        <Border Grid.Column="0" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="BATCH SIZE" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <controls:BalatroSpinnerControl Name="BatchSizeSpinner"
                                                                                Value="4"
                                                                                Minimum="1"
                                                                                Maximum="8"
                                                                                FontFamily="{StaticResource BalatroFont}"
                                                                                FontSize="16"
                                                                                Background="#374244"
                                                                                BorderBrush="#555a5c"
                                                                                Height="32"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Debug Mode -->
                                        <Border Grid.Column="2" 
                                                Background="#262633" 
                                                CornerRadius="8"
                                                BorderBrush="#555a5c"
                                                BorderThickness="2"
                                                Padding="8">
                                            <StackPanel>
                                                <TextBlock Text="DEBUG" 
                                                           FontFamily="{StaticResource BalatroFont}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#969696"
                                                           Margin="0,0,0,4"/>
                                                <CheckBox Name="DebugCheckBox" 
                                                          Content="Enable Debug" 
                                                          FontFamily="{StaticResource BalatroFont}"
                                                          FontSize="13"
                                                          Foreground="#E2E2E3"
                                                          VerticalAlignment="Center"
                                                          Height="32"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Search Progress Area -->
                        <Border Background="{StaticResource DockGrey}" 
                                BorderBrush="{StaticResource ModalBorder}" 
                                BorderThickness="3" 
                                CornerRadius="10" 
                                Padding="16"
                                BoxShadow="inset 0 2 4 #20000000">
                            <StackPanel Spacing="12">
                                <!-- Status Display -->
                                <Grid>
                                    <Border Background="#0f0f0f" 
                                            CornerRadius="8" 
                                            Padding="12"
                                            MinHeight="120"
                                            MaxHeight="220"
                                            BorderBrush="#333344"
                                            BorderThickness="2">
                                    <ScrollViewer Name="TerminalScrollViewer"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  MaxHeight="180">
                                        <TextBlock Name="TerminalOutput" 
                                                   FontFamily="Cascadia Code, Consolas, monospace"
                                                   FontSize="11"
                                                   Foreground="#00ff66"
                                                   Background="Transparent"
                                                   TextWrapping="Wrap"
                                                   Text="Ready to search! Load a filter and click Start Search."/>
                                    </ScrollViewer>
                                    </Border>
                                    <!-- Console Controls -->
                                    <Button Name="ClearConsoleButton"
                                            Content="CLEAR"
                                            Click="OnClearConsoleClick"
                                            Classes="widget-btn"
                                            Background="#44000000"
                                            Foreground="#888888"
                                            FontFamily="{StaticResource BalatroFont}"
                                            FontSize="9"
                                            FontWeight="Bold"
                                            Height="22"
                                            Padding="10,2"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="0,8,8,0"
                                            CornerRadius="4"
                                            BorderBrush="#666666"
                                            BorderThickness="1"
                                            Cursor="Hand"/>
                                </Grid>
                                
                                <!-- Action Buttons -->
                                <Grid ColumnDefinitions="*,12,Auto,12,Auto">
                                    <!-- Start Search Button -->
                                    <Button Grid.Column="0"
                                            Name="CookButton" 
                                            Content="ðŸš€ START SEARCH" 
                                            Classes="oracle-btn button-color-green"
                                            Height="42" 
                                            FontSize="16" 
                                            FontFamily="{StaticResource BalatroFont}"
                                            FontWeight="Bold"
                                            Click="OnCookClick" 
                                            IsEnabled="False"/>
                                    
                                    <!-- View Results Button -->
                                    <Button Grid.Column="2"
                                            Name="ViewResultsButton"
                                            Content="ðŸ“Š RESULTS" 
                                            Classes="oracle-btn button-color-blue"
                                            Height="42"
                                            Padding="16,4"
                                            FontSize="14"
                                            FontFamily="{StaticResource BalatroFont}"
                                            FontWeight="Bold"
                                            Click="OnViewResultsClick"
                                            IsVisible="False"/>
                                            
                                    <!-- Result Count Badge -->
                                    <Border Grid.Column="4"
                                            Name="ResultCountBadge"
                                            Background="#4BC292"
                                            CornerRadius="12"
                                            Padding="12,6"
                                            VerticalAlignment="Center"
                                            IsVisible="False">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Found:" 
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       FontWeight="Bold"
                                                       Foreground="#000000"/>
                                            <TextBlock Name="ResultCountText"
                                                      Text="0"
                                                      FontFamily="{StaticResource BalatroFont}"
                                                      FontSize="12"
                                                      FontWeight="Bold"
                                                      Foreground="#000000"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>