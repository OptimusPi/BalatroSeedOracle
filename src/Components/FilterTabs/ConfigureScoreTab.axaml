<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             x:Class="BalatroSeedOracle.Components.FilterTabs.ConfigureScoreTab"
             x:DataType="vm:ConfigureScoreTabViewModel"
             x:CompileBindings="True">

    <!-- Simple scoring configuration - NO drag-drop duplication -->
    <Grid Margin="24" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource DarkBackground}"
                BorderThickness="0"
                CornerRadius="12"
                Padding="16">
            <TextBlock Text="Score Requirements"
                       FontFamily="{StaticResource BalatroFont}"
                       FontSize="18"
                       Foreground="{StaticResource Gold}"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Minimum Score Section -->
        <Border Grid.Row="2"
                Background="{StaticResource DarkBackground}"
                BorderThickness="0"
                CornerRadius="12"
                Padding="16">
            <StackPanel Spacing="12">
                <TextBlock Text="Minimum Score"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource White}"/>

                <Grid ColumnDefinitions="Auto,8,*,8,Auto">
                    <TextBlock Grid.Column="0"
                               Text="At least:"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               Foreground="{StaticResource LightGrey}"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Column="2"
                             Text="{Binding MinimumScore, Mode=TwoWay}"
                             Background="{StaticResource DarkBackground}"
                             BorderThickness="0"
                             CornerRadius="6"
                             Foreground="{StaticResource White}"
                             Padding="8"
                             HorizontalAlignment="Stretch"/>

                    <TextBlock Grid.Column="4"
                               Text="points"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               Foreground="{StaticResource LightGrey}"
                               VerticalAlignment="Center"/>
                </Grid>

                <CheckBox Content="Enable minimum score filter"
                          IsChecked="{Binding EnableMinimumScore}"
                          FontFamily="{StaticResource BalatroFont}"
                          FontSize="13"
                          Foreground="{StaticResource White}"/>
            </StackPanel>
        </Border>

        <!-- Future scoring options placeholder -->
        <Border Grid.Row="4"
                Background="{StaticResource DarkBackground}"
                BorderThickness="0"
                CornerRadius="12"
                Padding="16"
                VerticalAlignment="Top">
            <StackPanel Spacing="8">
                <TextBlock Text="Additional Options (Future)"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="14"
                           Foreground="{StaticResource LightGrey}"/>
                <TextBlock Text="• Hand type requirements" FontSize="12" Foreground="{StaticResource LightGrey}"/>
                <TextBlock Text="• Blind difficulty settings" FontSize="12" Foreground="{StaticResource LightGrey}"/>
                <TextBlock Text="• Ante progression rules" FontSize="12" Foreground="{StaticResource LightGrey}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>