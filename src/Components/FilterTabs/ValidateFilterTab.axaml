<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:components="using:BalatroSeedOracle.Components.FilterTabs"
             x:Class="BalatroSeedOracle.Components.FilterTabs.ValidateFilterTab"
             x:DataType="vm:ValidateFilterTabViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Row 0: Header -->
                <RowDefinition Height="10"/>    <!-- Row 1: Spacer -->
                <RowDefinition Height="Auto"/>  <!-- Row 2: Side-by-side layout -->
                <RowDefinition Height="15"/>    <!-- Row 3: Spacer -->
                <RowDefinition Height="Auto"/>  <!-- Row 4: Filter Requirements -->
                <RowDefinition Height="10"/>    <!-- Row 5: Spacer -->
                <RowDefinition Height="Auto"/>  <!-- Row 6: Scoring Items -->
            </Grid.RowDefinitions>

        <!-- Row 0: Main Header -->
        <TextBlock Grid.Row="0"
                   Text="FINISH"
                   FontSize="24"
                   FontFamily="{StaticResource BalatroFont}"
                   Foreground="{StaticResource Gold}"
                   HorizontalAlignment="Center"/>

        <!-- Row 2: Side-by-side layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>    <!-- Left: Metadata & Save -->
                <ColumnDefinition Width="20"/>   <!-- Spacer -->
                <ColumnDefinition Width="*"/>    <!-- Right: Test & Validate -->
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE: Filter Metadata & Save Actions -->
            <Border Grid.Column="0"
                    Background="{StaticResource VeryDarkBackground}"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <StackPanel Spacing="15">
                    <!-- Section Header -->
                    <TextBlock Text="FILTER DETAILS"
                               FontSize="16"
                               Foreground="{StaticResource Gold}"
                               FontFamily="{StaticResource BalatroFont}"
                               HorizontalAlignment="Center"/>

                    <!-- Filter Name -->
                    <StackPanel>
                        <TextBlock Text="Filter Name"
                                   FontSize="13"
                                   Foreground="{StaticResource White}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding FilterName}"
                                 Watermark="Enter filter name..."
                                 FontSize="13"
                                 Height="32"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel>
                        <TextBlock Text="Description"
                                   FontSize="13"
                                   Foreground="{StaticResource White}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding FilterDescription}"
                                 Watermark="Enter description..."
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 FontSize="13"
                                 Height="80"/>
                    </StackPanel>

                    <!-- Separator -->
                    <Border Height="1"
                            Background="{StaticResource ModalBorder}"
                            Margin="0,5"/>

                    <!-- Save Actions -->
                    <StackPanel Spacing="10">
                        <TextBlock Text="SAVE OPTIONS"
                                   FontSize="13"
                                   Foreground="{StaticResource White}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <Button Content="ðŸ’¾ SAVE FILTER"
                                Command="{Binding SaveCurrentFilterCommand}"
                                Classes="btn-green"
                                Height="40"
                                FontSize="14"
                                IsEnabled="{Binding FilterName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                        <Button Content="ðŸ“„ SAVE AS..."
                                Command="{Binding SaveAsCommand}"
                                Classes="btn-blue"
                                Height="35"
                                FontSize="13"
                                IsEnabled="{Binding FilterName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                        <Button Content="ðŸ“¤ EXPORT TO DESKTOP"
                                Command="{Binding ExportFilterCommand}"
                                Classes="btn-blue"
                                Height="35"
                                FontSize="13"
                                IsEnabled="{Binding FilterName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    </StackPanel>

                    <!-- Status Message -->
                    <Border Background="{StaticResource DarkBackground}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource ModalBorder}"
                            CornerRadius="6"
                            Padding="10"
                            IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="11"
                                   Foreground="{Binding StatusColor}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- RIGHT SIDE: Test & Validate -->
            <Border Grid.Column="2"
                    Background="{StaticResource VeryDarkBackground}"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <Grid RowDefinitions="Auto,15,*">
                    <!-- Section Header -->
                    <TextBlock Grid.Row="0"
                               Text="ðŸ§ª TEST &amp; VALIDATE"
                               FontSize="16"
                               Foreground="{StaticResource Gold}"
                               FontFamily="{StaticResource BalatroFont}"
                               HorizontalAlignment="Center"/>

                    <!-- Test Content Area -->
                    <Border Grid.Row="2"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource ModalBorder}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="15">

                        <!-- Validation Warning (if any) -->
                        <Panel>
                            <!-- Warning State -->
                            <Border IsVisible="{Binding HasValidationWarnings}"
                                    Background="{StaticResource Orange}"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="0,0,0,10"
                                    VerticalAlignment="Top">
                                <TextBlock Text="{Binding ValidationWarningText}"
                                           FontSize="12"
                                           Foreground="{StaticResource White}"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Main Test States -->
                            <Grid>
                                <!-- Idle State -->
                                <StackPanel Spacing="15"
                                            VerticalAlignment="Center">
                                    <StackPanel.IsVisible>
                                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                                            <Binding Path="!IsLiveSearchActive"/>
                                            <Binding Path="!ShowTestSuccess"/>
                                            <Binding Path="!ShowTestError"/>
                                        </MultiBinding>
                                    </StackPanel.IsVisible>

                                    <TextBlock Text="ðŸ” FILTER VALIDATION"
                                               FontSize="14"
                                               Foreground="{StaticResource Gold}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock Text="Test your filter to find matching seeds"
                                               FontSize="12"
                                               Foreground="{StaticResource LightGrey}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"/>

                                    <Button Content="ðŸ§ª TEST FILTER"
                                            Command="{Binding TestFilterCommand}"
                                            Classes="btn-green"
                                            Height="45"
                                            FontSize="15"
                                            HorizontalAlignment="Center"
                                            MinWidth="180"/>

                                    <!-- Ready Icon -->
                                    <Border Background="{StaticResource DarkGrey}"
                                            BorderThickness="2"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            CornerRadius="50"
                                            Width="80"
                                            Height="80"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="?"
                                                   FontSize="36"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="No test results yet"
                                               FontSize="10"
                                               Foreground="{StaticResource DarkGrey}"
                                               FontFamily="{StaticResource BalatroFont}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Active Search State -->
                                <StackPanel IsVisible="{Binding IsLiveSearchActive}"
                                            Spacing="12"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="âš™ SEARCHING..."
                                               FontSize="14"
                                               Foreground="{StaticResource Gold}"
                                               HorizontalAlignment="Center"/>

                                    <ProgressBar Value="{Binding LiveSearchProgress}"
                                                 Maximum="100"
                                                 Height="10"
                                                 MinWidth="250"/>

                                    <TextBlock Text="{Binding LiveSearchStatus}"
                                               FontSize="11"
                                               Foreground="{StaticResource LightGrey}"
                                               HorizontalAlignment="Center"/>

                                    <TextBlock FontSize="11"
                                               Foreground="{StaticResource Blue}"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Matches found: {0}">
                                                <Binding Path="LiveSearchMatchCount"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <TextBlock Text="Searching 1 BILLION seeds (1,071,875,000)..."
                                               FontSize="10"
                                               Foreground="{StaticResource LightGrey}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- Success State -->
                                <StackPanel IsVisible="{Binding ShowTestSuccess}"
                                            Spacing="12"
                                            VerticalAlignment="Center">
                                    <Border Background="{StaticResource Green}"
                                            CornerRadius="6"
                                            Padding="10,6">
                                        <TextBlock Text="âœ“ FILTER VERIFIED"
                                                   FontSize="16"
                                                   Foreground="{StaticResource White}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    <Border Background="{StaticResource DarkGrey}"
                                            CornerRadius="6"
                                            Padding="12">
                                        <StackPanel Spacing="10">
                                            <TextBlock Text="EXAMPLE SEED FOUND:"
                                                       FontSize="11"
                                                       Foreground="{StaticResource LightGrey}"
                                                       HorizontalAlignment="Center"/>

                                            <TextBlock Text="{Binding FoundSeed}"
                                                       FontSize="16"
                                                       Foreground="{StaticResource Gold}"
                                                       FontFamily="Consolas"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>

                                            <Button Content="ðŸ“‹ COPY SEED"
                                                    Command="{Binding CopySeedCommand}"
                                                    Classes="copy-btn"
                                                    Width="120"
                                                    Height="32"
                                                    HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="{Binding TestResultMessage}"
                                               FontSize="11"
                                               Foreground="{StaticResource LightGrey}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"/>

                                    <Button Content="ðŸ§ª TEST AGAIN"
                                            Command="{Binding TestFilterCommand}"
                                            Classes="btn-blue"
                                            Height="32"
                                            FontSize="11"
                                            HorizontalAlignment="Center"
                                            MinWidth="100"/>
                                </StackPanel>

                                <!-- Error State -->
                                <StackPanel IsVisible="{Binding ShowTestError}"
                                            Spacing="12"
                                            VerticalAlignment="Center">
                                    <Border Background="{StaticResource Red}"
                                            CornerRadius="6"
                                            Padding="10,6">
                                        <TextBlock Text="âš  TEST FAILED"
                                                   FontSize="14"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="{Binding TestResultMessage}"
                                               FontSize="12"
                                               Foreground="{StaticResource White}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>

                                    <TextBlock Text="Try adjusting your filter criteria or search settings"
                                               FontSize="10"
                                               Foreground="{StaticResource LightGrey}"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"/>

                                    <Button Content="ðŸ§ª RETRY TEST"
                                            Command="{Binding TestFilterCommand}"
                                            Classes="btn-blue"
                                            Height="35"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            MinWidth="120"/>
                                </StackPanel>
                            </Grid>
                        </Panel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Row 4: Filter Requirements (Must/MustNot) with Card Grid -->
        <StackPanel Grid.Row="4" Spacing="20">
            <!-- Section Header -->
            <TextBlock Text="FILTER REQUIREMENTS"
                       FontSize="20"
                       Foreground="{StaticResource Gold}"
                       FontFamily="{StaticResource BalatroFont}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Must Have Section -->
            <Border CornerRadius="12"
                    BoxShadow="0 4 16 4 #0A0F1C">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#065F46" Offset="0"/>
                        <GradientStop Color="#047857" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Expander IsExpanded="True">
                    <Expander.Header>
                        <Border Padding="20,12" CornerRadius="8,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon with glow -->
                                <Border Grid.Column="0"
                                        Width="36" Height="36"
                                        CornerRadius="18"
                                        Background="#10B981"
                                        BoxShadow="0 0 20 5 #10B981">
                                    <TextBlock Text="âœ“"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Title -->
                                <TextBlock Grid.Column="1"
                                           Text="MUST HAVE ITEMS"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource BalatroFont}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"/>

                                <!-- Count Badge -->
                                <Border Grid.Column="2"
                                        Background="{StaticResource Gold}"
                                        CornerRadius="15"
                                        Padding="12,6"
                                        MinWidth="30">
                                    <TextBlock Text="{Binding MustClauses.Count}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               FontFamily="{StaticResource BalatroFont}"
                                               Foreground="{StaticResource Black}"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Expander.Header>

                    <Border Background="#042F2E"
                            CornerRadius="0,0,8,8"
                            Padding="15">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding MustClauses}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <components:ClauseRowControl DataContext="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Border>

            <!-- Banned Items Section -->
            <Border CornerRadius="12"
                    BoxShadow="0 4 16 4 #0A0F1C">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#7F1D1D" Offset="0"/>
                        <GradientStop Color="#991B1B" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Expander IsExpanded="True">
                    <Expander.Header>
                        <Border Padding="20,12" CornerRadius="8,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon with glow -->
                                <Border Grid.Column="0"
                                        Width="36" Height="36"
                                        CornerRadius="18"
                                        Background="#EF4444"
                                        BoxShadow="0 0 20 5 #EF4444">
                                    <TextBlock Text="âœ•"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Title -->
                                <TextBlock Grid.Column="1"
                                           Text="BANNED ITEMS"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource BalatroFont}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"/>

                                <!-- Count Badge -->
                                <Border Grid.Column="2"
                                        Background="{StaticResource Gold}"
                                        CornerRadius="15"
                                        Padding="12,6"
                                        MinWidth="30">
                                    <TextBlock Text="{Binding MustNotClauses.Count}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               FontFamily="{StaticResource BalatroFont}"
                                               Foreground="{StaticResource Black}"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Expander.Header>

                    <Border Background="#450A0A"
                            CornerRadius="0,0,8,8"
                            Padding="15">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding MustNotClauses}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <components:ClauseRowControl DataContext="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Border>
        </StackPanel>

        <!-- Row 6: Scoring Items (Should) with Purple Gradient Theme -->
        <StackPanel Grid.Row="6" Spacing="0">
            <!-- Section Header with Royal Purple Gradient -->
            <Border CornerRadius="10,10,0,0"
                    Padding="16,12"
                    Margin="0,16,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B21B6" Offset="0"/>  <!-- Deep Purple -->
                        <GradientStop Color="#6D28D9" Offset="0.5"/> <!-- Violet -->
                        <GradientStop Color="#7C3AED" Offset="1"/>   <!-- Light Violet -->
                    </LinearGradientBrush>
                </Border.Background>

                <!-- Purple Glow Effect -->
                <Border.Effect>
                    <DropShadowEffect Color="#8B5CF6"
                                      Opacity="0.6"
                                      BlurRadius="20"
                                      OffsetX="0"
                                      OffsetY="0"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Star Icon with Golden Glow -->
                    <TextBlock Grid.Column="0"
                               Text="â­"
                               FontSize="28"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700"
                                              Opacity="0.9"
                                              BlurRadius="12"
                                              OffsetX="0"
                                              OffsetY="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Grid.Column="1"
                               Text="SCORING ITEMS"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="22"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource White}"
                               VerticalAlignment="Center"
                               LetterSpacing="3">
                        <!-- Add purple text shadow for depth -->
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#311B92"
                                              Opacity="0.8"
                                              BlurRadius="3"
                                              OffsetX="0"
                                              OffsetY="2"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Count Badge with Golden Accent -->
                    <Border Grid.Column="2"
                            Background="{StaticResource Gold}"
                            CornerRadius="16"
                            Padding="14,5"
                            Margin="10,0,0,0"
                            BoxShadow="0 3 10 2 #FFD70055">
                        <TextBlock FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Black}">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} SCORED">
                                    <Binding Path="ShouldClauses.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>

            <!-- Should Clauses Expander with Card Background -->
            <Border Background="#1A1625"
                    BorderBrush="#8B5CF6"
                    BorderThickness="2,0,2,2"
                    CornerRadius="0,0,10,10">
                <Expander IsExpanded="True"
                          Background="Transparent"
                          Padding="0">
                    <Expander.Header>
                        <Border Background="Transparent"
                                BorderBrush="#7C3AED"
                                BorderThickness="0,0,0,1"
                                Width="900"
                                Padding="16,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="âš¡"
                                           FontSize="20"
                                           Margin="0,0,10,0"
                                           Foreground="{StaticResource Gold}"
                                           VerticalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFD700"
                                                          Opacity="0.6"
                                                          BlurRadius="6"
                                                          OffsetX="0"
                                                          OffsetY="0"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                                <TextBlock Grid.Column="1"
                                           Text="Preference Items (Contribute to Score)"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#B794F4"
                                           VerticalAlignment="Center"/>

                                <!-- Subtitle showing scoring mode -->
                                <TextBlock Grid.Column="2"
                                           Text="Higher scores = better seeds"
                                           FontSize="11"
                                           FontStyle="Italic"
                                           Foreground="#8B5CF6"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Expander.Header>

                    <!-- Content Area with Card Grid -->
                    <Border Background="Transparent"
                            CornerRadius="0,0,8,8"
                            Padding="15">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding ShouldClauses}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- Use WrapPanel for card grid layout -->
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <components:ClauseRowControl DataContext="{Binding}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </Border>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>