<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             xmlns:models="using:BalatroSeedOracle.Models"
             x:Class="BalatroSeedOracle.Components.FilterTabs.VisualBuilderTab"
             x:DataType="vm:VisualBuilderTabViewModel"
             x:CompileBindings="True">

    <Grid>
        <!-- Search bar moved to parent modal (FiltersModal), no rows needed here -->
        <Grid Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Left: Category Buttons -->
                <ColumnDefinition Width="460"/>   <!-- Center: Grouped Items (5 jokers wide: 5*80 + scrollbar = 460) -->
                <ColumnDefinition Width="*"/>     <!-- Right: Drop Zones -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN - Search + Categories (NO PAGINATION) -->
            <Grid Grid.Column="0" Margin="0,0,8,0" RowDefinitions="Auto,8,*">
                <!-- Search bar at top -->
                <Border Grid.Row="0"
                        Background="{StaticResource ModalGrey}"
                        BorderBrush="{StaticResource Blue}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="8,4">
                    <TextBox Name="SearchBox"
                             Watermark="Search items..."
                             Text="{Binding SearchFilter, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource White}"
                             Padding="4"
                             VerticalContentAlignment="Center"
                             FontSize="13"/>
                </Border>

                <StackPanel Grid.Row="2" Spacing="1" Name="CategoryNav" DragDrop.AllowDrop="True">
                    <Button Content="Favorites"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Favorites"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Joker"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Joker"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Consumable"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Consumable"
                            HorizontalAlignment="Stretch"/>
                    <!-- Skip Tag and Boss side-by-side -->
                    <Grid ColumnDefinitions="*,4,*">
                        <Button Grid.Column="0"
                                Content="Skip Tags"
                                Classes="nav-button"
                                Click="OnCategoryClick"
                                Tag="SkipTag"
                                MinWidth="90"
                                HorizontalAlignment="Stretch"/>
                        <Button Grid.Column="2"
                                Content="Boss Blind"
                                Classes="nav-button"
                                Click="OnCategoryClick"
                                Tag="Boss"
                                MinWidth="90"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                    <Button Content="Voucher"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Voucher"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Standard Card"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="StandardCard"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Favorites drop overlay - covers category nav area only -->
                <Border Grid.Row="2"
                        Name="FavoritesDropOverlay"
                        Background="{StaticResource SemiTransparentBlack}"
                        BorderBrush="{StaticResource Red}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Red}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               FontWeight="Bold">
                        <Run Text="ADD"/>
                        <LineBreak/>
                        <Run Text="TO"/>
                        <LineBreak/>
                        <Run Text="FAVORITES"/>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- CENTER COLUMN - Grouped Scrollable Items (NO PAGINATION) -->
            <Grid Grid.Column="1" Margin="8,0">
                <Border Name="ItemGridBorder"
                        Background="{StaticResource DarkTealGrey}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="12"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer Name="ItemScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding GroupedItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:VisualBuilderTabViewModel+ItemGroup">
                                    <StackPanel Margin="0,0,0,16">
                                        <!-- Subcategory Header -->
                                        <Border Background="{StaticResource DarkBackground}"
                                                BorderBrush="{StaticResource ModalBorder}"
                                                BorderThickness="0,0,0,2"
                                                Padding="8,6"
                                                Margin="0,0,0,8"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource Orange}"
                                                       TextAlignment="Left"/>
                                        </Border>

                                        <!-- Items in Group -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="models:FilterItem">
                                                    <!-- SOLUTION: Grid with two overlapping layers -->
                                                    <Grid Margin="0,6" Width="80" Height="110">
                                                        <!-- LAYER 1: Visual card that rotates (Z-Index 0, BOTTOM) -->
                                                        <StackPanel ZIndex="0"
                                                                    Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}"
                                                                    IsHitTestVisible="False">
                                                            <!-- Balatro-style sway behavior attached here -->
                                                            <i:Interaction.Behaviors>
                                                                <behaviors:BalatroCardSwayBehavior AmbientTilt="0.2"/>
                                                            </i:Interaction.Behaviors>

                                                            <Grid>
                                                                <!-- Main card image (SMALLER) -->
                                                                <Image Source="{Binding ItemImage}"
                                                                       Width="57"
                                                                       Height="76"
                                                                       Stretch="Uniform"
                                                                       HorizontalAlignment="Center"/>

                                                                <!-- Legendary soul face overlay (only for SoulJoker type) -->
                                                                <Image Source="{Binding SoulFaceImage}"
                                                                       Width="57"
                                                                       Height="76"
                                                                       Stretch="Uniform"
                                                                       HorizontalAlignment="Center"
                                                                       IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                            </Grid>

                                                            <!-- Simple name below -->
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                       Foreground="{StaticResource White}"
                                                                       FontFamily="{StaticResource BalatroFont}"
                                                                       FontSize="11"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,3,0,0"
                                                                       MaxWidth="80"/>
                                                        </StackPanel>

                                                        <!-- LAYER 2: Invisible hitbox that NEVER rotates (Z-Index 1, TOP) -->
                                                        <Border ZIndex="1"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                PointerPressed="OnItemPointerPressed"
                                                                PointerEntered="OnCardPointerEntered"
                                                                Width="80"
                                                                Height="110"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Return Overlay - Shows when dragging from drop zones -->
                <Border Name="ReturnOverlay"
                        Background="{StaticResource SemiTransparentBlack}"
                        BorderBrush="{StaticResource Orange}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock Text="↩️ Drop here to remove from filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Orange}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Grid>

            <!-- RIGHT COLUMN - Drop Zones (Balatro Challenges Style) -->
            <StackPanel Grid.Column="2" Spacing="12" VerticalAlignment="Top" Margin="5,0,0,0">
                <!-- MUST HAVE Zone -->
                <Border Name="MustDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>   <!-- Blue label on LEFT - fixed width -->
                            <ColumnDefinition Width="*"/>    <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Blue Vertical Label -->
                        <Border Grid.Column="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,0,0,6"
                                VerticalAlignment="Stretch">
                            <TextBlock Text="Must Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedMust}" Margin="12">
                            <i:Interaction.Behaviors>
                                <behaviors:FannedHandBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromMustCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover">
                                                <Setter Property="Panel.ZIndex" Value="100"/>
                                            </Style>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for MUST -->
                        <Border Name="MustDropOverlay"
                                Grid.ColumnSpan="2"
                                Background="{StaticResource SemiTransparentBlack}"
                                BorderBrush="{StaticResource Blue}"
                                BorderThickness="3"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False">
                            <TextBlock Text="Drop in MUST HAVE"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="18"
                                       Foreground="{StaticResource Blue}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- SHOULD HAVE Zone -->
                <Border Name="ShouldDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>   <!-- Blue label on LEFT - fixed width -->
                            <ColumnDefinition Width="*"/>    <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Blue Vertical Label -->
                        <Border Grid.Column="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,0,0,6"
                                VerticalAlignment="Stretch">
                            <TextBlock Text="Should Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedShould}" Margin="12">
                            <i:Interaction.Behaviors>
                                <behaviors:FannedHandBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromShouldCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover">
                                                <Setter Property="Panel.ZIndex" Value="100"/>
                                            </Style>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for SHOULD -->
                        <Border Name="ShouldDropOverlay"
                                Grid.ColumnSpan="2"
                                Background="{StaticResource SemiTransparentBlack}"
                                BorderBrush="{StaticResource Blue}"
                                BorderThickness="3"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False">
                            <TextBlock Text="Drop in SHOULD HAVE"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="18"
                                       Foreground="{StaticResource Blue}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- MUST NOT HAVE Zone -->
                <Border Name="MustNotDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>   <!-- Blue label on LEFT - fixed width -->
                            <ColumnDefinition Width="*"/>    <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Blue Vertical Label -->
                        <Border Grid.Column="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,0,0,6"
                                VerticalAlignment="Stretch">
                            <TextBlock Text="Must Not Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedMustNot}" Margin="12">
                            <i:Interaction.Behaviors>
                                <behaviors:FannedHandBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromMustNotCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover">
                                                <Setter Property="Panel.ZIndex" Value="100"/>
                                            </Style>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for MUST NOT -->
                        <Border Name="MustNotDropOverlay"
                                Grid.ColumnSpan="2"
                                Background="{StaticResource SemiTransparentBlack}"
                                BorderBrush="{StaticResource Red}"
                                BorderThickness="3"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False">
                            <TextBlock Text="Drop in MUST NOT HAVE"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="18"
                                       Foreground="{StaticResource Red}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
