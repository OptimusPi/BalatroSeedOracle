<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             xmlns:models="using:BalatroSeedOracle.Models"
             xmlns:components="using:BalatroSeedOracle.Components"
             x:Class="BalatroSeedOracle.Components.FilterTabs.VisualBuilderTab"
             x:DataType="vm:VisualBuilderTabViewModel"
             x:CompileBindings="True">

    <UserControl.Styles>
        <!-- Shared drop zone overlay style -->
        <Style Selector="Border.dropzone-overlay">
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="IsVisible" Value="False"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="ZIndex" Value="200"/>
        </Style>

        <Style Selector="Border.dropzone-overlay TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style Selector="Border.dropzone-overlay TextBlock > Border.Effect">
            <Setter Property="Effect">
                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Grid VerticalAlignment="Stretch">
        <!-- Search bar moved to parent modal (FiltersModal), no rows needed here -->
        <Grid Margin="16,0,16,16" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Left: Category Buttons -->
                <ColumnDefinition Width="1.1*"/>  <!-- Center: Grouped Items (balanced spacing) -->
                <ColumnDefinition Width="1.1*"/>  <!-- Right: Drop Zones (balanced spacing) -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN - Filter Name + Search + Categories (Operator Tray moved to center column) -->
            <Grid Grid.Column="0" Margin="0,0,8,0" RowDefinitions="Auto,8,Auto,8,*">
                <!-- Filter Name Display (Auto-Save Status removed - was causing layout shift) -->
                <Border Grid.Row="0"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="12"
                        Padding="12,8">
                    <TextBlock Text="{Binding FilterName, FallbackValue='New Filter'}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Search bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="8,4">
                    <TextBox Name="SearchBox"
                             Watermark="Search items..."
                             Text="{Binding SearchFilter, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource White}"
                             Padding="4"
                             VerticalContentAlignment="Center"
                             FontSize="13">
                        <TextBox.Styles>
                            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="{StaticResource LightGrey}"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>
                </Border>

                <StackPanel Grid.Row="4" Spacing="4" Name="CategoryNav" DragDrop.AllowDrop="True">
                    <!-- Category buttons without section headers -->
                    <Button Content="Favorites"
                            Classes="nav-button special"
                            Click="OnCategoryClick"
                            Tag="Favorites"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Joker"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Joker"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Consumable"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Consumable"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Skip Tags"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="SkipTag"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Boss Blind"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Boss"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Voucher"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Voucher"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Standard Card"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="StandardCard"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Favorites drop overlay - covers category nav area only -->
                <Border Grid.Row="4"
                        Name="FavoritesDropOverlay"
                        Background="{StaticResource SemiTransparentGold}"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False"
                        ZIndex="200">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource GoldColor}"
                                          OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="30"
                                          Opacity="1.0"/>
                    </Border.Effect>
                    <!-- Balatro-style drop zone - BIG and prominent text -->
                    <TextBlock Text="ADD TO FAVORITES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="28"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- CENTER COLUMN - Grouped Scrollable Items -->
            <Grid Grid.Column="1" Margin="8,0">
                <!-- ITEMS SHELF - Full height scrollable item list -->
                <Border Name="ItemGridBorder"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="12"
                        Padding="12"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer Name="ItemScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding GroupedItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:VisualBuilderTabViewModel+ItemGroup">
                                    <StackPanel Margin="0,0,0,16">
                                        <!-- Subcategory Header -->
                                        <Border Background="{StaticResource DarkBackground}"
                                                BorderThickness="0"
                                                Padding="8,6"
                                                Margin="0,0,0,4"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="16"
                                                       FontWeight="Normal"
                                                       Foreground="{StaticResource LightGrey}"
                                                       TextAlignment="Left"/>
                                        </Border>

                                        <!-- Items in Group -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="models:FilterItem">
                                                    <!-- SOLUTION: Grid with two overlapping layers -->
                                                    <Grid Margin="0,2" Width="54" Height="78">
                                                        <i:Interaction.Behaviors>
                                                            <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                        </i:Interaction.Behaviors>
                                                        <!-- Only regular FilterItem cards - operators removed -->
                                                        <Border Background="Transparent"
                                                                Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}"
                                                                Cursor="Hand"
                                                                ZIndex="0"
                                                                ClipToBounds="True">
                                                            <!-- Just the card sprite and label - no border wrapper! -->
                                                            <StackPanel Spacing="2">
                                                                <!-- Card image with soul overlay -->
                                                                <Grid Width="48" Height="64">
                                                                    <Image Source="{Binding ItemImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>

                                                                    <Image Source="{Binding SoulFaceImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                                </Grid>

                                                                <!-- Card name floating below -->
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           Foreground="#FFFFFF"
                                                                           FontFamily="{StaticResource BalatroFont}"
                                                                           FontSize="8"
                                                                           HorizontalAlignment="Center"
                                                                           TextAlignment="Center"
                                                                           TextWrapping="Wrap"
                                                                           MaxWidth="54"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- LAYER 2: Invisible hitbox that NEVER rotates (Z-Index 1, TOP) -->
                                                        <Border ZIndex="1"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                PointerPressed="OnItemPointerPressed"
                                                                PointerEntered="OnCardPointerEntered"
                                                                Width="54"
                                                                Height="78"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Return Overlay - Shows when dragging from drop zones -->
                <Border Name="ReturnOverlay"
                        Background="{StaticResource SemiTransparentBlack}"
                        BorderBrush="{StaticResource Orange}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock Text="Drop here to remove from filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Orange}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Grid>

            <!-- RIGHT COLUMN - Operator Trays + Drop Zones (Collapsible!) -->
            <Grid Grid.Column="2" Margin="5,0,0,0" Name="DropZoneContainer">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- OR/AND Trays -->
                    <RowDefinition Height="8"/>  <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- MUST - Always expanded, equal height -->
                    <RowDefinition Height="4"/>     <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- SHOULD - Always expanded, equal height -->
                    <RowDefinition Height="4"/>     <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- CAN'T - Always expanded, equal height -->
                </Grid.RowDefinitions>

                <!-- OR/AND OPERATOR TRAYS at top of right column -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- OR Operator Box -->
                    <Border Grid.Column="0"
                            Name="TrayOrOperator"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource Green}"
                            BorderThickness="2"
                            CornerRadius="6"
                            Padding="0"
                            MinHeight="70"
                            Cursor="Hand"
                            PointerPressed="OnTrayOrPointerPressed"
                            DragDrop.AllowDrop="True">
                        <Grid RowDefinitions="Auto,*">
                            <!-- OR Header - CONNECTED flat top like filter tabs -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource Green}"
                                    CornerRadius="6,6,0,0"
                                    Padding="8,4"
                                    Margin="-2,-2,-2,0">
                                <TextBlock Text="OR"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"

                                           Foreground="{StaticResource White}"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Row="1" Spacing="2" Margin="6">
                                <!-- Item Count -->
                                <TextBlock Text="{Binding TrayOrOperator.Children.Count, StringFormat='{}{0} items'}"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="9"
                                           Foreground="{StaticResource LightGrey}"
                                           HorizontalAlignment="Center"/>

                                <!-- Small thumbnails - fanned out like cards in hand -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled"
                                              Height="50">
                                    <ItemsControl ItemsSource="{Binding TrayOrOperator.Children}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="4,0"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="36" Height="48" Margin="-8,0,0,0">
                                                    <Image Source="{Binding ItemImage}"
                                                           Stretch="Uniform"/>
                                                    <Image Source="{Binding SoulFaceImage}"
                                                           Stretch="Uniform"
                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- AND Operator Box -->
                    <Border Grid.Column="2"
                            Name="TrayAndOperator"
                            Background="{StaticResource DarkBackground}"
                            BorderBrush="{StaticResource Blue}"
                            BorderThickness="2"
                            CornerRadius="6"
                            Padding="0"
                            MinHeight="70"
                            Cursor="Hand"
                            PointerPressed="OnTrayAndPointerPressed"
                            DragDrop.AllowDrop="True">
                        <Grid RowDefinitions="Auto,*">
                            <!-- AND Header - CONNECTED flat top like filter tabs -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource Blue}"
                                    CornerRadius="6,6,0,0"
                                    Padding="8,4"
                                    Margin="-2,-2,-2,0">
                                <TextBlock Text="AND"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"

                                           Foreground="{StaticResource White}"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Row="1" Spacing="2" Margin="6">
                                <!-- Item Count -->
                                <TextBlock Text="{Binding TrayAndOperator.Children.Count, StringFormat='{}{0} items'}"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="9"
                                           Foreground="{StaticResource LightGrey}"
                                           HorizontalAlignment="Center"/>

                                <!-- Small thumbnails - fanned out like cards in hand -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled"
                                              Height="50">
                                    <ItemsControl ItemsSource="{Binding TrayAndOperator.Children}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="4,0"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Width="36" Height="48" Margin="-8,0,0,0">
                                                    <Image Source="{Binding ItemImage}"
                                                           Stretch="Uniform"/>
                                                    <Image Source="{Binding SoulFaceImage}"
                                                           Stretch="Uniform"
                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Fixed third overlays positioned absolutely over the drop zones -->
                <Grid Name="DropOverlaysGrid" Grid.Row="2" Grid.RowSpan="5" IsHitTestVisible="False" ZIndex="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>  <!-- Top third - MUST -->
                        <RowDefinition Height="1*"/>  <!-- Middle third - SHOULD -->
                        <RowDefinition Height="1*"/>  <!-- Bottom third - CAN'T -->
                    </Grid.RowDefinitions>

                    <!-- MUST drop overlay -->
                    <Border Name="MustDropOverlay"
                            Grid.Row="0"
                            Classes="dropzone-overlay"
                            Background="{StaticResource SemiTransparentBlue}">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource BlueColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN MUST HAVE">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>

                    <!-- SHOULD drop overlay -->
                    <Border Name="ShouldDropOverlay"
                            Grid.Row="1"
                            Classes="dropzone-overlay"
                            Background="{StaticResource SemiTransparentGreen}">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource GreenColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN SHOULD HAVE">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>

                    <!-- CAN'T drop overlay -->
                    <Border Name="MustNotDropOverlay"
                            Grid.Row="2"
                            Classes="dropzone-overlay"
                            Background="{StaticResource SemiTransparentRed}"
                            BorderBrush="{StaticResource Red}"
                            BorderThickness="6">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource RedColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN BANNED ITEMS">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                </Grid>
                <!-- MUST HAVE Zone -->
                <Border Name="MustDropZone"
                        Grid.Row="2"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Height" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                        </Transitions>
                    </Border.Transitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>     <!-- Horizontal label row -->
                            <RowDefinition Height="*"/>        <!-- Drop area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Header Label -->
                        <Border Grid.Row="0"
                                Background="{StaticResource DarkBackground}"
                                Padding="8,4">
                            <TextBlock Text="MUST"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       
                                       Foreground="{StaticResource Blue}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: Drop Area - Always visible -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding SelectedMust}"
                                      Margin="6">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Border Background="Transparent"
                                                        Cursor="Hand"
                                                        PointerPressed="OnDropZoneItemPointerPressed">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                    </i:Interaction.Behaviors>

                                                    <!-- Just card image and label - no cream border! -->
                                                    <StackPanel Spacing="2" Width="54" Height="64">
                                                        <!-- Card image with soul overlay -->
                                                        <Grid>
                                                            <Image Source="{Binding ItemImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Soul face overlay for legendary jokers -->
                                                            <Image Source="{Binding SoulFaceImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Hover-only Remove Button -->
                                                            <Button Content="×"
                                                                    Command="{Binding $parent[UserControl].DataContext.RemoveFromMustCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="{StaticResource Red}"
                                                                    Foreground="White"
                                                                    FontSize="12"
                                                                    Width="18"
                                                                    Height="18"
                                                                    CornerRadius="9"
                                                                    Padding="0"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,-6,-6,0"
                                                                    IsVisible="False"
                                                                    Name="RemoveButton">
                                                                <Button.Styles>
                                                                    <Style Selector="Button:pointerover">
                                                                        <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                                    </Style>
                                                                </Button.Styles>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Card name floating below -->
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                   FontSize="7"
                                                                   Foreground="#FFFFFF"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="54"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- SHOULD HAVE Zone -->
                <Border Name="ShouldDropZone"
                        Grid.Row="4"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Height" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                        </Transitions>
                    </Border.Transitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>     <!-- Horizontal label row -->
                            <RowDefinition Height="*"/>        <!-- Drop area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Header Label -->
                        <Border Grid.Row="0"
                                Background="{StaticResource DarkBackground}"
                                Padding="8,4">
                            <TextBlock Text="SHOULD"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       
                                       Foreground="{StaticResource Green}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: Drop Area - Always visible -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding SelectedShould}"
                                      Margin="6">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Border Background="Transparent"
                                                        Cursor="Hand"
                                                        PointerPressed="OnDropZoneItemPointerPressed">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                    </i:Interaction.Behaviors>

                                                    <!-- Just card image and label - no cream border! -->
                                                    <StackPanel Spacing="2" Width="54" Height="64">
                                                        <!-- Card image with soul overlay -->
                                                        <Grid>
                                                            <Image Source="{Binding ItemImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Soul face overlay for legendary jokers -->
                                                            <Image Source="{Binding SoulFaceImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Hover-only Remove Button -->
                                                            <Button Content="×"
                                                                    Command="{Binding $parent[UserControl].DataContext.RemoveFromShouldCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="{StaticResource Red}"
                                                                    Foreground="White"
                                                                    FontSize="12"
                                                                    Width="18"
                                                                    Height="18"
                                                                    CornerRadius="9"
                                                                    Padding="0"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,-6,-6,0"
                                                                    IsVisible="False"
                                                                    Name="RemoveButton">
                                                                <Button.Styles>
                                                                    <Style Selector="Button:pointerover">
                                                                        <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                                    </Style>
                                                                </Button.Styles>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Card name floating below -->
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                   FontSize="7"
                                                                   Foreground="#FFFFFF"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="54"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- BANNED ITEMS Zone -->
                <Border Name="MustNotDropZone"
                        Grid.Row="6"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Height" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                        </Transitions>
                    </Border.Transitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>     <!-- Horizontal label row -->
                            <RowDefinition Height="*"/>        <!-- Drop area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Header Label -->
                        <Border Grid.Row="0"
                                Background="{StaticResource DarkBackground}"
                                Padding="8,4">
                            <TextBlock Text="BANNED"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       
                                       Foreground="{StaticResource Red}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: Drop Area - Always visible -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding SelectedMustNot}"
                                      Margin="6">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Border Background="Transparent"
                                                        Cursor="Hand"
                                                        PointerPressed="OnDropZoneItemPointerPressed">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                    </i:Interaction.Behaviors>

                                                    <!-- Just card image and label - no cream border! -->
                                                    <StackPanel Spacing="2" Width="54" Height="64">
                                                        <!-- Card image with soul overlay -->
                                                        <Grid>
                                                            <Image Source="{Binding ItemImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Soul face overlay for legendary jokers -->
                                                            <Image Source="{Binding SoulFaceImage}"
                                                                   Width="48"
                                                                   Height="64"
                                                                   Stretch="Uniform"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"
                                                                   IsHitTestVisible="False"/>

                                                            <!-- Hover-only Remove Button -->
                                                            <Button Content="×"
                                                                    Command="{Binding $parent[UserControl].DataContext.RemoveFromMustNotCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="{StaticResource Red}"
                                                                    Foreground="White"
                                                                    FontSize="12"
                                                                    Width="18"
                                                                    Height="18"
                                                                    CornerRadius="9"
                                                                    Padding="0"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,-6,-6,0"
                                                                    IsVisible="False"
                                                                    Name="RemoveButton">
                                                                <Button.Styles>
                                                                    <Style Selector="Button:pointerover">
                                                                        <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                                    </Style>
                                                                </Button.Styles>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Card name floating below -->
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                   FontSize="7"
                                                                   Foreground="#FFFFFF"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap"
                                                                   MaxWidth="54"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
