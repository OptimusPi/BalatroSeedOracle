<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             xmlns:models="using:BalatroSeedOracle.Models"
             xmlns:components="using:BalatroSeedOracle.Components"
             x:Class="BalatroSeedOracle.Components.FilterTabs.VisualBuilderTab"
             x:DataType="vm:VisualBuilderTabViewModel"
             x:CompileBindings="True">

    <Grid VerticalAlignment="Stretch">
        <!-- Dramatic backdrop overlay when dragging - dims everything -->
        <Border Name="DragBackdrop"
                Background="#99000000"
                IsVisible="False"
                IsHitTestVisible="False"
                ZIndex="100">
            <Border.Effect>
                <BlurEffect Radius="8"/>
            </Border.Effect>
        </Border>

        <!-- Search bar moved to parent modal (FiltersModal), no rows needed here -->
        <Grid Margin="16,0,16,16" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Left: Category Buttons -->
                <ColumnDefinition Width="460"/>   <!-- Center: Grouped Items (5 jokers wide: 5*80 + scrollbar = 460) -->
                <ColumnDefinition Width="*"/>     <!-- Right: Drop Zones -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN - Filter Name + Search + Categories -->
            <Grid Grid.Column="0" Margin="0,0,8,0" RowDefinitions="Auto,8,Auto,8,*">
                <!-- Filter Name Display at top -->
                <Border Grid.Row="0"
                        Background="{StaticResource DarkTealGrey}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="12,8">
                    <TextBlock Text="{Binding FilterName, FallbackValue='New Filter'}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Search bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource ModalGrey}"
                        BorderBrush="{StaticResource Blue}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="8,4">
                    <TextBox Name="SearchBox"
                             Watermark="Search items..."
                             Text="{Binding SearchFilter, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource White}"
                             Padding="4"
                             VerticalContentAlignment="Center"
                             FontSize="13"/>
                </Border>

                <StackPanel Grid.Row="4" Spacing="8" Name="CategoryNav" DragDrop.AllowDrop="True">
                    <!-- Category buttons without section headers -->
                    <Button Content="Special"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Favorites"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Joker"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Joker"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Consumable"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Consumable"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Skip Tags"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="SkipTag"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Boss Blind"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Boss"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Voucher"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Voucher"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Standard Card"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="StandardCard"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Favorites drop overlay - covers category nav area only -->
                <Border Grid.Row="2"
                        Name="FavoritesDropOverlay"
                        Background="{StaticResource SemiTransparentBlack}"
                        BorderBrush="{StaticResource Red}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Red}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               FontWeight="Bold">
                        <Run Text="ADD"/>
                        <LineBreak/>
                        <Run Text="TO"/>
                        <LineBreak/>
                        <Run Text="FAVORITES"/>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- CENTER COLUMN - Grouped Scrollable Items (NO PAGINATION) -->
            <Grid Grid.Column="1" Margin="8,0">
                <Border Name="ItemGridBorder"
                        Background="{StaticResource DarkTealGrey}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="12"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer Name="ItemScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding GroupedItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:VisualBuilderTabViewModel+ItemGroup">
                                    <StackPanel Margin="0,0,0,16">
                                        <!-- Subcategory Header -->
                                        <Border Background="{StaticResource DarkBackground}"
                                                BorderBrush="{StaticResource ModalBorder}"
                                                BorderThickness="0,0,0,2"
                                                Padding="8,6"
                                                Margin="0,0,0,8"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource Orange}"
                                                       TextAlignment="Left"/>
                                        </Border>

                                        <!-- Items in Group -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="models:FilterItem">
                                                    <!-- SOLUTION: Grid with two overlapping layers -->
                                                    <Grid Margin="0,6" Width="80" Height="110">
                                                        <!-- Conditional rendering for operators vs cards -->
                                                        <ContentControl Content="{Binding}" ZIndex="0">
                                                            <ContentControl.DataTemplates>
                                                                <!-- Template for FilterOperatorItem -->
                                                                <DataTemplate DataType="models:FilterOperatorItem">
                                                                    <StackPanel Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}"
                                                                                IsHitTestVisible="False">
                                                                        <!-- Simple box visual for operators -->
                                                                        <Border Background="{StaticResource DarkTealGrey}"
                                                                                BorderBrush="{StaticResource Blue}"
                                                                                BorderThickness="2"
                                                                                CornerRadius="6"
                                                                                Width="70"
                                                                                Height="50"
                                                                                HorizontalAlignment="Center">
                                                                            <TextBlock Text="{Binding OperatorType}"
                                                                                       FontSize="18"
                                                                                       FontWeight="Bold"
                                                                                       Foreground="{StaticResource Blue}"
                                                                                       HorizontalAlignment="Center"
                                                                                       VerticalAlignment="Center"
                                                                                       FontFamily="{StaticResource BalatroFont}"/>
                                                                        </Border>

                                                                        <!-- Name below -->
                                                                        <TextBlock Text="{Binding DisplayName}"
                                                                                   Foreground="{StaticResource White}"
                                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                                   FontSize="11"
                                                                                   HorizontalAlignment="Center"
                                                                                   TextAlignment="Center"
                                                                                   Margin="0,6,0,0"/>
                                                                    </StackPanel>
                                                                </DataTemplate>

                                                                <!-- Template for regular FilterItem -->
                                                                <DataTemplate DataType="models:FilterItem">
                                                                    <Border Background="Transparent"
                                                                            Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}">
                                                                        <i:Interaction.Behaviors>
                                                                            <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                                        </i:Interaction.Behaviors>

                                                                        <StackPanel IsHitTestVisible="False">
                                                                            <Grid>
                                                                                <Image Source="{Binding ItemImage}"
                                                                                       Width="57"
                                                                                       Height="76"
                                                                                       Stretch="Uniform"
                                                                                       HorizontalAlignment="Center"/>

                                                                                <Image Source="{Binding SoulFaceImage}"
                                                                                       Width="57"
                                                                                       Height="76"
                                                                                       Stretch="Uniform"
                                                                                       HorizontalAlignment="Center"
                                                                                       IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                                            </Grid>

                                                                            <TextBlock Text="{Binding DisplayName}"
                                                                                       Foreground="{StaticResource White}"
                                                                                       FontFamily="{StaticResource BalatroFont}"
                                                                                       FontSize="11"
                                                                                       HorizontalAlignment="Center"
                                                                                       TextAlignment="Center"
                                                                                       TextWrapping="Wrap"
                                                                                       Margin="0,3,0,0"
                                                                                       MaxWidth="80"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ContentControl.DataTemplates>
                                                        </ContentControl>

                                                        <!-- LAYER 2: Invisible hitbox that NEVER rotates (Z-Index 1, TOP) -->
                                                        <Border ZIndex="1"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                PointerPressed="OnItemPointerPressed"
                                                                PointerEntered="OnCardPointerEntered"
                                                                Width="80"
                                                                Height="110"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Return Overlay - Shows when dragging from drop zones -->
                <Border Name="ReturnOverlay"
                        Background="{StaticResource SemiTransparentBlack}"
                        BorderBrush="{StaticResource Orange}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock Text="â†©ï¸ Drop here to remove from filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Orange}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Grid>

            <!-- RIGHT COLUMN - Drop Zones -->
            <Grid Grid.Column="2" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>   <!-- MUST HAVE - 33% -->
                    <RowDefinition Height="12"/>  <!-- Spacing -->
                    <RowDefinition Height="*"/>   <!-- SHOULD HAVE - 33% -->
                    <RowDefinition Height="12"/>  <!-- Spacing -->
                    <RowDefinition Height="*"/>   <!-- BANNED ITEMS - 33% -->
                </Grid.RowDefinitions>
                <!-- MUST HAVE Zone -->
                <Border Name="MustDropZone"
                        Grid.Row="0"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>   <!-- Vertical label on LEFT -->
                            <ColumnDefinition Width="*"/>      <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Vertical Rotated Label -->
                        <TextBlock Grid.Column="0"
                                   Text="MUST HAVE"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="12"
                                   Foreground="{StaticResource Gold}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedMust}" Margin="12">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                            <!-- Main card image -->
                                            <Image Source="{Binding ItemImage}"
                                                   Width="57"
                                                   Height="76"
                                                   Stretch="Uniform"/>

                                            <!-- Soul face overlay for legendary jokers -->
                                            <Image Source="{Binding SoulFaceImage}"
                                                   Width="57"
                                                   Height="76"
                                                   Stretch="Uniform"
                                                   IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                            <!-- Hover-only Remove Button -->
                                            <Button Content="Ã—"
                                                    Command="{Binding $parent[UserControl].DataContext.RemoveFromMustCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="{StaticResource Red}"
                                                    Foreground="White"
                                                    FontSize="12"
                                                    Width="18"
                                                    Height="18"
                                                    CornerRadius="9"
                                                    Padding="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Margin="0,-6,-6,0"
                                                    IsVisible="False"
                                                    Name="RemoveButton">
                                                <Button.Styles>
                                                    <Style Selector="Button:pointerover">
                                                        <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                    </Style>
                                                </Button.Styles>
                                            </Button>

                                            <Grid.Styles>
                                                <Style Selector="Grid:pointerover">
                                                    <Setter Property="Panel.ZIndex" Value="100"/>
                                                </Style>
                                                <Style Selector="Grid:pointerover Button#RemoveButton">
                                                    <Setter Property="IsVisible" Value="True"/>
                                                </Style>
                                            </Grid.Styles>
                                        </Grid>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for MUST -->
                        <Border Name="MustDropOverlay"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="#EE1a2332"
                                BorderBrush="{StaticResource Blue}"
                                BorderThickness="5"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False"
                                ZIndex="200">
                            <Border.Effect>
                                <DropShadowEffect Color="#4B9FD5"
                                                  OffsetX="0"
                                                  OffsetY="0"
                                                  BlurRadius="20"
                                                  Opacity="0.9"/>
                            </Border.Effect>
                            <Border.Styles>
                                <Style Selector="Border">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1.5" IterationCount="INFINITE">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </Border.Styles>
                            <TextBlock Text="âœ¨ DROP IN MUST HAVE âœ¨"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Blue}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="ExtraBold"
                                       TextAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- SHOULD HAVE Zone -->
                <Border Name="ShouldDropZone"
                        Grid.Row="2"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>   <!-- Vertical label on LEFT -->
                            <ColumnDefinition Width="*"/>      <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Vertical Rotated Label -->
                        <TextBlock Grid.Column="0"
                                   Text="SHOULD HAVE"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="12"
                                   Foreground="{StaticResource Gold}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedShould}" Margin="12">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                                    <!-- Main card image -->
                                                    <Image Source="{Binding ItemImage}"
                                                           Width="57"
                                                           Height="76"
                                                           Stretch="Uniform"/>

                                                    <!-- Soul face overlay for legendary jokers -->
                                                    <Image Source="{Binding SoulFaceImage}"
                                                           Width="57"
                                                           Height="76"
                                                           Stretch="Uniform"
                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                    <!-- Hover-only Remove Button -->
                                                    <Button Content="Ã—"
                                                            Command="{Binding $parent[UserControl].DataContext.RemoveFromShouldCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="{StaticResource Red}"
                                                            Foreground="White"
                                                            FontSize="12"
                                                            Width="18"
                                                            Height="18"
                                                            CornerRadius="9"
                                                            Padding="0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0,-6,-6,0"
                                                            IsVisible="False"
                                                            Name="RemoveButton">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>

                                                    <Grid.Styles>
                                                        <Style Selector="Grid:pointerover">
                                                            <Setter Property="Panel.ZIndex" Value="100"/>
                                                        </Style>
                                                        <Style Selector="Grid:pointerover Button#RemoveButton">
                                                            <Setter Property="IsVisible" Value="True"/>
                                                        </Style>
                                                    </Grid.Styles>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for SHOULD -->
                        <Border Name="ShouldDropOverlay"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="#EE1a2818"
                                BorderBrush="{StaticResource Gold}"
                                BorderThickness="5"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False"
                                ZIndex="200">
                            <Border.Effect>
                                <DropShadowEffect Color="#F3B63A"
                                                  OffsetX="0"
                                                  OffsetY="0"
                                                  BlurRadius="20"
                                                  Opacity="0.9"/>
                            </Border.Effect>
                            <Border.Styles>
                                <Style Selector="Border">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1.5" IterationCount="INFINITE">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="1.0"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="100%">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </KeyFrame>
                                        </Animation>
                                    </Style.Animations>
                                </Style>
                            </Border.Styles>
                            <TextBlock Text="ðŸ’« DROP IN SHOULD HAVE ðŸ’«"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="ExtraBold"
                                       TextAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- BANNED ITEMS Zone -->
                <Border Name="MustNotDropZone"
                        Grid.Row="4"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>   <!-- Vertical label on LEFT -->
                            <ColumnDefinition Width="*"/>      <!-- White content area -->
                        </Grid.ColumnDefinitions>

                        <!-- Left: Vertical Rotated Label -->
                        <TextBlock Grid.Column="0"
                                   Text="BANNED ITEMS"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="12"
                                   Foreground="{StaticResource Gold}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>

                        <!-- Right: White Drop Area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding SelectedMustNot}" Margin="12">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Grid Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                                    <!-- Main card image -->
                                                    <Image Source="{Binding ItemImage}"
                                                           Width="57"
                                                           Height="76"
                                                           Stretch="Uniform"/>

                                                    <!-- Soul face overlay for legendary jokers -->
                                                    <Image Source="{Binding SoulFaceImage}"
                                                           Width="57"
                                                           Height="76"
                                                           Stretch="Uniform"
                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                    <!-- Hover-only Remove Button -->
                                                    <Button Content="Ã—"
                                                            Command="{Binding $parent[UserControl].DataContext.RemoveFromMustNotCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="{StaticResource Red}"
                                                            Foreground="White"
                                                            FontSize="12"
                                                            Width="18"
                                                            Height="18"
                                                            CornerRadius="9"
                                                            Padding="0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0,-6,-6,0"
                                                            IsVisible="False"
                                                            Name="RemoveButton">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover">
                                                                <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>

                                                    <Grid.Styles>
                                                        <Style Selector="Grid:pointerover">
                                                            <Setter Property="Panel.ZIndex" Value="100"/>
                                                        </Style>
                                                        <Style Selector="Grid:pointerover Button#RemoveButton">
                                                            <Setter Property="IsVisible" Value="True"/>
                                                        </Style>
                                                    </Grid.Styles>
                                                </Grid>
                                            </DataTemplate>
                                        </ContentControl.DataTemplates>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Drop indicator overlay for MUST NOT -->
                        <Border Name="MustNotDropOverlay"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Background="#EE321a1a"
                                BorderBrush="{StaticResource Red}"
                                BorderThickness="5"
                                CornerRadius="8"
                                IsVisible="False"
                                IsHitTestVisible="False"
                                ZIndex="200">
                            <Border.Effect>
                                <DropShadowEffect Color="#D84848"
                                                  OffsetX="0"
                                                  OffsetY="0"
                                                  BlurRadius="20"
                                                  Opacity="0.9"/>
                            </Border.Effect>
                            <Border.Styles>
                                <Style Selector="Border">
                                    <Style.Animations>
                                        <Animation Duration="0:0:1.5" IterationCount="INFINITE">
                                            <KeyFrame Cue="0%">
                                                <Setter Property="Opacity" Value="0.85"/>
                                            </KeyFrame>
                                            <KeyFrame Cue="50%">
                                                <Setter Property="Opacity" Value="1.0"/>
