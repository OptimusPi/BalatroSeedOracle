<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             xmlns:models="using:BalatroSeedOracle.Models"
             xmlns:components="using:BalatroSeedOracle.Components"
             x:Class="BalatroSeedOracle.Components.FilterTabs.VisualBuilderTab"
             x:DataType="vm:VisualBuilderTabViewModel"
             x:CompileBindings="True">

    <UserControl.Styles>
        <!-- Shared drop zone overlay style -->
        <Style Selector="Border.dropzone-overlay">
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="IsVisible" Value="False"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="ZIndex" Value="200"/>
        </Style>

        <Style Selector="Border.dropzone-overlay TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style Selector="Border.dropzone-overlay TextBlock > Border.Effect">
            <Setter Property="Effect">
                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Grid VerticalAlignment="Stretch">
        <!-- Search bar moved to parent modal (FiltersModal), no rows needed here -->
        <Grid Margin="16,0,16,16" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115"/>   <!-- Left: Category Buttons -->
                <ColumnDefinition Width="1.1*"/>  <!-- Center: Grouped Items (balanced spacing) -->
                <ColumnDefinition Width="1.1*"/>  <!-- Right: Drop Zones (balanced spacing) -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN - Filter Name + Search + Categories (Operator Tray moved to center column) -->
            <Grid Grid.Column="0" Margin="0,0,8,0" RowDefinitions="Auto,8,Auto,8,*">
                <!-- Filter Name Display (Auto-Save Status removed - was causing layout shift) -->
                <Border Grid.Row="0"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="12"
                        Padding="12,8">
                    <TextBlock Text="{Binding FilterName, FallbackValue='New Filter'}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Search bar -->
                <Border Grid.Row="2"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="8,4"
                        Margin="0">
                    <TextBox Name="SearchBox"
                             Watermark="Search items..."
                             Text="{Binding SearchFilter, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource White}"
                             Padding="4"
                             VerticalContentAlignment="Center"
                             FontSize="13">
                        <TextBox.Styles>
                            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                                <Setter Property="Foreground" Value="{StaticResource LightGrey}"/>
                            </Style>
                        </TextBox.Styles>
                    </TextBox>
                </Border>

                <!-- Category buttons with bouncing arrow indicator -->
                <Grid Grid.Row="4">
                    <!-- Bouncing arrow indicator (points at active category) -->
                    <Canvas Name="TriangleCanvas" ClipToBounds="False" IsHitTestVisible="False" ZIndex="100">
                        <Polygon Name="CategoryArrow"
                                 Points="0,0 15,10 0,20"
                                 Classes="balatro-triangle balatro-bounce-horizontal"
                                 Canvas.Left="-20"
                                 Canvas.Top="0"
                                 IsVisible="True"/>
                    </Canvas>

                    <StackPanel Spacing="4" Name="CategoryNav" DragDrop.AllowDrop="True">
                        <!-- Category buttons without section headers -->
                        <Button Content="Favorites"
                            Classes="nav-button special"
                            Click="OnCategoryClick"
                            Tag="Favorites"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Joker"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Joker"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Consumable"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Consumable"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Skip Tags"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="SkipTag"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Boss Blind"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Boss"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Voucher"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="Voucher"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Standard Card"
                            Classes="nav-button"
                            Click="OnCategoryClick"
                            Tag="StandardCard"
                            HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>

                <!-- Favorites drop overlay - covers category nav area only -->
                <Border Grid.Row="4"
                        Name="FavoritesDropOverlay"
                        Background="{StaticResource SemiTransparentGold}"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False"
                        ZIndex="200">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource GoldColor}"
                                          OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="30"
                                          Opacity="1.0"/>
                    </Border.Effect>
                    <!-- Balatro-style drop zone - BIG and prominent text -->
                    <TextBlock Text="ADD TO FAVORITES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="28"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- CENTER COLUMN - Grouped Scrollable Items -->
            <Grid Grid.Column="1" Margin="8,0">
                <!-- ITEMS SHELF - Full height scrollable item list -->
                <Border Name="ItemGridBorder"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="12"
                        Padding="12"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer Name="ItemScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding GroupedItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:VisualBuilderTabViewModel+ItemGroup">
                                    <StackPanel Margin="0,0,0,16">
                                        <!-- Subcategory Header -->
                                        <Border Background="{StaticResource DarkBackground}"
                                                BorderThickness="0"
                                                Padding="8,6"
                                                Margin="0,0,0,4"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="16"
                                                       FontWeight="Normal"
                                                       Foreground="{StaticResource LightGrey}"
                                                       TextAlignment="Left"/>
                                        </Border>

                                        <!-- Items in Group -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="models:FilterItem">
                                                    <!-- SOLUTION: Grid with two overlapping layers -->
                                                    <Grid Margin="0,2" Width="54" Height="90">
                                                        <i:Interaction.Behaviors>
                                                            <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                        </i:Interaction.Behaviors>
                                                        <!-- Only regular FilterItem cards - operators removed -->
                                                        <Border Background="Transparent"
                                                                Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}"
                                                                Cursor="Hand"
                                                                ZIndex="0"
                                                                ClipToBounds="False"
                                                                IsHitTestVisible="False">
                                                            <!-- Just the card sprite and label - no border wrapper! -->
                                                            <StackPanel Spacing="2">
                                                                <!-- Card image with soul overlay -->
                                                                <Grid Width="48" Height="64">
                                                                    <Image Source="{Binding ItemImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>

                                                                    <Image Source="{Binding EditionImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding EditionImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                                    <Image Source="{Binding EternalStickerImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding EternalStickerImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                                    <Image Source="{Binding PerishableStickerImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding PerishableStickerImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                                    <Image Source="{Binding RentalStickerImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding RentalStickerImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                                                    <Image Source="{Binding SoulFaceImage}"
                                                                           Width="48"
                                                                           Height="64"
                                                                           Stretch="Uniform"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"
                                                                           IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                                </Grid>

                                                                <!-- Card name floating below -->
                                                                <TextBlock Text="{Binding DisplayName}"
                                                                           Foreground="#FFFFFF"
                                                                           FontFamily="{StaticResource BalatroFont}"
                                                                           FontSize="8"
                                                                           HorizontalAlignment="Center"
                                                                           TextAlignment="Center"
                                                                           TextWrapping="Wrap"
                                                                           MaxWidth="54"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- LAYER 2: Invisible hitbox that NEVER rotates (Z-Index 1, TOP) -->
                                                        <Border ZIndex="1"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                IsHitTestVisible="True"
                                                                PointerPressed="OnItemPointerPressed"
                                                                PointerEntered="OnCardPointerEntered"
                                                                Width="54"
                                                                Height="90"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal" MaxWidth="280"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Return Overlay - Shows when dragging from drop zones -->
                <Border Name="ReturnOverlay"
                        Background="{StaticResource Orange}"
                        BorderBrush="#FFFFFF"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False"
                        ZIndex="200">
                    <Border.Styles>
                        <Style Selector="Border[IsVisible=True]">
                            <Style.Animations>
                                <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                        <Setter Property="Background" Value="{StaticResource Orange}"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="50%">
                                        <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                        <Setter Property="Background" Value="{StaticResource OrangeHover}"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                        <Setter Property="Background" Value="{StaticResource Orange}"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </Border.Styles>
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource OrangeColor}"
                                          OffsetX="0"
                                          OffsetY="0"
                                          BlurRadius="30"
                                          Opacity="1.0"/>
                    </Border.Effect>
                    <TextBlock Text="REMOVE FROM FILTER"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="24"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>

            <!-- RIGHT COLUMN - Operator Trays + Drop Zones (Collapsible!) -->
            <Grid Grid.Column="2" Margin="5,0,0,0" Name="DropZoneContainer">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>  <!-- OR/AND Trays - FIXED HEIGHT to prevent layout shift -->
                    <RowDefinition Height="8"/>  <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- MUST - Always expanded, equal height -->
                    <RowDefinition Height="4"/>     <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- SHOULD - Always expanded, equal height -->
                    <RowDefinition Height="4"/>     <!-- Spacing -->
                    <RowDefinition Height="1*"/>  <!-- CAN'T - Always expanded, equal height -->
                </Grid.RowDefinitions>

                <!-- OR/AND OPERATOR TRAYS at top of right column -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- OR Operator Box - Fanned display -->
                    <Border Grid.Column="0"
                            Name="TrayOrOperator"
                            Cursor="Hand"
                            PointerPressed="OnTrayOrPointerPressed"
                            DragDrop.AllowDrop="True">
                        <components:FilterOperatorControl DataContext="{Binding TrayOrOperator}"/>
                    </Border>

                    <!-- AND Operator Box - Fanned display -->
                    <Border Grid.Column="2"
                            Name="TrayAndOperator"
                            Cursor="Hand"
                            PointerPressed="OnTrayAndPointerPressed"
                            DragDrop.AllowDrop="True">
                        <components:FilterOperatorControl DataContext="{Binding TrayAndOperator}"/>
                    </Border>

                    <!-- OR Tray Drop Overlay -->
                    <Border Name="TrayOrDropOverlay"
                            Grid.Column="0"
                            Background="{StaticResource Green}"
                            BorderBrush="#FFFFFF"
                            BorderThickness="3"
                            CornerRadius="6"
                            IsVisible="False"
                            IsHitTestVisible="False"
                            ZIndex="200">
                        <Border.Styles>
                            <Style Selector="Border[IsVisible=True]">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Green}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource GreenHover}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Green}"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource GreenColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN OR"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="22"
                                   FontWeight="ExtraBold"
                                   Foreground="{StaticResource White}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>

                    <!-- AND Tray Drop Overlay -->
                    <Border Name="TrayAndDropOverlay"
                            Grid.Column="2"
                            Background="{StaticResource Blue}"
                            BorderBrush="#FFFFFF"
                            BorderThickness="3"
                            CornerRadius="6"
                            IsVisible="False"
                            IsHitTestVisible="False"
                            ZIndex="200">
                        <Border.Styles>
                            <Style Selector="Border[IsVisible=True]">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Blue}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Blue}"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource BlueColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN AND"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="22"
                                   FontWeight="ExtraBold"
                                   Foreground="{StaticResource White}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                </Grid>

                <!-- Fixed third overlays positioned absolutely over the drop zones -->
                <Grid Name="DropOverlaysGrid" Grid.Row="2" Grid.RowSpan="5" IsHitTestVisible="False" ZIndex="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>  <!-- Top third - MUST -->
                        <RowDefinition Height="1*"/>  <!-- Middle third - SHOULD -->
                        <RowDefinition Height="1*"/>  <!-- Bottom third - CAN'T -->
                    </Grid.RowDefinitions>

                    <!-- MUST drop overlay -->
                    <Border Name="MustDropOverlay"
                            Grid.Row="0"
                            Classes="dropzone-overlay"
                            Background="{StaticResource Blue}">
                        <Border.Styles>
                            <Style Selector="Border[IsVisible=True]">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Blue}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Blue}"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource BlueColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN MUST HAVE">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>

                    <!-- SHOULD drop overlay -->
                    <Border Name="ShouldDropOverlay"
                            Grid.Row="1"
                            Classes="dropzone-overlay"
                            Background="{StaticResource Green}">
                        <Border.Styles>
                            <Style Selector="Border[IsVisible=True]">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Green}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource GreenHover}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Green}"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource GreenColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN SHOULD HAVE">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>

                    <!-- CAN'T drop overlay -->
                    <Border Name="MustNotDropOverlay"
                            Grid.Row="2"
                            Classes="dropzone-overlay"
                            Background="{StaticResource Red}">
                        <Border.Styles>
                            <Style Selector="Border[IsVisible=True]">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.8" IterationCount="Infinite">
                                        <KeyFrame Cue="0%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Red}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="50%">
                                            <Setter Property="BoxShadow" Value="0 0 0 3 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="BoxShadow" Value="0 0 0 0 #FFFFFF"/>
                                            <Setter Property="Background" Value="{StaticResource Red}"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Border.Styles>
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource RedColor}"
                                              OffsetX="0"
                                              OffsetY="0"
                                              BlurRadius="30"
                                              Opacity="1.0"/>
                        </Border.Effect>
                        <TextBlock Text="DROP IN BANNED ITEMS">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="12" OffsetX="3" OffsetY="3" Opacity="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                </Grid>
                <!-- MUST HAVE Zone -->
                <Border Name="MustDropZone"
                        Grid.Row="2"
                        Background="{StaticResource DarkBackground}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Height" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                        </Transitions>
                    </Border.Transitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>     <!-- Horizontal label row -->
                            <RowDefinition Height="*"/>        <!-- Drop area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Header Label -->
                        <Border Grid.Row="0"
                                Background="{StaticResource DarkBackground}"
                                Padding="8,4">
                            <TextBlock Text="MUST"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       
                                       Foreground="{StaticResource Blue}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: Drop Area - Always visible -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding SelectedMust}"
                                      Margin="6">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <i:Interaction.Behaviors>
                                <behaviors:CategoryGroupedLayoutBehavior/>
                            </i:Interaction.Behaviors>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FilterItem">
                                    <!-- Render operator or regular card based on Type property -->
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.DataTemplates>
                                            <!-- Template for FilterOperatorItem -->
                                            <DataTemplate DataType="models:FilterOperatorItem">
                                                <components:FilterOperatorControl/>
                                            </DataTemplate>

                                            <!-- Template for regular FilterItem -->
                                            <DataTemplate DataType="models:FilterItem">
                                                <Border Background="Transparent"
                                                        Cursor="Hand"
                                                        PointerPressed="OnDropZoneItemPointerPressed">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:CardDragBehavior IsEnabled="True" JuiceAmount="0.4"/>
                                                    </i:Interaction.Behaviors>

                                                    <!-- Just card image and label - no cream border! -->
                                                    <StackPanel Spacing="2" Width="54" Height="64" IsHitTestVisible="False">
