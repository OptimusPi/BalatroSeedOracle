<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             x:Class="BalatroSeedOracle.Components.FilterTabs.VisualBuilderTab">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Top Search Bar -->
            <RowDefinition Height="12"/>    <!-- Spacer -->
            <RowDefinition Height="*"/>     <!-- Main Content Area -->
        </Grid.RowDefinitions>

        <!-- TOP SEARCH BAR - Row 1 (Left side, same width as category buttons) -->
        <Grid Grid.Row="0" Margin="16,20,16,0" HorizontalAlignment="Left" Width="200">
            <TextBox Name="SearchBox"
                     Text="{Binding SearchFilter}"
                     Watermark="Search items..."
                     MinHeight="45"
                     FontSize="16"
                     BorderThickness="0"
                     Background="{StaticResource DarkBackground}"
                     CornerRadius="8"
                     VerticalContentAlignment="Center"
                     Padding="12,8,50,8"/>

            <!-- Clear button inside search box (right side) -->
            <Button Content="×"
                    Command="{Binding ClearSearchCommand}"
                    Background="Transparent"
                    Foreground="{StaticResource White}"
                    FontSize="24"
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,4,0"
                    Cursor="Hand"
                    IsVisible="{Binding SearchFilter, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
        </Grid>

        <!-- MAIN CONTENT AREA - Row 3 -->
        <Grid Grid.Row="2" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>   <!-- Left: Category Buttons -->
                <ColumnDefinition Width="460"/>   <!-- Center: Grouped Items (5 jokers wide: 5*80 + scrollbar = 460) -->
                <ColumnDefinition Width="*"/>     <!-- Right: Drop Zones -->
            </Grid.ColumnDefinitions>

            <!-- LEFT COLUMN - 7 Main Categories (NO PAGINATION) -->
            <StackPanel Grid.Column="0" Spacing="1" Margin="0,0,8,0">
                <Button Content="Favorites"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="Favorites"/>
                <Button Content="Joker"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="Joker"/>
                <Button Content="Consumable"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="Consumable"/>
                <Button Content="Skip Tag"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="SkipTag"/>
                <Button Content="Boss"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="Boss"/>
                <Button Content="Voucher"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="Voucher"/>
                <Button Content="Standard Card"
                        Classes="nav-button"
                        Click="OnCategoryClick"
                        Tag="StandardCard"/>
            </StackPanel>

            <!-- CENTER COLUMN - Grouped Scrollable Items (NO PAGINATION) -->
            <Grid Grid.Column="1" Margin="8,0">
                <Border Name="ItemGridBorder"
                        Background="{StaticResource DarkTealGrey}"
                        BorderThickness="0"
                        CornerRadius="8"
                        Padding="12"
                        DragDrop.AllowDrop="True">
                    <ScrollViewer Name="ItemScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding GroupedItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,16">
                                        <!-- Subcategory Header -->
                                        <Border Background="{StaticResource DarkBackground}"
                                                BorderBrush="{StaticResource ModalBorder}"
                                                BorderThickness="0,0,0,2"
                                                Padding="8,6"
                                                Margin="0,0,0,8"
                                                CornerRadius="4">
                                            <TextBlock Text="{Binding GroupName}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource Orange}"
                                                       TextAlignment="Left"/>
                                        </Border>

                                        <!-- Items in Group -->
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <!-- SOLUTION: Grid with two overlapping layers -->
                                                    <Grid Margin="8,6" Width="80" Height="110">
                                                        <!-- LAYER 1: Visual card that rotates (Z-Index 0, BOTTOM) -->
                                                        <StackPanel ZIndex="0"
                                                                    Opacity="{Binding IsBeingDragged, Converter={x:Static converters:BoolToOpacityConverter.Dragging}}"
                                                                    IsHitTestVisible="False">
                                                            <!-- Balatro-style sway behavior attached here -->
                                                            <i:Interaction.Behaviors>
                                                                <behaviors:BalatroCardSwayBehavior AmbientTilt="0.2"/>
                                                            </i:Interaction.Behaviors>

                                                            <Grid>
                                                                <!-- Main card image (SMALLER) -->
                                                                <Image Source="{Binding ItemImage}"
                                                                       Width="57"
                                                                       Height="76"
                                                                       Stretch="Uniform"
                                                                       HorizontalAlignment="Center"/>

                                                                <!-- Legendary soul face overlay (only for SoulJoker type) -->
                                                                <Image Source="{Binding SoulFaceImage}"
                                                                       Width="57"
                                                                       Height="76"
                                                                       Stretch="Uniform"
                                                                       HorizontalAlignment="Center"
                                                                       IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                            </Grid>

                                                            <!-- Simple name below -->
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                       Foreground="{StaticResource White}"
                                                                       FontFamily="{StaticResource BalatroFont}"
                                                                       FontSize="11"
                                                                       HorizontalAlignment="Center"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,3,0,0"
                                                                       MaxWidth="80"/>
                                                        </StackPanel>

                                                        <!-- LAYER 2: Invisible hitbox that NEVER rotates (Z-Index 1, TOP) -->
                                                        <Border ZIndex="1"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                PointerPressed="OnItemPointerPressed"
                                                                PointerEntered="OnCardPointerEntered"
                                                                Width="80"
                                                                Height="110"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Return Overlay - Shows when dragging from drop zones -->
                <Border Name="ReturnOverlay"
                        Background="#CC1A1D23"
                        BorderBrush="{StaticResource Orange}"
                        BorderThickness="3"
                        CornerRadius="8"
                        IsVisible="False"
                        IsHitTestVisible="False">
                    <TextBlock Text="↩️ Drop here to remove from filter"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="20"
                               Foreground="{StaticResource Orange}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Grid>

            <!-- RIGHT COLUMN - Drop Zones (Balatro Challenges Style) -->
            <StackPanel Grid.Column="2" Spacing="12" VerticalAlignment="Top">
                <!-- MUST HAVE Zone -->
                <Border Name="MustDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>   <!-- Blue header -->
                            <RowDefinition Height="*"/>       <!-- White content area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Blue Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,6,0,0"
                                Padding="12,8">
                            <TextBlock Text="Must Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: White Drop Area -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedMust}" Margin="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6" Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image (BIGGER) -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromMustCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- SHOULD HAVE Zone -->
                <Border Name="ShouldDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>   <!-- Blue header -->
                            <RowDefinition Height="*"/>       <!-- White content area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Blue Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,6,0,0"
                                Padding="12,8">
                            <TextBlock Text="Should Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: White Drop Area -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedShould}" Margin="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6" Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image (BIGGER) -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromShouldCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- MUST NOT HAVE Zone -->
                <Border Name="MustNotDropZone"
                        Background="{StaticResource White}"
                        BorderThickness="0"
                        CornerRadius="8"
                        MinHeight="120"
                        MaxHeight="220"
                        Padding="0"
                        DragDrop.AllowDrop="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>   <!-- Blue header -->
                            <RowDefinition Height="*"/>       <!-- White content area -->
                        </Grid.RowDefinitions>

                        <!-- Top: Blue Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource Blue}"
                                CornerRadius="6,6,0,0"
                                Padding="12,8">
                            <TextBlock Text="Must Not Have"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="16"
                                       Foreground="{StaticResource White}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Bottom: White Drop Area -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedMustNot}" Margin="12">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6" Width="57" Height="76" Cursor="Hand" PointerPressed="OnDropZoneItemPointerPressed">
                                        <!-- Main card image (BIGGER) -->
                                        <Image Source="{Binding ItemImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"/>

                                        <!-- Soul face overlay for legendary jokers -->
                                        <Image Source="{Binding SoulFaceImage}"
                                               Width="57"
                                               Height="76"
                                               Stretch="Uniform"
                                               IsVisible="{Binding SoulFaceImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                                        <!-- Hover-only Remove Button -->
                                        <Button Content="×"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveFromMustNotCommand}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}"
                                                Foreground="White"
                                                FontSize="12"
                                                Width="18"
                                                Height="18"
                                                CornerRadius="9"
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,-6,-6,0"
                                                IsVisible="False"
                                                Name="RemoveButton">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>

                                        <Grid.Styles>
                                            <Style Selector="Grid:pointerover Button#RemoveButton">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </Style>
                                        </Grid.Styles>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
