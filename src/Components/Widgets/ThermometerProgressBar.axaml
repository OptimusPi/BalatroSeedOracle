<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Components.Widgets.ThermometerProgressBar">
    
    <!-- Thermometer-style progress bar specifically for minimized widgets -->
    <ProgressBar Name="ThermometerBar"
                 Classes="thermometer-progress"
                 Value="{Binding Progress}"
                 Minimum="0"
                 Maximum="1"
                 Height="6"/>
</UserControl>