<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:BalatroSeedOracle.Behaviors"
             x:Class="BalatroSeedOracle.Components.DayLatroWidget"
             x:DataType="vm:DayLatroWidgetViewModel"
             x:CompileBindings="True">

    <UserControl.Styles>
        <!-- Local style overrides for DayLatro-specific widgets -->
        <Style Selector="TextBox.score-input">
            <Setter Property="Background" Value="{StaticResource VeryDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource DarkGreyBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Minimized State - Calendar Icon -->
        <Grid Name="MinimizedView"
              IsVisible="{Binding IsMinimized}"
              ZIndex="1"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <i:Interaction.Behaviors>
                <behaviors:DraggableWidgetBehavior X="{Binding PositionX, Mode=TwoWay}"
                                                   Y="{Binding PositionY, Mode=TwoWay}" />
                <!-- BALATRO SWAY ANIMATION! -->
                <behaviors:BalatroCardSwayBehavior AmbientTilt="0.2" />
            </i:Interaction.Behaviors>

            <StackPanel Spacing="4">
                <Grid>
                    <!-- Button -->
                    <Button Background="{StaticResource Grey}"
                            BorderBrush="{StaticResource ModalBorder}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Width="64" Height="64"
                            Cursor="Hand"
                            Command="{Binding ExpandCommand}">
                        <TextBlock Text="ðŸ“…" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>

                    <!-- Notification badge overlay -->
                    <Border Classes="notification-badge small"
                            Background="{StaticResource Red}"
                            BorderBrush="{StaticResource White}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Width="20" Height="20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-5,-5,0"
                            IsVisible="{Binding ShowNewDayBadge}">
                        <TextBlock Text="!"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <TextBlock Text="Daylatro"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Expanded State -->
        <Border Name="ExpandedView"
                Classes="widget-window"
                ZIndex="100"
                Width="350"
                MaxHeight="550"
                IsVisible="{Binding !IsMinimized}">
            <i:Interaction.Behaviors>
                <behaviors:DraggableWidgetBehavior X="{Binding PositionX, Mode=TwoWay}"
                                                   Y="{Binding PositionY, Mode=TwoWay}" />
            </i:Interaction.Behaviors>

            <Grid RowDefinitions="Auto,*">
                <!-- Header -->
                <Border Grid.Row="0" Classes="widget-header" Padding="12,8">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding WidgetIcon}" FontSize="15" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding WidgetTitle}"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="_"
                                Classes="widget-minimize-btn"
                                Command="{Binding MinimizeCommand}"
                                ToolTip.Tip="Minimize"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="15">
                    <StackPanel Spacing="12">
                        <!-- Date and Seed -->
                        <TextBlock Text="{Binding DateText}"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <!-- Seed text with Copy button inline -->
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <TextBlock Text="{Binding TodaySeed}"
                                       FontSize="24"
                                       Foreground="{StaticResource ToggleRed}"
                                       VerticalAlignment="Center"/>
                            <Button Content="ðŸ“‹"
                                    FontSize="16"
                                    Width="32" Height="32"
                                    Classes="btn-blue"
                                    Padding="0"
                                    Command="{Binding CopySeedCommand}"
                                    ToolTip.Tip="Copy Seed"/>
                        </StackPanel>

                        <!-- My Score Section -->
                        <TextBlock Text="Submit Score"
                                   FontSize="14"
                                   Margin="0,0,0,5"/>

                        <!-- Input Fields Grid -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Classes="score-input"
                                     Text="{Binding InitialsInput}"
                                     Watermark="ABC"
                                     MaxLength="3"
                                     Margin="0,0,5,0"/>

                            <TextBox Grid.Column="1"
                                     Classes="score-input"
                                     Text="{Binding AnteInput}"
                                     Watermark="Ante"
                                     Margin="0,0,5,0"/>

                            <TextBox Grid.Column="2"
                                     Classes="score-input"
                                     Text="{Binding ScoreInput}"
                                     Watermark="Best hand..."/>
                        </Grid>

                        <Button Content="Submit to Daylatro"
                                Classes="widget-submit-btn"
                                Command="{Binding SubmitScoreCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,5"/>

                        <!-- Submission Message - Success -->
                        <TextBlock Text="{Binding SubmissionMessage}"
                                   FontSize="12"
                                   Foreground="#51cf66"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding !SubmissionMessageIsError}"/>

                        <!-- Submission Message - Error -->
                        <TextBlock Text="{Binding SubmissionMessage}"
                                   FontSize="12"
                                   Foreground="#ff6b6b"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding SubmissionMessageIsError}"/>

                        <!-- High Scores Table -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Today's High Scores"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Content="â†»"
                                    FontSize="16"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding RefreshScoresCommand}"
                                    ToolTip.Tip="Refresh scores"/>
                        </Grid>

                        <Border Background="{StaticResource VeryDarkBackground}"
                                CornerRadius="6"
                                Padding="10"
                                MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding HighScores}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:HighScoreDisplayItem">
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Rank}"
                                                           FontSize="12"/>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Initials}"
                                                           FontSize="12"
                                                           FontWeight="Bold"/>

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Ante}"
                                                           FontSize="12"/>

                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding Score}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource DaytroOrange}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <Button Content="Copy Seed"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                Command="{Binding CopySeedCommand}"/>

                        <!-- Analyze Seed Button -->
                        <Button Content="Analyze This Seed"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0"
                                Command="{Binding AnalyzeSeedCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
