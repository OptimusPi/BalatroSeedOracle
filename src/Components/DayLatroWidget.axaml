<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Components.DayLatroWidget"
             x:DataType="vm:DayLatroWidgetViewModel"
             x:CompileBindings="True">
    
    <UserControl.Styles>
        <Style Selector="Border.widget-container">
            <Setter Property="Background" Value="{StaticResource MainBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="Button.widget-container">
            <Setter Property="Background" Value="{StaticResource MainBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style Selector="Button.widget-container:pointerover">
            <Setter Property="Background" Value="{StaticResource Background}"/>
        </Style>
        
        <Style Selector="Border.widget-header">
            <Setter Property="Background" Value="{StaticResource Background}"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="TextBox.score-input">
            <Setter Property="Background" Value="{StaticResource VeryDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource DarkGreyBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.submit-button">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource White}" />
            
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.submit-button:pointerover">
            <Setter Property="Background" Value="{StaticResource ToggleGreen}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <!-- Minimized State - Calendar Icon -->
        <Grid Name="MinimizedView"
              IsVisible="{Binding IsMinimized}"
              Margin="10,10,0,0"
              PointerPressed="OnWidgetPointerPressed"
              PointerMoved="OnWidgetPointerMoved"
              PointerReleased="OnWidgetPointerReleased">
            <Button Classes="widget-container"
                    Width="100" Height="100"
                    Cursor="Hand"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Command="{Binding ExpandCommand}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- BIG calendar icon centered -->
                    <TextBlock Grid.Row="0"
                               Text="ðŸ“…"
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <!-- "Daylatro" text at bottom with notification badge -->
                    <TextBlock Grid.Row="1"
                               Text="Daylatro"
                               FontSize="12"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Gold}"
                               Margin="0,0,0,6"/>
                </Grid>
            </Button>
            
            <!-- Notification badge overlay using Canvas -->
            <Canvas ZIndex="100">
                <Border Name="NewDayBadge"
                        Classes="notification-badge small"
                        Canvas.Right="-5"
                        Canvas.Top="-5"
                        IsVisible="{Binding ShowNewDayBadge}">
                    <TextBlock Text="!" />
                </Border>
            </Canvas>
        </Grid>
        
        <!-- Expanded State -->
        <Border Name="ExpandedView"
                Classes="widget-container"
                Width="350" Height="450"
                IsVisible="{Binding !IsMinimized}"
                PointerPressed="OnWidgetPointerPressed"
                PointerMoved="OnWidgetPointerMoved"
                PointerReleased="OnWidgetPointerReleased">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Classes="widget-header">
                    <Grid Height="32">
                        <TextBlock Text="Daylatro by tfausak" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"
                                   />
                        <Button Content="_"
                                Width="24" Height="20"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Command="{Binding MinimizeCommand}"/>
                    </Grid>
                </Border>
                
                <!-- Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="15">
                        <!-- Date and Seed -->
                        <TextBlock Name="DateText"
                                   Text="{Binding DateText}"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <!-- Seed text with Copy button inline -->
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,0,0,15">
                            <TextBlock Name="SeedText"
                                       Text="{Binding TodaySeed}"
                                       FontSize="24"
                                       Foreground="{StaticResource ToggleRed}"
                                       VerticalAlignment="Center"/>
                            <Button Content="ðŸ“‹"
                                    FontSize="16"
                                    Width="32" Height="32"
                                    Classes="btn-blue"
                                    Padding="0"
                                    Command="{Binding CopySeedCommand}"
                                    ToolTip.Tip="Copy Seed"/>
                        </StackPanel>
                        
                        <!-- My Score Section -->
                        <TextBlock Text="Submit Score"
                                   FontSize="14"
                                   
                                   Margin="0,0,0,5"/>
                        
                        <!-- Input Fields Grid -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Name="InitialsInput"
                                     Classes="score-input"
                                     Text="{Binding InitialsInput}"
                                     Watermark="ABC"
                                     MaxLength="3"
                                     Margin="0,0,5,0"/>

                            <TextBox Grid.Column="1"
                                     Name="AnteInput"
                                     Classes="score-input"
                                     Text="{Binding AnteInput}"
                                     Watermark="Ante"
                                     Margin="0,0,5,0"/>

                            <TextBox Grid.Column="2"
                                     Name="ScoreInput"
                                     Classes="score-input"
                                     Text="{Binding ScoreInput}"
                                     Watermark="Best hand..."/>
                        </Grid>
                        
                        <Button Name="SubmitButton"
                                Content="Submit to Daylatro"
                                Classes="submit-button"
                                Command="{Binding SubmitScoreCommand}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,5"/>

                        <!-- Submission Message - Success -->
                        <TextBlock Text="{Binding SubmissionMessage}"
                                   FontSize="12"
                                   Foreground="#51cf66"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding !SubmissionMessageIsError}"/>

                        <!-- Submission Message - Error -->
                        <TextBlock Text="{Binding SubmissionMessage}"
                                   FontSize="12"
                                   Foreground="#ff6b6b"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding SubmissionMessageIsError}"/>
                        
                        <!-- High Scores Table -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Today's High Scores"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                                       
                            <Button Grid.Column="1"
                                    Name="RefreshButton"
                                    Content="â†»"
                                    FontSize="16"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding RefreshScoresCommand}"
                                    ToolTip.Tip="Refresh scores"/>
                        </Grid>
                        
                        <Border Background="{StaticResource VeryDarkBackground}"
                                CornerRadius="6"
                                Padding="10"
                                MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl Name="HighScoresControl"
                                              ItemsSource="{Binding HighScores}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:HighScoreDisplayItem">
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Rank}"
                                                           FontSize="12"/>
                                                
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Initials}"
                                                           FontSize="12"
                                                           FontWeight="Bold"/>
                                                
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Ante}"
                                                           FontSize="12"/>
                                                
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding Score}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource DaytroOrange}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                        <Button Content="Copy Seed"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                Command="{Binding CopySeedCommand}"/>

                        <!-- Analyze Seed Button -->
                        <Button Content="Analyze This Seed"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0"
                                Command="{Binding AnalyzeSeedCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>