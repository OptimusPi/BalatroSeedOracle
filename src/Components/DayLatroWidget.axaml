<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Components.DayLatroWidget"
             x:CompileBindings="False">
    
    <UserControl.Styles>
        <Style Selector="Border.widget-container">
            <Setter Property="Background" Value="{StaticResource MainBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style Selector="Border.widget-header">
            <Setter Property="Background" Value="{StaticResource Background}"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="TextBox.score-input">
            <Setter Property="Background" Value="{StaticResource VeryDarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource DarkGreyBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.submit-button">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource White}" />
            
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="Button.submit-button:pointerover">
            <Setter Property="Background" Value="{StaticResource ToggleGreen}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <!-- Minimized State - Calendar Icon -->
        <Grid Name="MinimizedView" IsVisible="True" Margin="10,10,0,0">
            <Border Classes="widget-container" 
                    Width="128" Height="64"
                    Cursor="Hand"
                    PointerPressed="OnMinimizedClick">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="ðŸ“… Daylatro" 
                               FontSize="22"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1"
                               Name="MinimizedSeedText"
                               Text="Loading..." 
                               FontSize="18"
                               Foreground="{StaticResource White}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,5"/>
                </Grid>
            </Border>
            
            <!-- Notification badge overlay using Canvas -->
            <Canvas ZIndex="100">
                <Border Name="NewDayBadge"
                        Classes="notification-badge small"
                        Canvas.Right="-5"
                        Canvas.Top="-5"
                        IsVisible="False">
                    <TextBlock Text="!" />
                </Border>
            </Canvas>
        </Grid>
        
        <!-- Expanded State -->
        <Border Name="ExpandedView" 
                Classes="widget-container"
                Width="350" Height="450"
                IsVisible="False">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Classes="widget-header">
                    <Grid Height="32">
                        <TextBlock Text="Daylatro by tfausak" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"
                                   />
                        <Button Content="_" 
                                Width="24" Height="20"
                                FontSize="14"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Click="OnMinimizeClick"/>
                    </Grid>
                </Border>
                
                <!-- Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="15">
                        <!-- Date and Seed -->
                        <TextBlock Name="DateText" 
                                   Text="Daylatro"
                                   FontSize="18"
                                   
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Name="SeedText"
                                   Text="LOADING..."
                                   FontSize="24"
                                   
                                   Foreground="{StaticResource ToggleRed}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>
                        
                        <!-- My Score Section -->
                        <TextBlock Text="Submit Score"
                                   FontSize="14"
                                   
                                   Margin="0,0,0,5"/>
                        
                        <!-- Input Fields Grid -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Name="InitialsInput"
                                     Classes="score-input"
                                     Watermark="ABC"
                                     MaxLength="3"
                                     Margin="0,0,5,0"/>
                            
                            <TextBox Grid.Column="1"
                                     Name="AnteInput"
                                     Classes="score-input"
                                     Watermark="Ante"
                                     Margin="0,0,5,0"/>
                            
                            <TextBox Grid.Column="2"
                                     Name="ScoreInput"
                                     Classes="score-input"
                                     Watermark="Best hand..."/>
                        </Grid>
                        
                        <Button Name="SubmitButton"
                                Content="Submit to Daylatro"
                                Classes="submit-button"
                                Click="OnSubmitScore"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,15"/>
                        
                        <!-- High Scores Table -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Today's High Scores"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                                       
                            <Button Grid.Column="1"
                                    Name="RefreshButton"
                                    Content="â†»"
                                    FontSize="16"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="OnRefreshClick"
                                    ToolTip.Tip="Refresh scores"/>
                        </Grid>
                        
                        <Border Background="{StaticResource VeryDarkBackground}"
                                CornerRadius="6"
                                Padding="10"
                                MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl Name="HighScoresControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Rank}"
                                                           FontSize="12"/>
                                                
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Initials}"
                                                           FontSize="12"
                                                           FontWeight="Bold"/>
                                                
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding Ante}"
                                                           FontSize="12"/>
                                                
                                                <TextBlock Grid.Column="3"
                                                           Text="{Binding Score}"
                                                           FontSize="12"
                                                           Foreground="{StaticResource DaytroOrange}"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        
                        <Button Content="Copy Seed"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"
                                Click="OnCopyChallengeClick"/>

            <!-- Analyze Seed Button -->
            <Button Content="Analyze This Seed"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Click="OnAnalyzeSeedClick"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>