<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckSpinner">

    <!-- Override inner spinner visuals to resemble Balatro deck tab -->
    <UserControl.Styles>
        <!-- Taller side bars for navigation -->
        <Style Selector="Button#PrevButton">
            <Setter Property="Height" Value="196"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="FontSize" Value="32"/>
        </Style>
        <Style Selector="Button#NextButton">
            <Setter Property="Height" Value="196"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="FontSize" Value="32"/>
        </Style>

        <!-- Larger card image -->
        <Style Selector="controls|PanelSpinner Viewbox">
            <Setter Property="MaxHeight" Value="196"/>
        </Style>

        <!-- Slightly wider inner panel for roomy layout -->
        <Style Selector="controls|PanelSpinner Border.panel-content">
            <Setter Property="Width" Value="360"/>
        </Style>
    </UserControl.Styles>

    <controls:PanelSpinner Name="InnerPanelSpinner" />

</UserControl>