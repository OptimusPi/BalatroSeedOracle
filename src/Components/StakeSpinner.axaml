<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.StakeSpinner">

    <!-- Styles to match DeckSpinner sizing but smaller height for chips -->
    <UserControl.Styles>
        <Style Selector="Button#PrevButton">
            <Setter Property="Height" Value="120"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
        <Style Selector="Button#NextButton">
            <Setter Property="Height" Value="120"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
        <Style Selector="controls|PanelSpinner Viewbox">
            <Setter Property="MaxHeight" Value="120"/>
        </Style>
        <Style Selector="controls|PanelSpinner Border.panel-content">
            <Setter Property="Width" Value="360"/>
        </Style>
    </UserControl.Styles>

    <controls:PanelSpinner Name="InnerPanelSpinner" />

</UserControl>