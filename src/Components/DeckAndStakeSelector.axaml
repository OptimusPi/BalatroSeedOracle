<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <StackPanel Spacing="24" HorizontalAlignment="Center">
        <!-- Dark panel background wrapping deck and stake selectors -->
        <Border Background="{StaticResource DarkModalGrey}"
                CornerRadius="12"
                Padding="25,20"
                HorizontalAlignment="Center">
            <StackPanel Spacing="20">
                <!-- Deck Spinner (Balatro-style panel with title/description/dots) -->
                <components:DeckSpinner
                    ShowArrows="True"
                    SelectedDeckIndex="{Binding DeckIndex}"
                    StakeIndex="{Binding StakeIndex}"
                    HorizontalAlignment="Center"/>

                <!-- Stake Spinner: simple enum-based spinner, no PanelItemFactory -->
                <controls:SpinnerControl Name="StakeSpinner"
                                         Label="Stake"
                                         SpinnerType="stake"
                                         Value="{Binding StakeIndex}"
                                         Minimum="0"
                                         Maximum="7"
                                         Increment="1"
                                         DisplayValues="{Binding StakeDisplayValues}"/>
            </StackPanel>
        </Border>

        <!-- Select Button -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="280"
                MinHeight="48"
                FontSize="18"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>