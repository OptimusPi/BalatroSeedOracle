<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <!-- VERTICAL LAYOUT (Balatro style - Deck on top, Stake below) -->
    <!-- Scaled up 2.5x so it's actually visible! -->
    <StackPanel Spacing="30" HorizontalAlignment="Center">
        <!-- Deck Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <!-- DeckSpinner shows deck name and description internally - no duplicate labels needed -->
                <Grid ColumnDefinitions="Auto,12,Auto,12,Auto" HorizontalAlignment="Center">
                    <!-- Left Arrow -->
                    <Button Grid.Column="0"
                            Content="◀"
                            Classes="btn-red"
                            Width="60" Height="200"
                            FontSize="32"
                            Padding="0"
                            VerticalContentAlignment="Center"/>

                    <!-- Deck Card (larger!) -->
                    <Viewbox Grid.Column="2" Width="200" Height="260" Stretch="Uniform">
                        <components:DeckSpinner Name="DeckSpinnerControl" ShowArrows="False" />
                    </Viewbox>

                    <!-- Right Arrow -->
                    <Button Grid.Column="4"
                            Content="▶"
                            Classes="btn-red"
                            Width="60" Height="200"
                            FontSize="32"
                            Padding="0"
                            VerticalContentAlignment="Center"/>
                </Grid>
        </StackPanel>

        <!-- Stake Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <!-- SpinnerControl shows stake name and description internally -->
                <controls:SpinnerControl Name="StakeSpinner"
                                        Label=""
                                        SpinnerType="stake"
                                        Minimum="0"
                                        Maximum="7"
                                        Value="0"
                                        Width="320"
                                        Height="80"
                                        HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Select Button (bottom) -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="280"
                MinHeight="48"
                FontSize="18"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>