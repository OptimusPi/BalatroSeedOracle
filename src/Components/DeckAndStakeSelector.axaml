<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <!-- VERTICAL LAYOUT (Balatro style - Deck on top, Stake below) -->
    <!-- Scaled up 2.5x so it's actually visible! -->
    <StackPanel Spacing="30" HorizontalAlignment="Center">
        <!-- Deck Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="{Binding SelectedDeckDisplayName}"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="24"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <Grid ColumnDefinitions="Auto,12,Auto,12,Auto" HorizontalAlignment="Center">
                    <!-- Left Arrow (match deck card height) -->
                    <Button Grid.Column="0"
                            Content="◀"
                            Classes="btn-red"
                            Width="40" Height="145"
                            FontSize="28"
                            Padding="0"
                            VerticalContentAlignment="Center"/>

                    <!-- Deck Card (scaled up 2x) -->
                    <Viewbox Grid.Column="2" Width="142" Height="190" Stretch="Uniform">
                        <components:DeckSpinner Name="DeckSpinnerControl" ShowArrows="False" />
                    </Viewbox>

                    <!-- Right Arrow (match deck card height) -->
                    <Button Grid.Column="4"
                            Content="▶"
                            Classes="btn-red"
                            Width="40" Height="145"
                            FontSize="28"
                            Padding="0"
                            VerticalContentAlignment="Center"/>
                </Grid>

                <TextBlock Text="{Binding SelectedDeckDescription}"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource White}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
        </StackPanel>

        <!-- Stake Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <TextBlock Text="{Binding SelectedStakeDisplayName}"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="24"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <!-- Use existing SpinnerControl (scaled up) -->
                <controls:SpinnerControl Name="StakeSpinner"
                                        Label=""
                                        SpinnerType="stake"
                                        Minimum="0"
                                        Maximum="7"
                                        Value="0"
                                        Width="240"
                                        HorizontalAlignment="Center" />

                <TextBlock Text="{Binding SelectedStakeDescription}"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource White}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
        </StackPanel>

        <!-- Select Button (bottom) -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="280"
                MinHeight="48"
                FontSize="18"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>