<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <StackPanel Spacing="14">
        <!-- Deck Selection - Scaled down to 60% size -->
        <Viewbox MaxWidth="192" MaxHeight="165" Stretch="Uniform" HorizontalAlignment="Center">
            <components:DeckSpinner Name="DeckSpinnerControl" />
        </Viewbox>

        <!-- Stake Selection using regular spinner -->
        <controls:SpinnerControl Name="StakeSpinner"
                                Label=""
                                SpinnerType="stake"
                                Minimum="0"
                                Maximum="7"
                                Value="0"
                                Width="157"
                                HorizontalAlignment="Center" />

        <!-- Select Button -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="200"
                MinHeight="32"
                HorizontalAlignment="Center"
                Margin="0,8,0,0"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>