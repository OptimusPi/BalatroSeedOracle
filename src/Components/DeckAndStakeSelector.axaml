<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <!-- VERTICAL LAYOUT (Balatro style - Deck on top, Stake below) -->
    <StackPanel Spacing="24" HorizontalAlignment="Center">
        <!-- Deck Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <!-- DeckSpinner shows deck name and description internally - no duplicate labels needed -->
                <Grid ColumnDefinitions="Auto,12,Auto,12,Auto" HorizontalAlignment="Center">
                    <!-- Left Arrow -->
                    <Button Grid.Column="0"
                            Content="◀"
                            Classes="btn-red"
                            Width="56" Height="196"
                            FontSize="32"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            Command="{Binding PreviousDeckCommand}"/>

                    <!-- Deck Card (larger!) -->
                    <Viewbox Grid.Column="2" Width="220" Height="280" Stretch="Uniform">
                        <components:DeckSpinner Name="DeckSpinnerControl"
                                                ShowArrows="False"
                                                SelectedDeckIndex="{Binding DeckIndex, Mode=TwoWay}"
                                                StakeIndex="{Binding StakeIndex, Mode=TwoWay}" />
                    </Viewbox>

                    <!-- Right Arrow -->
                    <Button Grid.Column="4"
                            Content="▶"
                            Classes="btn-red"
                            Width="56" Height="196"
                            FontSize="32"
                            Padding="0"
                            VerticalContentAlignment="Center"
                            Command="{Binding NextDeckCommand}"/>
                </Grid>
        </StackPanel>

        <!-- Stake Selector -->
        <StackPanel Spacing="8" HorizontalAlignment="Center">
                <!-- SpinnerControl shows stake name and description internally -->
                <controls:SpinnerControl Name="StakeSpinner"
                                        Label=""
                                        SpinnerType="stake"
                                        Minimum="0"
                                        Maximum="7"
                                        Value="{Binding StakeIndex, Mode=TwoWay}"
                                        DisplayValues="{Binding StakeDisplayValues}"
                                        Width="320"
                                        Height="80"
                                        HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Select Button (bottom) -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="280"
                MinHeight="48"
                FontSize="18"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>