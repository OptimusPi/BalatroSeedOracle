<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector">

    <!-- COMPACT HORIZONTAL LAYOUT (Balatro style) - 60% smaller than original! -->
    <StackPanel Spacing="12" HorizontalAlignment="Center">
        <!-- Deck and Stake Row (horizontal layout) -->
        <Grid ColumnDefinitions="Auto,16,Auto" HorizontalAlignment="Center">
            <!-- Deck Selector (compact) -->
            <StackPanel Grid.Column="0" Spacing="4" HorizontalAlignment="Center">
                <TextBlock Text="Yellow Deck"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <Grid ColumnDefinitions="Auto,8,Auto,8,Auto" HorizontalAlignment="Center">
                    <!-- Left Arrow (TALL RED BAR like Balatro!) -->
                    <Button Grid.Column="0"
                            Content="◀"
                            Classes="btn-red"
                            Width="50" Height="110"
                            FontSize="24"
                            Padding="0"
                            VerticalContentAlignment="Center"/>

                    <!-- Deck Card -->
                    <Viewbox Grid.Column="2" Width="71" Height="95" Stretch="Uniform">
                        <components:DeckSpinner Name="DeckSpinnerControl" ShowArrows="False" />
                    </Viewbox>

                    <!-- Right Arrow (TALL RED BAR like Balatro!) -->
                    <Button Grid.Column="4"
                            Content="▶"
                            Classes="btn-red"
                            Width="50" Height="110"
                            FontSize="24"
                            Padding="0"
                            VerticalContentAlignment="Center"/>
                </Grid>

                <TextBlock Text="Start with extra $10"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="12"
                           Foreground="{StaticResource White}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>

            <!-- Stake Selector (compact) -->
            <StackPanel Grid.Column="2" Spacing="4" HorizontalAlignment="Center">
                <TextBlock Text="White Stake"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>

                <!-- Use existing SpinnerControl (already compact) -->
                <controls:SpinnerControl Name="StakeSpinner"
                                        Label=""
                                        SpinnerType="stake"
                                        Minimum="0"
                                        Maximum="7"
                                        Value="0"
                                        Width="157"
                                        HorizontalAlignment="Center" />

                <TextBlock Text="Base Difficulty"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="12"
                           Foreground="{StaticResource White}"
                           HorizontalAlignment="Center"
                           Opacity="0.7"/>
            </StackPanel>
        </Grid>

        <!-- Select Button (bottom) -->
        <Button Name="SelectButton"
                Content="Select this Deck"
                Classes="btn-blue"
                MinWidth="200"
                MinHeight="32"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>