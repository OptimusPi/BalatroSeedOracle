<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Components.DeckSpinner">

    <!-- Override inner spinner visuals to resemble Balatro deck tab -->
    <UserControl.Styles>
        <!-- Tall skinny navigation arrows that stretch with panel -->
        <Style Selector="Button#PrevButton">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>
        <Style Selector="Button#NextButton">
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="FontSize" Value="28"/>
        </Style>

        <!-- Larger card image -->
        <Style Selector="controls|PanelSpinner Viewbox">
            <Setter Property="MaxHeight" Value="148"/>
        </Style>

        <!-- Slightly wider inner panel for roomy layout -->
        <Style Selector="controls|PanelSpinner Border.panel-content">
            <Setter Property="Width" Value="300"/>
        </Style>
    </UserControl.Styles>

    <controls:PanelSpinner Name="InnerPanelSpinner" />

</UserControl>