<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Components.DeckAndStakeSelector"
             x:DataType="vm:DeckAndStakeSelectorViewModel">

    <StackPanel Spacing="24" HorizontalAlignment="Center">
        <!-- Deck Spinner (Balatro-style panel with title/description/dots) -->
        <components:DeckSpinner
            ShowArrows="True"
            SelectedDeckIndex="{Binding DeckIndex}"
            StakeIndex="{Binding StakeIndex}"
            HorizontalAlignment="Center"/>

        <!-- Stake Spinner: enum-only selection (no text editing) -->
        <controls:SpinnerControl Name="StakeSpinner"
                                 Label=""
                                 SpinnerType="stake"
                                 Value="{Binding StakeIndex}"
                                 Minimum="0"
                                 Maximum="7"
                                 Increment="1"
                                 ReadOnly="True"
                                 DisplayValues="{Binding StakeDisplayValues}"/>

        <!-- Select Button -->
        <Button Name="SelectButton"
                Content="CONTINUE"
                Classes="btn-blue"
                MinWidth="280"
                MinHeight="48"
                FontSize="18"
                HorizontalAlignment="Center"
                Command="{Binding SelectCommand}"/>
    </StackPanel>

</UserControl>
