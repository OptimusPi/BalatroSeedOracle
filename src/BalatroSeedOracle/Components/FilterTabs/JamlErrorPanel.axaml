<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             x:Class="BalatroSeedOracle.Components.FilterTabs.JamlErrorPanel"
             x:DataType="vm:JamlEditorTabViewModel">
    <Border Background="{StaticResource EditorDarkBg}"
            BorderBrush="{StaticResource EditorLineNumbers}"
            BorderThickness="0,1,0,0">
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource EditorButtonBg}"
                    Padding="8,4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Errors &amp; Warnings"
                               Foreground="{StaticResource White}"
                               FontWeight="Bold"
                               FontSize="12"/>
                    <TextBlock Text="{Binding ErrorCount, StringFormat='({0})'}"
                               Foreground="{StaticResource Red}"
                               FontSize="11"
                               IsVisible="{Binding HasErrors}"/>
                </StackPanel>
            </Border>

            <!-- Error List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ValidationErrors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource EditorDarkBg}"
                                    BorderThickness="0,0,0,1"
                                    BorderBrush="{StaticResource EditorLineNumbers}"
                                    Padding="8,4"
                                    Cursor="Hand"
                                    Classes.clickable="True"
                                    PointerPressed="OnErrorItemClick">
                                <Border.Styles>
                                    <Style Selector="Border.clickable:pointerover">
                                        <Setter Property="Background" Value="{StaticResource EditorButtonBg}"/>
                                    </Style>
                                </Border.Styles>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Severity Icon -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding SeverityIcon}"
                                               Foreground="{Binding SeverityColor}"
                                               FontSize="14"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Error Message -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Message}"
                                               Foreground="{StaticResource White}"
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"/>
                                    
                                    <!-- Line Number -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding LineNumber, StringFormat='Line {0}'}"
                                               Foreground="{StaticResource EditorLineNumbers}"
                                               FontSize="10"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <TextBlock Grid.Row="1"
                       Text="âœ“ No errors"
                       Foreground="{StaticResource BrightGreenEditor}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       IsVisible="{Binding !HasErrors}"/>
        </Grid>
    </Border>
</UserControl>
