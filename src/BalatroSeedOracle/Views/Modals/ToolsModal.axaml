<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:material="clr-namespace:IconPacks.Avalonia.Material;assembly=IconPacks.Avalonia.Material"
             xmlns:icons="clr-namespace:IconPacks.Avalonia.Material;assembly=IconPacks.Avalonia.Material"
             x:Class="BalatroSeedOracle.Views.Modals.ToolsModal">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel HorizontalAlignment="Center" Margin="20" Spacing="20">
            <!-- Title -->
            <TextBlock Text="TOOLS"
                       FontSize="24"

                       Foreground="{StaticResource Gold}"
                       FontFamily="{StaticResource BalatroFont}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Explanatory Text -->
            <TextBlock Text="Import filters, manage wordlists, and tweak your audio visualizer settings here."
                      FontFamily="{StaticResource BalatroFont}"
                      FontSize="13"
                      Foreground="{StaticResource VeryLightGrey}"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      Opacity="0.8"
                      Margin="0,0,0,12"/>
            
            <!-- Import Files Button -->
            <Button Name="ImportFilesButton"
                   Click="OnImportFilesClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Import Files" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Word Lists Button -->
            <Button Name="WordListsButton"
                   Click="OnWordListsClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Word Lists" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Credits Button -->
            <Button Name="CreditsButton"
                   Click="OnCreditsClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Credits"
                           FontSize="20"

                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>

            <!-- My Website (WebView) -->
            <Button Name="MyWebsiteButton"
                   Click="OnMyWebsiteClick"
                   Classes="btn-blue"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <material:PackIconMaterial Kind="Web" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="My Website"
                               FontSize="20"
                               FontFamily="{StaticResource BalatroFont}"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Balatro-inspired site (WebView) -->
            <Button Name="BalatroSiteButton"
                   Click="OnBalatroSiteClick"
                   Classes="btn-blue"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <material:PackIconMaterial Kind="Web" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Balatro"
                               FontSize="20"
                               FontFamily="{StaticResource BalatroFont}"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Web App â€“ BSO in WebView (use web app instead of re-creating) -->
            <Button Name="WebAppButton"
                   Click="OnWebAppClick"
                   Classes="btn-blue"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <material:PackIconMaterial Kind="Application" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Web App"
                               FontSize="20"
                               FontFamily="{StaticResource BalatroFont}"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Audio Visualizer Settings Button -->
            <Button Name="AudioVisualizerSettingsButton"
                   Click="OnAudioVisualizerSettingsClick"
                   Classes="btn-blue"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <material:PackIconMaterial Kind="Music" Width="20" Height="20" VerticalAlignment="Center"/>
                    <TextBlock Text="Audio Visualizer"
                               FontSize="20"
                               FontFamily="{StaticResource BalatroFont}"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>


            <!-- Nuke Everything Button -->
            <Button Name="NukeEverythingButton"
                   Click="OnNukeEverythingClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center"
                   Background="{StaticResource BrightRed2}">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <material:PackIconMaterial Kind="Fire" Width="20" Height="20" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Nuke Everything" 
                               FontSize="20"
                               Foreground="White"
                               FontFamily="{StaticResource BalatroFont}"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"/>
                    <icons:PackIconMaterial Kind="Fire" Width="20" Height="20" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
