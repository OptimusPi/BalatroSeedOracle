<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:material="clr-namespace:IconPacks.Avalonia.Material;assembly=IconPacks.Avalonia.Material"
             x:Class="BalatroSeedOracle.Views.Modals.WordListsModal"
             x:CompileBindings="True">
    
    <StackPanel Spacing="20" Margin="20">
        <!-- Explanatory Text -->
        <TextBlock Text="Create lists of seed keywords to search for (like memorable words or phrases). Your filters can reference these lists!"
                  FontFamily="{StaticResource BalatroFont}"
                  FontSize="13"
                  Foreground="{StaticResource VeryLightGrey}"
                  TextWrapping="Wrap"
                  HorizontalAlignment="Center"
                  TextAlignment="Center"
                  Opacity="0.8"
                  Margin="0,0,0,8"/>

        <!-- Simple file list at the top -->
        <Border Background="{StaticResource DarkBorder}"
                CornerRadius="12"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Word List:" 
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           FontSize="16"
                           Foreground="{StaticResource White}"/>
                
                <ComboBox Grid.Column="1"
                          Name="FileSelector"
                          HorizontalAlignment="Stretch"
                          SelectedIndex="0">
                    <!-- Files loaded dynamically from WordLists/ folder -->
                </ComboBox>
                
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="12,0,0,0">
                    <Button Name="PasteButton"
                            Classes="small-button"
                            Background="{StaticResource Blue}"
                            Click="OnPasteClick">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <material:PackIconMaterial Kind="ClipboardArrowDown" Width="12" Height="12" VerticalAlignment="Center"/>
                            <TextBlock Text="Paste" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Name="NewButton"
                            Content="New List"
                            Classes="small-button"
                            Click="OnNewClick"/>
                    <Button Name="SaveButton"
                            Content="Save"
                            Classes="small-button"
                            Background="{StaticResource Green}"
                            Click="OnSaveClick"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Text Editor -->
        <Border Background="{StaticResource DarkBackground}"
                BorderBrush="{StaticResource ModalBorder}"
                BorderThickness="2"
                CornerRadius="8"
                Height="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Editor header -->
                <Border Grid.Row="0" 
                        Background="{StaticResource DarkBackground}"
                        CornerRadius="6,6,0,0"
                        Padding="12,8">
                    <TextBlock Text="One word or phrase per line"
                               FontSize="14"
                               Foreground="{StaticResource ModalGrey}"/>
                </Border>
                
                <!-- Editor content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="TextEditor"
                             AcceptsReturn="True"
                             AcceptsTab="False"
                             TextWrapping="NoWrap"
                             FontFamily="Cascadia Code, Consolas, monospace"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="{StaticResource White}"
                             BorderThickness="0"
                             Padding="12"
                             Text=""/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Status text -->
        <TextBlock Name="StatusText"
                   Text="Edit word lists used by filters"
                   Foreground="{StaticResource ModalGrey}"
                   FontSize="14"
                   HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
