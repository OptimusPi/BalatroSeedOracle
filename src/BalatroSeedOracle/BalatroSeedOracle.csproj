<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!-- Shared library - multi-target for desktop and browser -->
    <TargetFrameworks>net10.0;net10.0-browser</TargetFrameworks>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AvaloniaUseCompiledBindingsByDefault>false</AvaloniaUseCompiledBindingsByDefault>
    <AssemblyName>BalatroSeedOracle</AssemblyName>
    <!-- Disable auto-generation of assembly info to avoid duplicates with referenced projects -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Product>Balatro Seed Oracle</Product>
    <Company>OptimusPi</Company>
    <Copyright>Copyright 2025</Copyright>
    <Version>2.0.0</Version>
    <FileVersion>2.0.0</FileVersion>
    <AssemblyVersion>2.0.0</AssemblyVersion>
    <!-- Enable more warnings for code quality -->
    <AnalysisMode>Default</AnalysisMode>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <!-- Relax warnings for browser build (many APIs unsupported) -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-browser'">
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <!-- CA1416: platform compatibility, CS0067: unused events in browser stubs -->
    <NoWarn>$(NoWarn);CA1416;CS0067</NoWarn>
    <!-- Disable HotReload for browser builds -->
    <WasmEnableHotReload>false</WasmEnableHotReload>
  </PropertyGroup>
  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
    <AvaloniaResource Include="m6x11plusplus.otf" />
  </ItemGroup>
  <!-- Copy Audio and Sprite files to output directory -->
  <ItemGroup>
    <None Update="Assets\Audio\*.ogg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\Audio\SFX\*.ogg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <!-- Copy all sprite assets -->
    <None Update="Assets\**\*.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Assets\**\*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <!-- Copy syntax highlighting files to output directory -->
  <ItemGroup>
    <None Update="Resources\*.xshd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <!-- Copy sample files to output directory -->
  <ItemGroup>
    <None Update="Samples\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Data\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <!-- Common packages for all platforms -->
  <ItemGroup>
    <PackageReference Include="Avalonia" />
    <PackageReference Include="Avalonia.Svg" />
    <PackageReference Include="Avalonia.Themes.Fluent" />
    <PackageReference Include="Avalonia.Fonts.Inter" />
    <PackageReference Include="Avalonia.ReactiveUI" />
    <PackageReference Include="Avalonia.Controls.DataGrid" />
    <PackageReference Include="Avalonia.AvaloniaEdit" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" />
    <PackageReference Include="AvaloniaEdit.TextMate" />
    <PackageReference Include="IconPacks.Avalonia.FeatherIcons" />
    <PackageReference Include="IconPacks.Avalonia.Material" />
    <PackageReference Include="MessageBox.Avalonia" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="CommunityToolkit.Mvvm" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="SkiaSharp" />
    <PackageReference Include="Avalonia.Skia" />
    <PackageReference Include="System.IO.Packaging" />
  </ItemGroup>
  <!-- Desktop-only packages (native dependencies that don't work in browser) -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <PackageReference Include="DuckDB.NET.Data.Full" />
    <PackageReference Include="SoundFlow" />
    <PackageReference Include="ClosedXML" />
  </ItemGroup>
  <!-- Define BROWSER constant for conditional compilation -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'net10.0-browser'">
    <DefineConstants>$(DefineConstants);BROWSER</DefineConstants>
  </PropertyGroup>
  <!-- Browser-specific packages -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0-browser'">
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" />
    <PackageReference Include="YamlDotNet" />
  </ItemGroup>
  <!-- Exclude desktop-only files from browser build -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0-browser'">
    <!-- Windows that use desktop-only features -->
    <Compile Remove="Windows\DataGridResultsWindow.axaml.cs" />
    <AvaloniaXaml Remove="Windows\DataGridResultsWindow.axaml" />
    <None Include="Windows\DataGridResultsWindow.axaml" />
    <!-- ResultsTab uses ClosedXML and DataGridResultsWindow -->
    <Compile Remove="Views\SearchModalTabs\ResultsTab.axaml.cs" />
    <AvaloniaXaml Remove="Views\SearchModalTabs\ResultsTab.axaml" />
    <None Include="Views\SearchModalTabs\ResultsTab.axaml" />
    <!-- HostApiWidget: use browser stub instead of full implementation -->
    <Compile Remove="ViewModels\HostApiWidgetViewModel.cs" />
    <Compile Remove="Components\Widgets\HostApiWidget.axaml.cs" />
    <AvaloniaXaml Remove="Components\Widgets\HostApiWidget.axaml" />
    <None Include="Components\Widgets\HostApiWidget.axaml" />
    <!-- Also exclude any BrowserHostApiWidget to avoid conflicts -->
    <AvaloniaXaml Remove="Components\Widgets\HostApiWidget.Browser.axaml" />
    <Compile Remove="Components\Widgets\HostApiWidget.Browser.axaml.cs" />
    <!-- FertilizerService now supports browser via DuckDB-WASM -->
    <!-- Remove browser stub since real widget now works in browser -->
    <Compile Remove="Components\Widgets\FertilizerWidget.Browser.axaml.cs" />
    <AvaloniaXaml Remove="Components\Widgets\FertilizerWidget.Browser.axaml" />
    <None Include="Components\Widgets\FertilizerWidget.Browser.axaml" />
    <None Include="Components\Widgets\FertilizerWidget.Browser.axaml.cs" />
    <!-- Desktop-only controls using PackIconMaterial or DataGrid sorting -->
    <Compile Remove="Controls\MaximizeButton.axaml.cs" />
    <AvaloniaXaml Remove="Controls\MaximizeButton.axaml" />
    <None Include="Controls\MaximizeButton.axaml" />
    <Compile Remove="Controls\SortableResultsGrid.axaml.cs" />
    <AvaloniaXaml Remove="Controls\SortableResultsGrid.axaml" />
    <None Include="Controls\SortableResultsGrid.axaml" />
    <Compile Remove="Converters\BoolToExpandIconConverter.cs" />
    <!-- AudioVisualizerSettingsModal is desktop-only -->
    <Compile Remove="Views\Modals\AudioVisualizerSettingsModal.axaml.cs" />
    <AvaloniaXaml Remove="Views\Modals\AudioVisualizerSettingsModal.axaml" />
    <None Include="Views\Modals\AudioVisualizerSettingsModal.axaml" />
  </ItemGroup>
  <!-- Browser stubs are auto-included by SDK, but exclude from desktop/Android/iOS builds -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0'">
    <Compile Remove="Components\Widgets\HostApiWidget.Browser.axaml.cs" />
    <AvaloniaXaml Remove="Components\Widgets\HostApiWidget.Browser.axaml" />
    <None Include="Components\Widgets\HostApiWidget.Browser.axaml" />
    <None Include="Components\Widgets\HostApiWidget.Browser.axaml.cs" />
    <Compile Remove="Components\Widgets\FertilizerWidget.Browser.axaml.cs" />
    <AvaloniaXaml Remove="Components\Widgets\FertilizerWidget.Browser.axaml" />
    <None Include="Components\Widgets\FertilizerWidget.Browser.axaml" />
    <None Include="Components\Widgets\FertilizerWidget.Browser.axaml.cs" />
    <!-- Exclude browser DuckDB implementations (use DesktopDuckDBService for Android/iOS) -->
    <Compile Remove="Services\DuckDB\BrowserDuckDBService.cs" />
    <Compile Remove="Services\DuckDB\BrowserDuckDBConnection.cs" />
    <Compile Remove="Services\DuckDB\BrowserDuckDBAppender.cs" />
    <None Include="Services\DuckDB\BrowserDuckDBService.cs" />
    <None Include="Services\DuckDB\BrowserDuckDBConnection.cs" />
    <None Include="Services\DuckDB\BrowserDuckDBAppender.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\external\Motely\Motely\Motely.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- Exclude MCP files - not needed for main release -->
    <Compile Remove="MCP\**\*.cs" />
    <None Include="MCP\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <!-- Explicitly exclude external folder from publish -->
    <Content Remove="..\..\external\**\*" />
    <Compile Remove="..\..\external\**\*" />
    <None Remove="..\..\external\**\*" />
    <EmbeddedResource Remove="..\..\external\**\*" />
  </ItemGroup>
  <ItemGroup>
    <!-- Exclude platform projects' obj folders from compilation -->
    <Compile Remove="..\BalatroSeedOracle.Browser\obj\**\*" />
    <Compile Remove="..\BalatroSeedOracle.Desktop\obj\**\*" />
    <Compile Remove="..\BalatroSeedOracle.iOS\obj\**\*" />
    <Compile Remove="..\BalatroSeedOracle.Android\obj\**\*" />
  </ItemGroup>
</Project>
