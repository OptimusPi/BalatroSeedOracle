<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icons="clr-namespace:IconPacks.Avalonia.Material;assembly=IconPacks.Avalonia.Material"
             x:Class="BalatroSeedOracle.Controls.MaximizeButton"
             x:CompileBindings="True">
    
    <UserControl.Styles>
        <Style Selector="Button.maximize-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource NeonGreen}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.maximize-btn:pointerover">
            <Setter Property="Background" Value="{StaticResource SemiTransparentNeonGreen}"/>
        </Style>
        
        <Style Selector="Button.maximize-btn:pressed">
            <Setter Property="Background" Value="{StaticResource SemiTransparentNeonGreen2}"/>
        </Style>
    </UserControl.Styles>
    
    <Button x:Name="MaximizeBtn" 
            Classes="maximize-btn"
            ToolTip.Tip="Maximize Window"
            Click="MaximizeBtn_Click">
        <StackPanel Orientation="Horizontal" Spacing="5">
            <icons:PackIconMaterial x:Name="IconBlock" Kind="Fullscreen" Width="18" Height="18" VerticalAlignment="Center"/>
            <TextBlock x:Name="LabelBlock" Text="" FontSize="12" VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
