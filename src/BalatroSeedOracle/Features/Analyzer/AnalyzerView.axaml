<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:conv="using:BalatroSeedOracle.Converters"
             xmlns:features="using:BalatroSeedOracle.Features.Analyzer"
             xmlns:icons="clr-namespace:IconPacks.Avalonia.Material;assembly=IconPacks.Avalonia.Material"
             x:Class="BalatroSeedOracle.Features.Analyzer.AnalyzerView"
             x:DataType="vm:AnalyzerViewModel">

    <UserControl.Resources>
        <conv:ItemTypeToSpriteConverter x:Key="ItemTypeToSprite"/>
    </UserControl.Resources>

    <Design.DataContext>
        <vm:AnalyzerViewModel/>
    </Design.DataContext>

    <!-- Compact horizontal layout: Top bar + Full-width content below -->
    <Grid RowDefinitions="Auto,*">

        <!-- Top Horizontal Control Bar -->
        <Border Grid.Row="0"
                Background="{StaticResource DarkBackground}"
                BorderBrush="{StaticResource ModalBorder}"
                BorderThickness="0,0,0,2"
                Padding="16,12">
            <Grid ColumnDefinitions="Auto,16,Auto,Auto,16,Auto,*,Auto,16,Auto">

                <!-- Current Seed Display -->
                <StackPanel Grid.Column="0"
                           Orientation="Horizontal"
                           Spacing="8"
                           VerticalAlignment="Center">
                    <TextBlock Text="SEED:"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="14"
                               Foreground="{StaticResource Orange}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentSeed}"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource White}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Deck Spinner -->
                <controls:SpinnerControl Grid.Column="2"
                                        Label="Deck"
                                        SpinnerType="deck"
                                        Value="{Binding SelectedDeckIndex}"
                                        Minimum="0"
                                        Maximum="14"
                                        ReadOnly="True"
                                        DisplayValues="{Binding DeckDisplayValues}"
                                        ShadowDirection="south-east"
                                        Width="160"
                                        VerticalAlignment="Center"/>

                <!-- Stake Spinner -->
                <controls:SpinnerControl Grid.Column="3"
                                        Label="Stake"
                                        SpinnerType="stake"
                                        Value="{Binding SelectedStakeIndex}"
                                        Minimum="0"
                                        Maximum="7"
                                        ReadOnly="True"
                                        DisplayValues="{Binding StakeDisplayValues}"
                                        ShadowDirection="south-east"
                                        Width="160"
                                        VerticalAlignment="Center"
                                        Margin="8,0,0,0"/>

                <!-- Seed Navigation -->
                <StackPanel Grid.Column="5"
                           Orientation="Horizontal"
                           Spacing="8"
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding ResultCounter}"
                               FontSize="12"
                               Foreground="{StaticResource White}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Button Command="{Binding PreviousResultCommand}"
                            IsEnabled="{Binding HasPreviousResult}"
                            ToolTip.Tip="Previous Seed (PgUp)"
                            Width="32"
                            Height="32"
                            Padding="0">
                        <icons:PackIconMaterial Kind="ChevronLeft" Width="16" Height="16"/>
                    </Button>
                    <Button Command="{Binding NextResultCommand}"
                            IsEnabled="{Binding HasNextResult}"
                            ToolTip.Tip="Next Seed (PgDn)"
                            Width="32"
                            Height="32"
                            Padding="0">
                        <icons:PackIconMaterial Kind="ChevronRight" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <!-- Ante Navigation -->
                <StackPanel Grid.Column="7"
                           Orientation="Horizontal"
                           Spacing="8"
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding AnteNavigationDisplay}"
                               FontSize="12"
                               Foreground="{StaticResource White}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Button Command="{Binding ScrollUpAnteCommand}"
                            ToolTip.Tip="Previous Ante (↑)"
                            Width="32"
                            Height="32"
                            Padding="0">
                        <icons:PackIconMaterial Kind="ChevronUp" Width="16" Height="16"/>
                    </Button>
                    <Button Command="{Binding ScrollDownAnteCommand}"
                            ToolTip.Tip="Next Ante (↓)"
                            Width="32"
                            Height="32"
                            Padding="0">
                        <icons:PackIconMaterial Kind="ChevronDown" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <!-- Copy URL Button -->
                <Button Grid.Column="9"
                        Content="COPY URL"
                        Command="{Binding CopyBlueprintUrlCommand}"
                        Classes="btn-orange"
                        Padding="16,8"
                        ToolTip.Tip="Copy Blueprint-compatible URL to clipboard"
                        VerticalAlignment="Center">
                    <Button.Styles>
                        <Style Selector="Button.btn-orange">
                            <Setter Property="Background" Value="{StaticResource Orange}"/>
                            <Setter Property="Foreground" Value="{StaticResource White}"/>
                            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                        <Style Selector="Button.btn-orange:pointerover">
                            <Setter Property="Background" Value="{StaticResource OrangeHover}"/>
                        </Style>
                    </Button.Styles>
                </Button>

            </Grid>
        </Border>

        <!-- Main Content Area: Split View -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,3*">
            <!-- Left Side: Ante/Blind Tree -->
            <Border Grid.Column="0"
                    Background="{StaticResource DarkBackground}"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="0,0,2,0">
                <features:AnteTreeView DataContext="{Binding AnteTree}"/>
            </Border>

            <!-- Right Side: Detailed View / Run Log -->
            <Border Grid.Column="1"
                    Background="{StaticResource DarkBackground}">
                <features:RunDetailView DataContext="{Binding RunDetail}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
