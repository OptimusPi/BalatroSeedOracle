<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:converters="using:BalatroSeedOracle.ViewModels"
             mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="600"
             x:Class="BalatroSeedOracle.Controls.ItemConfigPopup"
             x:DataType="vm:ItemConfigPopupViewModel">

    <UserControl.Resources>
        <converters:IndexConverter x:Key="IndexConverter" />
        <!-- Add string equality converter for edition radio buttons -->
        <converters:EqualsValueConverter x:Key="StringEqualsConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- ... existing styles ... -->
    </UserControl.Styles>

    <Border MinWidth="280"
            MaxWidth="320"
            Background="{StaticResource ItemConfigMediumBg}"
            BorderBrush="{StaticResource ItemConfigDarkBg}"
            BorderThickness="3"
            CornerRadius="8"
            Padding="16"
            BoxShadow="{StaticResource DeepBoxShadow}">

        <StackPanel Spacing="10">
            <!-- Item Name Header -->
            <Border Background="{StaticResource ItemConfigDarkBg}"
                    CornerRadius="4"
                    Padding="8,6"
                    Margin="-16,-16,-16,0">
                <TextBlock Text="{Binding ItemName}"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Preview (for PlayingCard) -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding RankVisible}">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{Binding PreviewImage}" Width="71" Height="95" Stretch="Uniform"/>
                </StackPanel>
            </Border>

            <!-- Ante Selection -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding AntesVisible}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="ANTES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="{StaticResource LightGrey}"
                               Margin="0,0,0,6"/>
                    <UniformGrid Grid.Row="1" Columns="9" Margin="-2">
                        <CheckBox IsChecked="{Binding SelectedAntes[0]}" Content="0" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[1]}" Content="1" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[2]}" Content="2" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[3]}" Content="3" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[4]}" Content="4" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[5]}" Content="5" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[6]}" Content="6" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[7]}" Content="7" Classes="ante-checkbox" Margin="2"/>
                        <CheckBox IsChecked="{Binding SelectedAntes[8]}" Content="8" Classes="ante-checkbox" Margin="2"/>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Sources Selection -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding SourcesVisible}">
                <StackPanel Spacing="8">
                    <TextBlock Text="SOURCE"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="{StaticResource LightGrey}"/>

                    <!-- Embedded selector control -->
                    <controls:SourceSelector x:Name="SourceSelector"/>

                    <!-- Advanced options -->
                    <Expander Header="Advanced Source Options" IsExpanded="False">
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Shop Slots (comma-separated)" Foreground="{StaticResource LightGrey}"/>
                                <TextBox Text="{Binding ShopSlotsText}" Width="160"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Pack Slots (comma-separated)" Foreground="{StaticResource LightGrey}"/>
                                <TextBox Text="{Binding PackSlotsText}" Width="160"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <CheckBox IsChecked="{Binding SkipBlindTags}" Content="Skip Blind Tags"/>
                                <CheckBox IsChecked="{Binding IsMegaArcana}" Content="Mega Arcana Only"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- Edition Selection -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding EditionVisible}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="EDITION"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="{StaticResource LightGrey}"
                               Margin="0,0,0,6"/>
                    <UniformGrid Grid.Row="1" Columns="5" Margin="-2">
                        <RadioButton IsChecked="{Binding SelectedEdition, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Normal'}" GroupName="ItemEdition" Classes="edition-radio" Margin="2">
                            <Image Source="{Binding EditionImages[Normal]}" Width="35" Height="47" Stretch="Uniform"/>
                        </RadioButton>
                        <RadioButton IsChecked="{Binding SelectedEdition, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Foil'}" GroupName="ItemEdition" Classes="edition-radio edition-foil" Margin="2">
                            <Image Source="{Binding EditionImages[Foil]}" Width="35" Height="47" Stretch="Uniform"/>
                        </RadioButton>
                        <RadioButton IsChecked="{Binding SelectedEdition, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Holographic'}" GroupName="ItemEdition" Classes="edition-radio edition-holo" Margin="2">
                            <Image Source="{Binding EditionImages[Holographic]}" Width="35" Height="47" Stretch="Uniform"/>
                        </RadioButton>
                        <RadioButton IsChecked="{Binding SelectedEdition, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Polychrome'}" GroupName="ItemEdition" Classes="edition-radio edition-poly" Margin="2">
                            <Image Source="{Binding EditionImages[Polychrome]}" Width="35" Height="47" Stretch="Uniform"/>
                        </RadioButton>
                        <RadioButton IsChecked="{Binding SelectedEdition, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Negative'}" GroupName="ItemEdition" Classes="edition-radio edition-negative" Margin="2">
                            <Image Source="{Binding EditionImages[Negative]}" Width="35" Height="47" Stretch="Uniform"/>
                        </RadioButton>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Rank and Suit Selection -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding RankVisible}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="RANK" FontFamily="{StaticResource BalatroFont}" FontSize="11" Foreground="{StaticResource LightGrey}" Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding Ranks}" SelectedItem="{Binding SelectedRank}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="SUIT" FontFamily="{StaticResource BalatroFont}" FontSize="11" Foreground="{StaticResource LightGrey}" Margin="0,0,0,6"/>
                        <ComboBox ItemsSource="{Binding Suits}" SelectedItem="{Binding SelectedSuit}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Enhancement Selection -->
            <Border Background="{StaticResource ItemConfigDarkBg}" CornerRadius="4" Padding="10,8" IsVisible="{Binding EnhancementVisible}">
                <StackPanel>
                    <TextBlock Text="ENHANCEMENT" FontFamily="{StaticResource BalatroFont}" FontSize="11" Foreground="{StaticResource LightGrey}" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding Enhancements}" SelectedItem="{Binding SelectedEnhancement}" />
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding ApplyCommand}" Content="APPLY" Classes="apply-button" Margin="0,0,4,0"/>
                <Button Grid.Column="1" Command="{Binding DeleteCommand}" Content="DELETE" Classes="delete-button" Margin="2,0"/>
                <Button Grid.Column="2" Command="{Binding CancelCommand}" Content="CANCEL" Classes="cancel-button" Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>