<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Controls.ItemConfigPopup">
    
    <UserControl.Styles>
        <!-- Thumb styles for sliders -->
        <Style Selector="Thumb">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Label styles -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Header style -->
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Radio button styles -->
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style Selector="RadioButton:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- CheckBox styles -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style Selector="CheckBox:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#4BC292"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Edition radio button styles -->
        <Style Selector="RadioButton.edition-radio">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default edition border style -->
        <Style Selector="RadioButton.edition-radio Border.edition-border">
            <Setter Property="Background" Value="#3a5055"/>
            <Setter Property="BorderBrush" Value="#1e2b2d"/>
        </Style>
        
        <!-- Checked states for each edition -->
        <Style Selector="RadioButton.edition-radio:checked Border.edition-border">
            <Setter Property="Background" Value="#1e2b2d"/>
            <Setter Property="BorderBrush" Value="#eac058"/>
        </Style>
        
        <Style Selector="RadioButton.edition-foil:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#4A90E2"/>
        </Style>
        
        <Style Selector="RadioButton.edition-holo:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#FF6B6B"/>
        </Style>
        
        <Style Selector="RadioButton.edition-poly:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#B19CD9"/>
        </Style>
        
        <Style Selector="RadioButton.edition-negative:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#525db0"/>
        </Style>
        
        <!-- Source checkbox styles -->
        <Style Selector="CheckBox.source-checkbox">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default source border style -->
        <Style Selector="CheckBox.source-checkbox Border.source-border">
            <Setter Property="Background" Value="#3a5055"/>
            <Setter Property="BorderBrush" Value="#1e2b2d"/>
        </Style>
        
        <!-- Checked state for source checkboxes -->
        <Style Selector="CheckBox.source-checkbox:checked Border.source-border">
            <Setter Property="Background" Value="#2a3a2a"/>
            <Setter Property="BorderBrush" Value="#4BC292"/>
        </Style>
    </UserControl.Styles>
    
    <Border MinWidth="280" 
            MaxWidth="320"
            Background="#3a5055"
            BorderBrush="#1e2b2d"
            BorderThickness="3"
            CornerRadius="8"
            Padding="16"
            BoxShadow="0 4 16 #000000CC">
        
        <StackPanel Spacing="10">
            <!-- Item Name Header with Balatro styling -->
            <Border Background="#1e2b2d" 
                    CornerRadius="4" 
                    Padding="8,6"
                    Margin="-16,-16,-16,0">
                <TextBlock Name="ItemNameText" 
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#eac058"
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Ante Selection with Balatro style -->
            <Grid HorizontalAlignment="Center" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Arrow Button -->
                <Button Grid.Column="0" 
                        Name="AnteLeftButton"
                        Width="24" 
                        Height="32"
                        Margin="0,0,4,0"
                        Cursor="Hand"
                        Background="#3a5055"
                        BorderBrush="#1e2b2d"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4">
                                <Path Data="M8,12 L4,8 L8,4" 
                                      Stroke="#eac058" 
                                      StrokeThickness="2" 
                                      Width="12" 
                                      Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Ante Badge -->
                <Border Grid.Column="1" 
                        Background="#FE5F55" 
                        BorderBrush="#CC4C44"
                        BorderThickness="2"
                        CornerRadius="6" 
                        Padding="12,6"
                        MinWidth="100">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="ANTES" 
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="11" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="AnteRangeText" 
                                   Text="1-8" 
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="16" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Right Arrow Button -->
                <Button Grid.Column="2" 
                        Name="AnteRightButton"
                        Width="24" 
                        Height="32"
                        Margin="4,0,0,0"
                        Cursor="Hand"
                        Background="#3a5055"
                        BorderBrush="#1e2b2d"
                        BorderThickness="2">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="4">
                                <Path Data="M4,12 L8,8 L4,4" 
                                      Stroke="#eac058" 
                                      StrokeThickness="2" 
                                      Width="12" 
                                      Height="16"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            
            <!-- Edition Selection with Balatro toggle style -->
            <Border Background="#1e2b2d" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="EDITION" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#888888" 
                               Margin="0,0,0,6"/>
                    
                    <UniformGrid Grid.Row="1" Columns="5" Margin="-2">
                        <RadioButton Name="EditionNormal" IsChecked="True" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio">
                            <Border Classes="edition-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNormalImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionFoil" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-foil">
                            <Border Classes="edition-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionFoilImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionHolo" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-holo">
                            <Border Classes="edition-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionHoloImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionPoly" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-poly">
                            <Border Classes="edition-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionPolyImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionNegative" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-negative">
                            <Border Classes="edition-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNegativeImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                    </UniformGrid>
                </Grid>
            </Border>
            
            <!-- Sources Selection with Balatro style -->
            <Border Background="#1e2b2d" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="SOURCES" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#888888" 
                               Margin="0,0,0,6"/>
                    
                    <StackPanel Grid.Row="1" Spacing="4">
                        <CheckBox Name="SourceTags" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Tags" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourcePacks" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Packs" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourceShop" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#3a5055" 
                                    BorderBrush="#1e2b2d" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Shop" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Buttons with Balatro style -->
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Name="ApplyButton" 
                        Click="OnApplyClick"
                        Margin="0,0,4,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#223322" 
                                    BorderBrush="#4BC292" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="APPLY" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#4BC292" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="1" Name="DeleteButton" 
                        Click="OnDeleteClick"
                        Margin="2,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#332222" 
                                    BorderBrush="#FE5F55" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="DELETE" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#FE5F55" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="2" Name="CancelButton" 
                        Click="OnCancelClick"
                        Margin="4,0,0,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#2a2a2a" 
                                    BorderBrush="#888888" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="CANCEL" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#888888" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>