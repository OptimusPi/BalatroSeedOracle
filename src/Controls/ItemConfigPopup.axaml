<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Controls.ItemConfigPopup">
    
    <UserControl.Styles>
        <!-- Thumb styles for sliders -->
        <Style Selector="Thumb">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Label styles -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Header style -->
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Radio button styles -->
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style Selector="RadioButton:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- CheckBox styles -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style Selector="CheckBox:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#4BC292"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Styles>
    
    <Border MinWidth="320" 
            Background="#2A2B32"
            BorderBrush="#eac058"
            BorderThickness="2"
            CornerRadius="12"
            Padding="20"
            BoxShadow="0 8 24 #00000099">
        
        <StackPanel Spacing="12">
            <!-- Item Name Header -->
            <TextBlock Name="ItemNameText" 
                       Classes="header"
                       HorizontalAlignment="Center"/>
            
            <!-- Ante Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <TextBlock Text="Antes:" Classes="label" VerticalAlignment="Center"/>
                    <TextBlock Name="AnteRangeText" Text="1-8" VerticalAlignment="Center" FontSize="16" Foreground="#FEB95F" FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Range Slider -->
                <Grid Grid.Row="1" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Name="MinAnteText" Text="1" HorizontalAlignment="Center" FontSize="12" Foreground="#CCCCCC"/>
                    
                    <Grid Grid.Column="1" Height="40">
                        <!-- Track -->
                        <Border Height="8" VerticalAlignment="Center" Background="#1A1A1A" CornerRadius="4" Margin="10,0"/>
                        <!-- Active range -->
                        <Border Name="ActiveRange" Height="8" VerticalAlignment="Center" Background="#FEB95F" CornerRadius="4" 
                                HorizontalAlignment="Left" Margin="10,0,0,0" Width="260"/>
                        
                        <!-- Min thumb -->
                        <Thumb Name="MinThumb" Width="24" Height="24" 
                               HorizontalAlignment="Left" 
                               Margin="-2,0,0,0"
                               DragDelta="OnMinThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Ellipse Fill="#2A2B32" Width="26" Height="26" Margin="-1"/>
                                        <Ellipse Fill="#FEB95F" Stroke="#FFFFFF" StrokeThickness="2"/>
                                    </Grid>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                        
                        <!-- Max thumb -->
                        <Thumb Name="MaxThumb" Width="24" Height="24" 
                               HorizontalAlignment="Left" 
                               Margin="258,0,0,0"
                               DragDelta="OnMaxThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Ellipse Fill="#2A2B32" Width="26" Height="26" Margin="-1"/>
                                        <Ellipse Fill="#FEB95F" Stroke="#FFFFFF" StrokeThickness="2"/>
                                    </Grid>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    
                    <TextBlock Grid.Column="2" Name="MaxAnteText" Text="8" HorizontalAlignment="Center" FontSize="12" Foreground="#CCCCCC"/>
                </Grid>
                
                <!-- Tick marks -->
                <Grid Grid.Row="2" Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="1" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="1" Text="2" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="2" Text="3" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="3" Text="4" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="4" Text="5" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="5" Text="6" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="6" Text="7" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="7" Text="8" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                </Grid>
            </Grid>
            
            <!-- Edition Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Edition:" Classes="label" Margin="0,0,0,5"/>
                <WrapPanel Grid.Row="1">
                    <RadioButton Name="EditionNormal" Content="Normal" IsChecked="True" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionFoil" Content="Foil" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionHolo" Content="Holo" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionPoly" Content="Poly" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionNegative" Content="Negative" GroupName="ItemEdition"/>
                </WrapPanel>
            </Grid>
            
            <!-- Sources Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Sources:" Classes="label" Margin="0,0,0,5"/>
                <StackPanel Grid.Row="1" Spacing="5">
                    <CheckBox Name="SourceTags" Content="Tags" IsChecked="True"/>
                    <CheckBox Name="SourcePacks" Content="Booster Packs" IsChecked="True"/>
                    <CheckBox Name="SourceShop" Content="Shop" IsChecked="True"/>
                </StackPanel>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
                <Button Name="ApplyButton" 
                        Content="Apply" 
                        Classes="oracle-btn button-color-green"
                        Width="80"
                        Click="OnApplyClick"/>
                <Button Name="DeleteButton" 
                        Content="Delete" 
                        Classes="oracle-btn button-color-red"
                        Width="80"
                        Click="OnDeleteClick"/>
                <Button Name="CancelButton" 
                        Content="Cancel" 
                        Classes="oracle-btn button-color-yellow-orange"
                        Width="80"
                        Click="OnCancelClick"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>