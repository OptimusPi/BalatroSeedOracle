<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Controls.ItemConfigPopup">
    
    <UserControl.Styles>
        <!-- Thumb styles for sliders -->
        <Style Selector="Thumb">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Label styles -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Header style -->
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Radio button styles -->
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style Selector="RadioButton:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- CheckBox styles -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style Selector="CheckBox:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="#4BC292"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Edition radio button styles -->
        <Style Selector="RadioButton.edition-radio">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default edition border style -->
        <Style Selector="RadioButton.edition-radio Border.edition-border">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
        </Style>
        
        <!-- Checked states for each edition -->
        <Style Selector="RadioButton.edition-radio:checked Border.edition-border">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="BorderBrush" Value="#eac058"/>
        </Style>
        
        <Style Selector="RadioButton.edition-foil:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#4A90E2"/>
        </Style>
        
        <Style Selector="RadioButton.edition-holo:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#FF6B6B"/>
        </Style>
        
        <Style Selector="RadioButton.edition-poly:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#B19CD9"/>
        </Style>
        
        <Style Selector="RadioButton.edition-negative:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="#525db0"/>
        </Style>
        
        <!-- Source checkbox styles -->
        <Style Selector="CheckBox.source-checkbox">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default source border style -->
        <Style Selector="CheckBox.source-checkbox Border.source-border">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
        </Style>
        
        <!-- Checked state for source checkboxes -->
        <Style Selector="CheckBox.source-checkbox:checked Border.source-border">
            <Setter Property="Background" Value="#2a3a2a"/>
            <Setter Property="BorderBrush" Value="#4BC292"/>
        </Style>
    </UserControl.Styles>
    
    <Border MinWidth="280" 
            MaxWidth="320"
            Background="#1a1a1a"
            BorderBrush="#3a3a3a"
            BorderThickness="3"
            CornerRadius="8"
            Padding="16"
            BoxShadow="0 4 16 #000000CC">
        
        <StackPanel Spacing="10">
            <!-- Item Name Header with Balatro styling -->
            <Border Background="#2a2a2a" 
                    CornerRadius="4" 
                    Padding="8,6"
                    Margin="-16,-16,-16,0">
                <TextBlock Name="ItemNameText" 
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#eac058"
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Ante Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" 
                        Background="#262626" 
                        CornerRadius="4" 
                        Padding="8,4"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ANTES" 
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="12" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="AnteRangeText" 
                                   Text="1-8" 
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14" 
                                   Foreground="#eac058" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Range Slider with Balatro styling -->
                <Grid Grid.Row="1" Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Name="MinAnteText" Text="1" 
                               HorizontalAlignment="Center" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#666666"/>
                    
                    <Grid Grid.Column="1" Height="32">
                        <!-- Track -->
                        <Border Height="6" VerticalAlignment="Center" Background="#0a0a0a" CornerRadius="3" Margin="8,0"/>
                        <!-- Active range -->
                        <Border Name="ActiveRange" Height="6" VerticalAlignment="Center" Background="#eac058" CornerRadius="3" 
                                HorizontalAlignment="Left" Margin="8,0,0,0" Width="220"/>
                        
                        <!-- Min thumb with Balatro style -->
                        <Thumb Name="MinThumb" Width="20" Height="20" 
                               HorizontalAlignment="Left" 
                               Margin="-2,0,0,0"
                               DragDelta="OnMinThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Border Background="#2a2a2a" 
                                            BorderBrush="#eac058" 
                                            BorderThickness="2" 
                                            CornerRadius="10" 
                                            Width="20" 
                                            Height="20">
                                        <Border Background="#eac058" 
                                                CornerRadius="6" 
                                                Width="12" 
                                                Height="12"/>
                                    </Border>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                        
                        <!-- Max thumb with Balatro style -->
                        <Thumb Name="MaxThumb" Width="20" Height="20" 
                               HorizontalAlignment="Left" 
                               Margin="218,0,0,0"
                               DragDelta="OnMaxThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Border Background="#2a2a2a" 
                                            BorderBrush="#eac058" 
                                            BorderThickness="2" 
                                            CornerRadius="10" 
                                            Width="20" 
                                            Height="20">
                                        <Border Background="#eac058" 
                                                CornerRadius="6" 
                                                Width="12" 
                                                Height="12"/>
                                    </Border>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    
                    <TextBlock Grid.Column="2" Name="MaxAnteText" Text="8" 
                               HorizontalAlignment="Center" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#666666"/>
                </Grid>
                
                <!-- Tick marks -->
                <Grid Grid.Row="2" Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="1" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="1" Text="2" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="2" Text="3" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="3" Text="4" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="4" Text="5" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="5" Text="6" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="6" Text="7" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="7" Text="8" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                </Grid>
            </Grid>
            
            <!-- Edition Selection with Balatro toggle style -->
            <Border Background="#262626" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="EDITION" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#888888" 
                               Margin="0,0,0,6"/>
                    
                    <UniformGrid Grid.Row="1" Columns="5" Margin="-2">
                        <RadioButton Name="EditionNormal" IsChecked="True" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio">
                            <Border Classes="edition-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNormalImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionFoil" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-foil">
                            <Border Classes="edition-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionFoilImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionHolo" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-holo">
                            <Border Classes="edition-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionHoloImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionPoly" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-poly">
                            <Border Classes="edition-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionPolyImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionNegative" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-negative">
                            <Border Classes="edition-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNegativeImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                    </UniformGrid>
                </Grid>
            </Border>
            
            <!-- Sources Selection with Balatro style -->
            <Border Background="#262626" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="SOURCES" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="#888888" 
                               Margin="0,0,0,6"/>
                    
                    <StackPanel Grid.Row="1" Spacing="4">
                        <CheckBox Name="SourceTags" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Tags" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourcePacks" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Packs" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourceShop" IsChecked="True" Classes="source-checkbox">
                            <Border Classes="source-border" 
                                    Background="#1a1a1a" 
                                    BorderBrush="#3a3a3a" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Shop" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </Border>
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Buttons with Balatro style -->
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Name="ApplyButton" 
                        Click="OnApplyClick"
                        Margin="0,0,4,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#2a4a2a" 
                                    BorderBrush="#4BC292" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="APPLY" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#4BC292" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="1" Name="DeleteButton" 
                        Click="OnDeleteClick"
                        Margin="2,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#4a2a2a" 
                                    BorderBrush="#FE5F55" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="DELETE" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#FE5F55" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="2" Name="CancelButton" 
                        Click="OnCancelClick"
                        Margin="4,0,0,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="#3a3a2a" 
                                    BorderBrush="#888888" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="CANCEL" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Foreground="#888888" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>