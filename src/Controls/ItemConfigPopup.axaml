<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Controls.ItemConfigPopup">
    
    <UserControl.Styles>
        <!-- Thumb styles for sliders -->
        <Style Selector="Thumb">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Label styles -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="{StaticResource MediumGrey}"/>
            
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- Header style -->
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="{StaticResource PaleOrange}"/>
            
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Radio button styles -->
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <Style Selector="RadioButton:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{StaticResource PaleOrange}"/>
            
        </Style>
        
        <!-- CheckBox styles -->
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style Selector="CheckBox:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{StaticResource Green}"/>
            
        </Style>
        
        <!-- Ante checkbox styles -->
        <Style Selector="CheckBox.ante-checkbox">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default ante border style -->
        <Style Selector="CheckBox.ante-checkbox Border.ante-border">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GreyDarker}"/>
        </Style>
        
        <!-- Checked state for ante checkboxes -->
        <Style Selector="CheckBox.ante-checkbox:checked Border.ante-border">
            <Setter Property="Background" Value="{StaticResource Green}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Green}"/>
        </Style>
        
        <Style Selector="CheckBox.ante-checkbox:checked TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Green}"/>
        </Style>
        
        <!-- Edition radio button styles -->
        <Style Selector="RadioButton.edition-radio">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default edition border style -->
        <Style Selector="RadioButton.edition-radio Border.edition-border">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GreyDarker}"/>
        </Style>
        
        <!-- Checked states for each edition -->
        <Style Selector="RadioButton.edition-radio:checked Border.edition-border">
            <Setter Property="Background" Value="{StaticResource GreyDarker}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gold}"/>
        </Style>
        
        <Style Selector="RadioButton.edition-foil:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
        </Style>
        
        <Style Selector="RadioButton.edition-holo:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="{StaticResource PinkRed}"/>
        </Style>
        
        <Style Selector="RadioButton.edition-poly:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="{StaticResource LightPurple}"/>
        </Style>
        
        <Style Selector="RadioButton.edition-negative:checked Border.edition-border">
            <Setter Property="BorderBrush" Value="{StaticResource Purple}"/>
        </Style>
        
        <!-- Source checkbox styles -->
        <Style Selector="CheckBox.source-checkbox">
            <Setter Property="Template">
                <ControlTemplate>
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Default source border style -->
        <Style Selector="CheckBox.source-checkbox Border.source-border">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GreyDarker}"/>
        </Style>
        
        <!-- Checked state for source checkboxes -->
        <Style Selector="CheckBox.source-checkbox:checked Border.source-border">
            <Setter Property="Background" Value="{StaticResource Green}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Green}"/>
        </Style>
    </UserControl.Styles>
    
    <Border MinWidth="280" 
            MaxWidth="320"
            Background="{StaticResource Grey}"
            BorderBrush="{StaticResource GreyDarker}"
            BorderThickness="3"
            CornerRadius="8"
            Padding="16"
            BoxShadow="{StaticResource DeepBoxShadow}">
        
        <StackPanel Spacing="10">
            <!-- Item Name Header with Balatro styling -->
            <Border Background="{StaticResource GreyDarker}" 
                    CornerRadius="4" 
                    Padding="8,6"
                    Margin="-16,-16,-16,0">
                <TextBlock Name="ItemNameText" 
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="16"
                           
                           Foreground="{StaticResource Gold}"
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Ante Selection with individual toggle buttons -->
            <Border Background="{StaticResource GreyDarker}" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="ANTES" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="{StaticResource Silver}" 
                               Margin="0,0,0,6"/>
                    
                    <UniformGrid Grid.Row="1" Columns="8" Margin="-2">
                        <CheckBox Name="Ante1" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="1" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante2" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="2" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante3" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="3" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante4" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="4" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante5" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="5" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante6" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="6" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante7" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="7" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="Ante8" IsChecked="True" Classes="ante-checkbox" Margin="2" Click="OnAnteClick">
                            <Border Classes="ante-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="4,2"
                                    MinWidth="24"
                                    Cursor="Hand">
                                <TextBlock Text="8" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource MediumGrey}"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </CheckBox>
                    </UniformGrid>
                </Grid>
            </Border>
            
            <!-- Edition Selection with Balatro toggle style -->
            <Border Name="EditionSection" Background="{StaticResource GreyDarker}" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="EDITION" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="{StaticResource Silver}" 
                               Margin="0,0,0,6"/>
                    
                    <UniformGrid Grid.Row="1" Columns="5" Margin="-2">
                        <RadioButton Name="EditionNormal" IsChecked="True" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio" Checked="OnEditionClick">
                            <Border Classes="edition-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNormalImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionFoil" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-foil" Checked="OnEditionClick">
                            <Border Classes="edition-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionFoilImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionHolo" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-holo" Checked="OnEditionClick">
                            <Border Classes="edition-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionHoloImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionPoly" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-poly" Checked="OnEditionClick">
                            <Border Classes="edition-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionPolyImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                        <RadioButton Name="EditionNegative" GroupName="ItemEdition" Padding="0" Margin="2" Classes="edition-radio edition-negative" Checked="OnEditionClick">
                            <Border Classes="edition-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="6,4"
                                    Cursor="Hand">
                                <Image Name="EditionNegativeImage" 
                                       Width="35" 
                                       Height="47" 
                                       Stretch="Uniform" 
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </RadioButton>
                    </UniformGrid>
                </Grid>
            </Border>
            
            <!-- Sources Selection with Balatro style -->
            <Border Background="{StaticResource GreyDarker}" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="SOURCES" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="{StaticResource Silver}" 
                               Margin="0,0,0,6"/>
                    
                    <StackPanel Grid.Row="1" Spacing="4">
                        <CheckBox Name="SourceTags" IsChecked="True" Classes="source-checkbox" Click="OnSourceClick">
                            <Border Classes="source-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Tags" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="{StaticResource MediumGrey}"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourcePacks" IsChecked="True" Classes="source-checkbox" Click="OnSourceClick">
                            <Border Classes="source-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Packs" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="{StaticResource MediumGrey}"/>
                            </Border>
                        </CheckBox>
                        <CheckBox Name="SourceShop" IsChecked="True" Classes="source-checkbox" Click="OnSourceClick">
                            <Border Classes="source-border" 
                                    Background="{StaticResource Grey}" 
                                    BorderBrush="{StaticResource GreyDarker}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Cursor="Hand">
                                <TextBlock Text="From Shop" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           Foreground="{StaticResource MediumGrey}"/>
                            </Border>
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Label Input -->
            <Border Background="{StaticResource GreyDarker}" CornerRadius="4" Padding="10,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="LABEL (OPTIONAL)" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11" 
                               Foreground="{StaticResource Silver}" 
                               Margin="0,0,0,6"/>
                    
                    <TextBox Grid.Row="1" 
                             Name="LabelTextBox"
                             Background="{StaticResource Grey}"
                             BorderBrush="{StaticResource GreyDarker}"
                             BorderThickness="1"
                             Foreground="{StaticResource White}"
                             FontFamily="{StaticResource BalatroFont}"
                             FontSize="12"
                             Padding="8,4"
                             CornerRadius="4"
                             Watermark="e.g. NegativeBlueprint"
                             Height="28"/>
                </Grid>
            </Border>
            
            <!-- Buttons with Balatro style -->
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Name="ApplyButton" 
                        Click="OnApplyClick"
                        Margin="0,0,4,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{StaticResource GreenDarker}" 
                                    BorderBrush="{StaticResource Green}" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="APPLY" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource Green}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="1" Name="DeleteButton" 
                        Click="OnDeleteClick"
                        Margin="2,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{StaticResource RedAccentDark}" 
                                    BorderBrush="{StaticResource ToggleRed}" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="DELETE" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource ToggleRed}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="2" Name="CancelButton" 
                        Click="OnCancelClick"
                        Margin="4,0,0,0"
                        Height="32"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Border Background="{StaticResource GreyDarker}" 
                                    BorderBrush="{StaticResource Silver}" 
                                    BorderThickness="2" 
                                    CornerRadius="4">
                                <TextBlock Text="CANCEL" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12" 
                                           
                                           Foreground="{StaticResource Silver}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>