<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Controls.ItemConfigPopup">
    
    <UserControl.Styles>
        <!-- Thumb styles for sliders -->
        <Style Selector="Thumb">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Styles>
    
    <Border MinWidth="320">
        
        <StackPanel Spacing="12">
            <!-- Item Name Header -->
            <TextBlock Name="ItemNameText" 
                       Classes="header"
                       HorizontalAlignment="Center"/>
            
            <!-- Ante Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <TextBlock Text="Antes:" FontWeight="Bold" VerticalAlignment="Center" Foreground="#FFFFFF"/>
                    <TextBlock Name="AnteRangeText" Text="1-8" VerticalAlignment="Center" FontSize="16" Foreground="#FEB95F" FontWeight="Bold"/>
                </StackPanel>
                
                <!-- Range Slider -->
                <Grid Grid.Row="1" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Name="MinAnteText" Text="1" HorizontalAlignment="Center" FontSize="12" Foreground="#CCCCCC"/>
                    
                    <Grid Grid.Column="1" Height="40">
                        <!-- Track -->
                        <Border Height="6" VerticalAlignment="Center" Background="#3A3A3A" CornerRadius="3" Margin="10,0"/>
                        <!-- Active range -->
                        <Border Name="ActiveRange" Height="6" VerticalAlignment="Center" Background="#FEB95F" CornerRadius="3" 
                                HorizontalAlignment="Left" Margin="10,0,0,0" Width="260"/>
                        
                        <!-- Min thumb -->
                        <Thumb Name="MinThumb" Width="20" Height="20" 
                               HorizontalAlignment="Left" 
                               Margin="0,0,0,0"
                               DragDelta="OnMinThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Ellipse Fill="#FEB95F" Stroke="#FFFFFF" StrokeThickness="2"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                        
                        <!-- Max thumb -->
                        <Thumb Name="MaxThumb" Width="20" Height="20" 
                               HorizontalAlignment="Left" 
                               Margin="260,0,0,0"
                               DragDelta="OnMaxThumbDragDelta">
                            <Thumb.Template>
                                <ControlTemplate>
                                    <Ellipse Fill="#FEB95F" Stroke="#FFFFFF" StrokeThickness="2"/>
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                    
                    <TextBlock Grid.Column="2" Name="MaxAnteText" Text="8" HorizontalAlignment="Center" FontSize="12" Foreground="#CCCCCC"/>
                </Grid>
                
                <!-- Tick marks -->
                <Grid Grid.Row="2" Margin="40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="1" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="1" Text="2" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="2" Text="3" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="3" Text="4" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="4" Text="5" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="5" Text="6" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="6" Text="7" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                    <TextBlock Grid.Column="7" Text="8" HorizontalAlignment="Center" FontSize="11" Foreground="#999999"/>
                </Grid>
            </Grid>
            
            <!-- Edition Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Edition:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FFFFFF"/>
                <WrapPanel Grid.Row="1">
                    <RadioButton Name="EditionNormal" Content="Normal" IsChecked="True" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionFoil" Content="Foil" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionHolo" Content="Holo" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionPoly" Content="Poly" GroupName="ItemEdition" Margin="0,0,10,0"/>
                    <RadioButton Name="EditionNegative" Content="Negative" GroupName="ItemEdition"/>
                </WrapPanel>
            </Grid>
            
            <!-- Sources Selection -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Sources:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FFFFFF"/>
                <StackPanel Grid.Row="1" Spacing="5">
                    <CheckBox Name="SourceTags" Content="Tags" IsChecked="True"/>
                    <CheckBox Name="SourcePacks" Content="Booster Packs" IsChecked="True"/>
                    <CheckBox Name="SourceShop" Content="Shop" IsChecked="True"/>
                </StackPanel>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,10,0,0">
                <Button Name="ApplyButton" 
                        Content="Apply" 
                        Classes="oracle-btn button-color-green"
                        Width="80"
                        Click="OnApplyClick"/>
                <Button Name="DeleteButton" 
                        Content="Delete" 
                        Classes="oracle-btn button-color-red"
                        Width="80"
                        Click="OnDeleteClick"/>
                <Button Name="CancelButton" 
                        Content="Cancel" 
                        Classes="oracle-btn button-color-yellow-orange"
                        Width="80"
                        Click="OnCancelClick"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>