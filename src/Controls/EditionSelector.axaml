<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Controls.EditionSelector">
    
    <UserControl.Styles>
        <Style Selector="ComboBox">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="Background" Value="#22000000"/>
            <Setter Property="BorderBrush" Value="#00FF88"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        
        <Style Selector="ComboBox:pointerover">
            <Setter Property="BorderBrush" Value="#00FFFF"/>
        </Style>
        
        <Style Selector="TextBlock.edition-label">
            <Setter Property="Foreground" Value="#00FF88"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style Selector="TextBlock.edition-description">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Styles>
    
    <Border Background="#22000000" 
            BorderBrush="#00FF88" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="15">
        <StackPanel Spacing="12">
            <TextBlock Text="Card Edition" 
                       Classes="edition-label"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="What edition should this card have?"
                       Classes="edition-description"
                       HorizontalAlignment="Center"/>
            
            <ComboBox Name="EditionComboBox" 
                      SelectedIndex="0"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="EditionComboBox_SelectionChanged">
                <ComboBoxItem Content="Any Edition" Tag=""/>
                <ComboBoxItem Content="âšª Normal" Tag="Normal"/>
                <ComboBoxItem Content="âœ¨ Foil (+50 chips)" Tag="Foil"/>
                <ComboBoxItem Content="ðŸŒˆ Holographic (+10 mult)" Tag="Holographic"/>
                <ComboBoxItem Content="ðŸŽ­ Polychrome (x1.5 mult)" Tag="Polychrome"/>
                <ComboBoxItem Content="ðŸ–¤ Negative (+1 joker slot)" Tag="Negative"/>
            </ComboBox>
            
            <!-- Edition Description -->
            <Border Background="#11000000" 
                    CornerRadius="5" 
                    Padding="10"
                    Name="DescriptionBorder">
                <TextBlock Name="DescriptionTextBlock"
                           Text="Any edition - card can have any edition type"
                           Classes="edition-description"
                           HorizontalAlignment="Center"/>
            </Border>
            
            <!-- Edition Preview with Effects -->
            <Border Background="#11001100" 
                    CornerRadius="8" 
                    Padding="15"
                    Name="PreviewBorder"
                    IsVisible="False">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Name="PreviewEmojiBlock"
                               Text="âšª"
                               FontSize="32"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Name="PreviewNameBlock"
                               Text="Normal Edition"
                               FontSize="16"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock Name="PreviewEffectBlock"
                               Text="No special effect"
                               Classes="edition-description"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
