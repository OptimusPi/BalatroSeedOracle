<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Controls.EnhancedItemConfigPopup">
    
    <Border Background="{StaticResource ContainerDarkPrecise}"
            BorderBrush="{StaticResource Gold}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="15"
            Width="380"
            MaxHeight="500">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Header -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <Image x:Name="ItemImage" Width="40" Height="40"/>
                    <TextBlock x:Name="ItemName" 
                               Text="Configure Item"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="16"
                               Foreground="{StaticResource White}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Score/Priority -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Priority Score" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="12"
                               Foreground="{StaticResource White}"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Slider x:Name="ScoreSlider" 
                                Minimum="1" Maximum="100" 
                                Value="10"
                                Width="200"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="ScoreValue" 
                                   Text="10"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="12"
                                   Foreground="{StaticResource Gold}"
                                   MinWidth="30"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Ante Selector -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Search in Antes" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="12"
                               Foreground="{StaticResource White}"/>
                    <controls:AnteSelector x:Name="AnteSelector"/>
                </StackPanel>
                
                <!-- Source Selector -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Item Sources" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="12"
                               Foreground="{StaticResource White}"/>
                    <controls:SourceSelector x:Name="SourceSelector"/>
                </StackPanel>
                
                <!-- Edition Selector -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Card Edition" 
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="12"
                               Foreground="{StaticResource White}"/>
                    <controls:EditionSelector x:Name="EditionSelector"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Spacing="10">
                    <Button x:Name="SaveButton" 
                            Content="Save" 
                            Background="{StaticResource Green}"
                            Foreground="{StaticResource White}"
                            FontFamily="{StaticResource BalatroFont}"
                            Padding="20,8"
                            Click="OnSave"/>
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Background="{StaticResource Red}"
                            Foreground="{StaticResource White}"
                            FontFamily="{StaticResource BalatroFont}"
                            Padding="20,8"
                            Click="OnCancel"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
