<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Controls.TagEditor">
    
    <UserControl.Styles>
        <Style Selector="Border.tag-chip">
            <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style Selector="Border.tag-chip:pointerover">
            <Setter Property="Background" Value="{StaticResource Silver}"/>
        </Style>
        
        <Style Selector="TextBlock.tag-text">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="Button.tag-remove">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="Button.tag-remove:pointerover">
            <Setter Property="Foreground" Value="{StaticResource Red}"/>
        </Style>
        
        <Style Selector="AutoCompleteBox.tag-input">
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Background" Value="{StaticResource ShadowBlack}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkGrey}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Watermark" Value="Add tag..."/>
        </Style>
    </UserControl.Styles>
    
    <Border Background="{StaticResource ShadowBlack}" 
            BorderBrush="{StaticResource DarkGrey}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="4">
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled">
            <WrapPanel Name="TagContainer" Orientation="Horizontal">
                <!-- Tags will be added here dynamically -->
                
                <!-- Tag Input -->
                <AutoCompleteBox Name="TagInput"
                               Classes="tag-input"
                               FilterMode="Contains"
                               MinimumPrefixLength="1"
                               MaxDropDownHeight="200"
                               KeyDown="OnTagInputKeyDown"
                               DropDownOpened="OnDropDownOpened"
                               SelectionChanged="OnTagSelected"/>
            </WrapPanel>
        </ScrollViewer>
    </Border>
</UserControl>