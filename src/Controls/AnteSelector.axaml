<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Controls.AnteSelector">
    
    <UserControl.Styles>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style Selector="CheckBox:checked /template/ ContentPresenter">
            <Setter Property="Background" Value="#4400FF88"/>
        </Style>
        
        <Style Selector="TextBlock.ante-label">
            <Setter Property="Foreground" Value="#00FF88"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Styles>
    
    <Border Background="#22000000" 
            BorderBrush="#00FF88" 
            BorderThickness="2" 
            CornerRadius="8" 
            Padding="15">
        <StackPanel Spacing="10">
            <TextBlock Text="Search Antes" 
                       Classes="ante-label"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="Select which antes to search for this item:"
                       Foreground="#CCCCCC"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
            
            <!-- Quick Select Options -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="10"
                        Margin="0,5,0,10">
                <Button Content="All"
                        Command="{Binding SelectAllCommand}"
                        Background="#00FF88"
                        Foreground="Black"
                        Padding="10,5"
                        FontSize="12"/>
                <Button Content="None"
                        Command="{Binding SelectNoneCommand}"
                        Background="#FF4444"
                        Foreground="White"
                        Padding="10,5"
                        FontSize="12"/>
                <Button Content="Early (1-3)"
                        Command="{Binding SelectEarlyCommand}"
                        Background="#FFD700"
                        Foreground="Black"
                        Padding="10,5"
                        FontSize="12"/>
                <Button Content="Late (4-8)"
                        Command="{Binding SelectLateCommand}"
                        Background="#9966FF"
                        Foreground="White"
                        Padding="10,5"
                        FontSize="12"/>
            </StackPanel>

            <!-- Ante Checkboxes Grid -->
            <ItemsControl ItemsSource="{Binding Antes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding DisplayText}"
                                  IsChecked="{Binding IsSelected}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Selected Summary -->
            <TextBlock Text="{Binding SelectionSummary}"
                       Foreground="#00FF88"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
