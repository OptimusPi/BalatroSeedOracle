<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Controls.ModeToggleSwitch">
    
    <UserControl.Styles>
        <!-- Toggle switch container -->
        <Style Selector="Border.toggle-container">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Toggle switch knob -->
        <Style Selector="Border.toggle-knob">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="{StaticResource ToggleRed}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Transitions">
                <Transitions>
                    <ThicknessTransition Property="Margin" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- When toggled on (right position) -->
        <Style Selector="Border.toggle-knob.on">
            <Setter Property="Margin" Value="33,3,3,3"/>
            <Setter Property="Background" Value="{StaticResource ToggleBlue}"/>
        </Style>
        
        <!-- Label styles -->
        <Style Selector="TextBlock.toggle-label">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MediumGrey}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="TextBlock.toggle-label.active">
            <Setter Property="Foreground" Value="{StaticResource VeryLightGrey}"/>
            
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Label -->
        <TextBlock Grid.Column="0"
                   Name="LeftLabel"
                   Classes="toggle-label"
                   Text="{Binding LeftText}"/>
        
        <!-- Toggle Switch -->
        <Border Grid.Column="2"
                Name="ToggleContainer"
                Classes="toggle-container"
                PointerPressed="OnToggleClick">
            <Border Name="ToggleKnob"
                    Classes="toggle-knob"/>
        </Border>
        
        <!-- Right Label -->
        <TextBlock Grid.Column="4"
                   Name="RightLabel"
                   Classes="toggle-label"
                   Text="{Binding RightText}"/>
    </Grid>
</UserControl>