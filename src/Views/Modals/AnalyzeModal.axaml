<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Oracle.Controls"
             xmlns:components="using:Oracle.Components"
             x:Class="Oracle.Views.Modals.AnalyzeModal">
    
    <UserControl.Styles>
        <!-- Balatro-style tab buttons -->
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind button -->
                    <Grid>
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="Margin" Value="4,2,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Reduced shadow when pressed -->
                    <Grid>
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,2,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,2">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button.active">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <!-- Drop shadow behind button -->
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <!-- Button background -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Small button style -->
        <Style Selector="Button.small-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.small-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Navigation arrow style -->
        <Style Selector="Button.nav-arrow">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.nav-arrow:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Content box style -->
        <Style Selector="Border.content-box">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
        </Style>
        
        <!-- Ante Panel Style -->
        <Style Selector="Border.ante-panel">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="BoxShadow" Value="{StaticResource LightBoxShadow}"/>
        </Style>
        
        <!-- Shop Slot Style -->
        <Style Selector="Border.shop-slot">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="130"/>
        </Style>
        
        <!-- Tag Display Style -->
        <Style Selector="Border.tag-display">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="{StaticResource Gold}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid Background="{StaticResource DockGrey}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Tab buttons -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
            </Grid.RowDefinitions>
            
            <!-- Tab buttons container -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Name="FilterTab" Content="SELECT FILTER" Classes="tab-button active" Click="OnFilterTabClick"/>
                <Button Name="SettingsTab" Content="SETTINGS" Classes="tab-button" Click="OnSettingsTabClick"/>
                <Button Name="AnalyzerTab" Content="ANALYZE" Classes="tab-button" Click="OnAnalyzerTabClick"/>
            </StackPanel>
            
            <!-- Active tab indicator -->
            <Canvas Grid.Row="1" Width="500" Height="12" IsHitTestVisible="False" Margin="0,4,0,0">
                <Path Name="TabIndicator"
                      Data="M 0,0 L 10,12 L 20,0 Z"
                      Fill="{StaticResource Gold}"
                      IsVisible="True">
                    <Path.RenderTransform>
                        <TranslateTransform X="62"/>
                    </Path.RenderTransform>
                </Path>
            </Canvas>
        </Grid>
        
        <!-- Content panels -->
        <Grid Grid.Row="1">
            <!-- Filter Selection Panel -->
            <ScrollViewer Name="FilterPanel" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="20" Margin="20">
                    <components:FilterSelector Name="FilterSelector" AutoLoadEnabled="False"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Settings Panel -->
            <ScrollViewer Name="SettingsPanel" IsVisible="False" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="24" Margin="20">
                    <TextBlock Text="Analysis Settings" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"/>
                    
                    <Border Classes="content-box">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left side: Search Settings -->
                            <StackPanel Grid.Column="0" Spacing="20">
                                <TextBlock Text="Search Options" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource Orange}"
                                           HorizontalAlignment="Center"/>
                                
                                <!-- Shop Item Depth -->
                                <controls:SpinnerControl Name="ShopDepthSpinner" 
                                                        Label="SHOP ITEM DEPTH"
                                                        Value="20" 
                                                        Minimum="1" 
                                                        Maximum="100"
                                                        ShadowDirection="south-east"/>
                            </StackPanel>
                            
                            <!-- Center divider -->
                            <Border Grid.Column="1" 
                                    Width="2" 
                                    Background="{StaticResource ModalBorder}"
                                    Margin="0,24,0,0"/>
                            
                            <!-- Right side: Deck Options -->
                            <StackPanel Grid.Column="2" Spacing="24">
                                <TextBlock Text="Deck Options" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="{StaticResource Orange}"
                                           HorizontalAlignment="Center"/>
                                
                                <!-- Deck Selection Panel -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Left Arrow -->
                                    <Button Grid.Column="0" Name="DeckLeftArrow"
                                            Content="&lt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="95"
                                            Margin="0,0,8,0"
                                            Click="OnDeckLeftClick"/>
                                    
                                    <!-- Deck Content -->
                                    <Border Grid.Column="1" 
                                            Background="{StaticResource ContainerDarkPrecise}"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            BorderThickness="2"
                                            CornerRadius="12"
                                            Padding="12"
                                            MaxWidth="280">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Deck Card Image -->
                                            <Grid Grid.Column="0">
                                                <Border Background="{StaticResource DockGrey}"
                                                        CornerRadius="8"
                                                        Width="71" Height="95"
                                                        VerticalAlignment="Center">
                                                    <Image Name="DeckPreviewImage"
                                                           Width="71" Height="95"
                                                           Stretch="Uniform"/>
                                                </Border>
                                                <!-- Stake Sticker Overlay -->
                                                <Image Name="StakeChipOverlay"
                                                       Width="71" Height="95"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Stretch="Uniform"
                                                       IsHitTestVisible="False"/>
                                            </Grid>
                                            
                                            <!-- Deck Info -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Name="DeckNameText"
                                                           Text="Red Deck"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource White}"/>
                                                <TextBlock Name="DeckDescText"
                                                           Text="+1 Discard every round"
                                                           FontSize="14"
                                                           Foreground="{StaticResource MediumGrey}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Right Arrow -->
                                    <Button Grid.Column="2" Name="DeckRightArrow"
                                            Content="&gt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="95"
                                            Margin="8,0,0,0"
                                            Click="OnDeckRightClick"/>
                                </Grid>
                                
                                <!-- Stake Selection Panel -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Left Arrow -->
                                    <Button Grid.Column="0" Name="StakeLeftArrow"
                                            Content="&lt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="80"
                                            Margin="0,0,8,0"
                                            Click="OnStakeLeftClick"/>
                                    
                                    <!-- Stake Content -->
                                    <Border Grid.Column="1" 
                                            Background="{StaticResource ContainerDarkPrecise}"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            BorderThickness="2"
                                            CornerRadius="12"
                                            Padding="12"
                                            MaxWidth="280">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Stake Chip Visual -->
                                            <Canvas Grid.Column="0" 
                                                    Name="StakeChipsCanvas" 
                                                    Width="80" Height="80"
                                                    VerticalAlignment="Center">
                                                <!-- Chips will be added here programmatically -->
                                            </Canvas>
                                            
                                            <!-- Stake Info -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Name="StakeNameText" 
                                                           Text="White Stake"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource White}"/>
                                                <TextBlock Name="StakeDescText" 
                                                           Text="Base Difficulty"
                                                           FontSize="14"
                                                           Foreground="{StaticResource MediumGrey}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Right Arrow -->
                                    <Button Grid.Column="2" Name="StakeRightArrow"
                                            Content="&gt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="80"
                                            Margin="8,0,0,0"
                                            Click="OnStakeRightClick"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Analyzer Panel -->
            <ScrollViewer Name="AnalyzerPanel" IsVisible="False" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Input Section -->
                    <Border Background="{StaticResource DarkerGrey}" CornerRadius="12" Margin="10" BoxShadow="{StaticResource LightBoxShadow}">
                        <Border Background="{StaticResource DarkBackground}" CornerRadius="10" Margin="2">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" MaxWidth="300"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Seed Input -->
                                <TextBlock Grid.Column="0" 
                                          Text="Seed:" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource White}"/>
                                
                                <TextBox Grid.Column="1" 
                                        Name="SeedInput"
                                        Text=""
                                        FontSize="16"
                                        MaxLength="8"
                                        Watermark="Enter seed..."
                                        VerticalAlignment="Center"
                                        Height="40"
                                        Margin="0,0,15,0"
                                        CornerRadius="6"
                                        Background="{StaticResource DarkerGrey}"
                                        BorderBrush="{StaticResource DarkBorder}"
                                        BorderThickness="2"/>
                                
                                <!-- Analyze Button -->
                                <Button Grid.Column="2" 
                                       Name="AnalyzeButton"
                                       Content="ANALYZE"
                                       Click="OnAnalyzeClick"
                                       MinWidth="120"
                                       Background="{StaticResource AccentGreen}"
                                       Foreground="{StaticResource White}"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       CornerRadius="6"
                                       Height="40"
                                       Classes="btn-green"/>
                            </Grid>
                        </Border>
                    </Border>
                    
                    <!-- Results Section -->
                    <StackPanel Name="ResultsPanel" Margin="5">
                        <!-- Placeholder -->
                        <Border Name="PlaceholderPanel" 
                               Background="{StaticResource DarkBackground}" 
                               CornerRadius="12" 
                               Padding="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="20">
                            <StackPanel>
                                <TextBlock Text="🎴"
                                          FontSize="48"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"/>
                                <TextBlock Name="PlaceholderText"
                                          Text="Enter a seed and click ANALYZE"
                                          HorizontalAlignment="Center"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="{StaticResource White}"/>
                                <TextBlock Text="View shop contents, booster packs, and skip tags for each ante"
                                          HorizontalAlignment="Center"
                                          FontSize="14"
                                          Margin="0,5,0,0"
                                          Opacity="0.7"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Ante results will be added here dynamically -->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>