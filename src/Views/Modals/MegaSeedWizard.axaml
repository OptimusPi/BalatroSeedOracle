<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             x:Class="BalatroSeedOracle.Views.Modals.MegaSeedWizard">
    
    <UserControl.Styles>
        <!-- Tab button style (like Balatro's New Run/Continue/Challenges) -->
        <Style Selector="Button.wizard-tab">
            <Setter Property="Background" Value="{StaticResource GreyLighter}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <!-- Drop shadow -->
                        <Border Background="{StaticResource GreyDarker}"
                                CornerRadius="8,8,0,0"
                                Margin="0,3,0,0"/>
                        <!-- Tab face -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8,8,0,0"
                                Margin="0,0,0,3">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Active tab -->
        <Style Selector="Button.wizard-tab.active">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Disabled tab (future steps) -->
        <Style Selector="Button.wizard-tab:disabled">
            <Setter Property="Background" Value="{StaticResource GreyDarker}"/>
            <Setter Property="Foreground" Value="{StaticResource SilverDarker}"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
        <!-- Completed tab (can go back) -->
        <Style Selector="Button.wizard-tab.completed">
            <Setter Property="Background" Value="{StaticResource Green}"/>
        </Style>
        
        <!-- Main action button style -->
        <Style Selector="Button.wizard-action">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border Background="{StaticResource BlueDarker}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="Button.wizard-action:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Secondary action button -->
        <Style Selector="Button.wizard-secondary">
            <Setter Property="Background" Value="{StaticResource Grey}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Panel transition animations -->
        <Style Selector="Border.wizard-panel">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
    </UserControl.Styles>
    
    <!-- Main modal structure -->
    <Border Background="{StaticResource ModalGrey}"
            BorderBrush="{StaticResource Silver}"
            BorderThickness="3"
            CornerRadius="16"
            MinWidth="900"
            MinHeight="600"
            MaxWidth="1200"
            MaxHeight="800">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Tab navigation -->
                <RowDefinition Height="*"/>    <!-- Content area -->
                <RowDefinition Height="Auto"/> <!-- Bottom actions -->
            </Grid.RowDefinitions>
            
            <!-- Top tab navigation (Balatro style) -->
            <Border Grid.Row="0"
                    Background="{StaticResource GreyDarker}"
                    CornerRadius="12,12,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0">
                    
                    <!-- Step 1: Select Filter -->
                    <Button Name="SelectTab"
                            Classes="wizard-tab active"
                            Content="SELECT"
                            Click="OnSelectTabClick"/>
                    
                    <!-- Step 2: Build/Edit Filter -->
                    <Button Name="BuildTab"
                            Classes="wizard-tab"
                            Content="BUILD"
                            IsEnabled="False"
                            Click="OnBuildTabClick"/>
                    
                    <!-- Step 3: Configure Search -->
                    <Button Name="ConfigureTab"
                            Classes="wizard-tab"
                            Content="CONFIGURE"
                            IsEnabled="False"
                            Click="OnConfigureTabClick"/>
                    
                    <!-- Step 4: Run Search -->
                    <Button Name="SearchTab"
                            Classes="wizard-tab"
                            Content="SEARCH"
                            IsEnabled="False"
                            Click="OnSearchTabClick"/>
                    
                    <!-- Step 5: View Results -->
                    <Button Name="ResultsTab"
                            Classes="wizard-tab"
                            Content="RESULTS"
                            IsEnabled="False"
                            Click="OnResultsTabClick"/>
                </StackPanel>
            </Border>
            
            <!-- Content area with panels -->
            <Border Grid.Row="1"
                    Background="{StaticResource ModalGreyDarker}"
                    Padding="20">
                <Grid Name="ContentArea">
                    
                    <!-- PANEL 1: Filter Selection (Challenges-style) -->
                    <Border Name="SelectPanel"
                            Classes="wizard-panel"
                            IsVisible="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header -->
                            <TextBlock Grid.Row="0"
                                       Text="Choose Your Filter"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <!-- New Challenges-style filter grid -->
                            <components:ChallengesStyleFilterGrid Grid.Row="1"
                                                                 Name="FilterPicker"/>
                        </Grid>
                    </Border>
                    
                    <!-- PANEL 2: Filter Builder -->
                    <Border Name="BuildPanel"
                            Classes="wizard-panel"
                            IsVisible="False"
                            Opacity="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Build Your Perfect Filter"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Visual filter builder will go here -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource Grey}"
                                    CornerRadius="8"
                                    Padding="16">
                                <TextBlock Text="[Visual Filter Builder Component]"
                                           Foreground="{StaticResource Silver}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- PANEL 3: Search Configuration -->
                    <Border Name="ConfigurePanel"
                            Classes="wizard-panel"
                            IsVisible="False"
                            Opacity="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Configure Your Search"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Search settings -->
                            <StackPanel Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="24">
                                
                                <!-- Threads spinner -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="THREADS:"
                                               FontFamily="{StaticResource BalatroFont}"
                                               FontSize="16"
                                               Foreground="{StaticResource Silver}"
                                               VerticalAlignment="Center"/>
                                    <!-- Spinner control would go here -->
                                    <Border Grid.Column="1"
                                            Background="{StaticResource GreyLighter}"
                                            CornerRadius="6"
                                            Height="36">
                                        <TextBlock Text="4"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="18"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Batch size -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="BATCH SIZE:"
                                               FontFamily="{StaticResource BalatroFont}"
                                               FontSize="16"
                                               Foreground="{StaticResource Silver}"
                                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="1"
                                            Background="{StaticResource GreyLighter}"
                                            CornerRadius="6"
                                            Height="36">
                                        <TextBlock Text="default"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="18"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                                
                                <!-- Score cutoff -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="MIN SCORE:"
                                               FontFamily="{StaticResource BalatroFont}"
                                               FontSize="16"
                                               Foreground="{StaticResource Silver}"
                                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="1"
                                            Background="{StaticResource GreyLighter}"
                                            CornerRadius="6"
                                            Height="36">
                                        <TextBlock Text="Auto"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="18"
                                                   Foreground="{StaticResource White}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- PANEL 4: Search Progress -->
                    <Border Name="SearchPanel"
                            Classes="wizard-panel"
                            IsVisible="False"
                            Opacity="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Searching the Multiverse..."
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Live results area -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource GreyDarker}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,16">
                                <!-- Results would stream here -->
                                <ScrollViewer>
                                    <TextBlock Text="[Live results will appear here]"
                                               Foreground="{StaticResource Silver}"
                                               FontFamily="Consolas, monospace"/>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Progress bar -->
                            <Grid Grid.Row="2">
                                <ProgressBar Name="SearchProgress"
                                             Height="24"
                                             Background="{StaticResource GreyDarker}"
                                             Foreground="{StaticResource Green}"/>
                                <TextBlock Name="ProgressText"
                                           Text="0 seeds found"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="14"
                                           Foreground="{StaticResource White}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- PANEL 5: Results & Export -->
                    <Border Name="ResultsPanel"
                            Classes="wizard-panel"
                            IsVisible="False"
                            Opacity="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Your Seeds Are Ready!"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="24"
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,16"/>
                            
                            <!-- Results grid -->
                            <DataGrid Grid.Row="1"
                                      Name="ResultsGrid"
                                      Background="{StaticResource GreyDarker}"
                                      Foreground="{StaticResource White}"
                                      BorderThickness="2"
                                      BorderBrush="{StaticResource Silver}"
                                      CornerRadius="8"
                                      Margin="0,0,0,16"/>
                            
                            <!-- Export options -->
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Spacing="12">
                                <Button Content="📋 COPY"
                                        Classes="wizard-secondary"/>
                                <Button Content="💾 EXPORT CSV"
                                        Classes="wizard-secondary"/>
                                <Button Content="🔍 ANALYZE"
                                        Classes="wizard-secondary"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                </Grid>
            </Border>
            
            <!-- Bottom action bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource GreyDarker}"
                    CornerRadius="0,0,12,12"
                    Padding="20,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Back button (left) -->
                    <Button Grid.Column="0"
                            Name="BackButton"
                            Content="← BACK"
                            Classes="wizard-secondary"
                            HorizontalAlignment="Left"
                            IsVisible="False"
                            Click="OnBackClick"/>
                    
                    <!-- Status/info (center) -->
                    <StackPanel Grid.Column="1"
                                Orientation="Vertical"
                                VerticalAlignment="Center">
                        <TextBlock Name="StatusText"
                                   Text="Step 1 of 5"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource Silver}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter: Next • Esc: Back • 1-5: Jump"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="10"
                                   Foreground="{StaticResource SilverDarker}"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Next/Action button (right) -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="12">
                        <Button Name="CancelButton"
                                Content="CANCEL"
                                Classes="wizard-secondary"
                                Background="{StaticResource RedDarker}"
                                Click="OnCancelClick"/>
                        <Button Name="NextButton"
                                Content="NEXT →"
                                Classes="wizard-action"
                                Click="OnNextClick"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>