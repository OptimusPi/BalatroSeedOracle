<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tabs="using:BalatroSeedOracle.Components.FilterTabs"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:tabVm="using:BalatroSeedOracle.ViewModels.FilterTabs"
             x:Class="BalatroSeedOracle.Views.Modals.FiltersModal"
             x:DataType="vm:FiltersModalViewModel">

    <!-- DataTemplates removed - using direct View creation instead -->

    <!-- Clean tab-only layout -->
    <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
                ItemsSource="{Binding TabItems}"
                Classes="balatro-tabs">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Header}" />
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <ContentControl Content="{Binding Content}" />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>

</UserControl>