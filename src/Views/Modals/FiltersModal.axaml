<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="https://github.com/avaloniaui/avaloniaedit"
             x:Class="Oracle.Views.Modals.FiltersModalContent">
             
    <UserControl.Styles>
        
        <!-- Drop Zone Base Styling -->
        <Style Selector="Border.drop-zone">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                </Transitions>
            </Setter>
        </Style>
        
        <!-- Drop Zone Hover State -->
        <Style Selector="Border.drop-zone.drag-over">
            <Setter Property="BorderBrush" Value="#eac058" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="BoxShadow" Value="0 0 15 #eac05880" />
        </Style>
        
        <!-- NEEDS Zone Specific Styling -->
        <Style Selector="Border.needs-zone.drag-over">
            <Setter Property="BorderBrush" Value="#FE5F55" />
            <Setter Property="BoxShadow" Value="0 0 15 #FE5F5580" />
        </Style>
        
        <!-- WANTS Zone Specific Styling -->
        <Style Selector="Border.wants-zone.drag-over">
            <Setter Property="BorderBrush" Value="#009dff" />
            <Setter Property="BoxShadow" Value="0 0 15 #009dff80" />
        </Style>
        
        <!-- Draggable Item Styling -->
        <Style Selector="Border.draggable-item">
            <Setter Property="Background" Value="#4f6367" />
            <Setter Property="BorderBrush" Value="#7A9E9F" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" />
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <!-- Draggable Item Hover -->
        <Style Selector="Border.draggable-item:pointerover">
            <Setter Property="BorderBrush" Value="#eac058" />
            <Setter Property="BoxShadow" Value="0 2 8 #00000060" />
        </Style>
        
        <!-- Item Being Dragged -->
        <Style Selector="Border.draggable-item.is-dragging">
            <Setter Property="Opacity" Value="0.6" /> <!-- Keep some opacity for dragging feedback -->
        </Style>
        
        
        <!-- Dropped Item Styling -->
        <Style Selector="Border.dropped-item">
            <Setter Property="Background" Value="#374244" />
            <Setter Property="BorderBrush" Value="#eac058" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="BoxShadow" Value="0 2 4 #00000040" />
        </Style>
        
        <!-- Dropped Item Hover -->
        <Style Selector="Border.dropped-item:pointerover">
            <Setter Property="BorderBrush" Value="#FE5F55" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        
        <!-- Empty Drop Zone Placeholder -->
        <Style Selector="TextBlock.drop-placeholder">
            <Setter Property="Foreground" Value="#888888" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.7" />
        </Style>
        
        <!-- FIX: Force TextBox styles to work in this modal -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2a2a2a" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="SelectionBrush" Value="#0078d4" />
            <Setter Property="SelectionForegroundBrush" Value="White" />
            <Setter Property="IsHitTestVisible" Value="True" />
            <Setter Property="Focusable" Value="True" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Name="PART_BorderElement"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <ScrollViewer Name="PART_ContentHost"
                                          Background="Transparent"
                                          HorizontalScrollBarVisibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}"
                                          VerticalScrollBarVisibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}"
                                          IsTabStop="False"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <TextPresenter Name="PART_TextPresenter"
                                               Text="{TemplateBinding Text}"
                                               CaretBrush="{TemplateBinding CaretBrush}"
                                               SelectionBrush="{TemplateBinding SelectionBrush}"
                                               SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                               TextAlignment="{TemplateBinding TextAlignment}"
                                               TextWrapping="{TemplateBinding TextWrapping}" />
                            </ScrollViewer>
                            <TextBlock Name="PART_Watermark"
                                       Text="{TemplateBinding Watermark}"
                                       TextAlignment="{TemplateBinding TextAlignment}"
                                       TextWrapping="{TemplateBinding TextWrapping}"
                                       IsHitTestVisible="False"
                                       Opacity="0.7"
                                       Foreground="#888888"
                                       FontStyle="Italic"
                                       Margin="{TemplateBinding Padding}"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                       IsVisible="{TemplateBinding Text, Converter={x:Static StringConverters.IsNullOrEmpty}}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="BorderBrush" Value="#0078d4" />
        </Style>
        
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="#2e2e2e" />
            <Setter Property="BorderBrush" Value="#666666" />
        </Style>
        
        <!-- Watermark/Placeholder text fix - MORE AGGRESSIVE -->
        <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
            <Setter Property="Foreground" Value="#888888" />
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        

        <Style Selector="TextBox:watermark">
            <Setter Property="Foreground" Value="#888888" />
        </Style>
        
        <!-- Force TextPresenter visibility -->
        <Style Selector="TextBox /template/ TextPresenter#PART_TextPresenter">
            <Setter Property="CaretBrush" Value="White" />
            <Setter Property="SelectionBrush" Value="#0078d4" />
            <Setter Property="SelectionForegroundBrush" Value="White" />
        </Style>
        
        <!-- ScrollViewer inside TextBox -->
        <Style Selector="TextBox /template/ ScrollViewer#PART_ContentHost">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        
        <!-- Clear Buttons Styling -->
        <Style Selector="Button#ClearNeedsButton:pointerover, Button#ClearWantsButton:pointerover">
            <Setter Property="Background" Value="#CC0000" /> <!-- Darker red -->
        </Style>
        
        <Style Selector="Button#ClearNeedsButton:pressed, Button#ClearWantsButton:pressed">
            <Setter Property="Background" Value="#CC0000" />
            <Setter Property="RenderTransform" Value="translateY(3px)" />
        </Style>
        
        <!-- Mode Toggle Buttons -->
        <Style Selector="Border.mode-active">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        
        <Style Selector="Border.mode-inactive">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>
        
        <Style Selector="Border.mode-inactive:pointerover">
            <Setter Property="Opacity" Value="0.8" />
        </Style>
        
        <!-- Specific styling for active states -->
        <Style Selector="Border#DragDropModeButton.mode-active">
            <Setter Property="Background" Value="#eac058" />
            <Setter Property="BorderBrush" Value="#eac058" />
        </Style>
        
        <Style Selector="Border#DragDropModeButton.mode-inactive">
            <Setter Property="Background" Value="#4f6367" />
            <Setter Property="BorderBrush" Value="#7A9E9F" />
        </Style>
        
        <Style Selector="Border#JsonEditorModeButton.mode-active">
            <Setter Property="Background" Value="#eac058" />
            <Setter Property="BorderBrush" Value="#eac058" />
        </Style>
        
        <Style Selector="Border#JsonEditorModeButton.mode-inactive">
            <Setter Property="Background" Value="#4f6367" />
            <Setter Property="BorderBrush" Value="#7A9E9F" />
        </Style>
        
        <!-- ScrollBar Styling -->
        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        
        <Style Selector="ScrollBar /template/ Thumb">
            <Setter Property="Background" Value="#666666" />
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="MinWidth" Value="10" />
            <Setter Property="Opacity" Value="1" />
        </Style>
        
        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="14" />
            <Setter Property="Margin" Value="0,0,2,0" />
        </Style>
        
        <Style Selector="ScrollBar /template/ Thumb:pointerover">
            <Setter Property="Background" Value="#888888" />
        </Style>
        
        <!-- ScrollViewer Styling -->
        <Style Selector="ScrollViewer">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        
        <!-- AvaloniaEdit TextEditor Styling -->
        <Style Selector="avalonedit|TextEditor">
            <Setter Property="Background" Value="#1e1e1e" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontFamily" Value="Cascadia Code,Consolas,Menlo,Monaco,monospace" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="LineNumbersForeground" Value="#858585" />
        </Style>
        
        <!-- Style the text area inside AvaloniaEdit -->
        <Style Selector="avalonedit|TextEditor /template/ avalonedit|TextArea">
            <Setter Property="SelectionBrush" Value="#264F78" />
            <Setter Property="SelectionForeground" Value="#FFFFFF" />
        </Style>
    </UserControl.Styles>
    
    <!-- Main Layout - Clean content only, no modal styling (StandardModal handles that) -->
    <Grid Name="RootGrid" Margin="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    
                    <!-- Modal Title (removed - StandardModal already shows it) -->
                    
                    <!-- Top Header Row - 3 Column Layout -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Column A: Name + Description horizontally -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top" Orientation="Horizontal" Spacing="8">
                            <TextBox Name="ConfigNameBox" 
                                     Text="CustomFilterName" 
                                     FontSize="12" FontWeight="Bold"
                                     Background="#333333" 
                                     BorderThickness="1" 
                                     BorderBrush="#555555"
                                     Foreground="#eac058"
                                     Padding="6,3"
                                     CornerRadius="4"
                                     Width="150"
                                     Height="28"
                                     VerticalContentAlignment="Center" />
                            <TextBox Name="ConfigDescriptionBox" 
                                     Text="description, a config for stuff" 
                                     FontSize="11"
                                     Background="#333333" 
                                     BorderThickness="1" 
                                     BorderBrush="#555555"
                                     Foreground="#CCCCCC"
                                     Padding="6,3"
                                     CornerRadius="4"
                                     Width="200"
                                     Height="28"
                                     VerticalContentAlignment="Center" />
                        </StackPanel>
                        
                        <!-- Column B: Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="3">
                            <Button Name="LoadButton" Content="Load" Classes="btn-orange" MinWidth="80" MinHeight="40" FontSize="16" />
                            <Button Name="SaveButton" Content="Save" Classes="btn-blue" MinWidth="80" MinHeight="40" FontSize="16" />
                            <Button Name="SearchButton" Content="Search" Classes="btn-green" MinWidth="80" MinHeight="40" FontSize="16" />
                            <Button Name="ClearAllButton" Content="Clear" Classes="btn-red" MinWidth="80" MinHeight="40" FontSize="16" />
                        </StackPanel>

                        <!-- Column C: Simple Mode Toggle -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="json?" FontSize="14" VerticalAlignment="Center" Foreground="#CCCCCC"/>
                            <ToggleSwitch Name="ModeToggle" 
                                         IsChecked="False"
                                         OnContent="" 
                                         OffContent=""
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Main Content Area -->
                    <Grid Grid.Row="2" Name="MainContentGrid">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                        
                        <!-- Left Sidebar - darker background -->
                        <Border Grid.Column="0" Background="#2a2a2a" CornerRadius="8" Padding="8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Spacing="2">
                                    <Button Name="FavoritesTab" Content="Favorites" Classes="nav-button" />
                                    <Button Name="SoulJokersTab" Content="Soul Joker" Classes="nav-button active" />
                                    <Button Name="RareJokersTab" Content="Rare Joker" Classes="nav-button" />
                                    <Button Name="UncommonJokersTab" Content="Uncommon Joker" Classes="nav-button" />
                                    <Button Name="CommonJokersTab" Content="Common Joker" Classes="nav-button" />
                                    <Button Name="VouchersTab" Content="Vouchers" Classes="nav-button" />
                                    <Button Name="TarotsTab" Content="Tarots" Classes="nav-button" />
                                    <Button Name="SpectralsTab" Content="Spectrals" Classes="nav-button" />
                                    <Button Name="TagsTab" Content="Tags" Classes="nav-button" />
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        
                        <!-- Main Content Area -->
                        <Grid Grid.Column="2" Name="RightContentGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- LEFT: Item Palette -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <!-- Search Bar -->
                                <Border Grid.Row="0" Background="#333333" CornerRadius="4" Padding="4" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Search Bar -->
                                        <TextBox Grid.Column="0" Name="SearchBox" Watermark="Search items..." Height="26" VerticalContentAlignment="Center" 
                                         Classes="search-box" IsHitTestVisible="True" Focusable="True" ZIndex="10" FontSize="11" />
                                        <Button Grid.Column="2" Name="ClearSearchButton" Content="X" ToolTip.Tip="Clear Search" Width="24" Height="24" FontSize="10" Padding="0" />
                                    </Grid>
                                </Border>
                                
                                <!-- Item Palette Container - Add explicit height constraint -->
                                <Border Grid.Row="1" Name="ItemPaletteBorder" Background="#2a2a2a" CornerRadius="8" Padding="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ClipToBounds="True">
                                <ContentControl Name="ItemPaletteContent" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ClipToBounds="True" />
                                </Border>
                            </Grid>
                            
                            <!-- RIGHT: Drag & Drop Areas -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="6" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <!-- NEEDS Panel -->
                                <Border Grid.Row="0" Name="NeedsBorder" Classes="drop-zone needs-zone" Background="#2a2a2a" CornerRadius="8" Padding="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0" Background="#FE5F55" CornerRadius="4" Padding="6,3" Margin="0,0,0,6" HorizontalAlignment="Center">
                                            <Grid>
                                                <TextBlock Text="NEEDS (Required)" FontSize="11" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0" />
                                                <Button Name="ClearNeedsButton" Content="✕" Classes="btn-red"
                                                        Width="18" Height="18" 
                                                        FontWeight="Bold"
                                                        FontSize="9"
                                                        Padding="0"
                                                        CornerRadius="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Cursor="Hand" />
                                            </Grid>
                                        </Border>
                                        
                                        <Border Grid.Row="1" Background="#374244" CornerRadius="6" Padding="4" MinHeight="100">
                                            <Grid>
                                                <TextBlock Name="NeedsPlaceholder" Classes="drop-placeholder" Text="Drop required items here" TextAlignment="Center" IsVisible="True" FontSize="12" />
                                                <ScrollViewer Name="NeedsScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" IsVisible="False">
                                                    <WrapPanel Name="NeedsPanel" Orientation="Horizontal" />
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- WANTS Panel -->
                                <Border Grid.Row="2" Name="WantsBorder" Classes="drop-zone wants-zone" Background="#2a2a2a" CornerRadius="8" Padding="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0" Background="#009dff" CornerRadius="4" Padding="6,3" Margin="0,0,0,6" HorizontalAlignment="Center">
                                            <Grid>
                                                <TextBlock Text="WANTS (Bonus Points)" FontSize="11" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0" />
                                                <Button Name="ClearWantsButton" Content="✕" Classes="btn-red"
                                                        Width="18" Height="18" 
                                                        FontWeight="Bold"
                                                        FontSize="9"
                                                        Padding="0"
                                                        CornerRadius="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Cursor="Hand" />
                                            </Grid>
                                        </Border>
                                        
                                        <Border Grid.Row="1" Background="#374244" CornerRadius="6" Padding="4" MinHeight="50">
                                            <Grid>
                                                <TextBlock Name="WantsPlaceholder" Classes="drop-placeholder" Text="Drop scoring items here" TextAlignment="Center" IsVisible="True" FontSize="12" />
                                                <ScrollViewer Name="WantsScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" IsVisible="False">
                                                    <WrapPanel Name="WantsPanel" Orientation="Horizontal" />
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
    </Grid>
</UserControl>