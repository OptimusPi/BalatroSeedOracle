<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Oracle.Components"
             x:Class="Oracle.Views.Modals.AnalyzerModal">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Input Section -->
        <Border Grid.Row="0" Background="{StaticResource DockGrey}" CornerRadius="12" Margin="10" BoxShadow="{StaticResource LightBoxShadow}">
            <Border Background="{StaticResource DarkModalGrey}" CornerRadius="10" Margin="2">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                              Text="SEED ANALYZER" 
                              FontSize="20"
                              
                              HorizontalAlignment="Center"
                              Foreground="{StaticResource Gold}"
                              Margin="0,0,0,15"/>
                    
                    <!-- Input Controls -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MaxWidth="250"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Seed Input -->
                        <TextBlock Grid.Column="0" 
                                  Text="Seed:" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource White}"/>
                        
                        <TextBox Grid.Column="1" 
                                Name="SeedInput"
                                Text=""
                                FontSize="16"
                                MaxLength="8"
                                Watermark="Enter seed..."
                                VerticalAlignment="Center"
                                Height="40"
                                Margin="0,0,15,0"
                                CornerRadius="6"
                                Background="{StaticResource DarkerGrey}"
                                BorderThickness="0"/>
                        
                        <!-- Deck/Stake Selection -->
                        <components:DeckAndStakeSelector Grid.Column="2" 
                                                        Name="DeckAndStakeSelector"
                                                        Margin="0,0,15,0"
                                                        VerticalAlignment="Center"/>
                        
                        <!-- Analyze Button -->
                        <Button Grid.Column="3" 
                               Name="AnalyzeButton"
                               Content="ANALYZE"
                               Click="OnAnalyzeClick"
                               MinWidth="120"
                               Background="{StaticResource AccentGreen}"
                               Foreground="{StaticResource White}"
                               
                               FontSize="16"
                               CornerRadius="6"
                               Height="40"
                               Classes="btn-green"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>
        
        <!-- Results Section - Visual Representation -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel Name="ResultsPanel" Margin="5">
                <!-- Placeholder -->
                <Border Name="PlaceholderPanel" 
                       Background="{StaticResource DarkModalGrey}" 
                       CornerRadius="12" 
                       Padding="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ´"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Name="PlaceholderText"
                                  Text="Enter a seed and click ANALYZE"
                                  HorizontalAlignment="Center"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource White}"/>
                        <TextBlock Text="View shop contents, booster packs, and skip tags for each ante"
                                  HorizontalAlignment="Center"
                                  FontSize="14"
                                  Margin="0,5,0,0"
                                  Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <!-- Ante results will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
    <UserControl.Styles>
        <!-- Ante Panel Style -->
        <Style Selector="Border.ante-panel">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="BoxShadow" Value="{StaticResource LightBoxShadow}"/>
        </Style>
        
        <Style Selector="Border.ante-panel > Border">
            <Setter Property="Background" Value="{StaticResource DarkModalGrey}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="24"/>
            
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="{StaticResource Gold}"/>
        </Style>
        
        <Style Selector="TextBlock.subsection-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
        </Style>
        
        <!-- Shop Slot Style -->
        <Style Selector="Border.shop-slot">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="130"/>
        </Style>
        
        <Style Selector="Border.shop-slot:pointerover">
            <Setter Property="Background" Value="{StaticResource VeryDarkGrey}"/>
        </Style>
        
        <!-- Pack Style -->
        <Style Selector="Border.pack-display">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style Selector="Border.pack-display:pointerover">
            <Setter Property="Background" Value="{StaticResource VeryDarkGrey}"/>
        </Style>
        
        <!-- Tag Display Style -->
        <Style Selector="Border.tag-display">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Border.tag-display:pointerover">
            <Setter Property="Background" Value="{StaticResource VeryDarkGrey}"/>
        </Style>
        
        <!-- Loading Spinner Style -->
        <Style Selector="Border.loading-panel">
            <Setter Property="Background" Value="{StaticResource DarkModalGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
</UserControl>