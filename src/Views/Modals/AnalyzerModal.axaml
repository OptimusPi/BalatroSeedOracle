<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Oracle.Components"
             x:Class="Oracle.Views.Modals.AnalyzerModal">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Input Section -->
        <Border Grid.Row="0" Background="#1a1a1a" CornerRadius="12" Margin="10" BoxShadow="0 2 10 #00000040">
            <Border Background="#2e3f42" CornerRadius="10" Margin="2">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                              Text="SEED ANALYZER" 
                              FontSize="20"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="#eac058"
                              Margin="0,0,0,15"/>
                    
                    <!-- Input Controls -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" MaxWidth="250"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Seed Input -->
                        <TextBlock Grid.Column="0" 
                                  Text="Seed:" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="#FFFFFF"/>
                        
                        <TextBox Grid.Column="1" 
                                Name="SeedInput"
                                Text=""
                                FontSize="16"
                                MaxLength="8"
                                Watermark="Enter seed..."
                                VerticalAlignment="Center"
                                Height="40"
                                Margin="0,0,15,0"
                                CornerRadius="6"
                                Background="#1a1a1a"
                                BorderBrush="#3a3a3a"
                                BorderThickness="2"/>
                        
                        <!-- Deck/Stake Selection -->
                        <ComboBox Grid.Column="2" 
                                 Name="DeckStakeCombo"
                                 SelectedIndex="0"
                                 MinWidth="200"
                                 Height="40"
                                 Margin="0,0,15,0"
                                 VerticalAlignment="Center"
                                 CornerRadius="6"
                                 Background="#1a1a1a"
                                 BorderBrush="#3a3a3a"
                                 BorderThickness="2">
                            <ComboBoxItem>Red Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Red Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Green Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Black Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Blue Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Purple Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Orange Stake</ComboBoxItem>
                            <ComboBoxItem>Red Deck - Gold Stake</ComboBoxItem>
                            <ComboBoxItem>Blue Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Yellow Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Green Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Black Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Magic Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Nebula Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Ghost Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Abandoned Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Checkered Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Zodiac Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Painted Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Anaglyph Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Plasma Deck - White Stake</ComboBoxItem>
                            <ComboBoxItem>Erratic Deck - White Stake</ComboBoxItem>
                        </ComboBox>
                        
                        <!-- Analyze Button -->
                        <Button Grid.Column="3" 
                               Name="AnalyzeButton"
                               Content="ANALYZE"
                               Click="OnAnalyzeClick"
                               MinWidth="120"
                               Background="#4BC292"
                               Foreground="#FFFFFF"
                               FontWeight="Bold"
                               FontSize="16"
                               CornerRadius="6"
                               Height="40"
                               Classes="balatro-button"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>
        
        <!-- Results Section - Visual Representation -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel Name="ResultsPanel" Margin="5">
                <!-- Placeholder -->
                <Border Name="PlaceholderPanel" 
                       Background="#2e3f42" 
                       CornerRadius="12" 
                       Padding="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ´"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Name="PlaceholderText"
                                  Text="Enter a seed and click ANALYZE"
                                  HorizontalAlignment="Center"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#FFFFFF"/>
                        <TextBlock Text="View shop contents, booster packs, and skip tags for each ante"
                                  HorizontalAlignment="Center"
                                  FontSize="14"
                                  Margin="0,5,0,0"
                                  Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <!-- Ante results will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
    <UserControl.Styles>
        <!-- Ante Panel Style -->
        <Style Selector="Border.ante-panel">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5,5,5,10"/>
            <Setter Property="BoxShadow" Value="0 2 10 #00000040"/>
        </Style>
        
        <Style Selector="Border.ante-panel > Border">
            <Setter Property="Background" Value="#2e3f42"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="#eac058"/>
        </Style>
        
        <Style Selector="TextBlock.subsection-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <!-- Shop Slot Style -->
        <Style Selector="Border.shop-slot">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="MinHeight" Value="130"/>
        </Style>
        
        <Style Selector="Border.shop-slot:pointerover">
            <Setter Property="BorderBrush" Value="#5a5a5a"/>
            <Setter Property="Background" Value="#252525"/>
        </Style>
        
        <!-- Pack Style -->
        <Style Selector="Border.pack-display">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        
        <Style Selector="Border.pack-display:pointerover">
            <Setter Property="BorderBrush" Value="#5a5a5a"/>
            <Setter Property="Background" Value="#252525"/>
        </Style>
        
        <!-- Tag Display Style -->
        <Style Selector="Border.tag-display">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="Border.tag-display:pointerover">
            <Setter Property="BorderBrush" Value="#5a5a5a"/>
            <Setter Property="Background" Value="#252525"/>
        </Style>
        
        <!-- Balatro Button Style -->
        <Style Selector="Button.balatro-button:pointerover">
            <Setter Property="Background" Value="#5BD3A3"/>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>
        
        <Style Selector="Button.balatro-button:pressed">
            <Setter Property="Background" Value="#3BA282"/>
            <Setter Property="RenderTransform" Value="scale(0.98)"/>
        </Style>
        
        <!-- Loading Spinner Style -->
        <Style Selector="Border.loading-panel">
            <Setter Property="Background" Value="#2e3f42"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
</UserControl>