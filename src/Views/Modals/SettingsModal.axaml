<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.SettingsModal"
             MinWidth="600"
             MinHeight="500">

    <!-- NO BORDER! StandardModal already provides the border! -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header (Balatro style - simple centered text) -->
        <TextBlock Grid.Row="0"
                   Text="SETTINGS"
                   FontFamily="{StaticResource BalatroFont}"
                   FontSize="24"
                   Foreground="{StaticResource Gold}"
                   HorizontalAlignment="Center"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24">

                <!-- Resources Section (NO BORDER - cleaner!) -->
                <StackPanel Spacing="12">
                    <TextBlock Text="📚 RESOURCES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource Gold}"/>

                    <Rectangle Height="1"
                               Fill="{StaticResource ModalBorder}"
                               Opacity="0.3"
                               Margin="0,4,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Word Lists"
                                Classes="btn-blue"
                                HorizontalAlignment="Stretch"
                                Click="OnWordListsClick"/>

                        <Button Grid.Column="2"
                                Content="Credits"
                                Classes="btn-orange"
                                HorizontalAlignment="Stretch"
                                Click="OnCreditsClick"/>
                    </Grid>
                </StackPanel>

                <!-- Experimental Features Section (NO BORDER - cleaner!) -->
                <StackPanel Spacing="12">
                    <TextBlock Text="🧪 EXPERIMENTAL FEATURES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource Gold}"/>

                    <Rectangle Height="1"
                               Fill="{StaticResource ModalBorder}"
                               Opacity="0.3"
                               Margin="0,4,0,12"/>

                    <TextBlock Text="Toggle experimental and beta features"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="White"
                               Opacity="0.6"
                               Margin="0,0,0,6"/>

                    <!-- Feature Toggles -->
                    <ItemsControl Name="FeatureToggles">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4"
                                        Padding="12"
                                        Background="{StaticResource DarkBackground}"
                                        CornerRadius="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource White}"/>

                                            <TextBlock Text="{Binding Description}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="White"
                                                       Opacity="0.6"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <CheckBox Grid.Column="1"
                                                  IsChecked="{Binding IsEnabled}"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Info Text -->
                    <TextBlock Text="⚠️ Experimental features may be unstable or incomplete. The AI Genie requires significant resources."
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="{StaticResource Orange}"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Name="ResetButton"
                    Content="Reset to Defaults"
                    Classes="btn-orange"
                    HorizontalAlignment="Stretch"
                    Click="OnResetClick"/>

            <Button Grid.Column="2"
                    Name="SaveButton"
                    Content="Save Settings"
                    Classes="btn-blue"
                    HorizontalAlignment="Stretch"
                    Click="OnSaveClick"/>
        </Grid>
    </Grid>
</UserControl>