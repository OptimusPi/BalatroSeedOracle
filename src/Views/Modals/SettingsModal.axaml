<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.SettingsModal"
             MinWidth="600"
             MinHeight="500">

    <!-- NO BORDER! StandardModal already provides the border! -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header (Balatro style - simple centered text) -->
        <TextBlock Grid.Row="0"
                   Text="SETTINGS"
                   FontFamily="{StaticResource BalatroFont}"
                   FontSize="24"
                   Foreground="{StaticResource Gold}"
                   HorizontalAlignment="Center"/>

        <!-- Settings Content (CLEAN - no border boxes!) -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Experimental Features Section (NO BORDER!) -->
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ§ª EXPERIMENTAL FEATURES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="16"
                               Foreground="{StaticResource Gold}"/>

                    <TextBlock Text="Toggle experimental and beta features"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="{StaticResource MediumGrey}"
                               Opacity="0.7"
                               Margin="0,0,0,6"/>

                    <!-- Feature Toggles -->
                    <ItemsControl Name="FeatureToggles">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,4"
                                        Padding="8"
                                        Background="{StaticResource DockGrey}"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       Foreground="{StaticResource White}"/>

                                            <TextBlock Text="{Binding Description}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource VeryLightGrey}"
                                                       Opacity="0.7"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <CheckBox Grid.Column="1"
                                                  IsChecked="{Binding IsEnabled}"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- General Settings Section -->
                <Border Background="{StaticResource ContainerDarkPrecise}"
                        BorderBrush="{StaticResource ModalBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="âš™ï¸ GENERAL SETTINGS"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="18"
                                   Foreground="{StaticResource Gold}"/>

                        <Rectangle Height="1"
                                   Fill="{StaticResource ModalBorder}"
                                   Opacity="0.3"
                                   Margin="0,4"/>

                        <!-- Author Name -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Author Name:"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Name="AuthorNameBox"
                                     FontFamily="{StaticResource BalatroFont}"
                                     FontSize="14"
                                     Watermark="Enter your name..."/>
                        </Grid>

                        <!-- Default Thread Count -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Search Threads:"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"
                                       VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <NumericUpDown Name="ThreadCountBox"
                                               Minimum="1"
                                               Maximum="64"
                                               Value="8"
                                               Width="100"/>
                                <TextBlock Text="(CPU cores recommended)"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="11"
                                           Foreground="{StaticResource MediumGrey}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Resources Section -->
                <Border Background="{StaticResource ContainerDarkPrecise}"
                        BorderBrush="{StaticResource ModalBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="ðŸ“š RESOURCES"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="18"
                                   Foreground="{StaticResource Gold}"/>

                        <Rectangle Height="1"
                                   Fill="{StaticResource ModalBorder}"
                                   Opacity="0.3"
                                   Margin="0,4"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="Word Lists"
                                    Classes="btn-blue"
                                    HorizontalAlignment="Stretch"
                                    Click="OnWordListsClick"/>

                            <Button Grid.Column="2"
                                    Content="Credits"
                                    Classes="btn-orange"
                                    HorizontalAlignment="Stretch"
                                    Click="OnCreditsClick"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Info Box -->
                <Border Background="#1a2528"
                        BorderBrush="{StaticResource StatusBlue}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12">
                    <StackPanel Spacing="4">
                        <TextBlock Text="â„¹ï¸ About Experimental Features"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="13"
                                   Foreground="{StaticResource StatusBlue}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Experimental features may be unstable or incomplete. The AI Genie assistant requires significant resources and may impact performance."
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="11"
                                   Foreground="{StaticResource VeryLightGrey}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
            </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Name="ResetButton"
                    Content="Reset to Defaults"
                    Classes="btn-orange"
                    HorizontalAlignment="Stretch"
                    Click="OnResetClick"/>

            <Button Grid.Column="2"
                    Name="SaveButton"
                    Content="Save Settings"
                    Classes="btn-blue"
                    HorizontalAlignment="Stretch"
                    Click="OnSaveClick"/>
        </Grid>
    </Grid>
</UserControl>