<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.SettingsModal"
             MinWidth="600"
             MinHeight="400">

    <!-- NO BORDER! StandardModal already provides the border! -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="SETTINGS"
                   FontFamily="{StaticResource BalatroFont}"
                   FontSize="24"
                   Foreground="{StaticResource Gold}"
                   HorizontalAlignment="Center"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="24">

                <!-- Resources Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="RESOURCES"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource Gold}"/>

                    <Rectangle Height="1"
                               Fill="{StaticResource ModalBorder}"
                               Opacity="0.3"
                               Margin="0,4,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Word Lists"
                                Classes="btn-blue"
                                HorizontalAlignment="Stretch"
                                Click="OnWordListsClick"/>

                        <Button Grid.Column="2"
                                Content="Credits"
                                Classes="btn-orange"
                                HorizontalAlignment="Stretch"
                                Click="OnCreditsClick"/>
                    </Grid>
                </StackPanel>

                <!-- File Locations Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="FILE LOCATIONS"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource Gold}"/>

                    <Rectangle Height="1"
                               Fill="{StaticResource ModalBorder}"
                               Opacity="0.3"
                               Margin="0,4,0,12"/>

                    <TextBlock Text="Access important application directories"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="11"
                               Foreground="White"
                               Opacity="0.6"
                               Margin="0,0,0,6"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Open Filters Folder"
                                Classes="btn-blue"
                                HorizontalAlignment="Stretch"
                                Click="OnOpenFiltersDirectoryClick"/>

                        <Button Grid.Column="2"
                                Content="Open App Folder"
                                Classes="btn-blue"
                                HorizontalAlignment="Stretch"
                                Click="OnOpenAppDirectoryClick"/>
                    </Grid>
                </StackPanel>

                <!-- Info Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="ABOUT"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="18"
                               Foreground="{StaticResource Gold}"/>

                    <Rectangle Height="1"
                               Fill="{StaticResource ModalBorder}"
                               Opacity="0.3"
                               Margin="0,4,0,12"/>

                    <Border Padding="12"
                            Background="{StaticResource DarkBackground}"
                            CornerRadius="6">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Balatro Seed Oracle"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       Foreground="{StaticResource White}"/>

                            <TextBlock Text="A powerful seed filtering and analysis tool for Balatro"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="11"
                                       Foreground="White"
                                       Opacity="0.6"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="All features are enabled and ready to use."
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="11"
                                       Foreground="{StaticResource Green}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer removed - StandardModal provides the Back button -->
    </Grid>
</UserControl>
