<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Views.Modals.FilterCreationModal"
             x:DataType="vm:FilterCreationModalViewModel">

    <!-- Unified: Drop bespoke layout and host FilterSelectorControl -->
    <Grid Margin="20" RowDefinitions="*,Auto">
        <!-- Filter selector (MVVM) with its own left/right panels -->
        <components:FilterSelector Name="FilterSelector"/>

        <!-- Extra actions specific to creation modal -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12"
                    Margin="0,16,0,0">
            <Button Content="ðŸ“ IMPORT FROM JSON"
                    Classes="btn-blue"
                    Height="45"
                    MinWidth="280"
                    FontSize="13"
                    FontFamily="{StaticResource BalatroFont}"
                    Command="{Binding ImportJsonCommand}"/>
        </StackPanel>
    </Grid>

</UserControl>
