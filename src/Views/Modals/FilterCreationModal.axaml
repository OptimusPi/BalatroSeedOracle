<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Views.Modals.FilterCreationModal"
             x:DataType="vm:FilterCreationModalViewModel">

    <!-- BALATRO CHALLENGE STYLE: List on left, details on right -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>  <!-- Left: Filter list -->
            <ColumnDefinition Width="*"/>    <!-- Right: Details/Actions -->
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Filter List (like Balatro challenges) -->
        <Border Grid.Column="0"
                Background="{StaticResource ContainerDarkPrecise}"
                CornerRadius="12,0,0,12"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Filter List with numbered items -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="6">
                        <!-- SPECIAL ITEM #1: Create New Filter (always first) -->
                        <Button Classes="btn-green"
                                Height="50"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Command="{Binding CreateNewFilterCommand}"
                                CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="10,0">
                                <TextBlock Text="âœ¨" FontSize="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Create New Filter"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Divider -->
                        <Border Height="2" Background="{StaticResource Border}" Opacity="0.3" Margin="0,8,0,8"/>

                        <!-- Filter Items (Balatro challenge-style numbered list) -->
                        <ItemsControl ItemsSource="{Binding Filters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:FilterListItem">
                                    <Button Classes="btn-red"
                                            Height="45"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            Margin="0,2"
                                            CornerRadius="8"
                                            Click="OnFilterButtonClick"
                                            Tag="{Binding}">
                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="8,0">
                                            <!-- Number -->
                                            <TextBlock Text="{Binding Number}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="16"
                                                       Width="30"
                                                       VerticalAlignment="Center"/>
                                            <!-- Name -->
                                            <TextBlock Text="{Binding Name}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>

                <!-- Pagination (if needed in future) -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10"
                            Margin="0,15,0,0"
                            IsVisible="False">
                    <Button Content="â—€" Classes="btn-red" Width="50" Height="40"/>
                    <Border Background="{StaticResource Red}"
                            CornerRadius="5"
                            Padding="15,8">
                        <TextBlock Text="Page 1/1"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="White"/>
                    </Border>
                    <Button Content="â–¶" Classes="btn-red" Width="50" Height="40"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- RIGHT PANEL: Filter Details/Actions -->
        <Border Grid.Column="1"
                Background="{StaticResource DockGrey}"
                CornerRadius="0,12,12,0"
                Padding="40">
            <Grid>
                <!-- PLACEHOLDER: When no filter selected -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="20"
                        IsVisible="{Binding !HasSelectedFilter}">
                <TextBlock Text="Select a Filter"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="28"
                           Foreground="{StaticResource TextLight}"
                           HorizontalAlignment="Center"
                           Opacity="0.6"/>

                <TextBlock Text="or"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="18"
                           Foreground="{StaticResource TextLight}"
                           HorizontalAlignment="Center"
                           Opacity="0.4"/>

                <Button Content="âœ¨ CREATE NEW FILTER"
                        Classes="btn-green"
                        Height="60"
                        MinWidth="280"
                        FontSize="18"
                        FontFamily="{StaticResource BalatroFont}"
                        Command="{Binding CreateNewFilterCommand}"/>
            </StackPanel>

            <!-- FILTER DETAILS: When filter is selected -->
            <StackPanel Spacing="25"
                        IsVisible="{Binding HasSelectedFilter}">

                <!-- Filter Preview (from FilterSelector) -->
                <Border Background="{StaticResource DarkModalGrey}"
                        CornerRadius="8"
                        Padding="20"
                        MinHeight="200">
                    <StackPanel Spacing="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Filter name, image, description would go here -->
                        <TextBlock Text="{Binding SelectedFilterName}"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="24"
                                   Foreground="{StaticResource Gold}"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="{Binding SelectedFilterDescription}"
                                   FontSize="14"
                                   Foreground="{StaticResource TextLight}"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   MaxWidth="400"
                                   Opacity="0.8"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Spacing="12">
                    <!-- Primary Actions -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="15"
                                HorizontalAlignment="Center">
                        <Button Content="âœï¸ EDIT"
                                Classes="btn-blue"
                                Height="55"
                                MinWidth="180"
                                FontSize="16"
                                FontFamily="{StaticResource BalatroFont}"
                                Command="{Binding EditFilterCommand}"/>

                        <Button Content="ðŸ“‹ COPY"
                                Classes="btn-green"
                                Height="55"
                                MinWidth="180"
                                FontSize="16"
                                FontFamily="{StaticResource BalatroFont}"
                                Command="{Binding CloneFilterCommand}"/>
                    </StackPanel>

                    <!-- Secondary Actions -->
                    <StackPanel Spacing="10" HorizontalAlignment="Center">
                        <Button Content="ðŸ“ IMPORT FROM JSON"
                                Classes="btn-blue"
                                Height="45"
                                MinWidth="280"
                                FontSize="13"
                                FontFamily="{StaticResource BalatroFont}"
                                Command="{Binding ImportJsonCommand}"/>

                        <Button Content="ðŸ—‘ï¸ DELETE"
                                Classes="btn-red"
                                Height="40"
                                MinWidth="200"
                                FontSize="12"
                                FontFamily="{StaticResource BalatroFont}"
                                Command="{Binding DeleteFilterCommand}"
                                Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>
