<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Views.Modals.FilterCreationModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Border Background="{StaticResource SemiTransparentBlack}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="False" />
        
        <!-- Modal positioning grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style with enhanced animations -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource DockGrey}"
                    CornerRadius="20"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="600"
                    Height="500"
                    BoxShadow="0 8 24 #000000AA, 0 0 0 1 #FFFFFF22 inset"
                    ClipToBounds="False"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Transitions>
                    <Transitions>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="BackEaseOut"/>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Border.Transitions>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>   <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="60"/>   <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="FILTER CONFIGURATION"
                               FontFamily="{StaticResource BalatroFont}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Content area with PanelSpinner -->
                    <Grid Grid.Row="1" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Instructions -->
                        <TextBlock Grid.Row="0"
                                   Text="Select a filter template or start fresh"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource Silver}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Filter carousel using PanelSpinner -->
                        <controls:PanelSpinner Grid.Row="1" 
                                             Name="FilterSpinner"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                        
                        <!-- Action buttons -->
                        <StackPanel Grid.Row="2" 
                                    Spacing="12"
                                    Margin="0,20,0,0">
                            
                            <Button Name="CreateCopyButton"
                                    Content="Create a new COPY of this filter"
                                    Classes="btn-blue"
                                    Width="350"
                                    Height="45"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource BalatroFont}"
                                    FontSize="16"
                                    Click="OnCreateCopyClick"
                                    RenderTransformOrigin="0.5,0.5">
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Button.RenderTransform>
                            </Button>
                            
                            <Button Name="StartBlankButton"
                                    Content="Start with a BLANK filter"
                                    Classes="btn-green"
                                    Width="350"
                                    Height="45"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource BalatroFont}"
                                    FontSize="16"
                                    Click="OnStartBlankClick"/>
                        </StackPanel>
                    </Grid>

                    <!-- Footer with back button -->
                    <Button Grid.Row="2"
                            Name="CloseButton"
                            Content="Back"
                            Classes="back-button"
                            HorizontalAlignment="Stretch"
                            Margin="3"
                            Click="OnCloseButtonClick"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>