<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.TestModal1">
    
    <Grid Margin="40">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">
            <!-- Title -->
            <TextBlock Text="TEST MODAL 1" 
                       FontSize="32" 
                       Foreground="{StaticResource Gold}"
                       FontFamily="{StaticResource BalatroFont}"
                       HorizontalAlignment="Center"/>
            
            <!-- Description -->
            <TextBlock Text="Safe testing environment for new components" 
                       FontSize="16" 
                       Foreground="{StaticResource White}"
                       FontFamily="{StaticResource BalatroFont}"
                       HorizontalAlignment="Center"/>
            
            <!-- Test Area -->
            <Border Background="{StaticResource DarkBackground}" 
                    BorderThickness="0" 
                    CornerRadius="12" 
                    Padding="40"
                    MinWidth="500"
                    MinHeight="300">
                <Grid>
                    <TextBlock Text="ðŸ§ª Component testing area - Add your experimental components here!" 
                               FontSize="18" 
                               Foreground="{StaticResource ModalGrey}"
                               FontFamily="{StaticResource BalatroFont}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Test Button -->
            <Button Content="TEST BUTTON"
                    Classes="btn-green"
                    Height="50"
                    MinWidth="200"
                    FontSize="16"
                    FontFamily="{StaticResource BalatroFont}"
                    Click="OnTestButtonClick"/>
        </StackPanel>
    </Grid>
</UserControl>