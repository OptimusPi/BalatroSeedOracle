<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Semi-transparent background overlay -->
        <Border Background="#CC000000"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="True" />
        
        <!-- Modal positioning grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="#4f6367"
                    CornerRadius="20"
                    BorderBrush="#7A9E9F"
                    BorderThickness="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MaxWidth="1000"
                    MaxHeight="700"
                    BoxShadow="0 8 24 #000000">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="Auto"/> <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Header with title -->
                    <Border Grid.Row="0" 
                            Background="#374244"
                            CornerRadius="20,20,0,0">
                        <TextBlock x:Name="ModalTitle"
                                   Text="MODAL TITLE"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#FFFFFF"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,16"/>
                    </Border>

                    <!-- Content area -->
                    <Border Grid.Row="1"
                            Background="#374244"
                            Margin="3">
                        <ContentPresenter x:Name="ModalContent" 
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          Margin="20,10,20,10"/>
                    </Border>

                    <!-- Footer with back button -->
                    <Border Grid.Row="2"
                            Background="#374244"
                            CornerRadius="0,0,20,20"
                            Padding="20,10,20,20">
                        <Button x:Name="BackButton"
                                Content="Back"
                                Classes="back-button"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>