<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Semi-transparent background overlay -->
        <Border Background="{StaticResource SemiTransparentBlack}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="True" />
        
        <!-- Modal positioning grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource DockGrey}"
                    CornerRadius="20"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MaxWidth="1000"
                    MaxHeight="700"
                    BoxShadow="0 5 0 #777e89">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="Auto"/> <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Content area -->
                    <!-- Removed dark background - content shows on medium grey modal background -->
                            
                    <!-- Actual content -->
                    <ContentPresenter Grid.Row="0" 
                                      x:Name="ModalContent"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="4,4,4,2"/>

                    <!-- Footer with back button -->
                    <Border Grid.Row="1"
                            Background="{StaticResource DockGrey}"
                            BorderThickness="0"
                            CornerRadius="0,0,16,16"
                            Margin="3,0,3,3"
                            Padding="10,4,10,6">
                        <Button x:Name="BackButton"
                                Content="Back"
                                Classes="back-button"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>