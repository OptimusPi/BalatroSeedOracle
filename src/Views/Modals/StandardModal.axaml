<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Semi-transparent background overlay -->
        <Border Background="{StaticResource SemiTransparentBlack}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="True" />
        
        <!-- Modal positioning grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource DockGrey}"
                    CornerRadius="20"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    MaxWidth="1200"
                    MaxHeight="720"
                    BoxShadow="{StaticResource StandardModalShadow}"
                    ClipToBounds="False">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="Auto"/> <!-- Footer -->
                    </Grid.RowDefinitions>

                    <!-- Content area -->
                    <ContentPresenter Grid.Row="0" 
                                      x:Name="ModalContent"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="4,2,4,4"/>

                    <!-- Footer with back button -->
                    <Border Grid.Row="1"
                            Background="Transparent"
                            BorderThickness="0"
                            CornerRadius="0,0,16,16"
                            Margin="3,0,3,3"
                            Padding="10,0,10,6">
                        <Button x:Name="BackButton"
                                Content="Back"
                                Classes="back-button"
                                HorizontalAlignment="Stretch"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>