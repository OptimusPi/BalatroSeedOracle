<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with percentage-based margins -->
    <!-- Semi-transparent overlay -->
    <Border Background="#80000000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        
        <!-- Grid for percentage-based margins -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.03*"/>
                <RowDefinition Height="0.94*"/>
                <RowDefinition Height="0.03*"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container with proper Balatro styling -->
            <Border Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource DockGrey}"
                    CornerRadius="16"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="1"
                    Padding="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BoxShadow="0 2 6 #777e89">
                <Border Background="{StaticResource Black}" 
                        CornerRadius="10"
                        Padding="0">
            
            <Grid VerticalAlignment="Stretch" MinHeight="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/>    <!-- Content -->
                    <RowDefinition Height="Auto"/> <!-- Footer with back button -->
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <TextBlock Grid.Row="0" 
                           x:Name="ModalTitle"
                           Text="MODAL TITLE"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,10"/>

                <!-- Content Section -->
                <ContentPresenter Grid.Row="1"
                                  x:Name="ModalContent" 
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Margin="10"/>

                <!-- Footer Section with Back Button -->
                <StackPanel Grid.Row="2" 
                            Margin="5,5,5,5" 
                            Spacing="5">
                    <!-- Long yellow back button (always present) -->
                    <Button x:Name="BackButton"
                            Content="BACK"
                            Classes="back-button"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
            </Border>
            </Border>
        </Grid>
    </Border>
</UserControl>