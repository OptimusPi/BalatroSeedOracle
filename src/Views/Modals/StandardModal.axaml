<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Clickable overlay - click outside modal to close -->
        <Border x:Name="OverlayBackground"
                Background="{StaticResource SemiTransparentBlack}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsHitTestVisible="True" />

        <!-- Modal positioning grid -->
        <Grid x:Name="ModalContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style -->
            <Border x:Name="ModalBorder"
                    Grid.Column="1" Grid.Row="1"
                    Background="{StaticResource Grey}"
                    CornerRadius="20"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="1100"
                    Height="620"
                    BoxShadow="{StaticResource StandardModalShadow}"
                    ClipToBounds="False">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="60"/> <!-- Footer fixed height -->
                    </Grid.RowDefinitions>

                    <!-- Content area -->
                    <ContentPresenter Grid.Row="0"
                                      x:Name="ModalContent"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="0"/>

                    <!-- Footer with back button -->
                    <Button Grid.Row="1"
                            x:Name="BackButton"
                            Content="Back"
                            Classes="back-button"
                            HorizontalAlignment="Stretch"
                            Margin="3"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>