<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.StandardModal">
    
    <!-- Full screen modal with Balatro-style overlay -->
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!-- Modal positioning grid -->
        <Grid x:Name="ModalContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="45"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            
            <!-- Main modal container - Balatro style with subtle south edge -->
            <Grid x:Name="ModalSizeGrid"
                  Grid.Column="1" Grid.Row="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="1080"
                  Height="600">
                <!-- Silver south edge highlight (2px) -->
                <Border CornerRadius="12"
                        Margin="0,2,0,0"
                        BorderThickness="0,0,0,2"
                        BorderBrush="#C0C0C0"/>
                <!-- Main border with standard edge -->
                <Border x:Name="ModalBorder"
                        Background="{StaticResource ModalGrey}"
                        CornerRadius="12"
                        BorderBrush="{StaticResource ModalBorder}"
                        BorderThickness="4"
                        BoxShadow="{StaticResource StandardModalShadow}"
                        ClipToBounds="True"
                        Padding="4,4,4,4">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>    <!-- Content -->
                        <RowDefinition Height="52"/> <!-- Footer fixed height (reduced from 60) -->
                    </Grid.RowDefinitions>

                    <!-- Content area -->
                    <ContentPresenter Grid.Row="0"
                                      x:Name="ModalContent"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="0"/>

                    <!-- Footer with back button - narrower, shorter, tighter margins -->
                    <Button Grid.Row="1"
                            x:Name="BackButton"
                            Content="Back"
                            Classes="back-button"
                            HorizontalAlignment="Center"
                            Width="112"
                            Height="36"
                            Margin="0,2,0,6"/>

                </Grid>
            </Border>
        </Grid>
        </Grid>
    </Grid>

</UserControl>