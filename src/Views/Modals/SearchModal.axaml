<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Oracle.Controls"
             xmlns:components="using:Oracle.Components"
             x:Class="Oracle.Views.Modals.SearchModal">
    
    <UserControl.Styles>
        <!-- Modal content styles -->
        <Style Selector="Border.modal-content-panel">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="Border.modal-content-box">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Balatro-style tab buttons -->
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind button -->
                    <Grid>
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="Margin" Value="4,2,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Reduced shadow when pressed -->
                    <Grid>
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,2,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,2">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button.active">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <!-- Drop shadow behind button -->
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <!-- Button background -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button.active:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button.active:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="Margin" Value="4,2,4,0"/>
        </Style>
        <Style Selector="Button.tab-button:disabled">
            <Setter Property="Background" Value="{StaticResource RedDisabled}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind disabled button -->
                    <Grid>
                        <Border Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Content box style -->
        <Style Selector="Border.content-box">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
        </Style>
        
        <!-- Input field style matching Balatro -->
        <Style Selector="TextBox.balatro-input">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <!-- Small button style (like Browse) -->
        <Style Selector="Button.small-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.small-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Big COOK button style -->
        <Style Selector="Button.cook-button">
            <Setter Property="Background" Value="{StaticResource Green}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="MinWidth" Value="280"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.cook-button:pointerover">
            <Setter Property="Background" Value="{StaticResource PaleGreen}"/>
        </Style>
        <Style Selector="Button.cook-button.stop">
            <Setter Property="Background" Value="{StaticResource Red}"/>
        </Style>
        <Style Selector="Button.cook-button.stop:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        
        <!-- Terminal style for console -->
        <Style Selector="TextBox.terminal">
            <Setter Property="Background" Value="{StaticResource TerminalBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Filter description box -->
        <Style Selector="Border.filter-description">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="120"/>
        </Style>
        
        <!-- Widget preview box -->
        <Style Selector="Border.widget-preview">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
        
        <!-- Silver display badge for labels -->
        <Style Selector="Border.silver-badge">
            <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Dark grey container for dynamic values -->
        <Style Selector="Border.dark-value-container">
            <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Silver badge text -->
        <Style Selector="TextBlock.silver-badge-text">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Reusable nav arrow style (shadowed red block) -->
        <Style Selector="Button.nav-arrow">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border Background="{StaticResource DropShadow}" CornerRadius="4" Margin="0,2,0,0"/>
                        <Border Name="PART_Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="0,0,0,2">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.nav-arrow:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Triangle pointer -->
            <RowDefinition Height="Auto"/> <!-- Tabs -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- Triangle pointer above tabs -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148"/> <!-- Select Filter -->
                <ColumnDefinition Width="148"/> <!-- Settings -->
                <ColumnDefinition Width="148"/> <!-- Search -->
                <ColumnDefinition Width="148"/> <!-- Results -->
            </Grid.ColumnDefinitions>
            
            <!-- Triangle container with shadow and main triangle -->
            <Grid Grid.Column="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom">
                
                <!-- Drop shadow triangle -->
                <Polygon Points="10,20 20,5 0,5" 
                         Fill="{StaticResource SemiTransparentShadow}"
                         Margin="2,2,0,0"/>
                
                <!-- Main triangle that bounces -->
                <Polygon Name="TabTriangle"
                         Points="10,20 20,5 0,5" 
                         Fill="{StaticResource Red}">
                    <Polygon.Styles>
                        <Style Selector="Polygon">
                            <Style.Animations>
                                <Animation Duration="0:0:1.2" 
                                           IterationCount="Infinite"
                                           PlaybackDirection="Alternate"
                                           Easing="SineEaseInOut">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="Margin" Value="0,-8,0,8"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </Polygon.Styles>
                </Polygon>
            </Grid>
        </Grid>
        
        <!-- Tab buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,4,0,4">
            <Button Name="FilterTab" 
                    Content="Select Filter" 
                    Classes="tab-button active ActiveTab"
                    Click="OnTabClick"/>
            <Button Name="SettingsTab" 
                    Content="Settings" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="SearchTab" 
                    Content="Search" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="ResultsTab" 
                    Content="Results" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
        </StackPanel>
        
        <!-- Content area -->
        <Grid Grid.Row="2" Margin="24">
            
            <!-- Filter Selection Panel -->
            <Grid Name="FilterPanel" IsVisible="True">
                <components:FilterSelector Name="FilterSelector" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"
                                         FilterLoaded="OnFilterLoaded"
                                         NewFilterRequested="OnNewFilterRequested"/>
            </Grid>
            
            <!-- Settings Panel -->
            <StackPanel Name="SettingsPanel" IsVisible="False" Spacing="24">
                <!-- Inner dark panel like in Balatro -->
                <Border Classes="modal-content-panel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side: Search Settings -->
                        <StackPanel Grid.Column="0" Spacing="24">
                            <TextBlock Text="Search Parameters" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource Orange}"
                                       HorizontalAlignment="Center"/>
                            
                            <!-- Settings in a dark container -->
                            <Border Background="{StaticResource ContainerDarkPrecise}"
                                    CornerRadius="12"
                                    Padding="20">
                                <StackPanel Spacing="16" HorizontalAlignment="Center">
                                    <!-- Threads -->
                                    <controls:SpinnerControl Name="ThreadsSpinner" 
                                                            Label="CPU Threads"
                                                            Value="4" 
                                                            Minimum="1" 
                                                            Maximum="16"
                                                            ShadowDirection="south-east"/>
                                    
                                    <!-- Batch Size -->
                                    <controls:SpinnerControl Name="BatchSizeSpinner" 
                                                            Label="BATCH SIZE"
                                                            Value="3" 
                                                            Minimum="1" 
                                                            Maximum="4"
                                                            ShadowDirection="south-east"/>
                                    
                                    <!-- Min Score -->
                                    <controls:SpinnerControl Name="MinScoreSpinner" 
                                                            Label="MIN SCORE"
                                                            Value="0" 
                                                            Minimum="0" 
                                                            Maximum="5"
                                                            ShadowDirection="south-east"/>
                                    
                                    <CheckBox Name="DebugCheckBox" 
                                              Content="Enable Debug Output"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              FontFamily="{StaticResource BalatroFont}"
                                              FontSize="14"
                                              Margin="0,10"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Center divider -->
                        <Border Grid.Column="1" 
                                Width="2" 
                                Background="{StaticResource ModalBorder}"
                                Margin="0,24,0,0"/>
                        
                        <!-- Right side: Deck Options -->
                        <StackPanel Grid.Column="2" Spacing="24">
                            <TextBlock Text="Deck Options" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource Orange}"
                                       HorizontalAlignment="Center"/>
                            
                            <!-- Deck Selection Panel - Balatro Style -->
                            <StackPanel Spacing="16">
                        
                        <!-- Deck Selector Card -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                                <!-- Left Arrow -->
                                <Button Grid.Column="0" Name="DeckLeftArrow"
                                        Content="&lt;"
                                        Classes="nav-arrow"
                                        Width="40" Height="95"
                                        Margin="0,0,2,0"/>
                                
                                <!-- Right Arrow -->
                                <Button Grid.Column="2" Name="DeckRightArrow"
                                        Content="&gt;"
                                        Classes="nav-arrow"
                                        Width="40" Height="95"
                                        Margin="2,0,0,0"/>
                                
                                <!-- Deck Content with Border -->
                                <Border Grid.Column="1" 
                                        Background="{StaticResource ContainerDarkPrecise}"
                                        BorderBrush="{StaticResource ModalBorder}"
                                        BorderThickness="2"
                                        CornerRadius="12"
                                        Padding="12"
                                        MaxWidth="280">
                                    <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Deck Card Image with Stake Sticker Overlay -->
                                    <Grid Grid.Column="0">
                                        <Border Background="{StaticResource DockGrey}"
                                                CornerRadius="8"
                                                Width="71" Height="95"
                                                VerticalAlignment="Center">
                                            <Image Name="DeckPreviewImage"
                                                   Width="71" Height="95"
                                                   Stretch="Uniform"/>
                                        </Border>
                                        <!-- Stake Sticker Overlay -->
                                        <Image Name="StakeChipOverlay"
                                               Width="71" Height="95"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Stretch="Uniform"
                                               IsHitTestVisible="False"/>
                                    </Grid>
                                    
                                    <!-- Deck Info -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Name="DeckNameText"
                                                   Text="Red Deck"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource White}"/>
                                        <TextBlock Name="DeckDescText"
                                                   Text="+1 Discard every round"
                                                   FontSize="14"
                                                   Foreground="{StaticResource MediumGrey}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                            </StackPanel>
                            
                            <!-- Stake Selection Panel - Balatro Style -->
                            <StackPanel Spacing="16">
                                
                                <!-- Stake Display Panel with navigation arrows -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Left Arrow -->
                                    <Button Grid.Column="0" Name="StakeLeftArrow"
                                            Content="&lt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="80"
                                            Margin="0,0,2,0"/>
                                    
                                    <!-- Stake Content with Border -->
                                    <Border Grid.Column="1" 
                                            Background="{StaticResource ContainerDarkPrecise}"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            BorderThickness="2"
                                            CornerRadius="12"
                                            Padding="12"
                                            MaxWidth="280">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Stake Chip Visual -->
                                            <Canvas Grid.Column="0" 
                                                    Name="StakeChipsCanvas" 
                                                    Width="80" Height="80"
                                                    VerticalAlignment="Center">
                                                <!-- Chips will be added here programmatically -->
                                            </Canvas>
                                            
                                            <!-- Stake Info -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Name="StakeNameText" 
                                                           Text="White Stake"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource White}"/>
                                                <TextBlock Name="StakeDescText" 
                                                           Text="Base Difficulty"
                                                           FontSize="14"
                                                           Foreground="{StaticResource MediumGrey}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Right Arrow -->
                                    <Button Grid.Column="2" Name="StakeRightArrow"
                                            Content="&gt;"
                                            Classes="nav-arrow"
                                            Width="40" Height="80"
                                            Margin="2,0,0,0"/>
                                </Grid>
                                
                                <!-- Hidden spinner for value tracking -->
                                <controls:SpinnerControl Name="StakeSpinner" 
                                                        Label=""
                                                        SpinnerType="stake"
                                                        Value="0" 
                                                        Minimum="0" 
                                                        Maximum="7"
                                                        IsVisible="False"
                                                        HorizontalAlignment="Center"
                                                        ShadowDirection="south-east"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Search Panel -->
            <Grid Name="SearchPanel" IsVisible="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 3 Column Layout -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/> <!-- Left skinny column -->
                        <ColumnDefinition Width="*"/>   <!-- Fat middle column -->
                        <ColumnDefinition Width="180"/> <!-- Right skinny column -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column - Stats -->
                    <Border Grid.Column="0" 
                            Classes="modal-content-box"
                            Margin="0,0,6,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="STATS" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"/>
                            
                            <StackPanel Spacing="8">
                                <!-- Progress -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Progress" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="ProgressPercentText"
                                                   Text="0%"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource Yellow}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Batches -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Batches" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="BatchesText"
                                                   Text="0"
                                                   FontSize="14"
                                                   Foreground="{StaticResource LightCream}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Seeds -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Seeds Searched" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="TotalSeedsText"
                                                   Text="0"
                                                   FontSize="14"
                                                   Foreground="{StaticResource LightCream}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Time -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Time Elapsed" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="TimeElapsedText"
                                                   Text="00:00:00"
                                                   FontSize="14"
                                                   Foreground="{StaticResource LightCream}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Results Found -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Results Found" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="ResultsFoundText"
                                                   Text="0"
                                                   FontSize="14"
                                                   Foreground="{StaticResource Green}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Middle Column - Console -->
                    <Border Grid.Column="1" 
                            Classes="modal-content-box"
                            Margin="6,0">
                        <StackPanel Spacing="16">
                            <TextBlock Text="CONSOLE" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PaleOrange}"
                                       HorizontalAlignment="Center"/>
                            
                            <ScrollViewer Height="400" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                                <TextBox Name="ConsoleOutput" 
                                         Classes="terminal" 
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         TextWrapping="NoWrap"
                                         Text="> Motely Search Console&#x0a;> Ready for Jimbo to cook...&#x0a;"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Column - Speedometer -->
                    <Border Grid.Column="2" 
                            Classes="modal-content-box"
                            Margin="6,0,0,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="SPEED" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource Gold}"
                                       HorizontalAlignment="Center"/>
                            
                            <!-- Speedometer Visual -->
                            <Grid Height="140" Width="140">
                                <!-- Background circle -->
                                <Ellipse Width="140" Height="140"
                                         Fill="{StaticResource ContainerDarkPrecise}"
                                         Stroke="{StaticResource ModalBorder}"
                                         StrokeThickness="2"/>
                                
                                <!-- Speed arc background -->
                                <Path Name="SpeedArcBackground"
                                      Stroke="{StaticResource DarkGray}"
                                      StrokeThickness="12"
                                      StrokeLineCap="Round"
                                      Data="M 30,110 A 55,55 0 0 1 110,110"/>
                                
                                <!-- Speed arc (will be updated dynamically) -->
                                <Path Name="SpeedArc"
                                      Stroke="{StaticResource Green}"
                                      StrokeThickness="12"
                                      StrokeLineCap="Round"
                                      Data="M 30,110 A 55,55 0 0 1 30,110"/>
                                
                                <!-- Center circle -->
                                <Ellipse Width="60" Height="60"
                                         Fill="{StaticResource DockGrey}"
                                         Stroke="{StaticResource Gold}"
                                         StrokeThickness="2"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                                
                                <!-- Speed text -->
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Name="SpeedValueText"
                                               Text="0"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource Yellow}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="seeds/s"
                                               FontSize="10"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Speed stats -->
                            <StackPanel Spacing="8">
                                <!-- Current Speed -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Current" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="CurrentSpeedText"
                                                   Text="0 seeds/s"
                                                   FontSize="14"
                                                   Foreground="{StaticResource Green}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Average Speed -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Average" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="AverageSpeedText"
                                                   Text="0 seeds/s"
                                                   FontSize="14"
                                                   Foreground="{StaticResource LightCream}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Peak Speed -->
                                <Border Classes="dark-value-container">
                                    <StackPanel>
                                        <TextBlock Text="Peak" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource MediumGrey}"/>
                                        <TextBlock Name="PeakSpeedText"
                                                   Text="0 seeds/s"
                                                   FontSize="14"
                                                   Foreground="{StaticResource Yellow}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Bottom Controls -->
                <Grid Grid.Row="1" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1"
                            Name="CookButton"
                            Content="Let Jimbo COOK!"
                            Classes="cook-button"
                            IsEnabled="False"
                            Click="OnCookClick"
                            Margin="0,0,6,0"/>
                    
                    <Button Grid.Column="2"
                            Content="Clear Console"
                            Classes="small-button"
                            Click="OnClearConsoleClick"
                            Margin="6,0,0,0"/>
                </Grid>
            </Grid>
            
            <!-- Results Panel -->
            <StackPanel Name="ResultsPanel" IsVisible="False" Spacing="24">
                <!-- Inner dark panel like in Balatro -->
                <Border Classes="modal-content-panel">
                    <StackPanel Spacing="24">
                        <TextBlock Text="SEARCH RESULTS" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource Blue}"
                                   HorizontalAlignment="Center"/>
                        
                        <!-- Test TextBlock to verify visibility -->
                        <TextBlock Text="DataGrid should appear below:" 
                                   Foreground="{StaticResource Yellow}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,10"/>
                        
                        <!-- Results DataGrid -->
                        <DataGrid Name="ResultsDataGrid"
                                          Height="350"
                                          AutoGenerateColumns="False"
                                          CanUserResizeColumns="True"
                                          CanUserReorderColumns="False"
                                          CanUserSortColumns="True"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="1"
                                          BorderBrush="{StaticResource ModalBorder}"
                                          Background="{StaticResource DockGrey}"
                                          RowBackground="{StaticResource DockGrey}"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          SelectionMode="Single">
                                    <DataGrid.Styles>
                                        <Style Selector="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
                                            <Setter Property="Foreground" Value="{StaticResource White}"/>
                                            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="Height" Value="32"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                        </Style>
                                        <Style Selector="DataGridRow">
                                            <Setter Property="MinHeight" Value="28"/>
                                            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
                                        </Style>
                                        <Style Selector="DataGridRow:nth-child(2n)">
                                            <Setter Property="Background" Value="{StaticResource DropShadow}"/>
                                        </Style>
                                        <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
                                            <Setter Property="Fill" Value="{StaticResource ModalBorder}"/>
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </Style>
                                        <Style Selector="DataGridRow:selected /template/ Rectangle#BackgroundRectangle">
                                            <Setter Property="Fill" Value="{StaticResource Blue}"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Style>
                                        <Style Selector="DataGridCell">
                                            <Setter Property="Foreground" Value="{StaticResource White}"/>
                                            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Padding" Value="8,4"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </DataGrid.Styles>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Seed" 
                                                            Binding="{Binding Seed}" 
                                                            Width="120"/>
                                        <DataGridTextColumn Header="Score" 
                                                            Binding="{Binding Score, StringFormat={}{0:F1}}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Time" 
                                                            Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" 
                                                            Width="90"/>
                                        <DataGridTextColumn Header="Details" 
                                                            Binding="{Binding Details}" 
                                                            Width="*"
                                                            MinWidth="200"/>
                                        <DataGridTemplateColumn Header="Actions" 
                                                                Width="80"
                                                                CanUserResize="False">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Copy"
                                                            Command="{Binding CopyCommand}"
                                                            CommandParameter="{Binding Seed}"
                                                            Background="{StaticResource Blue}"
                                                            Foreground="{StaticResource White}"
                                                            FontFamily="{StaticResource BalatroFont}"
                                                            FontSize="12"
                                                            Height="24"
                                                            Padding="8,2"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Cursor="Hand"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                        
                        <!-- Results summary -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Spacing="20">
                            <TextBlock Name="ResultsSummary"
                                       Text="Found 0 results"
                                       FontSize="16"
                                       Foreground="{StaticResource Yellow}"/>
                            <Button Name="ExportResultsButton"
                                    Content="Export to CSV"
                                    Classes="menu-button"
                                    IsEnabled="False"
                                    Click="OnExportResultsClick"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>