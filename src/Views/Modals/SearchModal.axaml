<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Views.Modals.SearchModal"
             x:DataType="vm:SearchModalViewModel">

    <!-- Layout: header tabs on top, content area below -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Balatro-style button tabs with bouncing triangle indicator -->
        <components:BalatroTabControl Name="TabHeader"
                                      Grid.Row="0"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,2"/>

        <!-- Content area (Balatro modal styling) -->
        <Border Grid.Row="1"
                Background="{StaticResource DarkModalGrey}"
                BorderThickness="0"
                CornerRadius="0,0,12,12"
                Padding="20"
                Margin="0,8,0,0">
            <ScrollViewer>
                <!-- Show the selected tabâ€™s content -->
                <ContentPresenter Content="{Binding CurrentTabContent}"/>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
