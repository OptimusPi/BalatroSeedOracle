<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:components="using:BalatroSeedOracle.Components"
             x:Class="BalatroSeedOracle.Views.Modals.SearchModal">
    
    <UserControl.Styles>
        <!-- Modal content styles -->
        <Style Selector="Border.modal-content-panel">
            <Setter Property="Background" Value="{StaticResource GreyDarker}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Border.modal-content-box">
            <Setter Property="Background" Value="{StaticResource GreyDarker}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Balatro-style tab buttons -->
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <!-- Use global scalable font size -->
            <Setter Property="FontSize" Value="{StaticResource TabButtonFontSize}"/>
            <!-- Remove fixed Height so font can dictate height; keep a sensible minimum -->
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="144"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind button -->
                    <Grid>
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="RenderTransform" Value="translateY(3px)"/>
        </Style>
        <Style Selector="Button.tab-button:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="Button.tab-button.active">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <!-- Drop shadow behind button -->
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <!-- Button background -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button.active:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button.active:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="RenderTransform" Value="translateY(3px)"/>
        </Style>
        <Style Selector="Button.tab-button.active:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="Button.tab-button:disabled">
            <Setter Property="Background" Value="{StaticResource RedDisabled}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind disabled button -->
                    <Grid>
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Content box style -->
        <Style Selector="Border.content-box">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
        </Style>
        
        <!-- Input field style matching Balatro -->
        <Style Selector="TextBox.balatro-input">
            <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <!-- Small button style (like Browse) -->
        <Style Selector="Button.small-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.small-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Big COOK button style -->
        <Style Selector="Button.cook-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="36"/>
            
            <Setter Property="Height" Value="64"/>
            <Setter Property="MinWidth" Value="280"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.cook-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        <Style Selector="Button.cook-button.stop">
            <Setter Property="Background" Value="{StaticResource Red}"/>
        </Style>
        <Style Selector="Button.cook-button.stop:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        
        <!-- Terminal style for console -->
        <Style Selector="TextBox.terminal">
            <Setter Property="Background" Value="{StaticResource TerminalGrey}"/>
            <Setter Property="Foreground" Value="{StaticResource Green}"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Filter description box -->
        <Style Selector="Border.filter-description">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="120"/>
        </Style>
        
        <!-- Widget preview box -->
        <Style Selector="Border.widget-preview">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
        
        <!-- Silver display badge for labels -->
        <Style Selector="Border.silver-badge">
            <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Dark grey container for dynamic values - alternates color when nested -->
        <Style Selector="Border.dark-value-container">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Silver badge text -->
        <Style Selector="TextBlock.silver-badge-text">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            
            <Setter Property="Foreground" Value="{StaticResource GreyDarker}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Header button style for sortable columns -->
        <Style Selector="Button.header-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.header-button:pointerover">
            <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
        </Style>
        
        <!-- Reusable nav arrow style (shadowed red block) -->
        <Style Selector="Button.nav-arrow">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="32"/>
            
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border Background="{StaticResource DropShadow}" CornerRadius="4" Margin="0,2,0,0"/>
                        <Border Name="PART_Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="0,0,0,2">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.nav-arrow:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/> <!-- Triangle pointer fixed -->
            <RowDefinition Height="60"/> <!-- Tabs fixed -->
            <RowDefinition Height="*"/>    <!-- Content stretches -->
        </Grid.RowDefinitions>
        
        <!-- Triangle pointer above tabs -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148"/> <!-- Select Filter -->
                <ColumnDefinition Width="148"/> <!-- Settings -->
                <ColumnDefinition Width="148"/> <!-- Search -->
                <ColumnDefinition Width="148"/> <!-- Results -->
            </Grid.ColumnDefinitions>
            
            <!-- Triangle container with shadow and main triangle -->
            <Grid Grid.Column="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom">
                
                <!-- Drop shadow triangle -->
                <Polygon Points="10,20 20,5 0,5" 
                         Fill="{StaticResource SemiTransparentShadow}"
                         Margin="2,2,0,0"/>
                
                <!-- Main triangle that bounces -->
                <Polygon Name="TabTriangle"
                         Points="10,20 20,5 0,5" 
                         Fill="{StaticResource Red}">
                    <Polygon.Styles>
                        <Style Selector="Polygon">
                            <Style.Animations>
                                <Animation Duration="0:0:1.2" 
                                           IterationCount="Infinite"
                                           PlaybackDirection="Alternate"
                                           Easing="SineEaseInOut">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="Margin" Value="0,-8,0,8"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </Polygon.Styles>
                </Polygon>
            </Grid>
        </Grid>
        
        <!-- Tab buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,4,0,4">
            <Button Name="FilterTab" 
                    Content="Select Filter" 
                    Classes="tab-button active ActiveTab"
                    Click="OnTabClick"/>
            <Button Name="SettingsTab" 
                    Content="Deck/Stake" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="SearchTab" 
                    Content="Search" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="ResultsTab" 
                    Content="Results" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
        </StackPanel>
        
        <!-- Content area -->
        <Grid Grid.Row="2">
            
            <!-- Filter Selection Panel -->
            <Grid Name="FilterPanel" IsVisible="True">
                <Grid MaxWidth="600" HorizontalAlignment="Center" Margin="40">
                    <components:ChallengesFilterSelector Name="FilterSelector" 
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Stretch"
                                                         FilterSelected="OnFilterSelected"/>
                </Grid>
            </Grid>
            
            <!-- Settings Panel (now just Deck/Stake) -->
            <Grid Name="SettingsPanel" IsVisible="False">
                <Grid MaxWidth="600" HorizontalAlignment="Center" Margin="40">
                    <!-- Deck and Stake Selection -->
                    <components:DeckAndStakeSelector Name="DeckAndStakeSelector" 
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                </Grid>
            </Grid>
            
            <!-- Search Panel -->
            <Grid Name="SearchPanel" IsVisible="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Current Filter Display -->
                <Border Grid.Row="0" 
                        Classes="modal-content-box"
                        Margin="10,10,10,4"
                        Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="Active Filter:"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource MediumGrey}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Name="ActiveFilterNameText"
                                   Text="No filter loaded"
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource LightCream}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- 3 Column Layout -->
                <Grid Grid.Row="1" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/> <!-- Left column for parameters -->
                        <ColumnDefinition Width="*"/>   <!-- Middle for console -->
                        <ColumnDefinition Width="200"/> <!-- Right column for stats -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column - Search Parameters -->
                    <Border Grid.Column="0" 
                            Classes="modal-content-box"
                            Margin="0,0,6,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Spacing="10">
                                <!-- Threads -->
                                <controls:SpinnerControl Name="ThreadsSpinner" 
                                                        Label="CPU Threads"
                                                        Value="8" 
                                                        Minimum="1" 
                                                        Maximum="32"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Batch Size -->
                                <controls:SpinnerControl Name="BatchSizeSpinner" 
                                                        Label="Batch Size (35^n)"
                                                        Value="2" 
                                                        Minimum="0" 
                                                        Maximum="3"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Min Score -->
                                <controls:SpinnerControl Name="MinScoreSpinner" 
                                                        Label="Min Score"
                                                        SpinnerType="min-score"
                                                        Value="0" 
                                                        Minimum="0" 
                                                        Maximum="5"
                                                        AllowAuto="True"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Debug seed input -->
                                <StackPanel Orientation="Vertical" Margin="0,10,0,5">
                                    <TextBlock Text="Debug Seed:"
                                               FontFamily="{StaticResource BalatroFont}"
                                               FontSize="11"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,4"/>
                                    <TextBox Name="DebugSeedInput"
                                             Watermark="Enter seed..."
                                             MaxLength="8"
                                             Width="140"
                                             Height="32"
                                             HorizontalAlignment="Center"
                                             FontFamily="{StaticResource BalatroFont}"
                                             FontSize="14"
                                             TextAlignment="Center"
                                             Background="{StaticResource VeryDarkGrey}"
                                             BorderBrush="{StaticResource DarkBorder}"
                                             BorderThickness="1"
                                             IsEnabled="False"
                                             CornerRadius="4"
                                             GotFocus="OnDebugSeedGotFocus"
                                             TextChanged="OnDebugSeedTextChanged"/>
                                </StackPanel>
                                
                                <!-- Debug checkbox -->
                                <CheckBox Name="DebugCheckBox" 
                                          Content="Debug Mode"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          FontFamily="{StaticResource BalatroFont}"
                                          FontSize="12"
                                          Margin="0,5,0,10"
                                          Checked="OnDebugModeChecked"
                                          Unchecked="OnDebugModeUnchecked"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Middle Column - Console -->
                    <Border Grid.Column="1" 
                            Classes="modal-content-box"
                            Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBox Grid.Row="0"
                                     Name="ConsoleOutput" 
                                     Classes="terminal" 
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="NoWrap"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     Text="> Motely Search Console&#x0a;> Ready for Jimbo to cook...&#x0a;"/>
                            
                            <!-- JSON Validation Status -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource ContainerDarkPrecise}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="0,1,0,0"
                                    Padding="8,4"
                                    Margin="0,4,0,0">
                                <TextBlock Name="JsonValidationStatus"
                                           Text="JSON: Valid ✓"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"
                                           Foreground="{StaticResource Green}"
                                           HorizontalAlignment="Left"/>
                            </Border>
                            
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Spacing="8"
                                        Margin="0,8,0,0">
                                <Button Name="CookButton"
                                        Content="Let Jimbo COOK!"
                                        Classes="cook-button"
                                        IsEnabled="False"
                                        Click="OnCookClick"/>
                                <Button Content="Clear Console"
                                        Classes="small-button"
                                        Click="OnClearConsoleClick"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Right Column - Stats -->
                    <Border Grid.Column="2" 
                            Classes="modal-content-box"
                            Margin="6,0,0,0">
                        <StackPanel Spacing="8">
                            <!-- Progress -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Progress" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="ProgressPercentText"
                                               Text="0%"
                                               FontSize="14"
                                               
                                               Foreground="{StaticResource Yellow}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Speed -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Speed" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="SpeedText"
                                               Text="0 seeds/s"
                                               FontSize="14"
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Current Batch -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Current Batch" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="CurrentBatchText"
                                               Text="0"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Total Batches -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Max Batch" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="TotalBatchesText"
                                               Text="0"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Seeds Searched -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Seeds" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="TotalSeedsText"
                                               Text="0"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Time -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Time" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="TimeElapsedText"
                                               Text="00:00:00"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <!-- ETA -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="ETA" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="EtaText"
                                               Text="--:--:--"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Results Found -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Found" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="ResultsFoundText"
                                               Text="0"
                                               FontSize="16"
                                               
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Rate (numeric percent) -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Rate" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="RarityText"
                                               Text="0.000000%"
                                               FontSize="14"
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <!-- Rarity (categorical string) -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Rarity" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="RarityStringText"
                                               Text="boring"
                                               FontSize="14"
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Results Panel -->
            <Grid Name="ResultsPanel" IsVisible="False" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Filter controls -->
                    <RowDefinition Height="*" MinHeight="450"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Filter controls -->
                <Border Grid.Row="0" 
                        Background="{StaticResource GreyDarker}"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Filter:" 
                                   FontFamily="{StaticResource BalatroFont}"
                                   FontSize="14"
                                   Foreground="{StaticResource White}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" 
                                 Name="ResultsFilterTextBox"
                                 Classes="balatro-input"
                                 Height="32"
                                 Watermark="Filter by seed name..."
                                 FontSize="14"/>
                        <Button Grid.Column="2"
                                Name="ClearFilterButton"
                                Content="Clear"
                                Classes="small-button"
                                Height="32"
                                Margin="10,0,0,0"
                                Click="OnClearFilterClick"/>
            <Button Grid.Column="3"
                Name="RefreshResultsButton"
                Content="Refresh"
                Classes="small-button"
                Height="32"
                Margin="10,0,0,0"
                Click="OnRefreshResultsClick"/>
            <Button Grid.Column="4"
                Name="PopOutButton"
                Classes="small-button"
                IsEnabled="False"
                Height="32"
                Margin="10,0,0,0"
                ToolTip.Tip="Open in Advanced View"
                Click="OnPopOutClick">
                <StackPanel Orientation="Horizontal" Spacing="3">
                    <TextBlock Text="↗" FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock Text="Advanced" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
                    </Grid>
                </Border>
                
                <!-- Results Table Container -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource GreyDarker}"
                                BorderBrush="{StaticResource ModalBorder}"
                                BorderThickness="2,2,2,1">
                            <Grid Name="ResultsHeaderGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="132"/>  <!-- Seed (was 120) -->
                                    <ColumnDefinition Width="92"/>   <!-- Total (was 80) -->
                                    <ColumnDefinition Width="*"/>    <!-- Dynamic tally columns -->
                                    <ColumnDefinition Width="92"/>   <!-- Action (was 80) -->
                                </Grid.ColumnDefinitions>
                                
                                <Button Grid.Column="0" 
                                        Name="SortSeedButton"
                                        Classes="header-button"
                                        Click="OnSortBySeed">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Seed" 
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource Gold}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Name="SeedSortIndicator"
                                                   Text=" ▼" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource Gold}"
                                                   VerticalAlignment="Center"
                                                   IsVisible="False"/>
                                    </StackPanel>
                                </Button>
                                           
                                <Button Grid.Column="1" 
                                        Name="SortScoreButton"
                                        Classes="header-button"
                                        Click="OnSortByScore">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Total" 
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource Gold}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Name="ScoreSortIndicator"
                                                   Text=" ▼" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource Gold}"
                                                   VerticalAlignment="Center"
                                                   IsVisible="True"/>
                                    </StackPanel>
                                </Button>
                                           
                                <!-- Dynamic tally score headers will be added here -->
                                <ScrollViewer Grid.Column="2"
                                              HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Disabled"
                                              Margin="0">
                                    <StackPanel Name="TallyHeadersPanel"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"/>
                                </ScrollViewer>
                                           
                                <TextBlock Grid.Column="3" Text="Action" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="14"
                                           Foreground="{StaticResource Gold}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="8,4"/>
                            </Grid>
                        </Border>
                        
                        <!-- Table Body -->
                        <ItemsControl Grid.Row="1" 
                                      Name="ResultsItemsControl"
                                      ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!-- Virtualizing stack for better performance -->
                                    <VirtualizingStackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource DockGrey}"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            BorderThickness="2,0,2,1">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
                                            </Style>
                                        </Border.Styles>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="132"/>  <!-- Seed (was 120) -->
                                                <ColumnDefinition Width="92"/>   <!-- Total (was 80) -->
                                                <ColumnDefinition Width="*"/>    <!-- Dynamic tally columns -->
                                                <ColumnDefinition Width="92"/>   <!-- Action (was 80) -->
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Seed}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource White}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8,4"/>
                                                       
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Score, StringFormat='{}{0:F1}'}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource White}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8,4"/>
                                                       
                                            <!-- Dynamic tally scores will be added here -->
                                            <ItemsControl Grid.Column="2" 
                                                          ItemsSource="{Binding TallyScores}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource White}"
                                                                   Width="{DynamicResource TallyColumnWidth}"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Margin="2,4"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                                       
                                            <Button Grid.Column="3"
                                                    Content="COPY"
                                                    Classes="btn-blue"
                                                    FontSize="10"
                                                    Padding="8,2"
                                                    Height="24"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Click="OnCopySeedClick"
                                                    Tag="{Binding Seed}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
                
                <!-- Footer -->
                <Border Grid.Row="2"
                        Background="{StaticResource GreyDarker}"
                        Padding="8"
                        BorderThickness="0,2,0,0"
                        BorderBrush="{StaticResource ModalBorder}"
                        Margin="0,0,0,120">
                    <Grid>
                        <TextBlock Name="ResultsSummary"
                                   Text="No results yet"
                                   FontSize="12"
                                   Foreground="{StaticResource Yellow}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Name="ExportResultsButton"
                    Content="Export Results for Excel/CSV"
                    Classes="btn-green"
                    IsEnabled="False"
                    HorizontalAlignment="Right"
                    Click="OnExportResultsClick"/>
            </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>