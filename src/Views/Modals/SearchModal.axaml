<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Oracle.Controls"
             xmlns:components="using:Oracle.Components"
             x:Class="Oracle.Views.Modals.SearchModal">
    
    <UserControl.Styles>
        <!-- Modal content styles -->
        <Style Selector="Border.modal-content-panel">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Border.modal-content-box">
            <Setter Property="Background" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Balatro-style tab buttons -->
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="20"/>
            
            <Setter Property="Height" Value="50"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind button -->
                    <Grid>
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="RenderTransform" Value="translateY(3px)"/>
        </Style>
        <Style Selector="Button.tab-button:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="Button.tab-button.active">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <!-- Drop shadow behind button -->
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <!-- Button background -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.tab-button.active:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        <Style Selector="Button.tab-button.active:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
            <Setter Property="RenderTransform" Value="translateY(3px)"/>
        </Style>
        <Style Selector="Button.tab-button.active:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
        <Style Selector="Button.tab-button:disabled">
            <Setter Property="Background" Value="{StaticResource RedDisabled}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Margin" Value="4,0,4,4"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <!-- Drop shadow behind disabled button -->
                    <Grid>
                        <Border Name="DropShadow" Background="{StaticResource DropShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                              TextBlock.FontSize="{TemplateBinding FontSize}"
                                              TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <!-- Content box style -->
        <Style Selector="Border.content-box">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
        </Style>
        
        <!-- Input field style matching Balatro -->
        <Style Selector="TextBox.balatro-input">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <!-- Small button style (like Browse) -->
        <Style Selector="Button.small-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.small-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        
        <!-- Big COOK button style -->
        <Style Selector="Button.cook-button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="36"/>
            
            <Setter Property="Height" Value="64"/>
            <Setter Property="MinWidth" Value="280"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.cook-button:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>
        <Style Selector="Button.cook-button.stop">
            <Setter Property="Background" Value="{StaticResource Red}"/>
        </Style>
        <Style Selector="Button.cook-button.stop:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
        
        <!-- Terminal style for console -->
        <Style Selector="TextBox.terminal">
            <Setter Property="Background" Value="{StaticResource TerminalBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TerminalGreen}"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <!-- Filter description box -->
        <Style Selector="Border.filter-description">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="120"/>
        </Style>
        
        <!-- Widget preview box -->
        <Style Selector="Border.widget-preview">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="{StaticResource ModalBoxShadow}"/>
            <Setter Property="MinHeight" Value="200"/>
        </Style>
        
        <!-- Silver display badge for labels -->
        <Style Selector="Border.silver-badge">
            <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Dark grey container for dynamic values - alternates color when nested -->
        <Style Selector="Border.dark-value-container">
            <Setter Property="Background" Value="{StaticResource DockGrey}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Silver badge text -->
        <Style Selector="TextBlock.silver-badge-text">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            
            <Setter Property="Foreground" Value="{StaticResource DarkerGrey}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Reusable nav arrow style (shadowed red block) -->
        <Style Selector="Button.nav-arrow">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="32"/>
            
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid>
                        <Border Background="{StaticResource DropShadow}" CornerRadius="4" Margin="0,2,0,0"/>
                        <Border Name="PART_Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="0,0,0,2">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.nav-arrow:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="{StaticResource RedHover}"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Triangle pointer -->
            <RowDefinition Height="Auto"/> <!-- Tabs -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- Triangle pointer above tabs -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148"/> <!-- Select Filter -->
                <ColumnDefinition Width="148"/> <!-- Settings -->
                <ColumnDefinition Width="148"/> <!-- Search -->
                <ColumnDefinition Width="148"/> <!-- Results -->
            </Grid.ColumnDefinitions>
            
            <!-- Triangle container with shadow and main triangle -->
            <Grid Grid.Column="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom">
                
                <!-- Drop shadow triangle -->
                <Polygon Points="10,20 20,5 0,5" 
                         Fill="{StaticResource SemiTransparentShadow}"
                         Margin="2,2,0,0"/>
                
                <!-- Main triangle that bounces -->
                <Polygon Name="TabTriangle"
                         Points="10,20 20,5 0,5" 
                         Fill="{StaticResource Red}">
                    <Polygon.Styles>
                        <Style Selector="Polygon">
                            <Style.Animations>
                                <Animation Duration="0:0:1.2" 
                                           IterationCount="Infinite"
                                           PlaybackDirection="Alternate"
                                           Easing="SineEaseInOut">
                                    <KeyFrame Cue="0%">
                                        <Setter Property="Margin" Value="0,0,0,0"/>
                                    </KeyFrame>
                                    <KeyFrame Cue="100%">
                                        <Setter Property="Margin" Value="0,-8,0,8"/>
                                    </KeyFrame>
                                </Animation>
                            </Style.Animations>
                        </Style>
                    </Polygon.Styles>
                </Polygon>
            </Grid>
        </Grid>
        
        <!-- Tab buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,4,0,4">
            <Button Name="FilterTab" 
                    Content="Select Filter" 
                    Classes="tab-button active ActiveTab"
                    Click="OnTabClick"/>
            <Button Name="SettingsTab" 
                    Content="Deck/Stake" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="SearchTab" 
                    Content="Search" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
            <Button Name="ResultsTab" 
                    Content="Results" 
                    Classes="tab-button InactiveTab"
                    IsEnabled="False"
                    Click="OnTabClick"/>
        </StackPanel>
        
        <!-- Content area -->
        <Grid Grid.Row="2">
            
            <!-- Filter Selection Panel -->
            <Grid Name="FilterPanel" IsVisible="True">
                <Grid MaxWidth="600" HorizontalAlignment="Center" Margin="40">
                    <components:FilterSelector Name="FilterSelector" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Stretch"
                                             AutoLoadEnabled="False"
                                             FilterLoaded="OnFilterLoaded"
                                             NewFilterRequested="OnNewFilterRequested"/>
                </Grid>
            </Grid>
            
            <!-- Settings Panel (now just Deck/Stake) -->
            <Grid Name="SettingsPanel" IsVisible="False">
                <Grid MaxWidth="600" HorizontalAlignment="Center" Margin="40">
                    <!-- Deck and Stake Selection -->
                    <components:DeckAndStakeSelector Name="DeckAndStakeSelector" 
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                </Grid>
            </Grid>
            
            <!-- Search Panel -->
            <Grid Name="SearchPanel" IsVisible="False">
                <!-- 3 Column Layout -->
                <Grid Margin="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/> <!-- Left column for parameters -->
                        <ColumnDefinition Width="*"/>   <!-- Middle for console -->
                        <ColumnDefinition Width="200"/> <!-- Right column for stats -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column - Search Parameters -->
                    <Border Grid.Column="0" 
                            Classes="modal-content-box"
                            Margin="0,0,6,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Spacing="10">
                                <!-- Threads -->
                                <controls:SpinnerControl Name="ThreadsSpinner" 
                                                        Label="Threads"
                                                        Value="4" 
                                                        Minimum="1" 
                                                        Maximum="16"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Batch Size -->
                                <controls:SpinnerControl Name="BatchSizeSpinner" 
                                                        Label="Batch"
                                                        Value="3" 
                                                        Minimum="1" 
                                                        Maximum="4"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Min Score -->
                                <controls:SpinnerControl Name="MinScoreSpinner" 
                                                        Label="Min Score"
                                                        Value="0" 
                                                        Minimum="0" 
                                                        Maximum="5"
                                                        HorizontalAlignment="Stretch"
                                                        ShadowDirection="south-east"/>
                                
                                <!-- Debug checkbox -->
                                <CheckBox Name="DebugCheckBox" 
                                          Content="Debug Mode"
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          FontFamily="{StaticResource BalatroFont}"
                                          FontSize="12"
                                          Margin="0,10"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Middle Column - Console -->
                    <Border Grid.Column="1" 
                            Classes="modal-content-box"
                            Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollViewer Grid.Row="0" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                                <TextBox Name="ConsoleOutput" 
                                             Classes="terminal" 
                                             IsReadOnly="True"
                                             AcceptsReturn="True"
                                             TextWrapping="NoWrap"
                                             Text="> Motely Search Console&#x0a;> Ready for Jimbo to cook...&#x0a;"/>
                            </ScrollViewer>
                            
                            <!-- JSON Validation Status -->
                            <Border Grid.Row="1"
                                    Background="{StaticResource ContainerDarkPrecise}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="0,1,0,0"
                                    Padding="8,4"
                                    Margin="0,4,0,0">
                                <TextBlock Name="JsonValidationStatus"
                                           Text="JSON: Valid ✓"
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontSize="12"
                                           Foreground="{StaticResource Green}"
                                           HorizontalAlignment="Left"/>
                            </Border>
                            
                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Spacing="8"
                                        Margin="0,8,0,0">
                                <Button Name="CookButton"
                                        Content="Let Jimbo COOK!"
                                        Classes="cook-button"
                                        IsEnabled="False"
                                        Click="OnCookClick"/>
                                <Button Content="Clear Console"
                                        Classes="small-button"
                                        Click="OnClearConsoleClick"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Right Column - Stats -->
                    <Border Grid.Column="2" 
                            Classes="modal-content-box"
                            Margin="6,0,0,0">
                        <StackPanel Spacing="8">
                            <!-- Progress -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Progress" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="ProgressPercentText"
                                               Text="0%"
                                               FontSize="14"
                                               
                                               Foreground="{StaticResource Yellow}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Speed -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Speed" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="SpeedText"
                                               Text="0 seeds/s"
                                               FontSize="14"
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Batches -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Batches" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="BatchesText"
                                               Text="0"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Seeds Searched -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Seeds" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="TotalSeedsText"
                                               Text="0"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Time -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Time" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="TimeElapsedText"
                                               Text="00:00:00"
                                               FontSize="14"
                                               Foreground="{StaticResource LightCream}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <!-- Results Found -->
                            <Border Classes="dark-value-container">
                                <Grid>
                                    <TextBlock Text="Found" 
                                               FontSize="12"
                                               Foreground="{StaticResource MediumGrey}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Name="ResultsFoundText"
                                               Text="0"
                                               FontSize="16"
                                               
                                               Foreground="{StaticResource Green}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Results Panel -->
            <Grid Name="ResultsPanel" IsVisible="False" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="450"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Results Table Container -->
                <ScrollViewer Grid.Row="0" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Table Header -->
                        <Border Grid.Row="0"
                                Background="{StaticResource DarkerGrey}"
                                BorderBrush="{StaticResource ModalBorder}"
                                BorderThickness="2,2,2,1">
                            <Grid Name="ResultsHeaderGrid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>  <!-- Seed -->
                                    <ColumnDefinition Width="80"/>   <!-- Total -->
                                    <ColumnDefinition Width="*"/>    <!-- Dynamic tally columns -->
                                    <ColumnDefinition Width="80"/>   <!-- Time -->
                                    <ColumnDefinition Width="80"/>   <!-- Action -->
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Seed" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{StaticResource Gold}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="8,4"/>
                                           
                                <TextBlock Grid.Column="1" Text="Total" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{StaticResource Gold}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="8,4"/>
                                           
                                <!-- Dynamic tally score headers will be added here -->
                                <StackPanel Grid.Column="2" 
                                            Name="TallyHeadersPanel"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"/>
                                           
                                <TextBlock Grid.Column="3" Text="Time" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{StaticResource Gold}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="8,4"/>
                                           
                                <TextBlock Grid.Column="4" Text="Action" 
                                           FontFamily="{StaticResource BalatroFont}"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Foreground="{StaticResource Gold}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="8,4"/>
                            </Grid>
                        </Border>
                        
                        <!-- Table Body -->
                        <ItemsControl Grid.Row="1" 
                                      Name="ResultsItemsControl"
                                      ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource DockGrey}"
                                            BorderBrush="{StaticResource ModalBorder}"
                                            BorderThickness="2,0,2,1">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="{StaticResource ModalBorder}"/>
                                            </Style>
                                        </Border.Styles>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>  <!-- Seed -->
                                                <ColumnDefinition Width="80"/>   <!-- Total -->
                                                <ColumnDefinition Width="*"/>    <!-- Dynamic tally columns -->
                                                <ColumnDefinition Width="80"/>   <!-- Time -->
                                                <ColumnDefinition Width="80"/>   <!-- Action -->
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Seed}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource White}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8,4"/>
                                                       
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Score, StringFormat='{}{0:F1}'}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource White}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8,4"/>
                                                       
                                            <!-- Dynamic tally scores will be added here -->
                                            <ItemsControl Grid.Column="2" 
                                                          ItemsSource="{Binding TallyScores}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}"
                                                                   FontFamily="{StaticResource BalatroFont}"
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource White}"
                                                                   Width="60"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,4"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                                       
                                            <TextBlock Grid.Column="3" 
                                                       Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                       FontFamily="{StaticResource BalatroFont}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource White}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8,4"/>
                                                       
                                            <Button Grid.Column="4"
                                                    Content="COPY"
                                                    Classes="btn-blue"
                                                    FontSize="10"
                                                    Padding="8,2"
                                                    Height="24"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Click="OnCopySeedClick"
                                                    Tag="{Binding Seed}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
                
                <!-- Footer -->
                <Border Grid.Row="1"
                        Background="{StaticResource DarkerGrey}"
                        Padding="8"
                        BorderThickness="0,2,0,0"
                        BorderBrush="{StaticResource ModalBorder}"
                        Margin="0,0,0,120">
                    <Grid>
                        <TextBlock Name="ResultsSummary"
                                   Text="No results yet"
                                   FontSize="12"
                                   Foreground="{StaticResource Yellow}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        
                        <Button Name="ExportResultsButton"
                                Content="Export Results for Excel/CSV"
                                Classes="btn-green"
                                IsEnabled="False"
                                HorizontalAlignment="Right"
                                Click="OnExportResultsClick"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>