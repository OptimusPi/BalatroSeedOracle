<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.Modals.SearchModal">
    
    <UserControl.Styles>
        <!-- Terminal console style -->
        <Style Selector="TextBox.terminal">
            <Setter Property="Background" Value="#0a0a0a"/>
            <Setter Property="Foreground" Value="#00ff66"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionBrush" Value="#00ff6644"/>
        </Style>
        
        <!-- Results table styles -->
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowBackground" Value="#1a1a1a"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#2a2a2a"/>
            <Setter Property="VerticalGridLinesBrush" Value="#2a2a2a"/>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        
        <Style Selector="DataGridRow:nth-child(2n)">
            <Setter Property="Background" Value="#222222"/>
        </Style>
        
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#3a3a3a"/>
        </Style>
        
        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="DataGridCell">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        
        <!-- Specific cell styles for seed column -->
        <Style Selector="DataGridCell:nth-child(2) TextBlock">
            <Setter Property="Foreground" Value="#00ff66"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
        </Style>
        
        <!-- Specific cell styles for score column -->
        <Style Selector="DataGridCell:nth-child(3) TextBlock">
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Button styles -->
        <Style Selector="Button.action-button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.copy-button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="MinWidth" Value="50"/>
        </Style>
        
        <Style Selector="Button.copy-button:pointerover">
            <Setter Property="Background" Value="#5BA0F2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Section headers -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FEB95F"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <!-- Parameter labels -->
        <Style Selector="TextBlock.param-label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="80"/>
        </Style>
        
        <!-- Status display -->
        <Style Selector="Border.status-display">
            <Setter Property="Background" Value="#0a0a0a"/>
            <Setter Property="BorderBrush" Value="#3a3a3a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </UserControl.Styles>
    
    <!-- Main content grid -->
    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="0">
        <!-- Live Status Bar -->
        <Border Grid.Row="0" 
                Background="#1a1a1a" 
                BorderBrush="#3a3a3a"
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Config display -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="CONFIG:" 
                               FontSize="11" 
                               FontWeight="Bold" 
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <TextBlock Name="ConfigPathTextBox" 
                               Text="No filter loaded"
                               FontSize="12"
                               Foreground="#FEB95F"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <Button Content="Load Filter"
                            Classes="btn-blue"
                            Height="24"
                            Padding="8,0"
                            FontSize="11"
                            Click="OnLoadConfigClick"/>
                </StackPanel>
                
                <!-- Live stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16">
                    <Border Classes="status-display">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="SEEDS:" FontSize="10" Foreground="#666666"/>
                            <TextBlock Name="SeedsSearchedText" Text="0" FontSize="12" Foreground="#00ff66" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Classes="status-display">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="FOUND:" FontSize="10" Foreground="#666666"/>
                            <TextBlock Name="FoundCountText" Text="0" FontSize="12" Foreground="#4BC292" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Border Classes="status-display">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="SPEED:" FontSize="10" Foreground="#666666"/>
                            <TextBlock Name="SpeedText" Text="0/s" FontSize="12" Foreground="#FEB95F" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Button Name="MinimizeButton"
                            Content="â–¼"
                            Classes="btn-blue"
                            Width="28"
                            Height="28"
                            FontSize="12"
                            Padding="0"
                            ToolTip.Tip="Back to widget"
                            Click="OnMinimizeClick"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Control Panel with tabs -->
        <Border Grid.Row="1" 
                Background="#0a0a0a" 
                Padding="0">
            <TabControl>
                <TabItem Header="SEARCH PARAMETERS">
                    <Border Padding="16">
                        <Grid ColumnDefinitions="*,20,*,20,*" RowDefinitions="Auto,16,Auto">
                            <!-- Performance Settings -->
                            <StackPanel Grid.Column="0" Spacing="12">
                                <TextBlock Classes="section-header" Text="Performance"/>
                                <StackPanel Spacing="8">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Classes="param-label" Text="Threads:"/>
                                        <NumericUpDown Grid.Column="1" 
                                                       Name="ThreadsUpDown" 
                                                       Value="4" 
                                                       Minimum="1" 
                                                       Maximum="32" 
                                                       Background="#1a1a1a"
                                                       BorderBrush="#3a3a3a"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Classes="param-label" Text="Batch:"/>
                                        <NumericUpDown Grid.Column="1" 
                                                       Name="BatchSizeUpDown" 
                                                       Value="4" 
                                                       Minimum="2" 
                                                       Maximum="4" 
                                                       Background="#1a1a1a"
                                                       BorderBrush="#3a3a3a"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Search Range -->
                            <StackPanel Grid.Column="2" Spacing="12">
                                <TextBlock Classes="section-header" Text="Range"/>
                                <StackPanel Spacing="8">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Classes="param-label" Text="Start:"/>
                                        <NumericUpDown Grid.Column="1" 
                                                       Name="StartBatchUpDown" 
                                                       Value="0" 
                                                       Minimum="0" 
                                                       Maximum="999999" 
                                                       Background="#1a1a1a"
                                                       BorderBrush="#3a3a3a"/>
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Classes="param-label" Text="End:"/>
                                        <NumericUpDown Grid.Column="1" 
                                                       Name="EndBatchUpDown" 
                                                       Value="1000" 
                                                       Minimum="1" 
                                                       Maximum="999999" 
                                                       Background="#1a1a1a"
                                                       BorderBrush="#3a3a3a"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Options -->
                            <StackPanel Grid.Column="4" Spacing="12">
                                <TextBlock Classes="section-header" Text="Options"/>
                                <StackPanel Spacing="8">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <TextBlock Classes="param-label" Text="Min Score:"/>
                                        <NumericUpDown Grid.Column="1" 
                                                       Name="CutoffUpDown" 
                                                       Value="0" 
                                                       Minimum="0" 
                                                       Maximum="10000" 
                                                       Background="#1a1a1a"
                                                       BorderBrush="#3a3a3a"/>
                                    </Grid>
                                    <CheckBox Name="DebugCheckBox" 
                                              Content="Debug Output" 
                                              Margin="0,4"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Action buttons -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="5" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Spacing="16"
                                        Margin="0,16,0,0">
                                <Button Name="StartButton"
                                        Content="Let Jimbo COOK!"
                                        Classes="btn-green action-button"
                                        IsEnabled="False"
                                        Click="OnStartClick"/>
                                <Button Name="StopButton"
                                        Content="â¹ STOP"
                                        Classes="btn-red action-button"
                                        IsEnabled="False"
                                        Click="OnStopClick"/>
                                <Button Name="ExportButton"
                                        Content="ðŸ“¤ EXPORT"
                                        Classes="btn-blue action-button"
                                        IsEnabled="False"
                                        Click="OnExportClick"/>
                                <Button Name="ClearButton"
                                        Content="ðŸ—‘ï¸ CLEAR"
                                        Classes="btn-orange action-button"
                                        Click="OnClearClick"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>
                
                <TabItem Header="SPECIAL SEARCHES">
                    <Border Padding="16">
                        <Grid RowDefinitions="Auto,16,Auto">
                            <StackPanel Grid.Row="0" Spacing="12">
                                <TextBlock Classes="section-header" Text="Specific Seed Search"/>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Classes="param-label" Text="Seed:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Name="SpecificSeedTextBox" 
                                             Watermark="Enter 8-character seed"
                                             MaxLength="8"
                                             Height="32"
                                             Background="#1a1a1a"
                                             BorderBrush="#3a3a3a"
                                             Margin="0,0,8,0"/>
                                    <Button Grid.Column="2"
                                            Content="Search"
                                            Classes="btn-blue"
                                            Height="32"
                                            Padding="16,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Spacing="12">
                                <TextBlock Classes="section-header" Text="Keyword Generator"/>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Classes="param-label" Text="Keyword:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" 
                                             Name="KeywordTextBox" 
                                             Watermark="Generate seeds from keyword"
                                             Height="32"
                                             Background="#1a1a1a"
                                             BorderBrush="#3a3a3a"
                                             Margin="0,0,8,0"/>
                                    <Button Grid.Column="2"
                                            Content="Generate"
                                            Classes="btn-purple"
                                            Height="32"
                                            Padding="16,0"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </TabItem>
                
                <TabItem Header="CONSOLE">
                    <Border Background="#0a0a0a" MinHeight="200">
                        <Grid RowDefinitions="*,Auto">
                            <ScrollViewer Grid.Row="0" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                                <TextBox Name="ConsoleOutput" 
                                         Classes="terminal" 
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         TextWrapping="NoWrap"
                                         Text="&gt; Motely Search Console&#x0a;&gt; Ready for commands...&#x0a;"/>
                            </ScrollViewer>
                            <Button Grid.Row="1"
                                    Content="Clear Console"
                                    HorizontalAlignment="Right"
                                    Margin="8"
                                    Classes="btn-grey"
                                    Height="28"
                                    Padding="12,0"
                                    FontSize="11"/>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>
        
        <!-- Results Area -->
        <Border Grid.Row="2" 
                Background="#0a0a0a"
                Margin="0,1,0,0">
            <Grid>
                <!-- Empty state -->
                <Border Name="EmptyState"
                        Background="#1a1a1a"
                        CornerRadius="8"
                        Margin="20"
                        Padding="40"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="True">
                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŽ°" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="No results yet" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Load Filter' above to get started"
                                   FontSize="14"
                                   Foreground="#444444"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Results table -->
                <DataGrid Name="ResultsGrid"
                          ItemsSource="{Binding}"
                          AutoGenerateColumns="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          CanUserReorderColumns="True"
                          IsReadOnly="True"
                          SelectionMode="Extended"
                          GridLinesVisibility="All"
                          IsVisible="False"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" 
                                            Binding="{Binding Index}" 
                                            Width="50"
                                            CanUserSort="False"/>
                        <DataGridTextColumn Header="SEED" 
                                            Binding="{Binding Seed}" 
                                            Width="120"
                                            FontFamily="Cascadia Code, Consolas, monospace"/>
                        <DataGridTemplateColumn Header="SCORE" Width="100" SortMemberPath="Score">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ScoreFormatted}" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               Foreground="#FEB95F"
                                               ToolTip.Tip="{Binding ScoreTooltip}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="DETAILS" 
                                            Binding="{Binding Details}" 
                                            Width="*"/>
                        <DataGridTemplateColumn Header="ACTIONS" Width="140" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                                        <Button Content="ðŸ“‹ Copy"
                                                Classes="copy-button"
                                                Command="{Binding CopyCommand}"
                                                CommandParameter="{Binding Seed}"
                                                ToolTip.Tip="Copy seed"/>
                                        <Button Content="ðŸ‘ View"
                                                Classes="copy-button"
                                                Command="{Binding ViewCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="View details"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Bottom status bar -->
        <Border Grid.Row="3" 
                Background="#1a1a1a" 
                BorderBrush="#3a3a3a"
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid>
                <TextBlock Name="StatusText"
                           Text="Ready"
                           FontSize="12"
                           Foreground="#666666"
                           HorizontalAlignment="Left"/>
                <TextBlock Name="SummaryText"
                           Text="0 results"
                           FontSize="12"
                           Foreground="#888888"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>