<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             x:Class="BalatroSeedOracle.Views.Modals.SearchModal"
             x:DataType="vm:SearchModalViewModel">

    <Grid Margin="0">
        <!-- Main Content Area -->
        <Border Grid.Row="0"
                Background="{StaticResource DockGrey}"
                CornerRadius="8"
                Padding="20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDEBAR - Tab Selector (Balatro style with triangle indicators) -->
                <Border Grid.Column="0"
                        Background="{StaticResource ContainerDarkPrecise}"
                        CornerRadius="8"
                        Padding="10,10"
                        Margin="0,0,10,0">
                    <StackPanel Spacing="6">
                        <!-- Tab Buttons (Balatro Challenge style with triangle pointer) -->
                        <Grid>
                            <Button Name="FilterTabButton"
                                    Content="ðŸ” FILTER"
                                    Classes="btn-red balatro-tab"
                                    Click="OnTabButtonClick"
                                    Tag="0"
                                    Height="42"
                                    FontSize="14"
                                    FontFamily="{StaticResource BalatroFont}"
                                    HorizontalContentAlignment="Center"/>
                            <!-- Triangle indicator (shows when selected) -->
                            <TextBlock Text="â–¶"
                                       Classes="balatro-triangle"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsVisible="{Binding SelectedTabIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=0}"/>
                        </Grid>

                        <Grid>
                            <Button Name="SettingsTabButton"
                                    Content="âš™ï¸ SETTINGS"
                                    Classes="btn-red balatro-tab"
                                    Click="OnTabButtonClick"
                                    Tag="1"
                                    Height="42"
                                    FontSize="14"
                                    FontFamily="{StaticResource BalatroFont}"
                                    HorizontalContentAlignment="Center"/>
                            <TextBlock Text="â–¶"
                                       Classes="balatro-triangle"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsVisible="{Binding SelectedTabIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=1}"/>
                        </Grid>

                        <Grid>
                            <Button Name="SearchTabButton"
                                    Content="ðŸš€ SEARCH"
                                    Classes="btn-red balatro-tab"
                                    Click="OnTabButtonClick"
                                    Tag="2"
                                    Height="42"
                                    FontSize="14"
                                    FontFamily="{StaticResource BalatroFont}"
                                    HorizontalContentAlignment="Center"/>
                            <TextBlock Text="â–¶"
                                       Classes="balatro-triangle"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsVisible="{Binding SelectedTabIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=2}"/>
                        </Grid>

                        <Grid>
                            <Button Name="ResultsTabButton"
                                    Content="ðŸ“Š RESULTS"
                                    Classes="btn-red balatro-tab"
                                    Click="OnTabButtonClick"
                                    Tag="3"
                                    Height="42"
                                    FontSize="14"
                                    FontFamily="{StaticResource BalatroFont}"
                                    HorizontalContentAlignment="Center"/>
                            <TextBlock Text="â–¶"
                                       Classes="balatro-triangle"
                                       FontSize="24"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsVisible="{Binding SelectedTabIndex, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=3}"/>
                        </Grid>

                        <!-- Vibe Out Button -->
                        <Button Content="ðŸŽµ VIBE OUT"
                                Command="{Binding EnterVibeOutModeCommand}"
                                Classes="btn-purple"
                                Height="50"
                                FontSize="14"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- RIGHT CONTENT AREA -->
                <ContentControl Grid.Column="1"
                                Content="{Binding CurrentTabContent}"/>
            </Grid>
        </Border>

        <!-- Search Progress Overlay -->
        <Border Grid.Row="0"
                Background="#DD000000"
                IsVisible="{Binding IsSearching}"
                CornerRadius="8">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="20">
                <ProgressBar Value="{Binding SearchProgress}"
                             Maximum="100"
                             Width="400"
                             Height="30"
                             Background="{StaticResource DarkBackground}"
                             Foreground="{StaticResource Green}"/>

                <TextBlock Text="{Binding ProgressText}"
                           Foreground="{StaticResource Gold}"
                           FontSize="18"
                           HorizontalAlignment="Center"/>

                <Button Content="â¹ï¸ STOP SEARCH"
                        Command="{Binding StopSearchCommand}"
                        Classes="btn-red"
                        Width="200"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
