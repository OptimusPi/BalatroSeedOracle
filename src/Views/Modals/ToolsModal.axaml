<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.ToolsModal">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel HorizontalAlignment="Center" Margin="20" Spacing="20">
            <!-- Title -->
            <TextBlock Text="TOOLS" 
                       FontSize="24" 
                        
                       Foreground="{StaticResource Gold}"
                       FontFamily="{StaticResource BalatroFont}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Test Modal Button -->
            <Button Name="TestModal1Button"
                   Click="OnTestModal1Click"
                   Classes="btn-blue"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Test Modal 1" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Import Files Button -->
            <Button Name="ImportFilesButton"
                   Click="OnImportFilesClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Import Files" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Word Lists Button -->
            <Button Name="WordListsButton"
                   Click="OnWordListsClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Word Lists" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Credits Button -->
            <Button Name="CreditsButton"
                   Click="OnCreditsClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center">
                <TextBlock Text="Credits" 
                           FontSize="20"
                           
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
            
            <!-- Feature Flags Section -->
            <Border Background="{StaticResource ContainerDarkPrecise}"
                    BorderThickness="2"
                    BorderBrush="{StaticResource ModalBorder}"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,20,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ”§ EXPERIMENTAL FEATURES" 
                               FontSize="16" 
                               Foreground="{StaticResource Gold}"
                               FontFamily="{StaticResource BalatroFont}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <CheckBox Name="UseNewFiltersModalCheckBox"
                             IsChecked="False"
                             Checked="OnFeatureFlagChanged"
                             Unchecked="OnFeatureFlagChanged">
                        <TextBlock Text="Use MVVM Filters Modal (V2)" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextLight}"
                                   FontFamily="{StaticResource BalatroFont}"/>
                    </CheckBox>
                    
                    <CheckBox Name="UseNewSearchModalCheckBox"
                             IsChecked="False"
                             Checked="OnFeatureFlagChanged"
                             Unchecked="OnFeatureFlagChanged">
                        <TextBlock Text="Use MVVM Search Modal (V2)" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextLight}"
                                   FontFamily="{StaticResource BalatroFont}"/>
                    </CheckBox>
                    
                    <CheckBox Name="EnableDragDropCheckBox"
                             IsChecked="False"
                             Checked="OnFeatureFlagChanged"
                             Unchecked="OnFeatureFlagChanged">
                        <TextBlock Text="Enable Drag &amp; Drop in Filters" 
                                   FontSize="14"
                                   Foreground="{StaticResource TextLight}"
                                   FontFamily="{StaticResource BalatroFont}"/>
                    </CheckBox>
                </StackPanel>
            </Border>
            
            <!-- Nuke Everything Button -->
            <Button Name="NukeEverythingButton"
                   Click="OnNukeEverythingClick"
                   Classes="btn-red"
                   MinWidth="250"
                   MinHeight="60"
                   HorizontalAlignment="Center"
                   Background="#FF0000">
                <TextBlock Text="ðŸ”¥ Nuke Everything ðŸ”¥" 
                           FontSize="20"
                           Foreground="White"
                           FontFamily="{StaticResource BalatroFont}"
                           IsHitTestVisible="False"/>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>