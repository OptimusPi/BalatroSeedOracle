<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.Modals.WordListsModal">
    
    <StackPanel Spacing="20" Margin="20">
        <!-- Simple file list at the top -->
        <Border Background="{StaticResource ContainerDarkPrecise}" 
                CornerRadius="12" 
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Word List:" 
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"
                           FontSize="16"
                           Foreground="{StaticResource White}"/>
                
                <ComboBox Grid.Column="1" 
                          Name="FileSelector"
                          HorizontalAlignment="Stretch"
                          SelectedIndex="0">
                    <ComboBoxItem>keywords.txt</ComboBoxItem>
                    <ComboBoxItem>banned_words.txt</ComboBoxItem>
                    <ComboBoxItem>custom_list.txt</ComboBoxItem>
                </ComboBox>
                
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            Spacing="8"
                            Margin="12,0,0,0">
                    <Button Name="NewButton"
                            Content="New List"
                            Classes="small-button"
                            Click="OnNewClick"/>
                    <Button Name="SaveButton"
                            Content="Save"
                            Classes="small-button"
                            Background="{StaticResource Green}"
                            Click="OnSaveClick"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Text Editor -->
        <Border Background="{StaticResource VeryDarkBackground}"
                BorderBrush="{StaticResource ModalBorder}"
                BorderThickness="2"
                CornerRadius="8"
                Height="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Editor header -->
                <Border Grid.Row="0" 
                        Background="{StaticResource DarkBackground}"
                        CornerRadius="6,6,0,0"
                        Padding="12,8">
                    <TextBlock Text="One word or phrase per line"
                               FontSize="14"
                               Foreground="{StaticResource MediumGrey}"/>
                </Border>
                
                <!-- Editor content -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Name="TextEditor"
                             AcceptsReturn="True"
                             AcceptsTab="False"
                             TextWrapping="NoWrap"
                             FontFamily="Cascadia Code, Consolas, monospace"
                             FontSize="14"
                             Background="Transparent"
                             Foreground="{StaticResource White}"
                             BorderThickness="0"
                             Padding="12"
                             Text=""/>
                </ScrollViewer>
            </Grid>
        </Border>
                
                <!-- Status Bar -->
                <Border Background="{StaticResource VeryDarkGrey}" 
                        CornerRadius="4"
                        Padding="10,5">
                    <TextBlock Name="StatusText"
                               Text="Ready"
                               Foreground="{StaticResource PaleGreen}"
                               FontSize="12"/>
                </Border>
            </StackPanel>
            
            <!-- Browse Panel -->
            <StackPanel Name="BrowsePanel" IsVisible="False" Spacing="20" Margin="20">
                <!-- Directory Info -->
                <Border Classes="content-box" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="WORD LISTS DIRECTORY"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource Purple}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Name="DirectoryPath"
                                   Text="WordLists/"
                                   Foreground="{StaticResource PaleGreen}"
                                   FontFamily="Cascadia Code, Consolas, monospace"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- File List -->
                <Border Classes="content-box" MinHeight="350">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox Name="FileList"
                                 Background="Transparent"
                                 SelectionMode="Single"
                                 SelectionChanged="OnFileSelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource VeryDarkGrey}"
                                            CornerRadius="4"
                                            Padding="10"
                                            Margin="0,2"
                                            Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       Foreground="{StaticResource White}"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Size}"
                                                       Foreground="{StaticResource PaleGreen}"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>
                
                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Name="OpenButton"
                            Content="OPEN"
                            Classes="small-button"
                            Background="{StaticResource Blue}"
                            Click="OnOpenClick"
                            Margin="0,0,5,0"
                            IsEnabled="False"/>
                    
                    <Button Grid.Column="1"
                            Name="DeleteButton"
                            Content="DELETE"
                            Classes="small-button"
                            Background="{StaticResource Red}"
                            Click="OnDeleteClick"
                            Margin="5,0"
                            IsEnabled="False"/>
                    
                    <Button Grid.Column="2"
                            Name="RefreshButton"
                            Content="REFRESH"
                            Classes="small-button"
                            Background="{StaticResource Orange}"
                            Click="OnRefreshClick"
                            Margin="5,0,0,0"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
    
    <UserControl.Styles>
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.tab-button.active">
            <Setter Property="Background" Value="{StaticResource Purple}"/>
        </Style>
        
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{StaticResource PurpleHover}"/>
        </Style>
        
        <Style Selector="Button.tab-button:disabled">
            <Setter Property="Background" Value="{StaticResource RedDisabled}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
        </Style>
        
        <Style Selector="Button.small-button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
        </Style>
        
        <Style Selector="Border.content-box">
            <Setter Property="Background" Value="{StaticResource PureBlack}"/>
            <Setter Property="BorderBrush" Value="{StaticResource VeryDarkGrey}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style Selector="TextBox.search-box">
            <Setter Property="Background" Value="{StaticResource PureBlack}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource VeryDarkGrey}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>
</UserControl>