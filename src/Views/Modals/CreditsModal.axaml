<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.Modals.CreditsModal">
    <UserControl.Styles>
        <Style Selector="TextBlock#CreditLink:pointerover">
            <Setter Property="Foreground" Value="{StaticResource Blue}"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
    </UserControl.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Credits Section -->
        <Border Grid.Row="0"
                Background="{StaticResource DarkBorder}"
                BorderThickness="0"
                Margin="20" 
                CornerRadius="12"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Title -->
                <TextBlock Grid.Row="0"
                           Text="Special Thanks to the following humans! ♥️ pifreak loves you!" 
                           FontSize="18"
                           Foreground="{StaticResource Gold}"
                           FontFamily="{StaticResource BalatroFont}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Credits List with ScrollViewer -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Credits}"
                                  HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="20"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource ModalGrey}"
                                        CornerRadius="8"
                                        Padding="15"
                                        MaxWidth="500">
                                    <StackPanel Orientation="Vertical" Spacing="5">
                                        <TextBlock Text="{Binding Name}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="20"
                                                   Foreground="{StaticResource White}"/>
                                        <TextBlock Text="{Binding Role}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="16"
                                                   Foreground="{StaticResource Gold}"/>
                                        <TextBlock Text="{Binding Note}"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource White}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Link}"
                                                   Name="CreditLink"
                                                   FontFamily="{StaticResource BalatroFont}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource Blue}"
                                                   TextWrapping="Wrap"
                                                   IsVisible="{Binding HasLink}"
                                                   Margin="0,5,0,0"
                                                   Cursor="Hand"
                                                   Tag="{Binding Link}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>