<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Views.SettingsModal"
             x:DataType="vm:SettingsModalViewModel">
    <!-- Authentic Balatro modal style: teal-grey background, light border, drop shadow -->
    <Border Background="{StaticResource Grey}"
            BorderBrush="{StaticResource ModalBorder}"
            BorderThickness="3"
            CornerRadius="12"
            Padding="20"
            BoxShadow="0 4 0 #1a1a1a">
        <StackPanel Spacing="12" MinWidth="380">
            <!-- Theme Selector with white background panel (Balatro style) -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="15">
                <StackPanel Spacing="8">
                    <TextBlock Text="Vibe Theme"
                               Foreground="#2e3f42"
                               FontWeight="Bold"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <ComboBox SelectedIndex="{Binding VisualizerTheme}"
                              HorizontalAlignment="Stretch"
                              FontSize="13">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Wave Rider"/>
                        <ComboBoxItem Content="Inferno"/>
                        <ComboBoxItem Content="Frozen"/>
                        <ComboBoxItem Content="Rainbow Cascade"/>
                        <ComboBoxItem Content="Electric Storm"/>
                        <ComboBoxItem Content="Sakura Dream"/>
                        <ComboBoxItem Content="Lunar Eclipse"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Advanced Settings Button - Red (Balatro primary button style) -->
            <Button Content="Advanced Settings"
                    Command="{Binding AdvancedSettingsCommand}"
                    HorizontalAlignment="Stretch"
                    Padding="15,10"
                    FontSize="14"
                    Classes="btn-red"/>

            <!-- Back Button - Orange, full width (Balatro standard) -->
            <Button Content="Back"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Stretch"
                    Padding="15,10"
                    FontSize="14"
                    Classes="btn-orange"/>
        </StackPanel>
    </Border>
</UserControl>
