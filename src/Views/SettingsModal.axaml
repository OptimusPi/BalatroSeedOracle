<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.SettingsModal">
    <Border Background="#202020" BorderBrush="#FFD700" BorderThickness="2" CornerRadius="8" Padding="20">
        <StackPanel Spacing="15" MinWidth="300">
            <TextBlock Text="âš™ Settings" FontSize="20" FontWeight="Bold" Foreground="#FFD700" HorizontalAlignment="Center"/>

            <!-- Theme Selector -->
            <StackPanel Spacing="5">
                <TextBlock Text="Theme" Foreground="White"/>
                <ComboBox x:Name="ThemeComboBox" SelectedIndex="0">
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Plasma"/>
                    <ComboBoxItem Content="Sepia"/>
                    <ComboBoxItem Content="Ocean"/>
                    <ComboBoxItem Content="Sunset"/>
                    <ComboBoxItem Content="Midnight"/>
                    <ComboBoxItem Content="Dynamic"/>
                    <ComboBoxItem Content="VibeOut"/>
                </ComboBox>
            </StackPanel>

            <!-- Music Volume -->
            <StackPanel Spacing="5">
                <TextBlock Text="Music Volume" Foreground="White"/>
                <Slider x:Name="MusicVolumeSlider" Minimum="0" Maximum="100" Value="70"/>
            </StackPanel>

            <!-- SFX Volume -->
            <StackPanel Spacing="5">
                <TextBlock Text="SFX Volume" Foreground="White"/>
                <Slider x:Name="SfxVolumeSlider" Minimum="0" Maximum="100" Value="70"/>
            </StackPanel>

            <!-- Shader Controls -->
            <TextBlock Text="Shader Parameters" Foreground="#FFD700" FontWeight="Bold" Margin="0,10,0,0"/>

            <StackPanel Spacing="5">
                <TextBlock Text="Contrast (con)" Foreground="White"/>
                <Slider x:Name="ContrastSlider" Minimum="0.5" Maximum="5.0" Value="2.0"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Spin Amount (spin)" Foreground="White"/>
                <Slider x:Name="SpinSlider" Minimum="0.0" Maximum="1.0" Value="0.3"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Speed (spd)" Foreground="White"/>
                <Slider x:Name="SpeedSlider" Minimum="0.1" Maximum="3.0" Value="1.0"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Content="Close" HorizontalAlignment="Center" Margin="0,10,0,0" Padding="20,5" Click="CloseButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>
