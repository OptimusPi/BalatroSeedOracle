<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:modals="using:BalatroSeedOracle.Views.Modals"
             xmlns:views="using:BalatroSeedOracle.Views"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             x:Class="BalatroSeedOracle.Views.BalatroMainMenu"
             x:DataType="vm:BalatroMainMenuViewModel"
             Background="Transparent"
             x:CompileBindings="False">

    <UserControl.Styles>
        <!-- Modal panel style - Clean Balatro style (NO pixel borders!) -->
        <Style Selector="Border.modal-panel">
            <Setter Property="Background" Value="#4a5f6d"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="#7090a0"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BoxShadow" Value="0 8 24 0 #99000000"/>
        </Style>

        <!-- Inner content panel - Clean background, no borders -->
        <Style Selector="Border.inner-panel">
            <Setter Property="Background" Value="#3e5562"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
        
        <!-- Kill any weird focus/selection effects -->
        <Style Selector="Button:focus">
            <Setter Property="BorderBrush" Value="{StaticResource VeryLightGrey}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="Button:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        
        <!-- Author Button Style - matches language/theme buttons -->
        <Style Selector="Button.author-button">
            <Setter Property="FontSize" Value="16"/>
            
            <Setter Property="Background" Value="{StaticResource TealGrey}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="2,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style Selector="Button.author-button:pointerover">
            <Setter Property="BorderBrush" Value="{StaticResource Gold}"/>
        </Style>
        <Style Selector="Button.author-button:pressed">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        </Style>
        <Style Selector="Button.author-button TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource VeryLightGrey}"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Animated balatro-style background - behind everything (stretches to fill entire window) -->
        <controls:BalatroShaderBackground x:Name="BackgroundControl"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch" />

        <!-- Settings Popup removed - now using modal system -->

        <!-- Volume Slider Popup (shown when music button clicked) -->
        <Popup x:Name="VolumePopup"
               IsOpen="{Binding IsVolumePopupOpen, Mode=TwoWay}"
               Placement="Top"
               PlacementTarget="{Binding #MusicToggleButton}"
               VerticalOffset="-10"
               IsLightDismissEnabled="True">
            <Border Background="{StaticResource ContainerDarkPrecise}"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15,20">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ”Š VOLUME"
                               FontSize="14"
                               
                               Foreground="{StaticResource Gold}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <!-- Vertical Volume Slider -->
                    <Slider x:Name="VolumeSlider"
                            Orientation="Vertical"
                            Minimum="0"
                            Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay}"
                            Height="120"
                            Width="40"
                            ToolTip.Tip="Drag to adjust volume"/>

                    <!-- Volume Percentage Display -->
                    <TextBlock x:Name="VolumePercentText"
                               Text="{Binding VolumePercentText}"
                               FontSize="16"
                               
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <!-- Mute Button -->
                    <Button x:Name="MuteButton"
                            Content="{Binding MuteButtonText}"
                            Command="{Binding MuteCommand}"
                            MinWidth="80"
                            Width="80"
                            FontSize="12"
                            Height="30"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Popup>
        
        <!-- Desktop widgets layer - BELOW modals (ZIndex 50) -->
        <Grid x:Name="DesktopCanvas" ZIndex="50" ClipToBounds="False">
            <!-- Search Widgets will be added dynamically here -->

            <!-- DayLatro Widget - starts minimized in top right -->
            <components:DayLatroWidget x:Name="DayLatroWidget"
                                     ClipToBounds="False"/>

            <!-- ðŸ§ž GENIE WIDGET - AI-powered filter generation! -->
            <components:GenieWidget x:Name="GenieWidget"
                                   ClipToBounds="False"/>

            <!-- ðŸŽ¨ AUDIO VISUALIZER WIDGET - Show/hide on paint palette button click -->
            <components:AudioVisualizerSettingsWidget x:Name="AudioVisualizerWidget"
                                                    IsVisible="{Binding IsVisualizerWidgetVisible}"
                                                    ClipToBounds="False"/>

            <!-- ðŸŽµ MUSIC MIXER WIDGET - 8-track volume and mute controls -->
            <components:MusicMixerWidget x:Name="MusicMixerWidget"
                                        ClipToBounds="False"/>

            <!-- ðŸ“Š FREQUENCY DEBUG WIDGET - Real-time FFT frequency bands -->
            <components:FrequencyDebugWidget x:Name="FrequencyDebugWidget"
                                            ClipToBounds="False"/>

        </Grid>
        
        <!-- Main content that will be blurred when modals are open -->
        <Grid x:Name="MainContent" ZIndex="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Name="MainTitleText"
                        Text="{Binding MainTitle}"
                        FontFamily="{StaticResource BalatroFont}"
                        FontSize="32"

                        Foreground="{StaticResource White}"
                        HorizontalAlignment="Center"
                        Margin="0,4,4,4"/>

            <!-- All Docks Container - Float off bottom of screen -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,40"
                        Spacing="20">
                
                <!-- Left Side Dock (like PROFILE + Fx in real Balatro) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="4,0,4,2"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <!-- Author Label -->
                            <TextBlock Text="Author" 
                                        Margin="4,6,4,2"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource White}"
                                       IsHitTestVisible="False"/>
                            
                            <!-- Author Button (Balatro style like language buttons) -->
                            <Button x:Name="AuthorButton"
                                    Width="120"
                                    Height="40"
                                    Command="{Binding AuthorClickCommand}"
                                    Classes="author-button">
                                <Grid>
                                    <!-- Display mode -->
                                    <TextBlock x:Name="AuthorDisplay"
                                               Text="{Binding AuthorName}"
                                               IsVisible="{Binding AuthorDisplayMode}"
                                               IsHitTestVisible="False"/>

                                    <!-- Edit mode -->
                                    <TextBox x:Name="AuthorEdit"
                                             Text="{Binding AuthorName, Mode=TwoWay}"
                                             FontFamily="{StaticResource BalatroFont}"
                                             FontSize="16"
                                             Background="{StaticResource TealGrey}"
                                             BorderThickness="0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             TextAlignment="Center"
                                             Foreground="{StaticResource VeryLightGrey}"
                                             IsVisible="{Binding AuthorEditMode}"
                                             KeyDown="OnAuthorTextBoxKeyDown"
                                             LostFocus="OnAuthorTextBoxLostFocus"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Main Menu Buttons - Real Balatro dock (gray with drop shadow below) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,4,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="2"
                            Margin="0,0,0,4">
                
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Button Classes="btn-green"
                            Command="{Binding SeedSearchCommand}"
                            MinHeight="64"
                            MinWidth="158">
                        <TextBlock Text="SEARCH"
                                   FontSize="36"
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>

                    <Button Classes="btn-blue"
                            Command="{Binding EditorCommand}"
                            MinHeight="50"
                            MinWidth="100">
                        <TextBlock Text="DESIGNER"
                                   FontSize="28"
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>

                    <Button Classes="btn-purple"
                            Command="{Binding AnalyzeCommand}"
                            MinHeight="50"
                            MinWidth="100">
                        <TextBlock Text="ANALYZER"
                                   FontSize="28"
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>

                    <!-- MODS button equivalent - MORE (orange) -->
                    <Button Classes="btn-orange"
                            Command="{Binding ToolCommand}"
                            MinHeight="64"
                            MinWidth="158">
                        <TextBlock Text="SETTINGS"
                                   FontSize="36"
                                   FontFamily="{StaticResource BalatroFont}"/>
                    </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Right Side Dock (like Language selector in real Balatro) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="6,4,6,6"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <!-- Visual Settings Button -->
                            <Button x:Name="SettingsButton"
                                    FontSize="24"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="{StaticResource TealGrey}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding ToggleVisualizerWidgetCommand}"
                                    ToolTip.Tip="Visual Settings">
                                <TextBlock Text="ðŸŽ¨"
                                           FontFamily="Segoe UI Symbol"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Button>

                            <!-- Pause/Resume Animation Button (square like language buttons) -->
                            <Button x:Name="AnimationToggleButton"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="{StaticResource TealGrey}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding AnimationToggleCommand}"
                                    ToolTip.Tip="Pause/resume background animation">
                                <TextBlock Text="{Binding AnimationIconText}"
                                           FontFamily="Segoe UI Symbol, Segoe UI Emoji"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Button>

                            <!-- Music Toggle Button -->
                            <Button x:Name="MusicToggleButton"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="{StaticResource TealGrey}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding MusicToggleCommand}"
                                    ToolTip.Tip="Toggle background music">
                                <TextBlock x:Name="MusicToggleIcon"
                                           Text="{Binding MusicIconText}"
                                           FontFamily="Segoe UI Emoji, Noto Color Emoji"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel> <!-- End All Docks Container -->
        </Grid> <!-- End MainContent -->

        <!-- Modal overlay container for code-behind modals -->
        <Grid x:Name="ModalContainer"
              IsVisible="False"
              ZIndex="100"
              Background="{StaticResource SemiTransparentBlack}"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Margin="0"/>

    </Grid>
</UserControl>