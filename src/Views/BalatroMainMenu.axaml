<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:modals="using:BalatroSeedOracle.Views.Modals"
             xmlns:views="using:BalatroSeedOracle.Views"
             x:Class="BalatroSeedOracle.Views.BalatroMainMenu"
             Background="Transparent"
             x:CompileBindings="False">

    <UserControl.Styles>
        <!-- Modal panel style - Balatro card style with beveled border -->
        <Style Selector="Border.modal-panel">
            <Setter Property="Background" Value="{StaticResource LightBackground}"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PureBlack}"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>
        
        <!-- Inner content panel (darker) -->
        <Style Selector="Border.inner-panel">
            <Setter Property="Background" Value="{StaticResource MediumBackground}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        
        <!-- Kill any weird focus/selection effects -->
        <Style Selector="Button:focus">
            <Setter Property="BorderBrush" Value="{StaticResource VeryLightGrey}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="Button:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        
        <!-- Author Button Style - matches language/theme buttons -->
        <Style Selector="Button.author-button">
            <Setter Property="FontSize" Value="16"/>
            
            <Setter Property="Background" Value="{StaticResource TealGrey}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="2,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style Selector="Button.author-button:pointerover">
            <Setter Property="BorderBrush" Value="{StaticResource Gold}"/>
        </Style>
        <Style Selector="Button.author-button:pressed">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        </Style>
        <Style Selector="Button.author-button TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
            <Setter Property="FontSize" Value="16"/>
            
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource VeryLightGrey}"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Animated balatro-style background - behind everything -->
        <controls:BalatroStyleBackground x:Name="BackgroundControl" />
        
        <!-- Desktop widgets layer -->
        <Grid x:Name="DesktopCanvas" ZIndex="10" ClipToBounds="False">
            <!-- Search Widgets will be added dynamically here -->
            
            <!-- DayLatro Widget - starts minimized in top right -->
            <components:DayLatroWidget x:Name="DayLatroWidget"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="20,24,20,0"
                                     ClipToBounds="False"/>
        </Grid>
        
        <!-- Main content that will be blurred when modals are open -->
        <Grid x:Name="MainContent" ZIndex="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Name="MainTitleText"
                        Text="Welcome!"
                        FontFamily="{StaticResource BalatroFont}"
                        FontSize="32"
                        
                        Foreground="{StaticResource TextLight}"
                        HorizontalAlignment="Center"
                        Margin="0,4,4,4"/>

            <!-- All Docks Container - Float off bottom of screen -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,40"
                        Spacing="20">
                
                <!-- Left Side Dock (like PROFILE + Fx in real Balatro) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource DropShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource Grey}"
                            CornerRadius="8"
                            Padding="4,0,4,2"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <!-- Author Label -->
                            <TextBlock Text="Author" 
                                        Margin="4,6,4,2"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource White}"
                                       IsHitTestVisible="False"/>
                            
                            <!-- Author Button (Balatro style like language buttons) -->
                            <Button x:Name="AuthorButton"
                                    Width="120"
                                    Height="40"
                                    Click="OnAuthorClick"
                                    Classes="author-button">
                                <Grid>
                                    <!-- Display mode -->
                                    <TextBlock x:Name="AuthorDisplay"
                                               Text="Author"
                                               IsVisible="True"
                                               IsHitTestVisible="False"/>
                                    
                                    <!-- Edit mode -->
                                    <TextBox x:Name="AuthorEdit"
                                             Text=""
                                             FontFamily="{StaticResource BalatroFont}"
                                             FontSize="16"
                                             
                                             Background="{StaticResource TealGrey}"
                                             BorderThickness="0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             TextAlignment="Center"
                                             Foreground="{StaticResource VeryLightGrey}"
                                             IsVisible="False"
                                             LostFocus="OnAuthorEditLostFocus"
                                             KeyDown="OnAuthorEditKeyDown"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Main Menu Buttons - Real Balatro dock (gray with drop shadow below) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource DropShadow}"
                            CornerRadius="8"
                            Margin="0,4,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource Grey}"
                            CornerRadius="8"
                            Padding="2"
                            Margin="0,0,0,4">
                
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <!-- PLAY button equivalent - SEED SEARCH (blue) -->
                    <Button Classes="btn-blue"
                            Click="OnSeedSearchClick"
                            MinHeight="64"
                            MinWidth="160">
                        <TextBlock Text="SEED SEARCH" 
                                   FontSize="24" 
                                   
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>
                    
                    <!-- OPTIONS button equivalent - EDITOR (green) -->
                    <Button Classes="btn-green"
                            Click="OnEditorClick"
                            MinHeight="50"
                            MinWidth="100">
                        <TextBlock Text="NEW FILTER"
                                   FontSize="20"
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>
                    
                    <!-- QUIT button (red) -->
                    <Button Classes="btn-red"
                            Click="OnExitClick"
                            MinHeight="50"
                            MinWidth="100">
                        <TextBlock Text="QUIT" 
                                   FontSize="20" 
                                   
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>
                    
                    <!-- COLLECTION button equivalent - ANALYZE (purple) -->
                    <Button Classes="btn-purple"
                            Click="OnAnalyzeClick"
                            MinHeight="64"
                            MinWidth="160">
                        <TextBlock Text="ANALYZE" 
                                   FontSize="24" 
                                   
                                   FontFamily="{StaticResource BalatroFont}"
                                   IsHitTestVisible="False"/>
                    </Button>

                    <!-- MODS button equivalent - MORE (orange) -->
                    <Button Classes="btn-orange"
                            Click="OnToolClick"
                            MinHeight="64"
                            MinWidth="64">
                        <TextBlock Text="MORE" 
                                   FontSize="20" 
                                   FontFamily="{StaticResource BalatroFont}"/>
                    </Button>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Right Side Dock (like Language selector in real Balatro) -->
                <Grid>
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource DropShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource Grey}"
                            CornerRadius="8"
                            Padding="6,4,6,6"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <!-- Theme Cycling Button (square like language buttons) -->
                            <Button x:Name="ThemeCycleButton"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="{StaticResource TealGrey}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Click="OnThemeCycleClick"
                                    ToolTip.Tip="Cycle background theme">
                                <TextBlock Text="ðŸŽ¨" 
                                           FontFamily="Segoe UI Emoji, Noto Color Emoji"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Button>
                            
                            <!-- Pause/Resume Animation Button (square like language buttons) -->
                            <Button x:Name="AnimationToggleButton"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    Background="{StaticResource TealGrey}"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Click="OnAnimationToggleClick"
                                    ToolTip.Tip="Pause/resume background animation">
                                <TextBlock Text="â¸" 
                                           FontFamily="Segoe UI Symbol, Segoe UI Emoji"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel> <!-- End All Docks Container -->
        </Grid> <!-- End MainContent -->

        <!-- Modal overlay container for code-behind modals -->
        <Grid x:Name="ModalContainer"
              IsVisible="False"
              ZIndex="100"
              Background="{StaticResource VeryTransparentBlack}"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Margin="0"/>
    </Grid>
</UserControl>