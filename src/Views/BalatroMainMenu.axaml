<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:BalatroSeedOracle.Controls"
             xmlns:components="using:BalatroSeedOracle.Components"
             xmlns:modals="using:BalatroSeedOracle.Views.Modals"
             xmlns:views="using:BalatroSeedOracle.Views"
             xmlns:vm="using:BalatroSeedOracle.ViewModels"
             xmlns:converters="using:BalatroSeedOracle.Converters"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             x:Class="BalatroSeedOracle.Views.BalatroMainMenu"
             x:DataType="vm:BalatroMainMenuViewModel"
             Background="Transparent"
             Focusable="True"
             x:CompileBindings="True">

    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
    </UserControl.Styles>

    <Grid>
        <!-- Balatro Shader Background -->
        <controls:BalatroShaderBackground x:Name="BackgroundControl"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch" />

        <!-- Settings Popup removed - now using modal system -->

        <!-- Volume Slider Popup (shown when music button clicked) -->
        <Popup x:Name="VolumePopup"
               IsOpen="{Binding IsVolumePopupOpen, Mode=TwoWay}"
               Placement="Top"
               PlacementTarget="{Binding ElementName=MusicToggleButton}"
               IsLightDismissEnabled="True">
            <Border Background="{StaticResource DarkBorder}"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="15,20">
                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center" Margin="0,0,0,5">
                        <iconPacks:PackIconMaterial Kind="VolumeHigh" Width="14" Height="14" Foreground="{StaticResource Gold}" VerticalAlignment="Center"/>
                        <TextBlock Text="VOLUME"
                                   FontSize="14"
                                   Foreground="{StaticResource Gold}"/>
                    </StackPanel>

                    <!-- Vertical Volume Slider  -->
                    <Slider x:Name="VolumeSlider"
                            Orientation="Vertical"
                            Minimum="0"
                            Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay}"
                            Height="120"
                            Width="40"
                            ToolTip.Tip="Drag to adjust volume"/>

                    <!-- Volume Percentage Display -->
                    <TextBlock x:Name="VolumePercentText"
                               Text="{Binding VolumePercentText}"
                               FontSize="16"
                               
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <!-- Mute Button -->
                    <Button x:Name="MuteButton"
                            Content="{Binding MuteButtonText}"
                            Command="{Binding MuteCommand}"
                            MinWidth="80"
                            Width="80"
                            FontSize="12"
                            Height="30"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Popup>
        
        <!-- Desktop widgets layer - widgets use their own ZIndex bindings (hidden in Vibe Out Mode) -->
    <Grid x:Name="DesktopCanvas" ZIndex="10" ClipToBounds="False" IsVisible="{Binding AreWidgetsHidden, Converter={StaticResource InverseBoolConverter}, FallbackValue=True}">
            <!-- Search Widgets will be added dynamically here -->

            <!-- DayLatro Widget - starts minimized in top right -->
            <components:DayLatroWidget x:Name="DayLatroWidget"
                                     ClipToBounds="False"/>

            <!-- ADMIN WIDGETS - Hidden by default, enable via Settings -->

            <!-- ðŸ“Š FREQUENCY DEBUG WIDGET - Real-time FFT frequency bands -->
            <components:FrequencyDebugWidget x:Name="FrequencyDebugWidget"
                                            IsVisible="False"
                                            ClipToBounds="False"/>

            <!-- ðŸ§ž GENIE WIDGET - AI-powered filter generation! -->
            <components:GenieWidget x:Name="GenieWidget"
                                   IsVisible="False"
                                   ClipToBounds="False"/>

            <!-- ðŸŽ¨ AUDIO VISUALIZER WIDGET - Show/hide on paint palette button click -->
            <components:AudioVisualizerSettingsWidget x:Name="AudioVisualizerWidget"
                                                    IsVisible="{Binding IsVisualizerWidgetVisible}"
                                                    ClipToBounds="False"/>

            <!-- ðŸŽµ MUSIC MIXER WIDGET - 8-track volume and mute controls -->
            <components:MusicMixerWidget x:Name="MusicMixerWidget"
                                        IsVisible="{Binding IsMusicMixerWidgetVisible}"
                                        ClipToBounds="False"/>

            <!-- ðŸ”€ TRANSITION DESIGNER WIDGET - Create and test transitions -->
            <components:TransitionDesignerWidget x:Name="TransitionDesignerWidget"
                                                 IsVisible="{Binding IsTransitionDesignerWidgetVisible}"
                                                 ClipToBounds="False"/>

            <!-- ðŸŒ± FERTILIZER WIDGET - Global seed pile management -->
            <components:FertilizerWidget x:Name="FertilizerWidget"
                                         IsVisible="{Binding IsFertilizerWidgetVisible}"
                                         ClipToBounds="False"/>

            <!-- ðŸŒ HOST API WIDGET - MotelyApiServer controls -->
            <components:HostApiWidget x:Name="HostApiWidget"
                                      IsVisible="{Binding IsHostApiWidgetVisible}"
                                      ClipToBounds="False"/>

        </Grid>
        
        <!-- Main content that will be blurred when modals are open (hidden in Vibe Out Mode) -->
        <Grid x:Name="MainContent" ZIndex="5" IsVisible="{Binding !IsVibeOutMode}" IsHitTestVisible="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Name="MainTitleText"
                        Text="{Binding MainTitle}"
                        FontFamily="{StaticResource BalatroFont}"
                        FontSize="32"

                        Foreground="{StaticResource White}"
                        HorizontalAlignment="Center"
                        Margin="0,4,4,4"
                        IsHitTestVisible="False"/>

            <!-- All Docks Container - Anchored to screen edges (always visible so user can toggle widgets) -->
            <Grid Grid.Row="1"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,40"
                  IsHitTestVisible="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side Dock (like PROFILE + Fx in real Balatro) - ANCHORED LEFT -->
                <Grid Grid.Column="0"
                      HorizontalAlignment="Left"
                      Margin="20,0,0,0">
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="4,0,4,2"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Vertical" Spacing="4">
                            <!-- Author Label -->
                            <TextBlock Text="Author" 
                                        Margin="4,6,4,2"
                                       FontFamily="{StaticResource BalatroFont}"
                                       FontSize="14"
                                       
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource White}"/>
                            
                            <!-- Author Button (Balatro style like language buttons) -->
                            <Button x:Name="AuthorButton"
                                    Width="120"
                                    Height="40"
                                    Command="{Binding AuthorClickCommand}"
                                    Classes="author-button">
                                <Grid>
                                    <!-- Display mode -->
                                    <TextBlock x:Name="AuthorDisplay"
                                               Text="{Binding AuthorName}"
                                               IsVisible="{Binding AuthorDisplayMode}"/>

                                    <!-- Edit mode -->
                                    <TextBox x:Name="AuthorEdit"
                                             Text="{Binding AuthorName, Mode=TwoWay}"
                                             FontSize="16"
                                             BorderThickness="0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             TextAlignment="Center"
                                             IsVisible="{Binding AuthorEditMode}"
                                             Focusable="True"
                                             IsHitTestVisible="True"
                                             KeyDown="OnAuthorTextBoxKeyDown"
                                             LostFocus="OnAuthorTextBoxLostFocus"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Menu Buttons - Real Balatro dock (gray with drop shadow below) - CENTERED -->
                <Grid Grid.Column="1"
                      HorizontalAlignment="Center">
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,4,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="2"
                            Margin="0,0,0,4">
                
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Button Classes="btn-green"
                            Command="{Binding SeedSearchCommand}"
                            Content="SEARCH"
                            FontSize="36"
                            MinHeight="60"
                            MinWidth="158"/>

                    <Button Classes="btn-blue"
                            Command="{Binding EditorCommand}"
                            Content="DESIGNER"
                            FontSize="28"
                            MinHeight="46"
                            MinWidth="100"/>

                    <Button Classes="btn-purple"
                            Command="{Binding AnalyzeCommand}"
                            Content="ANALYZER"
                            FontSize="28"
                            MinHeight="46"
                            MinWidth="100"/>

                    <!-- MODS button equivalent - MORE (orange) -->
                    <Button Classes="btn-orange"
                            Command="{Binding ToolCommand}"
                            Content="SETTINGS"
                            FontSize="36"
                            MinHeight="60"
                            MinWidth="158"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Right Side Dock (like Language selector in real Balatro) - ANCHORED RIGHT -->
                <Grid Grid.Column="2"
                      HorizontalAlignment="Right"
                      Margin="0,0,20,0">
                    <!-- Dark shadow underneath -->
                    <Border Background="{StaticResource HoverShadow}"
                            CornerRadius="8"
                            Margin="0,2,0,0"/>
                    <!-- Main dock panel -->
                    <Border Background="{StaticResource ModalGrey}"
                            CornerRadius="8"
                            Padding="6,4,6,6"
                            Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <!-- Visual Settings Button -->
                            <Button x:Name="SettingsButton"
                                    Classes="btn-purple"
                                    FontSize="24"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding ToggleWidgetsVisibilityCommand}"
                                    ToolTip.Tip="Show or hide widgets">
                                <iconPacks:PackIconFeatherIcons Kind="Grid" Width="28" Height="28" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>

                            <!-- Pause/Resume Animation Button (square like language buttons) -->
                            <Button x:Name="AnimationToggleButton"
                                    Classes="btn-purple"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding AnimationToggleCommand}"
                                    ToolTip.Tip="Pause/resume background animation">
                                <TextBlock Text="{Binding AnimationIconText}"
                                           FontFamily="Segoe UI Symbol, Segoe UI Emoji"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>

                            <!-- Music Toggle Button -->
                            <Button x:Name="MusicToggleButton"
                                    Classes="btn-purple"
                                    FontSize="16"
                                    Width="48"
                                    Height="48"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource ModalBorder}"
                                    BorderThickness="2"
                                    Margin="0,0,0,2"
                                    Command="{Binding MusicToggleCommand}"
                                    ToolTip.Tip="Toggle background music">
                                <TextBlock x:Name="MusicToggleIcon"
                                           Text="{Binding MusicIconText}"
                                           FontFamily="Segoe UI Emoji, Noto Color Emoji"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid> <!-- End All Docks Container -->
        </Grid> <!-- End MainContent -->

        <!-- Modal overlay container for code-behind modals -->
        <Grid x:Name="ModalContainer"
              IsVisible="False"
              ZIndex="100"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Margin="0">

            <!-- Overlay dimmer - fades in -->
            <Border x:Name="ModalOverlay"
                    Background="{StaticResource SemiTransparentBlack}"
                    Opacity="0">
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity"
                                        Duration="0:0:0.6"
                                        Easing="CubicEaseOut"/>
                    </Transitions>
                </Border.Transitions>
            </Border>

            <!-- Modal content wrapper - slides up with bounce -->
            <ContentControl x:Name="ModalContentWrapper">
                <ContentControl.RenderTransform>
                    <TranslateTransform X="0" Y="0">
                        <TranslateTransform.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Y"
                                                Duration="0:0:0.6"
                                                Easing="ExponentialEaseOut"/>
                            </Transitions>
                        </TranslateTransform.Transitions>
                    </TranslateTransform>
                </ContentControl.RenderTransform>
            </ContentControl>

        </Grid>

    </Grid>
</UserControl>