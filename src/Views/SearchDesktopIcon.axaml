<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.Views.SearchDesktopIcon">
    
    <UserControl.Styles>
        <Style Selector="Border.desktop-icon-container">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Padding" Value="8,8,15,8"/>
        </Style>
        
        <Style Selector="Button.desktop-icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="Button.desktop-icon:pointerover Border.icon-border">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
        </Style>
        
        <!-- Notification badge styles are now in global styles -->
        
        <Style Selector="ProgressBar.search-progress">
            <Setter Property="Height" Value="6"/>
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Green}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </UserControl.Styles>
    
    <Border Classes="desktop-icon-container">
        <StackPanel Spacing="4">
            <!-- Icon Button -->
            <Grid>
                <Button Classes="desktop-icon" Click="OnIconClick" ContextRequested="OnContextRequested">
                    <Grid Width="80" Height="80">
                        <!-- Icon background -->
                        <Border Name="IconBorder"
                                Classes="icon-border"
                                Background="{StaticResource DockGrey}"
                                CornerRadius="12"
                                BorderBrush="{StaticResource ModalBorder}"
                                BorderThickness="2">
                            <Grid>
                                <!-- Search icon (magnifying glass) -->
                                <TextBlock Text="🔍" 
                                           FontSize="40"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Button>
                
                <!-- Notification badge overlay using Canvas -->
                <Canvas ZIndex="100">
                    <Border Name="NotificationBadge"
                            Classes="notification-badge"
                            Canvas.Right="-8"
                            Canvas.Top="-8"
                            IsVisible="False">
                        <TextBlock Name="BadgeText"
                                   Text="0" />
                    </Border>
                </Canvas>
            </Grid>
            
            <!-- Filter Name -->
            <TextBlock Name="FilterNameText"
                       Text="Filter Name"
                       FontFamily="{StaticResource BalatroFont}"
                       FontSize="12"
                       Foreground="{StaticResource White}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="100"/>
            
            <!-- Progress Bar with Percentage -->
            <Grid>
                <ProgressBar Name="SearchProgress"
                             Classes="search-progress"
                             Value="0"
                             Maximum="100"
                             IsVisible="True"/>
                <TextBlock Name="ProgressText"
                           Text="0%"
                           FontFamily="{StaticResource BalatroFont}"
                           FontSize="10"
                           Foreground="{StaticResource White}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,-1,0,0"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>