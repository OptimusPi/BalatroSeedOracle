<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Oracle.Views.SearchDesktopIcon">
    
    <UserControl.Styles>
        <Style Selector="Button.desktop-icon">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.desktop-icon:pointerover">
            <Setter Property="Background" Value="#22FFFFFF"/>
        </Style>
        
        <Style Selector="Border.notification-badge">
            <Setter Property="Background" Value="#ff4c40"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="-5,-5,0,0"/>
        </Style>
    </UserControl.Styles>
    
    <Button Classes="desktop-icon" Click="OnIconClick">
        <Grid Width="64" Height="64">
            <!-- Icon background -->
            <Border Background="{StaticResource DockGrey}"
                    CornerRadius="12"
                    BorderBrush="{StaticResource ModalBorder}"
                    BorderThickness="2">
                <Grid>
                    <!-- Search icon (magnifying glass) -->
                    <TextBlock Text="🔍" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Notification badge -->
            <Border Name="NotificationBadge"
                    Classes="notification-badge"
                    IsVisible="False">
                <TextBlock Name="BadgeText"
                           Text="0"
                           Foreground="White"
                           FontSize="11"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="4,0"/>
            </Border>
        </Grid>
    </Button>
</UserControl>