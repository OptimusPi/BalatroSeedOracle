<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.App"
             xmlns:local="using:BalatroSeedOracle"
             RequestedThemeVariant="Dark">
    
    <Application.Resources>
        <FontFamily x:Key="BalatroFont">avares://BalatroSeedOracle/m6x11plusplus.otf#m6x11plusplus</FontFamily>

        <!-- THE 11 REAL BALATRO COLORS (from BALATRO_UI_PATTERNS.md) -->

        <!-- Backgrounds -->
        <SolidColorBrush x:Key="ModalGrey">#3a5055</SolidColorBrush>
        <SolidColorBrush x:Key="White">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBackground">#2e3f42</SolidColorBrush>
        <SolidColorBrush x:Key="SliderEmpty">#2a2a2a</SolidColorBrush>

        <!-- Buttons -->
        <SolidColorBrush x:Key="Red">#ff4c40</SolidColorBrush>
        <SolidColorBrush x:Key="Blue">#0093ff</SolidColorBrush>
        <SolidColorBrush x:Key="Orange">#ff9800</SolidColorBrush>
        <SolidColorBrush x:Key="HoverShadow">#1a1a1a</SolidColorBrush>

        <!-- Borders & Text -->
        <SolidColorBrush x:Key="ModalBorder">#b9c2d2</SolidColorBrush>
        <SolidColorBrush x:Key="BodyText">#4a4a4a</SolidColorBrush>

        <!-- REAL Balatro colors from globals.lua -->
        <SolidColorBrush x:Key="Green">#4BC292</SolidColorBrush>
        <SolidColorBrush x:Key="GreenHighlight">#56a887</SolidColorBrush>
        <SolidColorBrush x:Key="Purple">#8867a5</SolidColorBrush>
        <SolidColorBrush x:Key="PureBlack">#374244</SolidColorBrush>
        <SolidColorBrush x:Key="SouthModalShadow">#1a1a1a</SolidColorBrush>
        <SolidColorBrush x:Key="TextInactive">#88888899</SolidColorBrush>

        <!-- Additional Balatro colors from globals.lua -->
        <SolidColorBrush x:Key="Gold">#eac058</SolidColorBrush>
        <SolidColorBrush x:Key="Teal">#008ee6</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBorder">#4F6367</SolidColorBrush>
        <SolidColorBrush x:Key="DarkGreyBorder">#5f7377</SolidColorBrush>
        <SolidColorBrush x:Key="LightTextGrey">#bfc7d5</SolidColorBrush>
        <SolidColorBrush x:Key="VeryLightGrey">#D8D8D8</SolidColorBrush>
        <SolidColorBrush x:Key="SemiTransparentBlack">#22222222</SolidColorBrush>
        <SolidColorBrush x:Key="VeryTransparentBlack">#00000055</SolidColorBrush>
        <SolidColorBrush x:Key="ContainerDarkPrecise">#4f6367</SolidColorBrush>
        <SolidColorBrush x:Key="ItemConfigDarkBg">#374244</SolidColorBrush>
        <SolidColorBrush x:Key="ItemConfigMediumBg">#424e54</SolidColorBrush>
        <SolidColorBrush x:Key="MainBackground">#7A9E9F</SolidColorBrush>
        <SolidColorBrush x:Key="Border">#7A9E9F</SolidColorBrush>
        <SolidColorBrush x:Key="Background">#B8D8D8</SolidColorBrush>
        <SolidColorBrush x:Key="LightContentBackground">#B8D8D8</SolidColorBrush>
        <SolidColorBrush x:Key="AccentGreen">#4BC292</SolidColorBrush>
        <SolidColorBrush x:Key="TerminalBackground">#374244</SolidColorBrush>
        <SolidColorBrush x:Key="RedHighlight">#FE5F55</SolidColorBrush>
        <SolidColorBrush x:Key="TextDark">#4F6367</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleRed">#FE5F55</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleBlue">#009dff</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleGreen">#4BC292</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleRedHover">#d44438</SolidColorBrush>
        <SolidColorBrush x:Key="SemiTransparentDarkBackground">#2e3f4266</SolidColorBrush>
        <SolidColorBrush x:Key="LightBlue">#29adff</SolidColorBrush>
        <SolidColorBrush x:Key="BrighterBlue">#4fc3ff</SolidColorBrush>
        <SolidColorBrush x:Key="DarkRed">#c74c40</SolidColorBrush>
        <SolidColorBrush x:Key="TealGrey">#5f8a8d</SolidColorBrush>
        <SolidColorBrush x:Key="MediumDarkGrey">#344143</SolidColorBrush>
        <SolidColorBrush x:Key="PopupBackground">#2e3f42</SolidColorBrush>
        <SolidColorBrush x:Key="PopupHover">#3a5055</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardGreen">#4BC292</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardGreenHover">#56a887</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardRed">#FE5F55</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardRedHover">#ff6c62</SolidColorBrush>

        <!-- Gold gradient resources -->
        <LinearGradientBrush x:Key="GoldGradient1" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#f3d078" Offset="0"/>
            <GradientStop Color="#eac058" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="GoldGradient2" StartPoint="0%,0%" EndPoint="0%,100%">
            <GradientStop Color="#f3d078" Offset="0"/>
            <GradientStop Color="#d4a840" Offset="1"/>
        </LinearGradientBrush>

        <!-- AvaloniaEdit font size resources -->
        <x:Double x:Key="FontSizeNormal">14</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>

    </Application.Resources>

    <Application.Styles>
        <!-- Include base Fluent theme for control templates (unfortunately needed for DataGrid, ComboBox, etc.) -->
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />
        
        <!-- Include DataGrid styles (required for DataGrid to be visible) -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <!-- Include AvaloniaEdit styles -->
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        
        <!-- ðŸŽ¯ GLOBAL BALATRO STYLES - Applied to ALL controls automatically -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroGlobalStyles.axaml" />

        <!-- Balatro tab styles (flat red tabs with bouncing triangle) -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroTabs.axaml" />

        <!-- Balatro animations (bouncing triangles, etc.) -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroAnimations.axaml" />

        <!-- Component-specific styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroModal.axaml" />
        <!-- Removed ButtonStyles include; consolidated into global styles and precise palette -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/TextBoxStyles.axaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/WidgetStyles.axaml" />
        
        <!-- Popup and Flyout styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/PopupStyles.axaml" />
        
        <!-- Exact color picker precision styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroPreciseColors.axaml" />

        <!-- Balatro Tab Triangle Animation: down arrow, margin bounce within fixed lane -->
        <Style Selector="TextBlock.balatro-triangle">
            <Setter Property="Foreground" Value="{StaticResource Red}"/>
            <Setter Property="Text" Value="â–¼"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Opacity" Value="1.0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Style.Animations>
                <!-- Vertical bounce via Margin inside fixed-height indicator lane (no reflow) -->
                <Animation Duration="0:0:0.6" IterationCount="Infinite" PlaybackDirection="Alternate" Easing="SineEaseInOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Margin" Value="0,-4,0,0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

    </Application.Styles>
</Application>