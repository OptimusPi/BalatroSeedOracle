        <Style Selector="Button.widget-minimize-btn:pointerover">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        </Style>

        <Style Selector="Button.widget-submit-btn">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="Button.widget-submit-btn:pointerover">
            <Setter Property="Background" Value="{StaticResource Green}"/>
        </Style>

        <Style Selector="Button.widget-submit-btn:pressed">
            <Setter Property="Background" Value="{StaticResource Green}"/>
        </Style>

        <Style Selector="Button.widget-secondary-btn">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.widget-secondary-btn:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>

        <Style Selector="Button.widget-secondary-btn:pressed">
            <Setter Property="Background" Value="{StaticResource BlueHover}"/>
        </Style>

        <Style Selector="Button.widget-secondary-btn:disabled">
            <Setter Property="Background" Value="{StaticResource ModalGrey}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <Style Selector="TextBox.widget-input">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="TextBox.widget-input:focus">
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
        </Style>

        <Style Selector="TextBox.widget-prompt-input">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
        </Style>

        <Style Selector="TextBox.widget-prompt-input:focus">
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
        </Style>

        <Style Selector="TextBlock.widget-title">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBlock.widget-label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="TextBlock.widget-muted">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style Selector="TextBlock.widget-info">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- =============================================
             POPUP/FLYOUT STYLES
             ============================================= -->

        <Style Selector="FlyoutPresenter">
            <Setter Property="Background" Value="{StaticResource PopupBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentGreen}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="Popup">
            <Setter Property="PlacementMode" Value="AnchorAndGravity"/>
        </Style>

        <Style Selector="ToolTip">
            <Setter Property="Background" Value="{StaticResource PopupBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <Style Selector="FlyoutPresenter RadioButton">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style Selector="FlyoutPresenter RadioButton:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{StaticResource AccentGreen}"/>
        </Style>

        <Style Selector="FlyoutPresenter CheckBox">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style Selector="FlyoutPresenter CheckBox:checked /template/ ContentPresenter">
            <Setter Property="TextElement.Foreground" Value="{StaticResource AccentGreen}"/>
        </Style>

        <Style Selector="FlyoutPresenter TextBlock">
            <Setter Property="Foreground" Value="{StaticResource White}"/>
        </Style>

        <Style Selector="FlyoutPresenter TextBlock.header">
            <Setter Property="Foreground" Value="{StaticResource AccentGreen}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style Selector="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource PopupBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource White}"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style Selector="ComboBoxItem:pointerover">
            <Setter Property="Background" Value="{StaticResource PopupHover}"/>
        </Style>

        <Style Selector="ComboBoxItem:selected">
            <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
            <Setter Property="Foreground" Value="{StaticResource PopupBackground}" />
        </Style>

        <!-- =============================================
             SLIDER STYLES
             ============================================= -->

        <Style Selector="Slider:horizontal">
            <Setter Property="Height" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Template">
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Border Background="{StaticResource SliderEmpty}"
                                CornerRadius="4"
                                Height="8"
                                VerticalAlignment="Center"/>

                        <Track x:Name="PART_Track"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Value="{TemplateBinding Value, Mode=TwoWay}"
                               Orientation="Horizontal">
                            <Track.DecreaseButton>
                                <RepeatButton Classes="trackButton"/>
                            </Track.DecreaseButton>
                            <Track.IncreaseButton>
                                <RepeatButton Classes="trackButton"/>
                            </Track.IncreaseButton>
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border Width="16"
                                                    Height="16"
                                                    Background="{StaticResource Red}"
                                                    CornerRadius="8"
                                                    Cursor="Hand">
                                                <Border.Styles>
                                                    <Style Selector="Border:pointerover">
                                                        <Setter Property="Background" Value="{StaticResource RedHover}"/>
                                                    </Style>
                                                </Border.Styles>
                                            </Border>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="Slider RepeatButton.trackButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- =============================================
             CARD FLIP ANIMATION STYLES
             ============================================= -->

        <Style Selector="Button.widget-card">
            <Setter Property="Width" Value="96"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="(ScaleTransform.ScaleX)" Duration="0:0:0.15"/>
                    <DoubleTransition Property="(ScaleTransform.ScaleY)" Duration="0:0:0.05"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.card-back">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="{StaticResource ColorPurpleViolet}" Offset="0.0"/>
                        <GradientStop Color="{StaticResource ColorDarkPurple}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource ColorPurpleViolet}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource Gold}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style Selector="Border.card-back-pattern">
            <Setter Property="Background">
                <Setter.Value>
                    <VisualBrush TileMode="Tile"
                                 DestinationRect="0,0,20,20"
                                 Stretch="None">
                        <VisualBrush.Visual>
                            <Canvas Width="20" Height="20">
                                <Ellipse Width="4" Height="4" Fill="{StaticResource PurpleMuted}" Canvas.Left="8" Canvas.Top="8"/>
                            </Canvas>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Border.card-front">
            <Setter Property="Background" Value="{StaticResource Red}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

    </Application.Styles>
</Application>
