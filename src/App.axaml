        <SolidColorBrush x:Key="RedHighlight">#ff4444</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBackground2">#1a1a1a</SolidColorBrush>
        <SolidColorBrush x:Key="SearchHighlight">#4a6065</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleGreen">#5FD3A3</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleGreenHover">#4BC292</SolidColorBrush>
        <SolidColorBrush x:Key="ToggleRedHover">#FF7F75</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardGreen">#1a2c2a</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardRed">#2a1a1a</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardGreenHover">#2a3c3a</SolidColorBrush>
        <SolidColorBrush x:Key="ResponsiveCardRedHover">#3a2a2a</SolidColorBrush>
        <SolidColorBrush x:Key="GoldGradient1">#FFD700</SolidColorBrush>
        <SolidColorBrush x:Key="GoldGradient2">#FFA500</SolidColorBrush>
        <SolidColorBrush x:Key="SemiTransparentShadow">#44000000</SolidColorBrush>
        <SolidColorBrush x:Key="PaleOrange">#FEB95F</SolidColorBrush>
        <SolidColorBrush x:Key="DaytroOrange">#FDB462</SolidColorBrush>
        <SolidColorBrush x:Key="PinkRed">#FF6B6B</SolidColorBrush>
        
        <!-- AvaloniaEdit font size resources -->
        <x:Double x:Key="FontSizeNormal">14</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
        
        <!-- BoxShadow resources -->
        <BoxShadows x:Key="ModalBoxShadow">0 4 8 #777e89</BoxShadows>
        <BoxShadows x:Key="StandardModalShadow">0 5 0 #777e89</BoxShadows>
        <BoxShadows x:Key="LightBoxShadow">0 2 10 #22000000</BoxShadows>
        <BoxShadows x:Key="DeepBoxShadow">0 5 20 #000000AA</BoxShadows>
        
    </Application.Resources>

    <Application.Styles>
        <!-- Include base Fluent theme for control templates (unfortunately needed for DataGrid, ComboBox, etc.) -->
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />
        
        <!-- Include DataGrid styles (required for DataGrid to be visible) -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <!-- Include AvaloniaEdit styles -->
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        
        <!-- ðŸŽ¯ GLOBAL BALATRO STYLES - Applied to ALL controls automatically -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroGlobalStyles.axaml" />

        <!-- Balatro tab styles (flat red tabs with bouncing triangle) -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroTabs.axaml" />

        <!-- Component-specific styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroModal.axaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/ButtonStyles.axaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/TextBoxStyles.axaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/WidgetStyles.axaml" />
        
        <!-- Popup and Flyout styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/PopupStyles.axaml" />
        
        <!-- Exact color picker precision styles -->
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroPreciseColors.axaml" />

        <!-- Balatro Tab Triangle Animation (pulsing opacity) -->
        <Style Selector="TextBlock.balatro-triangle">
            <Setter Property="Opacity" Value="0.8"/>
            <Style.Animations>
                <Animation Duration="0:0:0.8" IterationCount="Infinite" PlaybackDirection="Alternate">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.8"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1.0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

    </Application.Styles>
</Application>