        <SolidColorBrush x:Key="BrighterBlue">#5BA0F2</SolidColorBrush>
        <SolidColorBrush x:Key="TealGrey">#708386</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBorder">#555a5c</SolidColorBrush>
        <SolidColorBrush x:Key="VeryDarkGrey">#2d2d2d</SolidColorBrush>
        <SolidColorBrush x:Key="MediumBorder">#666a6c</SolidColorBrush>
        <SolidColorBrush x:Key="BrightGreen">#00ff66</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBlue">#004d7a</SolidColorBrush>
        <SolidColorBrush x:Key="DarkRed">#8b1538</SolidColorBrush>
        <SolidColorBrush x:Key="InsetShadow">#20000000</SolidColorBrush>
        <SolidColorBrush x:Key="MediumLightGrey">#AAAAAA</SolidColorBrush>
        <SolidColorBrush x:Key="DarkGreen">#2d5c3e</SolidColorBrush>
        <SolidColorBrush x:Key="MediumDarkGrey">#666666</SolidColorBrush>
        <SolidColorBrush x:Key="PopupBackground">#1E1E1E</SolidColorBrush>
