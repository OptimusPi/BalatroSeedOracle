        <SolidColorBrush x:Key="PaleGreen">#56a887</SolidColorBrush>
        <SolidColorBrush x:Key="Orange">#E88B00</SolidColorBrush>
        <SolidColorBrush x:Key="Gold">#D4AF37</SolidColorBrush>
        <SolidColorBrush x:Key="Purple">#86609F</SolidColorBrush>
        
