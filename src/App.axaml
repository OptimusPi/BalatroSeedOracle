<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.App"
             xmlns:local="using:BalatroSeedOracle"
             RequestedThemeVariant="Dark">
    
    <Application.Resources>
        <!-- ============================================================ -->
        <!-- LAYER 1: BASE COLOR PALETTE - Authentic Balatro Colors       -->
        <!-- All hex values defined here ONCE. No duplicates allowed.     -->
        <!-- ============================================================ -->

        <!-- Primary Brand Colors -->
        <Color x:Key="ColorWhite">#FFFFFF</Color>
        <Color x:Key="ColorBlack">#000000</Color>
        <Color x:Key="ColorRed">#ff4c40</Color>
        <Color x:Key="ColorDarkRed">#a02721</Color>
        <Color x:Key="ColorDarkestRed">#70150f</Color>
        <Color x:Key="ColorBlue">#0093ff</Color>
        <Color x:Key="ColorDarkBlue">#0057a1</Color>
        <Color x:Key="ColorOrange">#ff9800</Color>
        <Color x:Key="ColorDarkOrange">#a05b00</Color>
        <Color x:Key="ColorDarkGold">#b8883a</Color>
        <Color x:Key="ColorGreen">#429f79</Color>
        <Color x:Key="ColorDarkGreen">#215f46</Color>
        <Color x:Key="ColorPurple">#7d60e0</Color>
        <Color x:Key="ColorDarkPurple">#292189</Color>

        <!-- Special/Text Colors -->
        <Color x:Key="ColorBrightGold">#eaba44</Color>
        <Color x:Key="ColorBrightGreen">#35bd86</Color>

        <!-- Modal/Panel Colors -->
        <Color x:Key="ColorGrey">#3a5055</Color>
        <Color x:Key="ColorDarkGrey">#1e2b2d</Color>
        <Color x:Key="ColorBrightSilver">#b9c2d2</Color>
        <Color x:Key="ColorLightGrey">#777e89</Color>
        <Color x:Key="ColorFadedGrey">#565b5c</Color>

        <!-- Shadow Colors -->
        <Color x:Key="ColorMediumShadow">#1e2e32</Color>
        <Color x:Key="ColorDarkShadow">#0b1415</Color>
        <Color x:Key="ColorTranslucentBlack33">#55000000</Color>

        <!-- Disabled Control Colors -->
        <Color x:Key="ColorDarkDullGrey">#2d2d2d</Color>
        <Color x:Key="ColorDullGrey">#5c5c5c</Color>
        <Color x:Key="ColorLightDullGrey">#6b6b6b</Color>
        <Color x:Key="ColorLightDullWashGrey">#545454</Color>

        <!-- Other UI Colors -->
        <Color x:Key="ColorBurntRed">#8f3b36</Color>
        <Color x:Key="ColorLightSilver">#a3acb9</Color>
        <Color x:Key="ColorGreySilver">#686e78</Color>

        <!-- Card Colors -->
        <Color x:Key="ColorCardFaceTop">#F5F5F0</Color>
        <Color x:Key="ColorCardFaceBottom">#EEEEE8</Color>

        <!-- Additional Purple Colors for Card Flip Animations -->
        <Color x:Key="ColorPurpleViolet">#9B7EDE</Color>
        <Color x:Key="ColorPurpleMuted">#6B5AA8</Color>

        <!-- ============================================================ -->
        <!-- LAYER 2: SEMANTIC BRUSHES - References to Layer 1 Only      -->
        <!-- No hex codes here. All use StaticResource references.        -->
        <!-- ============================================================ -->

        <!-- Color aliases (for DropShadowEffect, etc - need Color not Brush) -->
        <StaticResource x:Key="GoldColor" ResourceKey="ColorBrightGold" />
        <StaticResource x:Key="BlackColor" ResourceKey="ColorBlack" />

        <!-- Brand Action Brushes -->
        <SolidColorBrush x:Key="White" Color="{StaticResource ColorWhite}"/>
        <SolidColorBrush x:Key="Black" Color="{StaticResource ColorBlack}"/>
        <SolidColorBrush x:Key="Red" Color="{StaticResource ColorRed}"/>
        <SolidColorBrush x:Key="RedHover" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="Blue" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="BlueHover" Color="{StaticResource ColorDarkBlue}"/>
        <SolidColorBrush x:Key="Orange" Color="{StaticResource ColorOrange}"/>
        <SolidColorBrush x:Key="OrangeHover" Color="{StaticResource ColorDarkOrange}"/>
        <SolidColorBrush x:Key="Green" Color="{StaticResource ColorGreen}"/>
        <SolidColorBrush x:Key="GreenHover" Color="{StaticResource ColorDarkGreen}"/>
        <SolidColorBrush x:Key="Purple" Color="{StaticResource ColorPurple}"/>
        <SolidColorBrush x:Key="PurpleHover" Color="{StaticResource ColorDarkPurple}"/>

        <!-- Badge/Button Semantic Names -->
        <SolidColorBrush x:Key="RedBadgeFace" Color="{StaticResource ColorRed}"/>
        <SolidColorBrush x:Key="RedBadgeEdge" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="RedBadgeFaceHover" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="RedBadgeEdgeHover" Color="{StaticResource ColorDarkestRed}"/>

        <!-- Text Brushes -->
        <SolidColorBrush x:Key="GoldFont" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="BrightGold" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="Gold" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="GoldHover" Color="{StaticResource ColorDarkGold}"/>
        <SolidColorBrush x:Key="GreenFont" Color="{StaticResource ColorBrightGreen}"/>
        <SolidColorBrush x:Key="SpecialGreenText" Color="{StaticResource ColorBrightGreen}"/>
        <SolidColorBrush x:Key="AccentGreen" Color="{StaticResource ColorBrightGreen}"/>

        <!-- Modal/Panel Brushes -->
        <SolidColorBrush x:Key="ModalBackground" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ModalGrey" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ModalInnerPanel" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkBackground" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="PureBlack" Color="{StaticResource ColorBlack}"/>
        <SolidColorBrush x:Key="TerminalBackground" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="ModalEdgeBorder" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="ModalBorder" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="Border" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="ModalSouthEdge" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="LightGrey" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="DisabledControlText" Color="{StaticResource ColorFadedGrey}"/>

        <!-- Border Brushes (consolidated to use DarkGrey) -->
        <SolidColorBrush x:Key="DarkBorder" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkTealGrey" Color="{StaticResource ColorDarkGrey}"/>

        <!-- Grey Scale Brushes -->
        <SolidColorBrush x:Key="MediumGrey" Color="{StaticResource ColorFadedGrey}"/>
        <SolidColorBrush x:Key="VeryLightGrey" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="LightTextGrey" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="TextInactive" Color="{StaticResource ColorFadedGrey}"/>
        <SolidColorBrush x:Key="VeryDarkGrey2" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkGrey2" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="LightCream" Color="{StaticResource ColorBrightSilver}"/>

        <!-- Shadow Brushes -->
        <SolidColorBrush x:Key="ButtonShadow" Color="{StaticResource ColorMediumShadow}"/>
        <SolidColorBrush x:Key="HoverShadow" Color="{StaticResource ColorMediumShadow}"/>
        <SolidColorBrush x:Key="InnerModalPanelShadow" Color="{StaticResource ColorDarkShadow}"/>
        <SolidColorBrush x:Key="DarkShadow" Color="{StaticResource ColorDarkShadow}"/>

        <!-- Disabled Control Brushes -->
        <SolidColorBrush x:Key="DisabledButtonFaceHover" Color="{StaticResource ColorDarkDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonTextHover" Color="{StaticResource ColorDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonText" Color="{StaticResource ColorLightDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonFace" Color="{StaticResource ColorLightDullWashGrey}"/>

        <!-- Other Semantic Brushes -->
        <SolidColorBrush x:Key="ProgressBarRed" Color="{StaticResource ColorBurntRed}"/>
        <SolidColorBrush x:Key="ValueDisplayContainer" Color="{StaticResource ColorLightSilver}"/>
        <SolidColorBrush x:Key="ValueDisplayContainerSouthEdge" Color="{StaticResource ColorGreySilver}"/>

        <!-- JSON Editor Semantic Brushes -->
        <SolidColorBrush x:Key="EditorDarkBg" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="EditorHeaderBg" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="EditorBorderBg" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="EditorTextGrey" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="EditorButtonBg" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="BrightGreenEditor" Color="{StaticResource ColorBrightGreen}"/>
        <SolidColorBrush x:Key="EditorLineNumbers" Color="{StaticResource ColorFadedGrey}"/>

        <!-- Transparent/Overlay Brushes -->
        <SolidColorBrush x:Key="SemiTransparentBlack" Color="#80000000"/>
        <SolidColorBrush x:Key="SemiTransparentDarkBackground" Color="#66000000"/>
        <SolidColorBrush x:Key="TransparentDark1" Color="{StaticResource ColorTranslucentBlack33}"/>
        <SolidColorBrush x:Key="TransparentDark3" Color="#33000000"/>

        <!-- Popup/Flyout Brushes -->
        <SolidColorBrush x:Key="PopupBackground" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="PopupHover" Color="{StaticResource ColorGrey}"/>

        <!-- Slider Brushes -->
        <SolidColorBrush x:Key="SliderEmpty" Color="{StaticResource ColorDarkRed}"/>

        <!-- Card Flip Animation Brushes -->
        <SolidColorBrush x:Key="PurpleViolet" Color="{StaticResource ColorPurpleViolet}"/>
        <SolidColorBrush x:Key="DarkPurple" Color="{StaticResource ColorDarkPurple}"/>
        <SolidColorBrush x:Key="PurpleMuted" Color="{StaticResource ColorPurpleMuted}"/>



        <!-- ============================================================ -->
        <!-- NON-COLOR RESOURCES                                          -->
        <!-- ============================================================ -->
        <FontFamily x:Key="BalatroFont">avares://BalatroSeedOracle/m6x11plusplus.otf#m6x11plusplus</FontFamily>
        <BoxShadows x:Key="StandardModalShadow">0 4 8 0 #777e89</BoxShadows>
        <BoxShadows x:Key="WidgetWindowShadow">0 6 16 0 #55000000</BoxShadows>
        <BoxShadows x:Key="WidgetContentShadow">0 2 8 0 #22000000</BoxShadows>
        <BoxShadows x:Key="InsetInputShadow">inset 0 2 4 #00000040</BoxShadows>
        <BoxShadows x:Key="SmallDropShadow">0 2 4 #00000040</BoxShadows>
        <BoxShadows x:Key="CardShadow">0 2 6 0 #30000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="CardShadowHover">0 4 10 0 #40000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="CardShadowSmall">0 1 4 0 #25000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="TextBoxShadow">0 2 8 0 #22222222</BoxShadows>
        <x:Double x:Key="FontSizeNormal">14</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

        <!-- ALL STYLES CONSOLIDATED HERE - ONE SOURCE OF TRUTH -->

        <!-- Global resources -->
        <Style>
            <Style.Resources>
                <!-- Centralized tab button font size so it can be scaled easily -->
                <x:Double x:Key="TabButtonFontSize">72</x:Double>
            </Style.Resources>
        </Style>

        <!-- =============================================
             DEFAULT BUTTON STYLES - Applied automatically
             NO CLASSES NEEDED! All buttons are beautiful by default
             ============================================= -->

        <!-- Base button style with flat 2D shadow template -->
        <!-- DEFAULT: Balatro Red background, white text, flat drop shadow -->
        <Style Selector="Button:not(.SystemCaptionButton)">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="Background" Value="{StaticResource Red}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Drop shadow (flat 2D, no blur) -->
                            <Border Name="DropShadow"
                                    Background="{StaticResource ButtonShadow}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Margin="0,4,0,0"/>
                            <!-- Main button face -->
                            <Border Name="ButtonBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    Margin="0,0,0,4">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"
                                                  Padding="{TemplateBinding Padding}">
                                    <ContentPresenter.Styles>
                                        <Style Selector="TextBlock">
                                            <Setter Property="FontSize" Value="{Binding $parent[Button].FontSize}"/>
                                            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                                            <Setter Property="Foreground" Value="{Binding $parent[Button].Foreground}"/>
                                        </Style>
                                    </ContentPresenter.Styles>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Default hover state - Dark Red -->
        <Style Selector="Button:not(.SystemCaptionButton):pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}" />
        </Style>

        <!-- Default pressed state - Dark Red + shift down -->
        <Style Selector="Button:not(.SystemCaptionButton):pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button:not(.SystemCaptionButton):pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- OPTIONAL Color classes (only use if you need non-red buttons) -->
        <Style Selector="Button.btn-blue">
            <Setter Property="Background" Value="{StaticResource Blue}" />
        </Style>
        <Style Selector="Button.btn-blue:pointerover">
            <Setter Property="Background" Value="{StaticResource BlueHover}" />
        </Style>
        <Style Selector="Button.btn-blue:pressed">
            <Setter Property="Background" Value="{StaticResource BlueHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-blue:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="Button.btn-green">
            <Setter Property="Background" Value="{StaticResource Green}" />
        </Style>
        <Style Selector="Button.btn-green:pointerover">
            <Setter Property="Background" Value="{StaticResource GreenHover}" />
        </Style>
        <Style Selector="Button.btn-green:pressed">
            <Setter Property="Background" Value="{StaticResource GreenHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-green:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="Button.btn-orange">
            <Setter Property="Background" Value="{StaticResource Orange}" />
        </Style>
        <Style Selector="Button.btn-orange:pointerover">
            <Setter Property="Background" Value="{StaticResource OrangeHover}" />
        </Style>
        <Style Selector="Button.btn-orange:pressed">
            <Setter Property="Background" Value="{StaticResource OrangeHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-orange:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="Button.btn-red">
            <Setter Property="Background" Value="{StaticResource Red}" />
        </Style>
        <Style Selector="Button.btn-red:pointerover">
            <Setter Property="Background" Value="{StaticResource RedHover}" />
        </Style>
        <Style Selector="Button.btn-red:pressed">
            <Setter Property="Background" Value="{StaticResource RedHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-red:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="Button.btn-purple">
            <Setter Property="Background" Value="{StaticResource Purple}" />
        </Style>
        <Style Selector="Button.btn-purple:pointerover">
            <Setter Property="Background" Value="{StaticResource DarkPurple}" />
        </Style>
        <Style Selector="Button.btn-purple:pressed">
            <Setter Property="Background" Value="{StaticResource DarkPurple}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-purple:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="Button.btn-gold">
            <Setter Property="Background" Value="{StaticResource Gold}" />
        </Style>
        <Style Selector="Button.btn-gold:pointerover">
            <Setter Property="Background" Value="{StaticResource GoldHover}" />
        </Style>
        <Style Selector="Button.btn-gold:pressed">
            <Setter Property="Background" Value="{StaticResource GoldHover}" />
            <Setter Property="RenderTransform">
                <TranslateTransform Y="3"/>
            </Setter>
        </Style>
        <Style Selector="Button.btn-gold:pressed /template/ Border#DropShadow">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <!-- Author button (grey - 1 shade lighter) -->
        <Style Selector="Button.author-button">
            <Setter Property="Background" Value="{StaticResource LightGrey}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="12,8" />
        </Style>
        <Style Selector="Button.author-button:pointerover">
            <Setter Property="Background" Value="{StaticResource VeryLightGrey}" />
        </Style>
        <Style Selector="Button.author-button:pressed">
            <Setter Property="Background" Value="{StaticResource VeryLightGrey}" />
        </Style>

        <!-- Button disabled state -->
        <Style Selector="Button:not(.SystemCaptionButton):disabled">
            <Setter Property="Opacity" Value="0.6" />
        </Style>

        <!-- =============================================
             DEFAULT TEXT CONTROLS
             ============================================= -->

        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
        </Style>

        <Style Selector="Label">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="SelectionBrush" Value="{StaticResource Blue}" />
            <Setter Property="CaretBrush" Value="{StaticResource White}" />
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        </Style>

        <Style Selector="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style Selector="CheckBox /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="{StaticResource Red}" />
            <Setter Property="BorderBrush" Value="{StaticResource Red}" />
        </Style>

        <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                        <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                        <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                        <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="NumericUpDown:focus">
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        </Style>
        <Style Selector="NumericUpDown:pointerover">
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        </Style>

        <Style Selector="ListBox">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

        <Style Selector="DataGrid">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="RowBackground" Value="{StaticResource DarkBackground}" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="HeadersVisibility" Value="Column" />
        </Style>

        <Style Selector="DataGridColumnHeader">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Background" Value="{StaticResource DarkBackground}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <Style Selector="DataGridCell">
            <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <!-- =============================================
             SCROLLBAR STYLES
             ============================================= -->

        <Style Selector="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style Selector="ScrollBar:vertical">
            <Setter Property="Width" Value="20" />
            <Setter Property="Margin" Value="0,0,-20,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Name="PART_Border"
                                Background="{StaticResource RedHover}"
                                CornerRadius="8"
                                Width="16"
                                HorizontalAlignment="Center"
                                ClipToBounds="True">
                            <Track Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value, Mode=TwoWay}"
                                   ViewportSize="{TemplateBinding ViewportSize}"
                                   Orientation="Vertical">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="{StaticResource Red}"
                                                        CornerRadius="8"
                                                        Width="16"
                                                        MinHeight="40"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ScrollBar:horizontal">
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="0,0,0,-20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Border Name="PART_Border"
                                Background="{StaticResource RedHover}"
                                CornerRadius="8"
                                Height="16"
                                VerticalAlignment="Center"
                                ClipToBounds="True">
                            <Track Name="PART_Track"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value, Mode=TwoWay}"
                                   ViewportSize="{TemplateBinding ViewportSize}"
                                   Orientation="Horizontal">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
