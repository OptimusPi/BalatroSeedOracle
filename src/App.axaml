<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BalatroSeedOracle.App"
             xmlns:local="using:BalatroSeedOracle"
             RequestedThemeVariant="Dark">
    
    <Application.Resources>
        <!-- ============================================================ -->
        <!-- LAYER 1: BASE COLOR PALETTE - Authentic Balatro Colors       -->
        <!-- All hex values defined here ONCE. No duplicates allowed.     -->
        <!-- ============================================================ -->

        <!-- Primary Brand Colors -->
        <Color x:Key="ColorWhite">#FFFFFF</Color>
        <Color x:Key="ColorBlack">#000000</Color>
        <Color x:Key="ColorRed">#ff4c40</Color>
        <Color x:Key="ColorDarkRed">#a02721</Color>
        <Color x:Key="ColorDarkestRed">#70150f</Color>
        <Color x:Key="ColorBlue">#0093ff</Color>
        <Color x:Key="ColorDarkBlue">#0057a1</Color>
        <Color x:Key="ColorOrange">#ff9800</Color>
        <Color x:Key="ColorDarkOrange">#a05b00</Color>
        <Color x:Key="ColorGreen">#429f79</Color>
        <Color x:Key="ColorDarkGreen">#215f46</Color>
        <Color x:Key="ColorPurple">#7d60e0</Color>
        <Color x:Key="ColorDarkPurple">#292189</Color>

        <!-- Special/Text Colors -->
        <Color x:Key="ColorBrightGold">#eaba44</Color>
        <Color x:Key="ColorBrightGreen">#35bd86</Color>

        <!-- Modal/Panel Colors -->
        <Color x:Key="ColorGrey">#3a5055</Color>
        <Color x:Key="ColorDarkGrey">#1e2b2d</Color>
        <Color x:Key="ColorBrightSilver">#b9c2d2</Color>
        <Color x:Key="ColorLightGrey">#777e89</Color>
        <Color x:Key="ColorFadedGrey">#565b5c</Color>

        <!-- Shadow Colors -->
        <Color x:Key="ColorMediumShadow">#1e2e32</Color>
        <Color x:Key="ColorDarkShadow">#0b1415</Color>
        <Color x:Key="ColorTranslucentBlack33">#55000000</Color>

        <!-- Disabled Control Colors -->
        <Color x:Key="ColorDarkDullGrey">#2d2d2d</Color>
        <Color x:Key="ColorDullGrey">#5c5c5c</Color>
        <Color x:Key="ColorLightDullGrey">#6b6b6b</Color>
        <Color x:Key="ColorLightDullWashGrey">#545454</Color>

        <!-- Other UI Colors -->
        <Color x:Key="ColorBurntRed">#8f3b36</Color>
        <Color x:Key="ColorLightSilver">#a3acb9</Color>
        <Color x:Key="ColorGreySilver">#686e78</Color>

        <!-- Card Colors -->
        <Color x:Key="ColorCardFaceTop">#F5F5F0</Color>
        <Color x:Key="ColorCardFaceBottom">#EEEEE8</Color>

        <!-- ============================================================ -->
        <!-- LAYER 2: SEMANTIC BRUSHES - References to Layer 1 Only      -->
        <!-- No hex codes here. All use StaticResource references.        -->
        <!-- ============================================================ -->

        <!-- Color aliases (for DropShadowEffect, etc - need Color not Brush) -->
        <StaticResource x:Key="GoldColor" ResourceKey="ColorBrightGold" />

        <!-- Brand Action Brushes -->
        <SolidColorBrush x:Key="White" Color="{StaticResource ColorWhite}"/>
        <SolidColorBrush x:Key="Black" Color="{StaticResource ColorBlack}"/>
        <SolidColorBrush x:Key="Red" Color="{StaticResource ColorRed}"/>
        <SolidColorBrush x:Key="RedHover" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="Blue" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="BlueHover" Color="{StaticResource ColorDarkBlue}"/>
        <SolidColorBrush x:Key="Orange" Color="{StaticResource ColorOrange}"/>
        <SolidColorBrush x:Key="OrangeHover" Color="{StaticResource ColorDarkOrange}"/>
        <SolidColorBrush x:Key="Green" Color="{StaticResource ColorGreen}"/>
        <SolidColorBrush x:Key="GreenHover" Color="{StaticResource ColorDarkGreen}"/>
        <SolidColorBrush x:Key="Purple" Color="{StaticResource ColorPurple}"/>
        <SolidColorBrush x:Key="PurpleHover" Color="{StaticResource ColorDarkPurple}"/>

        <!-- Badge/Button Semantic Names -->
        <SolidColorBrush x:Key="RedBadgeFace" Color="{StaticResource ColorRed}"/>
        <SolidColorBrush x:Key="RedBadgeEdge" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="RedBadgeFaceHover" Color="{StaticResource ColorDarkRed}"/>
        <SolidColorBrush x:Key="RedBadgeEdgeHover" Color="{StaticResource ColorDarkestRed}"/>

        <!-- Text Brushes -->
        <SolidColorBrush x:Key="GoldFont" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="BrightGold" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="Gold" Color="{StaticResource ColorBrightGold}"/>
        <SolidColorBrush x:Key="GreenFont" Color="{StaticResource ColorBrightGreen}"/>
        <SolidColorBrush x:Key="SpecialGreenText" Color="{StaticResource ColorBrightGreen}"/>
        <SolidColorBrush x:Key="AccentGreen" Color="{StaticResource ColorBrightGreen}"/>

        <!-- Modal/Panel Brushes -->
        <SolidColorBrush x:Key="ModalBackground" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ModalGrey" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ModalInnerPanel" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkBackground" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="PureBlack" Color="{StaticResource ColorBlack}"/>
        <SolidColorBrush x:Key="TerminalBackground" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="ModalEdgeBorder" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="ModalBorder" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="Border" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="ModalSouthEdge" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="LightGrey" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="DisabledControlText" Color="{StaticResource ColorFadedGrey}"/>

        <!-- Border Brushes (consolidated to use DarkGrey) -->
        <SolidColorBrush x:Key="DarkBorder" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkGreyBorder" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkBorderGrey" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkTealGrey" Color="{StaticResource ColorDarkGrey}"/>

        <!-- Grey Scale Brushes -->
        <SolidColorBrush x:Key="MediumGrey" Color="{StaticResource ColorFadedGrey}"/>
        <SolidColorBrush x:Key="MediumDarkGrey" Color="{StaticResource ColorFadedGrey}"/>
        <SolidColorBrush x:Key="VeryLightGrey" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="LightTextGrey" Color="{StaticResource ColorLightGrey}"/>
        <SolidColorBrush x:Key="TextInactive" Color="{StaticResource ColorFadedGrey}"/>
        <SolidColorBrush x:Key="SlateGrey" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="VeryDarkGrey2" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="DarkGrey2" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="LightCream" Color="{StaticResource ColorBrightSilver}"/>

        <!-- Shadow Brushes -->
        <SolidColorBrush x:Key="ButtonShadow" Color="{StaticResource ColorMediumShadow}"/>
        <SolidColorBrush x:Key="HoverShadow" Color="{StaticResource ColorMediumShadow}"/>
        <SolidColorBrush x:Key="InnerModalPanelShadow" Color="{StaticResource ColorDarkShadow}"/>
        <SolidColorBrush x:Key="DarkShadow" Color="{StaticResource ColorDarkShadow}"/>

        <!-- Disabled Control Brushes -->
        <SolidColorBrush x:Key="DisabledButtonFaceHover" Color="{StaticResource ColorDarkDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonTextHover" Color="{StaticResource ColorDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonText" Color="{StaticResource ColorLightDullGrey}"/>
        <SolidColorBrush x:Key="DisabledButtonFace" Color="{StaticResource ColorLightDullWashGrey}"/>

        <!-- Other Semantic Brushes -->
        <SolidColorBrush x:Key="ProgressBarRed" Color="{StaticResource ColorBurntRed}"/>
        <SolidColorBrush x:Key="ValueDisplayContainer" Color="{StaticResource ColorLightSilver}"/>
        <SolidColorBrush x:Key="ValueDisplayContainerSouthEdge" Color="{StaticResource ColorGreySilver}"/>

        <!-- Transparent/Overlay Brushes -->
        <SolidColorBrush x:Key="SemiTransparentBlack" Color="#80000000"/>
        <SolidColorBrush x:Key="SemiTransparentDarkBackground" Color="#66000000"/>
        <SolidColorBrush x:Key="TransparentDark3" Color="#33000000"/>

        <!-- Legacy compatibility (will be removed in future) -->
        <SolidColorBrush x:Key="LightBlue" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="BrighterBlue" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="CyanHighlight" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="TealGrey" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="MainBackground" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="Background" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ItemConfigMediumBg" Color="{StaticResource ColorGrey}"/>
        <SolidColorBrush x:Key="ItemConfigDarkBg" Color="{StaticResource ColorDarkGrey}"/>
        <SolidColorBrush x:Key="LightContentBackground" Color="{StaticResource ColorBrightSilver}"/>
        <SolidColorBrush x:Key="ToggleRed" Color="{StaticResource ColorRed}"/>
        <SolidColorBrush x:Key="ToggleBlue" Color="{StaticResource ColorBlue}"/>
        <SolidColorBrush x:Key="BlackColor" Color="{StaticResource ColorBlack}"/>

        <!-- ============================================================ -->
        <!-- NON-COLOR RESOURCES                                          -->
        <!-- ============================================================ -->
        <FontFamily x:Key="BalatroFont">avares://BalatroSeedOracle/m6x11plusplus.otf#m6x11plusplus</FontFamily>
        <BoxShadows x:Key="StandardModalShadow">0 4 8 0 #777e89</BoxShadows>
        <BoxShadows x:Key="WidgetWindowShadow">0 6 16 0 #55000000</BoxShadows>
        <BoxShadows x:Key="WidgetContentShadow">0 2 8 0 #22000000</BoxShadows>
        <BoxShadows x:Key="InsetInputShadow">inset 0 2 4 #00000040</BoxShadows>
        <BoxShadows x:Key="SmallDropShadow">0 2 4 #00000040</BoxShadows>
        <BoxShadows x:Key="CardShadow">0 2 6 0 #30000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="CardShadowHover">0 4 10 0 #40000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="CardShadowSmall">0 1 4 0 #25000000, 0 0 0 1 #20000000</BoxShadows>
        <BoxShadows x:Key="TextBoxShadow">0 2 8 0 #22222222</BoxShadows>
        <x:Double x:Key="FontSizeNormal">14</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
    </Application.Resources>

    <Application.Styles>
        <!-- Fluent theme MUST come first, then our overrides -->
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/BalatroGlobalStyles.axaml" />
        <StyleInclude Source="avares://BalatroSeedOracle/Styles/WidgetStyles.axaml" />
    </Application.Styles>
</Application>
