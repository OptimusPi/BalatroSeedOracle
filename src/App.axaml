        <Style Selector="TextBlock.balatro-triangle">
            <Setter Property="Foreground" Value="{StaticResource Red}"/>
            <Setter Property="Text" Value="â–¼"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Opacity" Value="1.0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Style.Animations>
                <Animation Duration="0:0:0.6" IterationCount="Infinite" PlaybackDirection="Alternate" Easing="SineEaseInOut">
                    <KeyFrame Cue="0%">
                        <Setter Property="Margin" Value="0,0,0,0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Margin" Value="0,-4,0,0"/>
                    </KeyFrame>
                </Animation>
