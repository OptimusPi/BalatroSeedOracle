        <SolidColorBrush x:Key="OrangeHover">#F09A1A</SolidColorBrush>
        <SolidColorBrush x:Key="RedHover">#E05A5A</SolidColorBrush>
        <SolidColorBrush x:Key="GreenHover">#50A880</SolidColorBrush>
        <SolidColorBrush x:Key="PurpleHover">#9D7EBA</SolidColorBrush>
        <SolidColorBrush x:Key="GoldHover">#E0C468</SolidColorBrush>
        
        <!-- Disabled states -->
        <SolidColorBrush x:Key="RedDisabled">#a94640</SolidColorBrush>
        
        <!-- UI Container colors -->
        <SolidColorBrush x:Key="Grey">#3a5055</SolidColorBrush>
        <SolidColorBrush x:Key="DockGrey">#3a5055</SolidColorBrush>
        <SolidColorBrush x:Key="DropShadow">#1e2e32</SolidColorBrush>
        <SolidColorBrush x:Key="ModalBorder">#b9c2d2</SolidColorBrush>
        <SolidColorBrush x:Key="ModalShadow">#777e89</SolidColorBrush>
        <SolidColorBrush x:Key="ModalGrey">#4a5c62</SolidColorBrush>
        <SolidColorBrush x:Key="DarkModalGrey">#1e2b2d</SolidColorBrush>
        
        <!-- UI Colors from C.UI -->
        <SolidColorBrush x:Key="TextLight">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextDark">#4F6367</SolidColorBrush>
        <SolidColorBrush x:Key="TextInactive">#88888899</SolidColorBrush>
