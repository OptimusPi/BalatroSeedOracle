        <SolidColorBrush x:Key="White">#FFFFFF</SolidColorBrush>

        <!-- Game colors -->
        <SolidColorBrush x:Key="Red">#D73D3D</SolidColorBrush>
        <SolidColorBrush x:Key="Blue">#4A90E2</SolidColorBrush>
