<Project Sdk="Microsoft.NET.Sdk.WebAssembly">
  <PropertyGroup>
    <TargetFramework>net10.0-browser</TargetFramework>
    <OutputType>Exe</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <AssemblyName>BalatroSeedOracle.Browser</AssemblyName>
    <!-- Disable auto-generation of assembly info to avoid duplicates with referenced project -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <!-- Define BROWSER compilation symbol for conditional compilation -->
    <DefineConstants>BROWSER</DefineConstants>
    <!-- Enable multi-threading for seed search! Requires COOP/COEP headers on web server -->
    <!-- Disable for now to fix 'unreachable' error when running on non-localhost IP without HTTPS -->
    <WasmEnableThreads>false</WasmEnableThreads>
    <!-- Enable SIMD for vectorized seed searching (128-bit SIMD in WASM) -->
    <WasmEnableSIMD>true</WasmEnableSIMD>
    <PublishTrimmed>false</PublishTrimmed>
    <!-- Disable HotReload in release builds -->
    <WasmEnableHotReload Condition="'$(Configuration)'=='Release'">false</WasmEnableHotReload>
    <!-- Publish to temp location, then copy wwwroot contents to final destination -->
    <PublishDir>$(MSBuildThisFileDirectory)..\..\external\Motely\Motely.API\wwwroot\BSO\_publish\</PublishDir>
  </PropertyGroup>
  
  <Target Name="DeployWasmOutput" AfterTargets="Publish">
    <ItemGroup>
      <WasmFiles Include="$(PublishDir)wwwroot\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(WasmFiles)" DestinationFolder="$(MSBuildThisFileDirectory)..\..\external\Motely\Motely.API\wwwroot\BSO\%(RecursiveDir)" />
    <RemoveDir Directories="$(PublishDir)" />
  </Target>
  <PropertyGroup Condition="'$(EnableWasmThreads)'=='true'">
    <WasmEnableThreads>true</WasmEnableThreads>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Browser" />
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BalatroSeedOracle\BalatroSeedOracle.csproj">
      <GlobalPropertiesToRemove></GlobalPropertiesToRemove>
    </ProjectReference>
  </ItemGroup>

  <!-- Include browser-only files that were excluded from shared project -->
  <ItemGroup>
    <Compile Include="..\BalatroSeedOracle\Services\Storage\LocalStorageTester.cs" Link="Services\Storage\LocalStorageTester.cs" />
  </ItemGroup>

  <!-- Don't include browser HostApiWidget - let main project handle exclusion -->

  <!-- Shared property for Motely BSO destination - use source wwwroot -->
  <PropertyGroup>
    <MotelyBSODir>$(MSBuildThisFileDirectory)..\..\external\Motely\Motely.API\wwwroot\BSO\</MotelyBSODir>
  </PropertyGroup>
</Project>
