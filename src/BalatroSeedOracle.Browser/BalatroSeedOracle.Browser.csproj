<Project Sdk="Microsoft.NET.Sdk.WebAssembly">
  <PropertyGroup>
    <TargetFramework>net10.0-browser</TargetFramework>
    <OutputType>Exe</OutputType>
    <AssemblyName>BalatroSeedOracle.Browser</AssemblyName>
    <!-- WASM Optimization Settings -->
    <WasmEnableSIMD>true</WasmEnableSIMD>
    <WasmEnableThreads>true</WasmEnableThreads>
    <RunAOTCompilation>true</RunAOTCompilation>
    <PublishTrimmed>true</PublishTrimmed>
    <!-- Max heap: 512MB = 536870912 bytes (must be multiple of 16384) -->
    <EmccMaximumHeapSize>536870912</EmccMaximumHeapSize>
    <DefineConstants>$(DefineConstants);BROWSER</DefineConstants>
    <!-- Sharded ICU: loads locale data on-demand instead of bundling all 27MB -->
    <WasmIcuDataMode>Sharded</WasmIcuDataMode>
    <!-- Disable source-generated JS interop for .NET 10.0 compatibility -->
    <EnableJavaScriptInteropGeneration>false</EnableJavaScriptInteropGeneration>
  </PropertyGroup>

  <Target Name="DeployWasmOutput" AfterTargets="Publish">
    <ItemGroup>
      <!-- Copy everything from the generated publish folder (default bin/.../publish output) -->
      <WasmFiles Include="$(PublishDir)**\*" />
    </ItemGroup>
    <Message
      Text="Deploying WASM files from $(PublishDir) to external/Motely/wwwroot/BSO"
      Importance="high"
    />
    <Copy
      SourceFiles="@(WasmFiles)"
      DestinationFolder="$(MSBuildThisFileDirectory)..\..\external\Motely\wwwroot\BSO\%(RecursiveDir)"
      SkipUnchangedFiles="false"
    />
    <Message
      Text="Deployment complete. Files copied to: $(MSBuildThisFileDirectory)..\..\external\Motely\wwwroot\BSO\"
      Importance="high"
    />
  </Target>
  <PropertyGroup Condition="'$(EnableWasmThreads)'=='true'">
    <WasmEnableThreads>true</WasmEnableThreads>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Browser" />
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BalatroSeedOracle\BalatroSeedOracle.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile
      Include="..\BalatroSeedOracle\Services\SoundFlowAudioManager.cs"
      Link="Services\SoundFlowAudioManager.cs"
    />
  </ItemGroup>

  <!-- Exclude problematic files from Browser build -->
  <ItemGroup>
    <!-- Exclude SoundFlowAudioManager due to JS interop issues -->
    <Compile Remove="..\BalatroSeedOracle\Services\SoundFlowAudioManager.cs" />
  </ItemGroup>

  <!-- Shared property for Motely BSO destination - use source wwwroot -->
  <PropertyGroup>
    <MotelyBSODir>$(MSBuildThisFileDirectory)..\..\external\Motely\Motely.API\wwwroot\BSO\</MotelyBSODir>
  </PropertyGroup>
</Project>
