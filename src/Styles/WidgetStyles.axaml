<!-- /src/Styles/WidgetStyles.axaml -->
<!-- Centralized widget component styles - NO MORE DUPLICATE STYLES IN EVERY WIDGET! -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- =============================================
         WIDGET CONTAINER STYLES
         Use these classes consistently across all widgets
         ============================================= -->

    <!-- Standard widget container (default medium grey) -->
    <Style Selector="Border.widget-container">
        <Setter Property="Background" Value="{StaticResource ModalGrey}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="{StaticResource StandardModalShadow}"/>
    </Style>

    <!-- Semi-transparent widget container variant -->
    <Style Selector="Border.widget-container.semi-transparent">
        <Setter Property="Background" Value="{StaticResource SemiTransparentDarkBackground}"/>
    </Style>

    <!-- Widget window (expanded/floating state) -->
    <Style Selector="Border.widget-window">
        <Setter Property="Background" Value="{StaticResource ModalBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BoxShadow" Value="{StaticResource WidgetWindowShadow}"/>
    </Style>

    <!-- Widget header bar -->
    <Style Selector="Border.widget-header">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="CornerRadius" Value="8,8,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- Widget content area (inner panel) -->
    <Style Selector="Border.widget-content">
        <Setter Property="Background" Value="{StaticResource DarkBorder}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- Light content area variant (for contrast) -->
    <Style Selector="Border.widget-content.light">
        <Setter Property="Background" Value="{StaticResource VeryLightGrey}"/>
        <Setter Property="BoxShadow" Value="{StaticResource WidgetContentShadow}"/>
    </Style>

    <!-- =============================================
         WIDGET BUTTON STYLES
         ============================================= -->

    <!-- Widget container as clickable button -->
    <Style Selector="Button.widget-container">
        <Setter Property="Background" Value="{StaticResource ModalBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.widget-container:pointerover">
        <Setter Property="Background" Value="{StaticResource ModalGrey}"/>
    </Style>

    <!-- Minimized widget icon button -->
    <Style Selector="Button.widget-icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.widget-icon:pointerover Border.icon-bg">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Gold}"/>
    </Style>

    <!-- Widget minimize/close button -->
    <Style Selector="Button.widget-minimize-btn">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource Gold}"/>
    </Style>

    <Style Selector="Button.widget-minimize-btn:pointerover">
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
    </Style>

    <!-- Widget action button (submit, etc) -->
    <Style Selector="Button.widget-submit-btn">
        <Setter Property="Background" Value="{StaticResource AccentGreen}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Button.widget-submit-btn:pointerover">
        <Setter Property="Background" Value="{StaticResource Green}"/>
    </Style>

    <!-- Widget secondary button -->
    <Style Selector="Button.widget-secondary-btn">
        <Setter Property="Background" Value="{StaticResource Blue}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.widget-secondary-btn:pointerover">
        <Setter Property="Background" Value="{StaticResource Blue}"/>
    </Style>

    <Style Selector="Button.widget-secondary-btn:disabled">
        <Setter Property="Background" Value="{StaticResource ModalGrey}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- =============================================
         WIDGET FORM CONTROLS
         ============================================= -->

    <!-- Widget text input -->
    <Style Selector="TextBox.widget-input">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="TextBox.widget-input:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
    </Style>

    <!-- Widget prompt/description input (multiline) -->
    <Style Selector="TextBox.widget-prompt-input">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="MinHeight" Value="60"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
    </Style>

    <Style Selector="TextBox.widget-prompt-input:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
    </Style>

    <!-- =============================================
         WIDGET TYPOGRAPHY
         ============================================= -->

    <!-- Widget title text -->
    <Style Selector="TextBlock.widget-title">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Widget section label -->
    <Style Selector="TextBlock.widget-label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Widget muted/secondary text -->
    <Style Selector="TextBlock.widget-muted">
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Widget info display text -->
    <Style Selector="TextBlock.widget-info">
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</Styles>
