<!-- /src/Styles/BalatroGlobalStyles.axaml -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global resources -->
    <Styles.Resources>
        <!-- Centralized tab button font size so it can be scaled easily -->
        <x:Double x:Key="TabButtonFontSize">72</x:Double>
    </Styles.Resources>
    
    <!-- =============================================
         GLOBAL BALATRO STYLES - Applied to ALL controls
         This ensures consistent theming everywhere
         ============================================= -->
    
    <!-- ==== DEFAULT CONTROL STYLES (Applied automatically) ==== -->
    
    <!-- ==== BALATRO BUTTONS ==== -->
    <!-- Base button style with flat 2D shadow template -->
    <Style Selector="Button:not(.SystemCaptionButton)">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Drop shadow (flat 2D, no blur) -->
                        <Border Name="DropShadow"
                                Background="{StaticResource ButtonShadow}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Margin="0,4,0,0"/>
                        <!-- Main button face -->
                        <Border Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Margin="0,0,0,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              Padding="{TemplateBinding Padding}">
                                <ContentPresenter.Styles>
                                    <Style Selector="TextBlock">
                                        <Setter Property="FontSize" Value="{Binding $parent[Button].FontSize}"/>
                                        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                                        <Setter Property="Foreground" Value="{Binding $parent[Button].Foreground}"/>
                                    </Style>
                                </ContentPresenter.Styles>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Color classes - Normal state -->
    <Style Selector="Button.btn-blue">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="Button.btn-green">
        <Setter Property="Background" Value="{StaticResource Green}" />
    </Style>
    <Style Selector="Button.btn-orange">
        <Setter Property="Background" Value="{StaticResource Orange}" />
    </Style>
    <Style Selector="Button.btn-purple">
        <Setter Property="Background" Value="{StaticResource Purple}" />
    </Style>
    <Style Selector="Button.btn-red">
        <Setter Property="Background" Value="{StaticResource Red}" />
    </Style>

    <!-- Hover states - Use Dark variants (flat, no gradients) -->
    <Style Selector="Button.btn-blue:pointerover">
        <Setter Property="Background" Value="{StaticResource BlueHover}" />
    </Style>
    <Style Selector="Button.btn-green:pointerover">
        <Setter Property="Background" Value="{StaticResource GreenHover}" />
    </Style>
    <Style Selector="Button.btn-orange:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>
    <Style Selector="Button.btn-purple:pointerover">
        <Setter Property="Background" Value="{StaticResource PurpleHover}" />
    </Style>
    <Style Selector="Button.btn-red:pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
    </Style>

    <!-- Pressed states - Shift down to cover shadow -->
    <Style Selector="Button.btn-blue:pressed">
        <Setter Property="Background" Value="{StaticResource BlueHover}" />
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.btn-blue:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="Button.btn-green:pressed">
        <Setter Property="Background" Value="{StaticResource GreenHover}" />
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.btn-green:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="Button.btn-orange:pressed">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.btn-orange:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="Button.btn-purple:pressed">
        <Setter Property="Background" Value="{StaticResource PurpleHover}" />
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.btn-purple:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="Button.btn-red:pressed">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.btn-red:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <!-- Button disabled state -->
    <Style Selector="Button:not(.SystemCaptionButton):disabled">
        <Setter Property="Opacity" Value="0.6" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
    </Style>
    
    <!-- ALL Labels get Balatro font -->
    <Style Selector="Label">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ALL TextBoxes get dark theme -->
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="SelectionBrush" Value="{StaticResource Blue}" />
        <Setter Property="CaretBrush" Value="{StaticResource White}" />
    </Style>
    <Style Selector="TextBox:focus">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>

    <!-- Back button - Orange with drop shadow and pressed state -->
    <Style Selector="Button.back-button">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Foreground" Value="{StaticResource PureBlack}"/>
        <Setter Property="Background" Value="{StaticResource Orange}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="42"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="8,4,8,4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Name="DropShadow"
                                Background="{StaticResource HoverShadow}"
                                CornerRadius="8"
                                Margin="0,4,0,0"/>
                        <Border Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,0,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}">
                                <ContentPresenter.Styles>
                                    <Style Selector="TextBlock">
                                        <Setter Property="FontSize" Value="{Binding $parent[Button].FontSize}"/>
                                        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
                                    </Style>
                                </ContentPresenter.Styles>
                            </ContentPresenter>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style Selector="Button.back-button:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}"/>
    </Style>
    <Style Selector="Button.back-button:pressed">
        <Setter Property="Background" Value="{StaticResource Orange}"/>
        <Setter Property="RenderTransform" Value="translateY(3px)" />
    </Style>
    <Style Selector="Button.back-button:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <!-- ALL CheckBoxes get dark theme -->
    <Style Selector="CheckBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Balatro-themed checkbox styling (red/orange accent) -->
    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- Checked state - use Red for the checkmark -->
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="BorderBrush" Value="{StaticResource Red}" />
    </Style>

    <!-- Hover state -->
    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                    <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checked + Hover state -->
    <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                    <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource ColorRed}" Offset="0"/>
                    <GradientStop Color="{StaticResource ColorTranslucentBlack33}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style Selector="NumericUpDown:focus">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="NumericUpDown:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- ALL ListBoxes get dark theme -->
    <Style Selector="ListBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    
    <!-- ALL DataGrids get dark theme -->
    <Style Selector="DataGrid">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="RowBackground" Value="{StaticResource DarkBackground}" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="HeadersVisibility" Value="Column" />
    </Style>
    
    <!-- DataGrid headers -->
    <Style Selector="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="Padding" Value="8,6" />
    </Style>
    
    <!-- DataGrid cells -->
    <Style Selector="DataGridCell">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="8,6" />
    </Style>
    
    <!-- ==== BALATRO-SPECIFIC COMPONENT STYLES ==== -->
    
    <!-- Main modal/dialog style - Medium grey background like Balatro -->
    <Style Selector="Border.balatro-modal">
        <Setter Property="Background" Value="{StaticResource ModalGrey}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BoxShadow" Value="{StaticResource StandardModalShadow}" />
    </Style>
    
    <!-- Card-like container (like the Common Sets area) - Dark inner panel -->
    <Style Selector="Border.balatro-card">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>
    
    <!-- Section headers (like "Common Sets") -->
    <Style Selector="TextBlock.balatro-section-header">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="20" />

        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <!-- Modal titles (like "FILTER CONFIGURATION") -->
    <Style Selector="TextBlock.balatro-modal-title">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="28" />

        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <!-- Big back button style -->
    <Style Selector="Button.btn-back">
        <Setter Property="Background" Value="{StaticResource Orange}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MinHeight" Value="50" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,16,0,0" />
    </Style>

    <!-- Category navigation buttons - compact for narrow sidebar -->
    <Style Selector="Button.nav-button">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,1" />
        <Setter Property="MinHeight" Value="44" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="MaxWidth" Value="160" />
        <Setter Property="Focusable" Value="False" />
    </Style>
    <Style Selector="Button.nav-button.active">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>

    <!-- Special (Favorites) button - Gold for premium feel -->
    <Style Selector="Button.nav-button.special">
        <Setter Property="Background" Value="{StaticResource BrightGold}" />
    </Style>
    <Style Selector="Button.nav-button.special:pointerover">
        <Setter Property="Background" Value="{StaticResource GoldHover}" />
    </Style>
    <Style Selector="Button.nav-button.special.active">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>

    <!-- Small pill button style (for edition/sticker/seal selectors) -->
    <Style Selector="Button.small-pill-button">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource LightGrey}" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="Button.small-pill-button.active">
        <Setter Property="Background" Value="{StaticResource Blue}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
    </Style>

    <!-- Search box style -->
    <Style Selector="TextBox.search-box">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Watermark" Value="Search items..." />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>
    
    <!-- Drop zone style (for drag & drop areas) -->
    <Style Selector="Border.drop-zone">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="MinHeight" Value="120" />
        <Setter Property="Padding" Value="16" />
    </Style>
    
    <!-- Info display using exact precise colors -->
    <Style Selector="TextBlock.info-display">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />

        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- When dragging over drop zone -->
    <Style Selector="Border.drop-zone.drag-over">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    
    <!-- Tab control styling -->
    <Style Selector="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="TabItem">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />

        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="CornerRadius" Value="8,8,0,0" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="TabItem:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
    </Style>
    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- Scrollbar styling -->
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="20" />
    </Style>
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="20" />
    </Style>
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource ModalBorder}" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    

    <!-- ==== NOTIFICATION BADGE STYLES ==== -->
    
    <!-- Standard notification badge - always use with Canvas positioning -->
    <Style Selector="Border.notification-badge">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="BoxShadow" Value="{StaticResource TextBoxShadow}"/>
        <Setter Property="BorderBrush" Value="{StaticResource White}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- Small notification badge variant -->
    <Style Selector="Border.notification-badge.small">
        <Setter Property="MinWidth" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- Notification badge text styling -->
    <Style Selector="Border.notification-badge TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Small badge text -->
    <Style Selector="Border.notification-badge.small TextBlock">
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Tab button style - red, uses default Balatro button template (drop shadow + press) -->
    <Style Selector="Button.tab-button">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="MinHeight" Value="46"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinWidth" Value="128"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!-- Intentionally no custom Template: inherit the global Balatro button template
             to get the 3D drop shadow and pressed translateY animation -->
    </Style>

    <!-- Active tab overrides: .active class prevents hover/pressed from applying -->
    <!-- Active tab base style: keep normal red, triangle shows selection -->
    <Style Selector="Button.tab-button.active">
        <Setter Property="Background" Value="{StaticResource Red}" />
    </Style>


    <!-- Icon button style for edition/sticker/seal toolbar buttons -->
    <Style Selector="Button.icon-button">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <Style Selector="Button.icon-button.active">
        <Setter Property="Background" Value="{StaticResource Blue}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
    </Style>

</Styles>