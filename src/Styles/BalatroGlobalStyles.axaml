<!-- /src/Styles/BalatroGlobalStyles.axaml -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Global resources -->
    <Styles.Resources>
        <!-- Centralized tab button font size so it can be scaled easily -->
        <x:Double x:Key="TabButtonFontSize">72</x:Double>
    </Styles.Resources>
    
    <!-- =============================================
         GLOBAL BALATRO STYLES - Applied to ALL controls
         This ensures consistent theming everywhere
         ============================================= -->
    
    <!-- ==== DEFAULT CONTROL STYLES (Applied automatically) ==== -->
    
    <!-- ALL Buttons get Balatro styling by default (except window chrome buttons) -->
    <Style Selector="Button:not(.SystemCaptionButton)">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Background" Value="{StaticResource ModalGrey}" /> <!-- Default gray like in Balatro -->
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="IsTabStop" Value="True" />
        <!-- Transitions removed - cause infinite loops during rapid clicking -->
        <Setter Property="Template">
            <ControlTemplate TargetType="Button">
                <Grid>
                    <!-- Dark drop shadow - creates 3D effect -->
                    <Border Name="DropShadow"
                            Background="{StaticResource TransparentDark3}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="2,2,0,0"/>
                    <!-- Dark bottom shadow -->
                    <Border Name="BottomShadow"
                            Background="{StaticResource HoverShadow}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Margin="0,4,0,0"/>
                    <!-- Main button face -->
                    <Border Name="ButtonFace"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            Margin="0,0,0,4">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}">
                            <ContentPresenter.Styles>
                                <Style Selector="TextBlock">
                                    <Setter Property="Foreground" Value="{Binding $parent[Button].Foreground}"/>
                                    <Setter Property="FontSize" Value="{Binding $parent[Button].FontSize}"/>
                                    <Setter Property="FontWeight" Value="{Binding $parent[Button].FontWeight}"/>
                                    <Setter Property="FontFamily" Value="{Binding $parent[Button].FontFamily}"/>
                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ContentPresenter.Styles>
                        </ContentPresenter>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Button hover - enhanced shadow effects for red buttons -->
    <Style Selector="Button:not(.SystemCaptionButton):pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton):pointerover /template/ TextBlock">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Prevent text selection/highlighting in all buttons -->
    <Style Selector="Button TextBlock">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="IsHitTestVisible" Value="True" />
    </Style>
    <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter TextBlock">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton) /template/ Border#ButtonFace TextBlock">
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Enhanced red button hover shadow using exact color (precise resource) -->
    <Style Selector="Button:not(.SystemCaptionButton).btn-red:pointerover /template/ Border#BottomShadow">
        <Setter Property="Background" Value="{StaticResource HoverShadow}" />
    </Style>
    
    <!-- Button disabled state -->
    <Style Selector="Button:not(.SystemCaptionButton):disabled">
        <Setter Property="Opacity" Value="0.6" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton):disabled /template/ Border#ButtonFace">
        <Setter Property="Background" Value="{StaticResource ModalBorder}" />
    </Style>
    
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- ALL Labels get Balatro font -->
    <Style Selector="Label">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    
    <!-- ALL TextBoxes get dark theme -->
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="SelectionBrush" Value="{StaticResource Blue}" />
        <Setter Property="CaretBrush" Value="{StaticResource White}" />
    </Style>
    <Style Selector="TextBox:focus">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- ALL CheckBoxes get dark theme -->
    <Style Selector="CheckBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Balatro-themed checkbox styling (red/orange accent) -->
    <Style Selector="CheckBox /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- Checked state - use Red for the checkmark -->
    <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="BorderBrush" Value="{StaticResource Red}" />
    </Style>

    <!-- Hover state -->
    <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
        <Setter Property="BorderBrush" Value="{StaticResource RedHover}" />
    </Style>

    <!-- Checked + Hover state -->
    <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
        <Setter Property="BorderBrush" Value="{StaticResource RedHover}" />
    </Style>
    
    <Style Selector="NumericUpDown:focus">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="NumericUpDown:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- ALL ListBoxes get dark theme -->
    <Style Selector="ListBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    
    <!-- ALL DataGrids get dark theme -->
    <Style Selector="DataGrid">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="RowBackground" Value="{StaticResource DarkBackground}" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="HeadersVisibility" Value="Column" />
    </Style>
    
    <!-- DataGrid headers -->
    <Style Selector="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="Padding" Value="8,6" />
    </Style>
    
    <!-- DataGrid cells -->
    <Style Selector="DataGridCell">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="8,6" />
    </Style>
    
    <!-- ==== BALATRO-SPECIFIC COMPONENT STYLES ==== -->
    
    <!-- Main modal/dialog style - Medium grey background like Balatro -->
    <Style Selector="Border.balatro-modal">
        <Setter Property="Background" Value="{StaticResource ModalGrey}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BoxShadow" Value="{StaticResource StandardModalShadow}" />
    </Style>
    
    <!-- Card-like container (like the Common Sets area) - Dark inner panel -->
    <Style Selector="Border.balatro-card">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>
    
    <!-- Section headers (like "Common Sets") -->
    <Style Selector="TextBlock.balatro-section-header">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="20" />

        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <!-- Modal titles (like "FILTER CONFIGURATION") -->
    <Style Selector="TextBlock.balatro-modal-title">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="28" />

        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,20" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>
    
    <!-- Button color variants - these override the default gray -->
    <Style Selector="Button:not(.SystemCaptionButton).btn-blue">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-blue:pointerover">
        <Setter Property="Background" Value="{StaticResource BlueHover}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-blue:disabled">
        <Setter Property="Background" Value="{StaticResource ModalGrey}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    
    <Style Selector="Button:not(.SystemCaptionButton).btn-orange">
        <Setter Property="Background" Value="{StaticResource Orange}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-orange:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>
    
    <Style Selector="Button:not(.SystemCaptionButton).btn-green">
        <Setter Property="Background" Value="{StaticResource Green}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-green:pointerover">
        <Setter Property="Background" Value="{StaticResource GreenHover}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-green:disabled">
        <Setter Property="Background" Value="{StaticResource ModalGrey}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>
    
    <Style Selector="Button:not(.SystemCaptionButton).btn-red">
        <Setter Property="Background" Value="{StaticResource Red}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-red:pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
        <Setter Property="Opacity" Value="1.0" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-red:pressed">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
        <Setter Property="Opacity" Value="1.0" />
    </Style>
    
    <Style Selector="Button:not(.SystemCaptionButton).btn-purple">
        <Setter Property="Background" Value="{StaticResource Purple}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-purple:pointerover">
        <Setter Property="Background" Value="{StaticResource Purple}" />
    </Style>

    <!-- Warning/Stop button - Orange to match Back button -->
    <Style Selector="Button:not(.SystemCaptionButton).btn-warning">
        <Setter Property="Background" Value="{StaticResource Orange}" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-warning:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>
    
    <!-- Big back button style -->
    <Style Selector="Button.btn-back">
        <Setter Property="Background" Value="{StaticResource Orange}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="MinHeight" Value="50" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,16,0,0" />
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton).btn-back:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>

    <!-- Category navigation buttons - 2px shorter to prevent scrollbar -->
    <Style Selector="Button.nav-button">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="FontSize" Value="21" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,1" />
        <Setter Property="MinHeight" Value="44" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="MaxWidth" Value="160" />
        <Setter Property="Focusable" Value="False" />
    </Style>
    <Style Selector="Button.nav-button:pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
    </Style>
    <Style Selector="Button.nav-button.active">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="Button.nav-button.active:pointerover">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>

    <!-- Special (Wildcards) button - Orange to match Back button -->
    <Style Selector="Button.nav-button.special">
        <Setter Property="Background" Value="{StaticResource Orange}" />
    </Style>
    <Style Selector="Button.nav-button.special:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>
    <Style Selector="Button.nav-button.special.active">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    <Style Selector="Button.nav-button.special.active:pointerover">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>

    <!-- Search box style -->
    <Style Selector="TextBox.search-box">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Watermark" Value="Search items..." />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>
    
    <!-- Drop zone style (for drag & drop areas) -->
    <Style Selector="Border.drop-zone">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="MinHeight" Value="120" />
        <Setter Property="Padding" Value="16" />
    </Style>
    
    <!-- Info display using exact precise colors -->
    <Style Selector="TextBlock.info-display">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Foreground" Value="{StaticResource White}" />

        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- When dragging over drop zone -->
    <Style Selector="Border.drop-zone.drag-over">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- PokÃ©mon cards style (for your joker/item cards) -->
    <Style Selector="Border.game-item-card">
        <Setter Property="Background" Value="{StaticResource ModalGrey}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.1" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.game-item-card:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        <Setter Property="Margin" Value="3,1,3,5" /> <!-- Lift effect -->
    </Style>
    
    <!-- Tab control styling -->
    <Style Selector="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="TabItem">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />

        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource White}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="CornerRadius" Value="8,8,0,0" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style Selector="TabItem:pointerover">
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
    </Style>
    <Style Selector="TabItem:selected">
        <Setter Property="Background" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- Scrollbar styling -->
    <Style Selector="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="12" />
    </Style>
    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="12" />
    </Style>
    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource ModalBorder}" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="{StaticResource ModalBorder}" />
    </Style>
    
    <!-- Removed duplicate global style for Border.modal-content-box.
         Use component-specific definition from Styles/BalatroModal.axaml (dark inner panel, no border).
         This prevents double-layer backgrounds and conflicting borders in modals. -->
    
    <!-- Remove default focus rectangle / inner highlight on buttons -->
    <Style Selector="Button:focus-visible">
        <Setter Property="FocusAdorner" Value="{x:Null}"/>
    </Style>
    <Style Selector="Button:focus">
        <Setter Property="FocusAdorner" Value="{x:Null}"/>
    </Style>

    <!-- Prevent text selection highlight in buttons -->
    <Style Selector="Button:focus /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style Selector="Button:focus /template/ ContentPresenter TextBlock">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{Binding $parent[Button].Foreground}"/>
    </Style>

    <!-- Button pressed state - move down and hide shadows like back-button -->
    <Style Selector="Button:not(.SystemCaptionButton):pressed">
        <Setter Property="RenderTransform" Value="translateY(3px)"/>
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton):pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton):pressed /template/ Border#BottomShadow">
        <Setter Property="IsVisible" Value="False"/>
    </Style>

    <!-- Keep text white when button is pressed -->
    <Style Selector="Button:not(.SystemCaptionButton):pressed /template/ ContentPresenter">
        <Setter Property="TextBlock.Foreground" Value="{StaticResource White}"/>
    </Style>
    <Style Selector="Button:not(.SystemCaptionButton):pressed TextBlock">
        <Setter Property="Foreground" Value="{StaticResource White}"/>
    </Style>

    <!-- Disable keyboard navigation for main menu colored buttons -->
    <Style Selector="Button.btn-blue, Button.btn-orange, Button.btn-green, Button.btn-red, Button.btn-purple">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>

    <!-- Keep visual unchanged on focus (no background/border swap) -->
    <Style Selector="Button:focus, Button:focus-visible">
        <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource Self}}"/>
    </Style>
    
    <!-- ==== NOTIFICATION BADGE STYLES ==== -->
    
    <!-- Standard notification badge - always use with Canvas positioning -->
    <Style Selector="Border.notification-badge">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="MinWidth" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #22222222"/>
        <Setter Property="BorderBrush" Value="{StaticResource White}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- Small notification badge variant -->
    <Style Selector="Border.notification-badge.small">
        <Setter Property="MinWidth" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <!-- Notification badge text styling -->
    <Style Selector="Border.notification-badge TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Small badge text -->
    <Style Selector="Border.notification-badge.small TextBlock">
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Tab button style - red, uses default Balatro button template (drop shadow + press) -->
    <Style Selector="Button.tab-button">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="MinHeight" Value="46"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinWidth" Value="128"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!-- Intentionally no custom Template: inherit the global Balatro button template
             to get the 3D drop shadow and pressed translateY animation -->
    </Style>

    <!-- Hover and Pressed states for INACTIVE tabs only -->
    <Style Selector="Button.tab-button:not(.active):pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}"/>
    </Style>

    <Style Selector="Button.tab-button:not(.active):pressed">
        <Setter Property="Background" Value="{StaticResource RedHover}"/>
    </Style>

    <!-- Active tab overrides: .active class prevents hover/pressed from applying -->
    <!-- Active tab base style: keep normal red, triangle shows selection -->
    <Style Selector="Button.tab-button.active">
        <Setter Property="Background" Value="{StaticResource Red}"/>
    </Style>

    <!-- Explicitly ensure active tabs stay red on hover -->
    <Style Selector="Button.tab-button.active:pointerover">
        <Setter Property="Background" Value="{StaticResource Red}"/>
    </Style>

    <!-- Explicitly ensure active tabs stay red when pressed -->
    <Style Selector="Button.tab-button.active:pressed">
        <Setter Property="Background" Value="{StaticResource Red}"/>
    </Style>

</Styles>