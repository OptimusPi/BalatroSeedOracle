    <!-- Vertical tab button style -->
    <Style Selector="Button.vertical-tab-button">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="14" />
        
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="Background" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Margin" Value="0,2" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="#4a5e62" /> <!-- Slightly darker than DarkBackground (#4f6367) -->
        </Style>
        
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="#4a5e62" /> <!-- Keep hover shade -->
            <Setter Property="RenderTransform" Value="translateY(3px)" />
        </Style>
        
        <Style Selector="^.active">
            <Setter Property="Background" Value="{StaticResource Blue}" />
            <Setter Property="BorderBrush" Value="#0088cc" />
        </Style>
    </Style>
    
    <!-- Nav arrow style - for tall red navigation buttons -->
    <Style Selector="Button.nav-arrow">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <Border Name="DropShadow" Background="{StaticResource DropShadow}" CornerRadius="4" Margin="0,2,0,0"/>
                    <Border Name="PART_Border" Background="{TemplateBinding Background}" CornerRadius="4" Margin="0,0,0,2">
                        <Border.Transitions>
                            <Transitions>
                                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                            </Transitions>
                        </Border.Transitions>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding Content}"/>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="Button.nav-arrow:pointerover /template/ Border#PART_Border">
        <Setter Property="Background" Value="{StaticResource RedHover}"/>
    </Style>
    
    <!-- Pressed state - move button down and hide shadow -->
    <Style Selector="Button.nav-arrow:pressed">
        <Setter Property="RenderTransform">
            <TranslateTransform Y="2"/>
        </Setter>
    </Style>
    
    <Style Selector="Button.nav-arrow:pressed /template/ Border#DropShadow">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
</Styles>