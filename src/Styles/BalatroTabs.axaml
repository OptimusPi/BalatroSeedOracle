<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Balatro-style TabControl with RED tabs (actual Balatro style) -->
    <Style Selector="TabControl.balatro-tabs">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TabStripPlacement" Value="Top"/>
    </Style>

    <!-- Balatro Tab Item - rounded RED buttons -->
    <Style Selector="TabControl.balatro-tabs > TabItem">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="MinWidth" Value="144"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <!-- Vertical stack: fixed indicator lane + rounded tab surface -->
                <Grid RowDefinitions="Auto,*">
                    <!-- Fixed-height indicator lane to prevent reflow -->
                    <Grid Height="16" ClipToBounds="True">
                        <TextBlock Name="PART_Triangle"
                                   Classes="balatro-triangle balatro-bounce-vertical"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   IsVisible="False"/>
                    </Grid>

                    <!-- Main rounded tab surface -->
                    <Border Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12"
                            Margin="0">
                        <ContentPresenter Name="PART_ContentPresenter"
                                          ContentTemplate="{TemplateBinding HeaderTemplate}"
                                          Content="{TemplateBinding Header}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="16,8"/>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>

    <!-- Disabled tab visual state -->
    <Style Selector="TabControl.balatro-tabs > TabItem:disabled">
        <Setter Property="Foreground" Value="{StaticResource LightTextGrey}"/>
        <Setter Property="Background" Value="{StaticResource ModalGrey}"/>
        <Setter Property="Opacity" Value="0.6"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>
    
    <!-- Selected tab - stays red -->
    <Style Selector="TabControl.balatro-tabs > TabItem:selected">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
    </Style>
    
    <Style Selector="TabControl.balatro-tabs > TabItem:selected /template/ TextBlock#PART_Triangle">
        <Setter Property="IsVisible" Value="True"/>
        <Setter Property="Opacity" Value="1.0"/>
    </Style>
    
    <!-- Hover state - orange -->
    <Style Selector="TabControl.balatro-tabs > TabItem:pointerover:not(:selected)">
        <Setter Property="Background" Value="{StaticResource Orange}"/>
        <Setter Property="Foreground" Value="{StaticResource White}"/>
    </Style>
    

    
    <!-- Tab content area -->
    <Style Selector="TabControl.balatro-tabs > TabItem > ScrollViewer">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0,0,12,12"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

</Styles>