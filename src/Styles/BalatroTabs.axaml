<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Balatro-style TabControl with red tabs and floating arrow -->
    <Style Selector="TabControl.balatro-tabs">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="TabStripPlacement" Value="Top"/>
    </Style>
    
    <!-- Balatro Tab Item - Red with floating arrow when selected -->
    <Style Selector="TabControl.balatro-tabs > TabItem">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="Background" Value="{StaticResource Grey}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="3,3,3,0"/>
        <Setter Property="CornerRadius" Value="12,12,0,0"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <!-- Floating arrow indicator (hidden by default) -->
                    <Path Name="PART_Arrow"
                          Data="M 0,10 L 10,0 L 20,10"
                          Fill="{StaticResource Gold}"
                          Width="20"
                          Height="10"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="0,-15,0,0"
                          IsVisible="False"/>
                    
                    <!-- Tab background with shadow -->
                    <Border Name="PART_Shadow"
                            Background="{StaticResource DropShadow}"
                            CornerRadius="12,12,0,0"
                            Margin="4,4,2,0"/>
                    
                    <!-- Main tab border -->
                    <Border Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12,12,0,0"
                            Margin="2,2,0,0">
                        
                        <ContentPresenter Name="PART_ContentPresenter"
                                        ContentTemplate="{TemplateBinding HeaderTemplate}"
                                        Content="{TemplateBinding Header}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="16,8"/>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- Selected tab - Red background with floating arrow -->
    <Style Selector="TabControl.balatro-tabs > TabItem:selected">
        <Setter Property="Background" Value="{StaticResource Red}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource RedHover}"/>
        <Setter Property="ZIndex" Value="10"/>
    </Style>
    
    <Style Selector="TabControl.balatro-tabs > TabItem:selected /template/ Path#PART_Arrow">
        <Setter Property="IsVisible" Value="True"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    
    <!-- Hover state - Orange background -->
    <Style Selector="TabControl.balatro-tabs > TabItem:pointerover:not(:selected)">
        <Setter Property="Background" Value="{StaticResource Orange}"/>
        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        <Setter Property="BorderBrush" Value="{StaticResource OrangeHover}"/>
    </Style>
    
    <!-- Floating arrow animation on selection -->
    <Style Selector="TabControl.balatro-tabs > TabItem:selected /template/ Path#PART_Arrow">
        <Style.Animations>
            <Animation Duration="0:0:0.5" IterationCount="Infinite" PlaybackDirection="Alternate">
                <KeyFrame Cue="0%">
                    <Setter Property="Margin" Value="0,-15,0,0"/>
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="Margin" Value="0,-18,0,0"/>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
    
    <!-- Tab content area -->
    <Style Selector="TabControl.balatro-tabs > TabItem > ScrollViewer">
        <Setter Property="Background" Value="{StaticResource DarkModalGrey}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="0,0,12,12"/>
        <Setter Property="Margin" Value="0,-3,0,0"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

</Styles>