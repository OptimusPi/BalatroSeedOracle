<!-- /src/Styles/BalatroPreciseColors.axaml -->
<!-- Exact color picker values for pixel-perfect Balatro styling -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- =============================================
         EXACT COLOR PICKER PRECISION STYLES
         These use the exact hex values from color picker
         ============================================= -->
    
    <!-- Container inside modal style (uses exact dark grey #1e2b2d) - NO BORDERS -->
    <Style Selector="Border.modal-inner-container">
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <!-- Info badge text style for numbers and stats -->
    <Style Selector="TextBlock.info-badge">
        <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Label info badge -->
    <Style Selector="Label.info-badge">
        <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
    </Style>
    
    <!-- Large info badge for prominent numbers -->
    <Style Selector="TextBlock.info-badge-large">
        <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <!-- Modal with exact south-only shadow (no blur) -->
    <Style Selector="Border.balatro-modal-precise">
        <Setter Property="Background" Value="{StaticResource DockGrey}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BoxShadow" Value="0 4 0 #777e89" /> <!-- South-only, no blur -->
    </Style>
    
    <!-- Button with exact color picker precision -->
    <Style Selector="Button.btn-red-precise">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.btn-red-precise:pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
    </Style>
    
    <Style Selector="Button.btn-red-precise:pressed">
        <Setter Property="Background" Value="#70150f" />
    </Style>
    
    <!-- Orange button with exact precision -->
    <Style Selector="Button.btn-orange-precise">
        <Setter Property="Background" Value="{StaticResource Orange}" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.btn-orange-precise:pointerover">
        <Setter Property="Background" Value="{StaticResource OrangeHover}" />
    </Style>
    
    <!-- Info panel with exact dark container color - NO BORDERS like Balatro -->
    <Style Selector="Border.info-panel">
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>
    
    <!-- Precise badge container -->
    <Style Selector="Border.badge-container">
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <!-- Stats display using exact info text color -->
    <Style Selector="TextBlock.stats-value">
        <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <Style Selector="TextBlock.stats-label">
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>
    
    <!-- Navigation tabs with precise colors -->
    <Style Selector="Button.nav-tab-precise">
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="6,6,0,0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Margin" Value="1,0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="Button.nav-tab-precise:pointerover">
        <Setter Property="Background" Value="{StaticResource DockGrey}" />
    </Style>
    
    <Style Selector="Button.nav-tab-precise.active">
        <Setter Property="Background" Value="{StaticResource Red}" />
    </Style>
    
    <Style Selector="Button.nav-tab-precise.active:pointerover">
        <Setter Property="Background" Value="{StaticResource RedHover}" />
    </Style>
    
    <!-- Precise input fields -->
    <Style Selector="TextBox.input-precise">
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="SelectionBrush" Value="{StaticResource Red}" />
        <Setter Property="CaretBrush" Value="{StaticResource TextLight}" />
    </Style>
    
    <Style Selector="TextBox.input-precise:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Red}" />
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
    </Style>
    
    <Style Selector="TextBox.input-precise:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource InfoTextPrecise}" />
        <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}" />
    </Style>
    
</Styles>
