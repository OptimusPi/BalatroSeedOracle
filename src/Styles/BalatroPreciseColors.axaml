<!-- /src/Styles/BalatroPreciseColors.axaml -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Local precise-only resources -->
  <Styles.Resources>
    <SolidColorBrush x:Key="RedPressedPrecise" Color="#70150f"/>
    
    <!-- Base precise button style -->
    <Style x:Key="PreciseBaseButton" Selector="Button">
      <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
      
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="16,8"/>
      <Setter Property="MinHeight" Value="40"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="Background" Duration="0:0:0.1"/>
        </Transitions>
      </Setter>
    </Style>
  </Styles.Resources>
  <!-- Modal inner container (borderless dark panel) -->
  <Style Selector="Border.modal-inner-container">
    <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="20"/>
    <Setter Property="Margin" Value="8"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <!-- Badges -->
  <Style Selector="TextBlock.info-badge">
    <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}"/>
    
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>
  <Style Selector="Label.info-badge">
    <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>
  <Style Selector="TextBlock.info-badge-large">
    <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}"/>
    
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>
  <!-- Precise modal -->
  <Style Selector="Border.balatro-modal-precise">
    <Setter Property="Background" Value="{StaticResource Grey}"/>
    <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
    <Setter Property="BorderThickness" Value="2"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="20"/>
    <Setter Property="BoxShadow" Value="0 4 0 #777e89"/>
  </Style>
  <Style Selector="Button.btn-red-precise">
    <Setter Property="Background" Value="{StaticResource Red}"/>
    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="16,8"/>
    <Setter Property="MinHeight" Value="40"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>
  <Style Selector="Button.btn-red-precise:pointerover">
    <Setter Property="Background" Value="{StaticResource RedHover}"/>
  </Style>
  <Style Selector="Button.btn-red-precise:pressed">
    <Setter Property="Background" Value="{StaticResource RedPressedPrecise}"/>
  </Style>
  <Style Selector="Button.btn-orange-precise">
    <Setter Property="Background" Value="{StaticResource Orange}"/>
    <Setter Property="Foreground" Value="#000000"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="16,8"/>
    <Setter Property="MinHeight" Value="40"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>
  <Style Selector="Button.btn-orange-precise:pointerover">
    <Setter Property="Background" Value="{StaticResource OrangeHover}"/>
  </Style>
  <!-- Panels -->
  <Style Selector="Border.info-panel, Border.badge-container">
    <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <Style Selector="Border.info-panel">
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="16"/>
    <Setter Property="Margin" Value="8"/>
  </Style>
  <Style Selector="Border.badge-container">
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="Margin" Value="2"/>
  </Style>
  <!-- Stats -->
  <Style Selector="TextBlock.stats-value">
    <Setter Property="Foreground" Value="{StaticResource InfoTextPrecise}"/>
    
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>
  <Style Selector="TextBlock.stats-label">
    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="Opacity" Value="0.8"/>
  </Style>
  <!-- Nav tabs -->
  <Style Selector="Button.nav-tab-precise">
    <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}"/>
    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="6,6,0,0"/>
    <Setter Property="Padding" Value="12,6"/>
    <Setter Property="Margin" Value="1,0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Transitions">
      <Transitions>
        <BrushTransition Property="Background" Duration="0:0:0.1"/>
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="Button.nav-tab-precise:pointerover">
    <Setter Property="Background" Value="{StaticResource Grey}"/>
  </Style>
  <Style Selector="Button.nav-tab-precise.active">
    <Setter Property="Background" Value="{StaticResource Red}"/>
  </Style>
  <Style Selector="Button.nav-tab-precise.active:pointerover">
    <Setter Property="Background" Value="{StaticResource RedHover}"/>
  </Style>
  <!-- Precise input -->
  <Style Selector="TextBox.input-precise">
    <Setter Property="Background" Value="{StaticResource ContainerDarkPrecise}"/>
    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
    <Setter Property="BorderBrush" Value="{StaticResource ModalBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="8,6"/>
    <Setter Property="FontFamily" Value="{StaticResource BalatroFont}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="SelectionBrush" Value="{StaticResource Red}"/>
    <Setter Property="CaretBrush" Value="{StaticResource TextLight}"/>
  </Style>
  <Style Selector="TextBox.input-precise:focus">
    <Setter Property="BorderBrush" Value="{StaticResource Red}"/>
  </Style>
  <Style Selector="TextBox.input-precise:pointerover">
    <Setter Property="BorderBrush" Value="{StaticResource InfoTextPrecise}"/>
  </Style>
</Styles>
