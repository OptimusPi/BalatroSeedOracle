<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <!-- Minimal flat Balatro-ish additions (small, no over-engineering) -->
    <Color x:Key="ClrPanel">#2E3A3F</Color>
    <Color x:Key="ClrPanelInner">#182125</Color>
    <Color x:Key="ClrAccent">#F25448</Color>
    <Color x:Key="ClrPrimary">#1390F8</Color>
    <Color x:Key="ClrBack">#F2A01A</Color>
    <Color x:Key="ClrCardFace">#F5F5F5</Color>
    <Color x:Key="ClrText">#F3F4F5</Color>

    <SolidColorBrush x:Key="BrushPanel" Color="{StaticResource ClrPanel}"/>
    <SolidColorBrush x:Key="BrushPanelInner" Color="{StaticResource ClrPanelInner}"/>
    <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ClrAccent}"/>
    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ClrPrimary}"/>
    <SolidColorBrush x:Key="BrushBack" Color="{StaticResource ClrBack}"/>
    <SolidColorBrush x:Key="BrushCardFace" Color="{StaticResource ClrCardFace}"/>
    <SolidColorBrush x:Key="BrushText" Color="{StaticResource ClrText}"/>
  </Styles.Resources>

  <!-- Flat modal helper (optional) -->
  <Style Selector="Border.FlatModal">
    <Setter Property="Background" Value="{StaticResource BrushPanel}"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="16"/>
  </Style>

  <!-- Accent pill (tabs / arrows if desired) -->
  <Style Selector="Button.AccentPill">
    <Setter Property="Background" Value="{StaticResource BrushAccent}"/>
    <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
    <Setter Property="CornerRadius" Value="20"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="16,8"/>
  </Style>

  <!-- Primary action (Play) -->
  <Style Selector="Button.PrimaryAction">
    <Setter Property="Background" Value="{StaticResource BrushPrimary}"/>
    <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="20,10"/>
  </Style>

  <!-- Back bar just needs background -->
  <Style Selector="Border.BackBar">
    <Setter Property="Background" Value="{StaticResource BrushBack}"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12,8"/>
  </Style>

  <!-- Inactive tab (manual class swap) -->
  <Style Selector="Button.InactiveTab">
    <Setter Property="Background" Value="#3B464B"/>
    <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
  </Style>
  <Style Selector="Button.ActiveTab">
    <Setter Property="Background" Value="{StaticResource BrushAccent}"/>
    <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
  </Style>
</Styles>
