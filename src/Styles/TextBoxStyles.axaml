<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ULTIMATE Dark TextBox Style for Oracle - All States Covered -->
    <Style Selector="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource BalatroFont}" />
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkBackground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="SelectionBrush" Value="{StaticResource Blue}" />
        <Setter Property="SelectionForegroundBrush" Value="White" />
        <Setter Property="CaretBrush" Value="White" />
    </Style>
        
    <!-- ALL possible TextBox states with dark backgrounds -->
    <Style Selector="TextBox:focus">
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style Selector="TextBox:pointerover">
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightGrey}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style Selector="TextBox:disabled">
        <Setter Property="Background" Value="{StaticResource DropShadow}" />
        <Setter Property="Foreground" Value="{StaticResource ModalBorder}" />
        <Setter Property="BorderBrush" Value="{StaticResource PureBlack}" />
    </Style>
    
    <Style Selector="TextBox:readonly">
        <Setter Property="Background" Value="{StaticResource DropShadow}" />
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource PureBlack}" />
    </Style>
    
    <Style Selector="TextBox:focus-within">
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <!-- Catch-all for any weird combinations -->
    <Style Selector="TextBox:pointerover:focus, TextBox:focus:pointerover">
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
    </Style>
    
    <!-- JSON Editor specific styles -->
    <Style Selector="TextBox.json-editor">
        <Setter Property="Background" Value="{StaticResource PureBlack}" />
        <Setter Property="Foreground" Value="{StaticResource TextLight}" />
        <Setter Property="BorderBrush" Value="{StaticResource DarkBackground}" />
        <Setter Property="FontFamily" Value="Cascadia Code,Consolas,Menlo,Monaco,monospace" />
        <Setter Property="FontSize" Value="14" />
        
        <Style Selector="^:focus">
            <Setter Property="Background" Value="{StaticResource PureBlack}" />
            <Setter Property="BorderBrush" Value="{StaticResource Blue}" />
        </Style>
    </Style>
    
    <!-- Watermark text styling -->
    <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{StaticResource TextInactive}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>
    
    <!-- Selection styling -->
    <Style Selector="TextBox /template/ TextPresenter#PART_TextPresenter">
        <Setter Property="SelectionBrush" Value="{StaticResource Blue}" />
        <Setter Property="SelectionForegroundBrush" Value="White" />
    </Style>
</Styles>