{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "lineWidth": 120,
  "indentWidth": 2,
  "useTabs": false,
  "newLineKind": "lf",
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/bin",
    "**/obj",
    "**/publish",
    "**/out",
    "external/**"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/yaml-0.1.1.wasm"
  ],
  "markdown": {
    "lineWidth": 120,
    "textWrap": "maintain"
  },
  "json": {
    "indentWidth": 2
  },
  "yaml": {
    "indentWidth": 2
  }
}
