# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4

# XAML files
[*.{axaml,xaml}]
indent_style = space
indent_size = 4

# JSON, YAML, XML
[*.{json,jsonc,yaml,yml,xml}]
indent_style = space
indent_size = 2

# Markdown
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# PowerShell
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 4

# MSBuild
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj,props,targets}]
indent_style = space
indent_size = 2

# Solution files
[*.sln]
indent_style = tab
indent_size = 4
