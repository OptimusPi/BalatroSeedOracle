{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (dotnet)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Oracle.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "restore",
            "command": "dotnet",
            "type": "process",
            "args": [
                "restore",
                "${workspaceFolder}/src/Oracle.csproj"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}
